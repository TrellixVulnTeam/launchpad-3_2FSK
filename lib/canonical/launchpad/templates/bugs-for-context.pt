<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<div metal:fill-slot="body">
  <h1>Bugs in <span tal:replace="context/title">Title</span></h1>

      <table style="width: 100%">
        <tbody>
          <tr>
            <td style="width: 75%; padding-right: 1em;">
              <div metal:use-macro="context/@@+bugtask-search-listing/buglisting" />
            </td>
            <td style="width: 25%">
    <tal:block content="structure context/@@+portlet-bugtasklist-mybugs" />
    <tal:releasebugs condition="context/@@+portlet-bugtasklist-releasebugs|nothing">
      <tal:block content="structure context/@@+portlet-bugtasklist-releasebugs" />
    </tal:releasebugs>

            </td>
          </tr>
        </tbody>
      </table>

  <script>
  <!--
  document.forms[0].elements['field.searchtext'].focus();
  //-->
  </script>

</div>

</body>
</html>
