<div class="portlet">

  <h4>Translation file details:</h4>

  <div class="portletBody">
  <div class="portletContent">

    <ul>
      <li class="languages">
        <span tal:replace="context/language/englishname">Language</span>
        <tal:block condition="context/language/nativename">
          (<span tal:replace="context/language/nativename">native</span>)
        </tal:block>
      </li>
    </ul>
    <tal:has_owner condition="context/owner">
      <b>Creator:</b><br />
      <img src="/@@/user.gif" />
      <a tal:content="context/owner/browsername"
         tal:attributes="href context/owner/fmt:url">Creator</a>
      <br />
    </tal:has_owner>
    <tal:has_series condition="context/potemplate/productseries">
    <tal:block define="product context/potemplate/productseries/product">
      <b>For:</b>
      <a tal:content="context/potemplate/productseries/displayname"
         tal:attributes="href context/potemplate/productseries/fmt:url">
         Mozilla Main
      </a><br />
      <tal:has_prod_translationgrp condition="product/translationgroup">
        <b>Translation group:</b><br />
        <a tal:content="product/translationgroup/title"
           tal:attributes="href
             string:/rosetta/groups/${product/translationgroup/name}/"
             >Ubuntu Translation Group</a><br />
      </tal:has_prod_translationgrp>
      <tal:has_project condition="product/project"
                       define="project product/project">
        <b>Project:</b>
          <a tal:content="project/displayname"
             tal:attributes="href string:/projects/${project/name}/" /><br />
        <tal:has_proj_translationgrp condition="project/translationgroup">
          <b>Project translation group:</b><br />
          <a tal:content="project/translationgroup/title"
             tal:attributes="href
                 string:/rosetta/groups/${project/translationgroup/name}/"
               >Ubuntu Translation Group</a><br />
        </tal:has_proj_translationgrp>
      </tal:has_project>
    </tal:block>
    </tal:has_series>
    <tal:block condition="context/potemplate/distrorelease">
    <tal:block define="distro context/potemplate/distrorelease/distribution">
    <b>Distribution:</b>
    <a tal:content="distro/displayname"
       tal:attributes="href string:/distros/${distro/name}/" /><br />
    <b>Release:</b>
    <a tal:content="context/potemplate/distrorelease/name"
       tal:attributes="href
         string:/distros/${distro/name}/${context/potemplate/distrorelease/name}/" /><br />
    <b>Source package:</b><br />
    <a tal:attributes="href
         string:/distros/${distro/name}/${context/potemplate/distrorelease/name}/+sources/${context/potemplate/sourcepackagename/name}/">
      <span tal:replace="context/potemplate/sourcepackagename/name" />
      <span tal:replace="context/potemplate/sourcepackageversion" />
    </a><br />
    <b>Translation group:</b><br />
    <tal:block condition="distro/translationgroup">
      <a tal:content="distro/translationgroup/title"
         tal:attributes="href
           string:/rosetta/groups/${distro/translationgroup/name}/"
           >Distro Translation Group</a>
    </tal:block>
    <tal:block condition="not: distro/translationgroup">
      <i>None selected</i>
    </tal:block>
    <br />
    </tal:block>
    </tal:block>
    <b>Translation policy:</b>
    <span tal:replace="context/translationpermission/title" /><br />
    <tal:block condition="context/language/pluralforms">
      <b>Plural forms:</b>
      <span tal:replace="context/language/pluralforms">2</span><br />
    </tal:block>
    <tal:block condition="context/language/pluralexpression">
      <b>Plural expression:</b><br />
      <span tal:replace="context/language/pluralexpression">n=323</span><br />
    </tal:block>
    <tal:block condition="context/potemplate/description">
      <b>Template description:</b><br />
      <span tal:replace="context/potemplate/description" /><br />
    </tal:block>

  </div>

  </div>

</div>

