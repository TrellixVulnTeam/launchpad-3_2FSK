<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
  <body>
    <metal:heading fill-slot="pageheading">    
      <h1>Revision control summary for <span tal:replace="context/title" /></h1>
    </metal:heading>

    <div tal:content="context/summary">Project Summary</div>
    
    <div tal:repeat="prod context/products">
        
        <br clear="right" />

        <h2 tal:content="prod/title">Product Title</h2>

        <table class="listing"
               style="float: right;">
            <tr>
              <th>Bazaar Branch Names</th>
            </tr>
            <tr tal:repeat="branch prod/branches">
                <td tal:content="branch/title">x
                </td>
            </tr>
            <tr tal:condition="not: prod/branches">
                <td>No Bazaar branches for this product.</td>
            </tr>
            <tr>
              <th>Primary Release Branches</th>
            </tr>
            <tr tal:repeat="series prod/serieslist">
                <td tal:content="series/title">x
                </td>
            </tr>
            <tr tal:condition="not: prod/serieslist">
                <td>No release branches for this product.</td>
            </tr>
        </table>


        <p tal:content="prod/summary">Product Summary</p>

        <p><img src="/@@/add.gif">
           <a href="#" tal:attributes="href prod/name">See all
           branches for <span tal:replace="prod/displayname">product</span>...</a></p>
    
    </div>

</div>

</body>
</html>
