<tal:root
   xmlns:tal="http://xml.zope.org/namespaces/tal"
   xmlns:metal="http://xml.zope.org/namespaces/metal"
   omit-tag="">
    <div class="boardCommentSummary">
        <div class="boardCommentDetails">
            <span tal:content="structure context/message/owner/fmt:link"
                  id="comment-from" />
            <strong id="comment-vote" tal:content="context/vote/title"
                    tal:condition="context/vote" />
            <strong id="comment-vote-tag" tal:content="context/vote_tag"
                    tal:condition="context/vote_tag" />
            <span id="comment-body" tal:content="view/first_line" />
            (<a tal:attributes="href context/fmt:url" >full message</a>)
        </div>
    </div>
</tal:root>
