<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div
  metal:define-macro="related-snaps"
  tal:condition="view/show_snap_information"
  tal:define="context_menu context/menu:context"
  id="related-snaps">

  <h3>Related snap packages</h3>

  <div id="snap-links" class="actions">
    <div id="snap-summary">
      <tal:no-snaps condition="not: view/snap_count">
      No snap packages
      </tal:no-snaps>
      <tal:snaps condition="view/snap_count">
        <a href="+snaps" tal:content="view/snap_count_text">1 snap package</a>
      </tal:snaps>
      using this <metal:slot define-slot="context_type">branch</metal:slot>.
    </div>
  </div>

  <span
    tal:define="link context_menu/create_snap|nothing"
    tal:condition="python: link and link.enabled"
    tal:replace="structure link/render"
    />

</div>

</tal:root>
