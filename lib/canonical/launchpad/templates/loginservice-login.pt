<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">
  <body>
    <div metal:fill-slot="main">
      <h1>Launchpad Login Service</h1>

      <h2 tal:condition="view/error_message" tal:content="view/error_message"
        />
      <form method="post" action="">
        <input type="hidden" name="nonce" tal:attributes="value view/nonce" />

        <div>
          <label>What is your email address?</label>
        </div>
        <div>
          <input type="text" tal:attributes="name view/input_email" />
        </div>

        <br />
        <div>
          <label>Do you have a Launchpad passphrase?</label>
        </div>
        <div>
          <label>
            <input type="radio" value="createaccount"
                   tal:attributes="name view/input_action">
            No, I want to create an account now
          </label>
        </div>
        <div>
          <label>
            <input type="radio" value="login" checked="true"
                   tal:attributes="name view/input_action">
            Yes, my passphrase is:
          </label>
        </div>
        <div>
          <input type="password" tal:attributes="name view/input_passphrase" />
        </div>
        <div>
          <label>
            <input type="radio" value="recoverpassword"
                   tal:attributes="name view/input_action">
            I've forgotten my passphrase
          </label>
        </div>

        <br />
        <div>
          <input type="submit" value="Continue"
                 tal:attributes="name view/submit_continue" />
        </div>

      </form>

    </div>
  </body>
</html>

