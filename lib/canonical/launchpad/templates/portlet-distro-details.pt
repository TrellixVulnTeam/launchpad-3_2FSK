<div class="portlet">

  <h4>Distribution Details:</h4>

  <div class="portletBody">
    <div class="portletContent even">

      <b>Distribution:</b><br />
      <a tal:attributes="href string:/distros/${context/name}/">
      <span tal:replace="context/displayname" /></a><br />

      <b>Admin:</b><br />
      <img src="/++resource++user.gif">
      <a tal:attributes="href string:/people/${context/owner/name}/"
         tal:content="context/owner/browsername">owner name</a>
      <tal:block condition="context/required:launchpad.Edit">
        <a tal:attributes="href string:${context/fmt:url}/+reassign">
          <img alt="(Change admin)"
               src="/++resource++edit.gif" title="Change the admin" />
        </a>
      </tal:block>
      <br />

      <b>Members:</b><br />
      <img src="/++resource++user.gif">
      <a href="+members"
         tal:content="context/members/browsername">owner name</a><br /> 

      <b>Translation Group:</b><br />
      <img src="/++resource++languages.gif">
      <tal:block condition="context/translationgroup">
      <a tal:attributes="href
               string:/rosetta/groups/${context/translationgroup/name}/"
         tal:content="context/translationgroup/title"
      >Group</a><br />
      </tal:block>
      <tal:block condition="not: context/translationgroup">
      <i>Not assigned</i><br />
      </tal:block>
      <b>Translation Perms:</b><br />
      <span tal:replace="context/translationpermission/title">Open</span>
      <br />

    </div>
  </div>
</div>

