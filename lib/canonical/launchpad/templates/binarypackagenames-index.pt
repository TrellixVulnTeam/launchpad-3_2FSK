<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <h1>Binary package names</h1>
    </metal:heading>

  <metal:leftportlets fill-slot="portlets_one">
  </metal:leftportlets>

  <metal:rightportlets fill-slot="portlets_two">
  </metal:rightportlets>

  <div metal:fill-slot="main">

      <form name="search" method="GET">
        <div><label for="name">Find binary package names:</label></div>
        <input type="text" name="name" tal:attributes="value request/name|nothing" />
        <input type="submit" value="Search"/>
      </form>
      <ul>
        <li class="add"><a href="+new">Add...</a></li>
      </ul>
      
  <tal:block tal:define="bn view/binaryPackagenamesBatchNavigator;
                         prev_url bn/prevBatchURL;
                         next_url bn/nextBatchURL;">


      <table width="100%"
             tal:define="currentBatch bn/currentBatch">
          <thead>
        <tr>
          <th tal:condition="currentBatch">
            <span tal:condition="request/name|nothing">
              Binary package names found
            </span>
          </th>
          <th tal:condition="not:currentBatch">
            <i>No Binary package names found</i>
          </th>
       </tr>
          </thead>
          <tbody>
       <tr tal:repeat="bpname currentBatch">
           <td tal:content="bpname/name">
               BINARYPACKAGENAME
           </td>
       </tr>
          </tbody>
          <tfoot>
       <tr>
         <td align="center">
         <div tal:condition="python:prev_url or next_url">
           <table>
           <tr>
             <th tal:condition="prev_url">
               <a tal:attributes="href prev_url"><b>&lt;&lt; Prev</b></a>
             </th>
             <th tal:repeat="page_link bn/batchPageURLs">
               <a tal:attributes="href python:page_link.values()[0]"
                  tal:content="python:page_link.keys()[0]"></a>
             </th>
             <th tal:condition="next_url" >
               <a tal:attributes="href next_url"><b>Next &gt;&gt;</b></a>
             </th>
          </tr>
          </table>
        </div>
        </td>
      </tr>
        </tfoot>
    </table>
    </tal:block>

  </div>
</body>
</html>
 
