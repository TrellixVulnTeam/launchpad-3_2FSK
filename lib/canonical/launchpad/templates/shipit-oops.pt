<tal:layout define="columns1 default">
<html metal:use-macro="context/@@main_template/master">
  <body>
    <metal:heading fill-slot="pageheading">
      <h1 class="exception">Oops!</h1>
    </metal:heading>
    <div metal:fill-slot="body">
      <p>
        Sorry, something just went wrong in ShipIt.
      </p>
      <p>
        Please <a href="https://launchpad.net/products/shipit/+bugs"
        >report this as a bug</a>, after checking that it isn&#8217;t 
        reported already.
      </p>

      <tal:oopsmessage tal:replace="structure request/@@+oopsmessage" />

      <p>
        Thanks for helping improve ShipIt, and sorry for the inconvenience.
      </p>

      <tal:replace tal:replace="structure view/maybeShowTraceback" />
    </div>
  </body>
</html>
</tal:layout>
