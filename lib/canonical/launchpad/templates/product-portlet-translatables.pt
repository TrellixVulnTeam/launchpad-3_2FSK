<div class="portlet" tal:condition="context/translatable_series">
  <h2>Translatable branches</h2>

  <div class="portletBody portletContent">

    <ul>
      <li class="translations"
          tal:repeat="series context/translatable_series">
        <a tal:content="series/title"
               tal:attributes="href string:${series/fmt:url}/+translations">
          series title</a>
      </li>
    </ul>

  </div>
</div>

<div class="portlet" tal:condition="context/translatable_packages">

  <h2>Translatable distro packages</h2>

  <div class="portletBody portletContent ">

    <ul>
      <li class="translations"
          tal:repeat="pkg context/translatable_packages">
        <a tal:content="pkg/title"
               tal:attributes="href string:/distros/${pkg/distribution/name}/${pkg/distrorelease/name}/+sources/${pkg/name}/+translations">
          package title</a>
      </li>
    </ul>

  </div>

</div>

