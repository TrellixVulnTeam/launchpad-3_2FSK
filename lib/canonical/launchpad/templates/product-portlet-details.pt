<div class="portlet">
  <h4 tal:content="context/title">product title</h4>

  <div class="portletBody">
    <div class="portletContent">

      <tal:has-homepage condition="context/homepageurl">
          <b>External links:</b><br />
          <img src="/@@/link_icon.gif" alt="" />
          <a tal:attributes="href context/homepageurl"
             class="link">Home page</a><br />
      </tal:has-homepage>

      <b>Registrant:</b><br />
      <img src="/@@/user.gif">
      <a tal:attributes="href string:/people/${context/owner/name}"
         tal:content="context/owner/browsername"
         class="link">ownername
      </a>
      <br />

      <b>Translation group:</b><br />
      <img src="/@@/languages.gif">
      <tal:block condition="context/translationgroup">
      <a tal:attributes="href
               string:/rosetta/groups/${context/translationgroup/name}/"
         tal:content="context/translationgroup/title"
      >Group</a><br />
      </tal:block>
      <tal:block condition="not: context/translationgroup">
      <i>Not assigned</i><br />
      </tal:block>
      <b>Translation contributions:</b><br />
      <span tal:replace="context/translationpermission/title">Open</span><br />

      <div tal:condition="not: context/official_rosetta">
        <i>Doesn&rsquo;t use Rosetta</i>
      </div>

      <div tal:condition="not: context/official_malone">
        <i>Doesn&rsquo;t use Malone</i>
      </div>

      <b>Product status:</b><br />
      <span tal:condition="context/reviewed"
            tal:omit-tag>Reviewed<br /></span>
      <span tal:condition="context/active"
            tal:omit-tag>Active<br /></span>
      <div tal:condition="not: context/active">Disabled<br /></div>


      <tal:has-project condition="context/project">
          <b>Part of:</b><br />
          <img src="/@@/project_icon.gif" alt="" />
          <a tal:attributes="href context/project/fmt:url"
             tal:content="context/project/title"
             class="link">Project name</a><br />
      </tal:has-project>

    </div>
  </div>
</div>
