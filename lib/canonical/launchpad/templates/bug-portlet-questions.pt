<div class="portlet" id="portlet-questions" tal:condition="context/questions">

  <h2>Related questions</h2>

  <div class="portletBody portletContent">

    <ul>
      <li class="question" tal:repeat="question context/questions">
        <span tal:replace="question/target/displayname">Ubuntu</span>:
        <a tal:attributes="href question/fmt:url"
           tal:content="question/title">question title here</a>
      </li>
    </ul>

  </div>

</div>
