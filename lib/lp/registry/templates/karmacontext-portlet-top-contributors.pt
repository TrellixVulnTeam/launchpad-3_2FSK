<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-top-contributors">
  <h2>
    <span class="see-all"><a
      tal:replace="structure context/menu:overview/top_contributors/fmt:link" /></span>
    Top contributors
  </h2>

  <p tal:condition="not: view/getTopFiveContributors">
    There are no contributors to this project.
  </p>

  <dl tal:condition="view/getTopFiveContributors">
    <tal:contributor tal:repeat="contributor view/getTopFiveContributors">
      <dt>
        <a tal:replace="structure contributor/person/fmt:link">
          Guilherme Salgado</a>
        <strong>
          <tal:karma replace="contributor/karmavalue" /> points
        </strong>
      </dt>
    </tal:contributor>
  </dl>
</div>
