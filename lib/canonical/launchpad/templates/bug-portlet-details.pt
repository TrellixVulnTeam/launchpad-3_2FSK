<div class="portlet">

  <h4>Bug details</h4>


  <div class="portletBody portletContent">
    <img alt="" src="/++resource++bug" />
    <a href="#"
       style="text-decoration: underline"
       tal:attributes="href context/fmt:url">
       Bug #<span tal:replace="context/id">3252543</span></a><br />
   
    <tal:nickname tal:condition="context/name">
      <b>Nickname:</b><br />
      <span tal:replace="context/name" /><br />
    </tal:nickname>

    <b>Initial Reporter:</b><br />
    <img src="/++resource++user.gif" />
    <a tal:attributes="href context/owner/fmt:url"
      tal:content="context/owner/browsername"
      style="text-decoration: underline"></a><br />

    <b>First reported:</b><br />
    <span tal:replace="context/datecreated/fmt:datetime">12-12-2004
    20:44:00 UTC</span>
    <br />

    <b>Secrecy:</b>
    <tal:block condition="context/private">
      <span class="explain" title="Secret bugs can only be seen by the bug subscribers explicitly listed.">Private</span>
    </tal:block>
    <tal:block condition="not:context/private">
      Public
    </tal:block>

  </div>

</div>
