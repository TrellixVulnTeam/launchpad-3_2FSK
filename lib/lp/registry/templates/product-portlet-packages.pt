<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-packages">
  <h2>
    <span class="see-all"><a
      tal:replace="structure context/menu:overview/packages/fmt:link" /></span>
    Packages
  </h2>

  <p tal:condition="not: context/sourcepackages">
    <tal:name replace="context/displayname" /> has no packages.
  </p>

  <dl tal:condition="context/sourcepackages">
    <tal:pair tal:repeat="package context/sourcepackages">
      <dt>
        <a class="sprite package-source"
          tal:attributes="href package/fmt:url"
          tal:content="package/title">apache in ubuntu hoary</a>
      </dt>
      <dd tal:repeat="release package/distinctreleases">
        <strong>Version
          <tal:version content="release/version">2.3</tal:version></strong>
        uploaded <tal:date replace="release/dateuploaded/fmt:date" />
      </dd>
    </tal:pair>
  </dl>
</div>
</tal:root>
