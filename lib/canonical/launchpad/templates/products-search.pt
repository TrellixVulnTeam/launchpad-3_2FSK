<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">Launchpad: Advanced Upstream
    Product Search</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
</head>

<body>

<div metal:fill-slot="main">

    <h1>Upstream Product Advanced Search</h1>

    <fieldset>
    
        <legend>Search for a product</legend>

        <form method="post">

        <table border="0" cellpadding="1" cellspacing="2" width="100%">
            <tr>
                <td align="center">
                    <input name="text" size="40" 
                           tal:attributes="value view/text" />
                    <input type="submit" value="Search" />
                    <br />
                    <input type="checkbox" name="rosetta" id="rosetta"
                           tal:attributes="checked view/rosetta">
                    <label for="rosetta">Translations</label>
                    <input type="checkbox" name="malone" id="malone"
                           tal:attributes="checked view/malone">
                    <label for="malone">Bugs</label>
                    <input type="checkbox" name="soyuz" id="soyuz"
                           tal:attributes="checked view/soyuz">
                    <label for="soyuz">Packages</label>
                    <input type="checkbox" name="bazaar" id="bazaar"
                           tal:attributes="checked view/bazaar">
                    <label for="bazaar">Branches</label>
                    <div class="formHelp">Enter any part of the product name,
                    title or description. Select a particular Launchpad aspect
                    of the product.</div>
                </td>
            </tr>
        </table>

        </form>

        <div tal:condition="view/searchrequested">
        
            <table class="rowNavigation" width="100%">
                <tr tal:repeat="product view/searchresults"
                    tal:attributes="onclick string:window.location='${product/name}';"
                    valign="top"
                    vspace="5">
                    <td>
                        <img src="/++resource++product_icon.gif">
                        <b><a tal:attributes="href product/name" href="#"
                            tal:content="product/title">$Product.title</a></b>
                        (<span tal:content="product/name">$Product.name</span>)
                        <a tal:attributes="href product/homepageurl"
                            tal:content="product/homepageurl">http://www.gnu.org/</a>
                        <br />
                    <span tal:content="product/summary">
                        $Product.summary</span>
                    </td>
                </tr>
            </table>
  
            <div tal:condition="not: view/matches"><b>No matching upstream
            products.</b> You can register your product <a
            href="+new">here</a></div>

        </div>
 
    </fieldset>

</div>

</body>
</html>
