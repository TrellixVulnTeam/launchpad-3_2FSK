<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<metal:leftportlets fill-slot="portlets_one">
  <div tal:content="structure context/@@+portlet-details" />
  <div tal:content="structure context/distrorelease/@@+portlet-details" />
</metal:leftportlets>
<metal:rightportlets fill-slot="portlets_two">
  <div tal:content="structure context/@@+portlet-bugtasklist-actions" />
</metal:rightportlets>

<body>

<div metal:fill-slot="main"
     tal:define="listing_columns view/listing_columns">

  <h1>Bugs in
    <span tal:replace="string:${context/distrorelease/distribution/name} ${context/sourcepackagename}">
      Title
    </span>
  </h1>

  <table id="sourcepackagebugs">
    <tr>
      <td colspan="3">
        <h2 tal:content="string:To be fixed in ${context/distrorelease/displayname}">
          To be fixed in hoary
        </h2>
      <td>
    </tr>
    <tr condition="view/showListView" tal:repeat="task view/unresolved_release_bugs">
      <metal:taskrow use-macro="task/@@+bugtask-macros-listview/item" />
    </tr>
    <tal:other-release-bugs-section define="other_release_bugs view/other_releases_unresolved_bugs">
      <tal:other-release-bugs repeat="release_displayname other_release_bugs">
        <tr>
          <td colspan="3">
            <h2 tal:content="string:To be fixed in ${release_displayname}">
              To be fixed in hoary
            </h2>
          </td>
        </tr>
        <tr tal:repeat="task other_release_bugs/?release_displayname">
          <metal:taskrow use-macro="task/@@+bugtask-macros-listview/item" />
        </tr>
      </tal:other-release-bugs>
    </tal:other-release-bugs-section>
    <tr>
      <td colspan="3">
        <h2>Untargeted bugs</h2>
      </td>
    </tr>
    <tr tal:repeat="task view/general_unresolved_bugs">
      <metal:taskrow use-macro="task/@@+bugtask-macros-listview/item" />
    </tr>
</div>

</body>
</html>
