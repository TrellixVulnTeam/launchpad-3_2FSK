<div class="portlet">
  <h4>Review requests:</h4>

  <div class="portletBody portletContent">

    <ul tal:condition="context/reviews" class="people">
      <li tal:repeat="review context/reviews">
        <a href="#"
           tal:content="review/reviewer/browsername"
           tal:attributes="href review/reviewer/fmt:url">Dafydd Harries</a><tal:block condition="review/queuemsg">:
            <span tal:replace="review/queuemsg"> brief message.</span>
          </tal:block>
      </li>
    </ul>
    <p tal:condition="not: context/reviews">
      No reviews queued.
    </p>
  </div>
</div>
