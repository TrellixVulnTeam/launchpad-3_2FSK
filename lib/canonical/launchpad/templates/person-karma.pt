<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">
<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-calendar" />
</metal:rightportlets>

<div metal:fill-slot="main">

  <h1>Launchpad Karma</h1>

  <p>This is a summary of all activities performed by <span
    tal:replace="context/browsername" /> in Launchpad, organized per activity
    type.</p>

  <ul>
    <tal:block tal:repeat="actionCategory view/actionCategories">
      <tal:block tal:define="actions python:view.actions(actionCategory)"
                 tal:condition="actions">
        <li>
          <span tal:replace="actionCategory/title" />

          <table class="listing data">
            <thead>
              <tr>
                <th>Action</th>
                <th>Number of times performed</th>
              </tr>
            </thead>
            <tbody>
              <tr tal:repeat="action actions">
                <td><span tal:replace="action/name/title" /></td>
                <td><span tal:replace="python:view.actionsCount(action)" /></td>
              </tr>
            </tbody>
          </table>
        </li>
        <br />
      </tal:block>
    </tal:block>
  </ul>

</div>

</body>
</html>
