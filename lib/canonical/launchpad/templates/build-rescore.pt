<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<body>

  <div metal:fill-slot="main" tal:define="message view/rescore_build">

    <h1>Rescore <span tal:replace="context/title"/></h1>

    <div class="portalMessage" tal:condition="message"
         tal:content="structure message"/>

    <div tal:condition="not: message">
      <p><dfn tal:content="context/title">BUILD</dfn> is
         <span tal:replace="context/buildstate/title"/>.</p>

      <form name="RESCORE" action="" method="POST">
      <table>
        <tr>
          <td>Last Score</td>
          <td>
             <input name="SCORE" type="text" size="5"
	            tal:attributes="value context/buildqueue_record/lastscore"/>
           </td>
        </tr>
        <tr>
           <td>
              <input name="RESCORE" type="hidden" value="1"/>
              <input type="submit" value="Update"/>
           </td>
        </tr>
      </table>
      </form>
    </div>

  </div>
</body>
</html>
