<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n">
    &raquo;
      <a tal:attributes="href context/fmt:url"
         tal:content="view/friendly_text">Approved</a> for merging into
    <tal:source-branch
      tal:define="branch context/target_branch">
      <a
        tal:attributes="href branch/fmt:url"
        tal:content="branch/bzr_identity">lp:product/branch-name</a>
      <tal:queued condition="context/queue_status/enumvalue:QUEUED">
        (<a tal:attributes="href view/queue_location">view queue</a>)
      </tal:queued>
      <a tal:define="link context/menu:context/delete"
         tal:condition="link/enabled"
         tal:attributes="href link/url"
         ><img tal:attributes="alt link/text;title link/text" src="/@@/remove" /></a>
      <a tal:define="link context/menu:context/edit"
         tal:condition="link/enabled"
         tal:attributes="href link/url"
         ><img tal:attributes="alt link/text;title link/text" src="/@@/edit" /></a>

    </tal:source-branch>

</div>


