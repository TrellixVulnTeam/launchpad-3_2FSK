<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="view/macro:page/main_only"
  i18n:domain="malone"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <div>
        <tal:icon replace="structure context/image:icon" />
        <a tal:attributes="href context/fmt:url"
        >Bug #<tal:bug replace="context/bug/id">3252543</tal:bug></a>:
      </div>
      <h1 tal:content="context/bug/title">Foo doesn't work</h1>
    </metal:heading>

    <div metal:fill-slot="main">
      <p tal:condition="view/is_question" class="error message">
        This bug was converted into a question. It cannot be edited.
      </p>

      <div
        tal:condition="not: view/is_question"
        tal:content="structure view/edit_form" />

      <h2>Bug description</h2>

      <div tal:content="structure context/bug/description/fmt:text-to-html">
        $Bug.description
      </div>

    </div>
  </body>
</html>
