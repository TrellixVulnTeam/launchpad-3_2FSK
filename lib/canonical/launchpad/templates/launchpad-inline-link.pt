<tal:link-enabled
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  condition="context/enabled"
><a
  tal:condition="context/icon"
  tal:attributes="
    class string:menu-link-${context/name};
    href context/url;
    style string:
      background: url(${context/icon_url}) center left no-repeat;;
      line-height: 20px;;
      padding-left: 18px;
    title context/summary;
  "
  tal:content="structure context/escapedtext"
/><a
  tal:condition="not:context/icon"
  style="line-height: 20px;"
  tal:attributes="
    class string:menu-link-${context/name};
    href context/url;
    title context/summary;
  "
  tal:content="structure context/escapedtext"
/></tal:link-enabled>