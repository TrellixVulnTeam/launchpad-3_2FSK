<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  metal:use-macro="view/macro:page/main_side"
  i18n:domain="launchpad">
  <body>
    <tal:heading metal:fill-slot="heading">
      <h1 tal:content="context/title">project title</h1>
    </tal:heading>

    <tal:main metal:fill-slot="main"
      define="overview_menu context/menu:overview">
      <div class="top-portlet">
        <div
          class="summary"
          tal:content="structure context/summary/fmt:text-to-html" />
        <div
          class="description"
          tal:content="structure context/description/fmt:text-to-html"/>
      </div>

      <div class="yui-g">
        <div class="yui-u first">
          <div id="project-info" class="portlet">
            <h2>Distribution information</h2>

            <tal:officers content="structure context/@@+details" />

            <p id="registrant">
              Registered
              <tal:created replace="context/date_created/fmt:approximatedate" />
            </p>
          </div>
        </div>

        <div class="yui-u">
          <tal:series replace="structure context/@@+series-and-milestones" />
        </div>
      </div>

      <div class="yui-g">
        <div class="yui-u first">
          <div tal:replace="structure context/@@+portlet-listfaqs" />
          <div tal:replace="structure context/@@+portlet-latestquestions" />
        </div>

        <div class="yui-u">
          <div class="portlet">
            <tal:search-packages condition="context/full_functionality">
              <h2>Packages</h2>

              <form name="search" action="+search" method="get">
                <input type="text" name="text" size="35"
                  tal:attributes="value request/name|nothing" />
                  <input type="submit" value="Find a Package"/>
              </form>
            </tal:search-packages>

            <ul class="horizontal">
              <li>
                <a tal:replace="structure overview_menu/ppas/fmt:link" />
              </li>
              <li>
                <a tal:replace="structure overview_menu/builds/fmt:link" />
              </li>
            </ul>
            <ul class="horizontal">
              <li>
                <a tal:replace="structure overview_menu/archive_mirrors/fmt:link" />
              </li>
              <li>
                <a tal:replace="structure overview_menu/cdimage_mirrors/fmt:link" />
              </li>
            </ul>
          </div>

          <div tal:replace="structure context/@@+portlet-latestbugs" />
          <div tal:replace="structure context/@@+portlet-latestspecs" />
          <div tal:replace="structure context/@@+portlet-coming-sprints" />
          <div tal:replace="structure context/@@+portlet-top-contributors" />
        </div>
      </div>
    </tal:main>

    <tal:side metal:fill-slot="side"
      define="overview_menu context/menu:overview">
      <tal:menu replace="structure view/@@+global-actions" />

      <!--
      <div id="downloads" class="top-portlet downloads"
        tal:define="release view/latest_release_with_download_files">
        <h2>Downloads</h2>

        <tal:release condition="release">
          <ul>
            <li tal:repeat="file release/files">
              <a tal:attributes="href file/fmt:url;
                                 title file/description;"
                tal:content="file/libraryfile/filename" />
            </li>
          </ul>

          <div class="released">
            <span>
            released <tal:date replace="release/datereleased/fmt:displaydate" />
            </span>
          </div>
        </tal:release>

        <div class="alternate">
          <a style="text-decoration: underline;"
            tal:define="link overview_menu/downloads"
            tal:attributes="href link/fmt:url;
                            title link/summary"
            tal:content="structure link/escapedtext" /> |
          <a style="text-decoration: underline;"
            tal:define="link overview_menu/rdf"
            tal:attributes="href link/fmt:url;
                            title link/summary"
            tal:content="structure link/escapedtext" />
        </div>
      </div>
      -->

      <div tal:replace="structure context/@@+get-involved" />

      <div tal:replace="structure context/@@+portlet-latestannouncements" />
    </tal:side>
  </body>
</html>
