<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-search">
  <h2>Search</h2>
  <div class="portletBody"
    tal:define="bugs_url string:${context/target/fmt:url}/+bugs">
    <b>Enter bug ID or keywords:</b><br /><br />
    <form name="bugtask_search" method="GET"
          tal:attributes="action bugs_url">
      <input
        id="field.searchtext"
        name="field.searchtext"
        size="6"
        style="width: 90%;"
      />
      <input type="submit" name="search" value="Search" />
    </form>
    <br />
    <a href="#"
       tal:content="string:Show all open bugs"
       tal:attributes="href bugs_url">Show all Mozilla Firefox bugs</a>
  </div>

</div>
