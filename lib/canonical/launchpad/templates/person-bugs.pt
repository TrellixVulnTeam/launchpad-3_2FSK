<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
  <title metal:fill-slot="title">Bugs Reported By
      <span tal:replace="context/displayname">Name</span></title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

  <metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure view/actionsPortlet" />
  </metal:rightportlets>

  <div metal:fill-slot="main">

   <h1>Bugs Reported</h1>

    <!-- XXX: salgado: Must show all bugs, not only bugs reported by
      this person.  -->
    <p tal:condition="not: context/bugs">No bugs have been reported by <span
    tal:replace="context/displayname" />. You can report a bug on any
    product or distribution package in the Launchpad.</p>

      <table id="ass_listing" class="listing rowNavigation"
             tal:condition="context/bugs">
        <tr>
          <th>Bug #</th>
          <th>Bug Title</th>
        </tr>
        <tr tal:repeat="bug context/bugs">
          <td><a tal:attributes="href string:/malone/bugs/${bug/id}">
            <span tal:content="bug/id"></span></a>
          </td>
          <td><a tal:attributes="href string:/malone/bugs/${bug/id}">
            <span tal:content="bug/title"></span></a>
          </td>
        </tr>
      </table>
  </div>

</body>
</html>
