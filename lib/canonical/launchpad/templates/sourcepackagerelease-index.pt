<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
  <!-- Plone style sheet -->
  <style type="text/css" media="screen">@import url(plone.css);</style>
  <!-- Soyuz style sheet -->
  <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<div metal:fill-slot="main">

  <h1>
    <span tal:content="context/sourcepackagerelease/sourcepackage/name">
      TITLE
    </span>
    (<span tal:content="context/sourcepackagerelease/version" />)
  </h1>

 <fieldset>
   <legend>
     Source Package Release Information
   </legend>
   <p><b>Package name:</b> 
      <a tal:content="context/sourcepackagerelease/sourcepackage/name"
      tal:attributes="href
      string:../../${context/sourcepackagerelease/sourcepackage/name}" />

    <p><b>Package Creator:</b> 
       <a
       tal:content="context/sourcepackagerelease/creator/displayname" 
       tal:attributes="href 
       string:/foaf/people/${context/sourcepackagerelease/creator/name}"
       />

    <p><b>Upload Date (UTC):</b> 
       <span tal:content="context/sourcepackagerelease/dateuploaded">
       UPLOADDATE</span>

    <p><b>Urgency Level:</b>
       <span tal:content="context/sourcepackagerelease/pkgurgency">
       URGENCY</span>

    <p><b>Component:</b>
       <span tal:content="context/sourcepackagerelease/component/name">
       Component</span>

    <p><b>Binary Packages:</b> 
      <i>
        <a tal:condition="context/sourcepackagerelease/changelog"
	   href="+changelog">
	   View Changelog
	</a>
      <tal:dummy tal:condition="not:context/sourcepackagerelease/changelog">
      	  No Changelog for this Source Release
      </tal:dummy>
      </i> 

       <ul>
         <li tal:repeat="binary context/sourcepackagerelease/binaries" >
          <a tal:content="binary/name"
	  tal:attributes="href 
	  string:../../../../bin/${context/distroreleasename}/${binary/name}"
	  /> ( 
          <a tal:content="binary/version"
	  tal:attributes="href 
	  string:../../../../bin/${context/distroreleasename}/${binary/name}/${binary/version}"
	  /> ): <span tal:content="binary/shortdesc"/>
         </li>
       </ul>

  <p><b>Builds:</b> 

   <tal:dummy tal:condition="not:context/archs">
     <i> No Builds Available</i>
   </tal:dummy>
      <i>
        <a tal:condition="context/archs" href="+buildlog">
	   View BuildLogs</a>

      <tal:dummy tal:condition="not:context/archs">
      	  <i>No Build for this Source Release</i>
      </tal:dummy>
      </i> 
   <br>
   <tal:block tal:repeat="arch context/archs">
     [
       <a tal:content="arch" tal:attributes="href arch">ARCH</a>
     ]    
   </tal:block>


    <div align="right">
    </div>

  </fieldset>

  <fieldset condition="context/builddepends">
    <legend>
      Build Dependences
    </legend>

  <table width="100%">
    <tr>
      <td valign="top">
	  <ul>
	    <span tal:repeat="builddepends python:context.builddepends[0]">
	      <li>
	        <a tal:content="builddepends/name" tal:attributes="href
		string:../../../../bin/${context/distroreleasename}/${builddepends/name}"/> 
		<tal:dummy condition="builddepends/signal">
		  (<span tal:content="builddepends/signal" /> 
		  <span tal:content="builddepends/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>
      <td valign="top">
	  <ul>
	    <span tal:repeat="builddepends python:context.builddepends[1]">
	      <li>
	        <a tal:content="builddepends/name" tal:attributes="href
		string:../../../../bin/${context/distroreleasename}/${builddepends/name}"/> 
		<tal:dummy condition="builddepends/signal">
		  (<span tal:content="builddepends/signal" /> 
		  <span tal:content="builddepends/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>
      <td valign="top">
	  <ul>
	    <span tal:repeat="builddepends python:context.builddepends[2]">
	      <li>
	        <a tal:content="builddepends/name" tal:attributes="href
		string:../../../../bin/${context/distroreleasename}/${builddepends/name}"/> 
		<tal:dummy condition="builddepends/signal">
		  (<span tal:content="builddepends/signal" /> 
		  <span tal:content="builddepends/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>

    </tr>
    <tr>
      <td>
        <h4> Plataform Independent </h4>
      </td>
    </tr>
    <tr>
      <td valign="top">
	  <ul>
	    <span tal:repeat="builddependsindep python:context.builddependsindep[0]">
	      <li>
	        <a tal:content="builddependsindep/name" tal:attributes="href
		string:../../../../bin/${context/distroreleasename}/${builddependsindep/name}"/> 
		<tal:dummy condition="builddependsindep/signal">
		  (<span tal:content="builddependsindep/signal" /> 
		  <span tal:content="builddependsindep/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>
      <td valign="top">
	  <ul>
	    <span tal:repeat="builddependsindep python:context.builddependsindep[1]">
	      <li>
	        <a tal:content="builddependsindep/name" tal:attributes="href
		string:../../../../bin/${context/distroreleasename}/${builddependsindep/name}"/> 
		<tal:dummy condition="builddependsindep/signal">
		  (<span tal:content="builddependsindep/signal" /> 
		  <span tal:content="builddependsindep/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>
      <td valign="top">
	  <ul>
	    <span tal:repeat="builddependsindep python:context.builddependsindep[2]">
	      <li>
	        <a tal:content="builddependsindep/name" tal:attributes="href
		string:../../../../bin/${context/distroreleasename}/${builddependsindep/name}"/> 
		<tal:dummy condition="builddependsindep/signal">
		  (<span tal:content="builddependsindep/signal" /> 
		  <span tal:content="builddependsindep/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>

    </tr>
  </table>
  </fieldset>


</div>
</body>
</html>
 
