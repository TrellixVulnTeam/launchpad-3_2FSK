<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">
<tal:news define="announcements view/latest_announcements">
<div
  tal:condition="announcements"
  class="portlet"
  id="portlet-latest-announcements">
  <h2>Latest news</h2>
  <div class="portletBody portletContent">
    <ul class="news">
    <li tal:repeat="announcement announcements" class="news"
        tal:content="announcement/title">
    </li>
  </ul>
  <a href="+announcements">&raquo More announcements...</a>
  </div>
</div>
</tal:news>
</tal:root>
