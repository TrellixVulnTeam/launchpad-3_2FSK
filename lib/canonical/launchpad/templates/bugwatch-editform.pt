<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  lang="en"
  metal:use-macro="context/@@main_template/master"
  i18n:domain="malone"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <h1>Change bug watch</h1>
    </metal:heading>

<metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure context/@@+portlet-bugtasks" />
</metal:rightportlets>

    <div metal:fill-slot="main">

      <div metal:use-macro="context/@@launchpad_form/form">

        <p metal:fill-slot="extra_info">
          This watch links <a tal:attributes="href
          context/bug/fmt:url">bug #<span
          tal:replace="context/bug/id">3452</span></a> to:
        </p>

      </div>

    </div>

  </body>
</html>
