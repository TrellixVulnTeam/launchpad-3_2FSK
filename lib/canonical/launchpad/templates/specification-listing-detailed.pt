<img src="/++resource++spec" />
<a tal:attributes="href context/fmt:url"
   tal:content="context/title">Spec Title Here</a>
<tal:block condition="context/milestone">
  <img src="/++resource++target" />&nbsp;<a
     tal:attributes="href context/milestone/fmt:url"
     tal:content="context/milestone/name">colony3</a>
</tal:block>
<tal:block condition="context/assignee">
  (<img src="/++resource++user.gif" />&nbsp;<a
      tal:attributes="href context/assignee/fmt:url"
      tal:content="context/assignee/browsername">Foo Bar</a>)
</tal:block>
<div style="font-size: 80%; margin-left: 25px;">
  <span tal:replace="context/status/title">Approved</span>
  (<span tal:replace="context/priority/title">High</span>):
  <span tal:replace="context/summary">
    summary here
  </span>
  <tal:block condition="view/review">
    <b>Review Requested by
    <span tal:replace="view/review/requestor/browsername">Foo Bar</span>.
    <span tal:replace="view/review/queuemsg"
          tal:condition="view/review/queuemsg">Msg goes here</span>
    </b>
  </tal:block>
</div>
<hr />
