<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad"
>
  <body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure view/branch/@@+portlet-details" />
  <div tal:replace="structure view/branch/@@+portlet-subscribers" />
</metal:leftportlets>

<metal:heading fill-slot="pageheading">
  <tal:branch-link define="branch context/branch">
    <metal:branch-link use-macro="context/branch/@@+macros/branch-heading-link"/>
  </tal:branch-link>
  <h1>
    Edit subscription to branch for
    <tal:person replace="context/person/displayname">Person</tal:person>
  </h1>
</metal:heading>

<div metal:fill-slot="main">

  <div metal:use-macro="context/@@launchpad_form/form" >
    <metal:extra fill-slot="extra_info">
      <p class="documentDescription">
        If you unsubscribe from a branch it will no longer show up on your
        personal pages.
      </p>
    </metal:extra>
  </div>

</div>

</body>
</html>

