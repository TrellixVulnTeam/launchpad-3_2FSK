<div class="portlet" id="portlet-source">
  <h2>Revision control details</h2>

  <div class="portletBody">
    <div class="portletContent">
      <div tal:condition="not:context/rcstype"
           tal:define="branch context/series_branch">
        <tal:block condition="branch/required:launchpad.View">
          <b>Bazaar Branch:</b><br />
          <img alt="" src="/@@/branch" />
          <a tal:attributes="href branch/fmt:url" tal:content="branch/displayname">
            branch name
          </a>
        </tal:block>
        <i tal:condition="not:branch/required:launchpad.View">None given</i>
      </div>
      <tal:block condition="context/rcstype">
        <tal:block condition="context/rcstype/enumvalue:CVS">
          <b>CVS Root:</b><br />
          <span tal:replace="context/cvsroot/fmt:shorten/25">cvsrt</span><br />
          <b>Module:</b>
          <span tal:replace="context/cvsmodule">cvs module</span><br />
          <b>Branch:</b>
          <span tal:replace="context/cvsbranch">cvs branch</span><br />
        </tal:block>
        <tal:block condition="context/rcstype/enumvalue:SVN">
          <b>Subversion:</b><br />
          <span tal:replace="context/svnrepository/fmt:shorten/25">svn repo</span><br />
        </tal:block>

        <b>Import status:</b>
        <span tal:condition="context/importstatus"
              tal:replace="context/importstatus/title">Syncing</span><br />
        <tal:block condition="context/datestarted">
          <b>Last sync started:</b>
          <span
            tal:attributes="title context/datestarted/fmt:datetime"
            tal:content="context/datestarted/fmt:approximatedate">
            4-03-05
          </span>
          <br />
          <b>Last sync finished:</b>
          <span
            tal:attributes="title context/datefinished/fmt:datetime"
            tal:content="context/datefinished/fmt:approximatedate">
            4-03-05
          </span>
          <br />
        </tal:block>
      </tal:block>
      <tal:block condition="context/import_branch">
        <b>Bazaar branch:</b> Published<br />
      </tal:block>
    </div>
  </div>
</div>
