<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="soyuz">

<head>
  <!-- Plone style sheet -->
  <style type="text/css" media="screen">@import url(plone.css);</style>
  <!-- Rosetta style sheet -->
  <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>

<div metal:fill-slot="main">

<h1><span
tal:content="context/binarypackagerelease/shortdesc">TITLE</span> 
(<span tal:content="context/version" />)
</h1>

 <fieldset>
   <legend>
     Binary Package Information
   </legend>

    <p><b>Binary Package name:</b>
    <a tal:content="context/binarypackagerelease/name" 
    tal:attributes="href string:../../${context/binarypackagerelease/name}"/>

    <p><b>Source Package Release:</b>
    <a
    tal:define="sourcerelease
    context/binarypackagerelease/sourcepackagerelease"
    tal:content="sourcerelease/sourcepackage/name"
    tal:attributes="href
    string:../../../../src/${context/sourcedistrorelease/name}/${sourcerelease/sourcepackage/name}/${sourcerelease/version}"
    /> 

    <p><b>Component:</b>
    <a tal:content="context/binarypackagerelease/component/name" 
    tal:attributes="href string:no-link-yet"/> 

    <p><b>Section:</b>
    <a tal:content="context/binarypackagerelease/section/name" 
    tal:attributes="href string:no-link-yet" /> 

    <p><b>Priority:</b>
    <span tal:content="context/binarypackagerelease/pkgpriority"/>

    <p><b>Licence:</b>
    <a tal:content="context/binarypackagerelease/licence" 
    tal:attributes="href string:no-link-yet"/>

 </fieldset>

 <p><h4>Package Bugs:</h4>
 <div class="dummy">
   <span>#1, #2, #3</span>
 </div>

 <p><h4>Builds:</h4>
   <tal:dummy tal:condition="not:context/archs">
     <i> No Builds Available</i>
   </tal:dummy>

 <tal:block tal:repeat="arch context/archs">
 [
 <a tal:content="arch" tal:attributes="href arch">
   ARCH
 </a>
 ]
 </tal:block>

</div>
</body>
</html>
 
