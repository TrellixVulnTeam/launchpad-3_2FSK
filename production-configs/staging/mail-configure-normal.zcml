<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:mail="http://namespaces.zope.org/mail"
    i18n_domain="zope">

    <!-- The local exim installation makes sure that all emails are forwarded
    to the staging IMAP account. Mail to one of the mailing list will be
    forwarded to Mailman.
    -->
    <mail:smtpMailer name="localhost" hostname="localhost" port="25" />
    <mail:directDelivery permission="zope.SendMail" mailer="localhost" />
</configure>
