
<tal:block define="bug_url context/fmt:url">

<table class="listing"
       style="width: 100%; margin-bottom: 1px; margin-top: 2px;
              font-size: 90%;">
  <thead>
    <tr>
      <th title="These are individual work items for each place the bug occurs in">  
      <span class="explain">Needs fixing in</span></th>
      <th>Status</th>
      <th>Severity</th>
      <th>Assigned to</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <tr tal:repeat="bugtask context/bugtasks">
      <td>
        <span tal:replace="bugtask/contextname">upstream rosetta</span>

        <!--indicate if there is a linked watch -->
        <img tal:condition="bugtask/bugwatch"
             src="/++resource++lock_icon.gif"
             alt="Watch"
             title="This Task is linked to a Bug Watch" />
      </td>

      <td tal:content="bugtask/status/title"
          tal:attributes="class string:status${bugtask/status/title}">
          $BugTask.status
      </td>

      <td tal:content="bugtask/severity/title"
          tal:attributes="class string:severity${bugtask/severity/title}">
        Critical
      </td>

      <td>
        <tal:block condition="bugtask/assignee">
          <img src="/++resource++user.gif" alt="" />
          <span tal:replace="bugtask/assignee/browsername">
            assignee.browsername
          </span>
        </tal:block>
      </td>

      <td style="text-align:center">
        <tal:editabletask condition="bugtask/required:launchpad.Edit">
          [<a tal:attributes="href string:${bugtask/fmt:url}/+edit;
              title string:Click to edit status, assignee in ${bugtask/contextname}"
              >edit</a>]
        </tal:editabletask>
        <tal:readonlytask condition="not:bugtask/required:launchpad.Edit">
          [<a tal:attributes="href string:${bugtask/fmt:url}/+index;
              title string:Click to view status in ${bugtask/contextname}"
              >view</a>]
        </tal:readonlytask>
      </td>
    </tr>

  </tbody>

</table>

</tal:block>

<div style="font-size: 80%; text-align: right; clear: both;
            margin-bottom:1em; text-decoration: none;">

  Request fix:
  <span style="white-space: nowrap">
      <img src="/++resource++add.gif" alt="+" />
      <a href="+upstreamtask"
         title="Mark this bug as occurring upstream">
        Upstream
      </a>
  </span>

  <span style="white-space: nowrap">
      <img src="/++resource++add.gif" alt="+" />
      <a href="+distrotask"
         title="Mark this bug as occurring in a distro package">
        In Distribution
      </a>
  </span>

</div>
