<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<div metal:fill-slot="main">

    <h1>DOAP Items Review</h1>

    <div class="documentDescription">
        Please review the following items.
    </div>

    <div tal:repeat="item context/forReview" tal:omit-tag>

        <p><b tal:content="item/title">title</b></p>

        <p style="margin-left: 30px;">
          <span tal:content="item/summary">summary</span>
          <span tal:condition="not: item/reviewed">
            [ <a tal:attributes="href string:${item/name}/+review">Review</a> ]
          </span>
        </p>

    </div>

</div>

</body>
</html>
