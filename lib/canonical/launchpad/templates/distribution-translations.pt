<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
<body>

<metal:leftportlets fill-slot="portlets_one">
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure request/@@+portlet-preflangs" />
  <div tal:replace="structure context/@@+portlet-details" />
</metal:rightportlets>

<metal:heading fill-slot="pageheading">
  <h3 tal:content="context/title">Ubuntu Linux</h3>
  <h1>Translations</h1>
</metal:heading>

<div metal:fill-slot="main">

  <tal:block condition="context/translation_target">
    <p>
      This distribution has a prefered release to be translated,
      <span tal:replace="context/displayname">Ubuntu</span>. We encorage
      you to translate it first.
    </p>

    <h2>
      <span tal:replace="context/translation_target/version">5.04</span>:
      <span tal:replace="context/translation_target/title">
        Hoary Hedgehog
      </span>
    </h2>
    <div tal:replace="structure context/translation_target/@@+langchart" />
  </tal:block>

  <tal:block condition="view/secondary_translatable_releases">
    <table class="listing">
      <thead>
        <tr>
          <th>Version</th>
          <th>Release title</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="distrorelease view/secondary_translatable_releases"
            tal:attributes="onclick
               string:window.location='${distrorelease/fmt:url}/+translations'">
          <td><a tal:attributes="href string:${distrorelease/fmt:url}/+translations"
                 tal:content="distrorelease/version">version</a>
          </td>
          <td tal:content="distrorelease/title">title</td>
        </tr>
      </tbody>
    </table>
  </tal:block>

</div>
</body>
</html>
