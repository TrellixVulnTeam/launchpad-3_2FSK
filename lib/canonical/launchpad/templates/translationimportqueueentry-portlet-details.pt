<div class="portlet">
  <h2>Import entry details</h2>

    <div class="portletBody">
        <div class="portletContent">
            <b>Origin:</b><br />
            <a tal:condition="context/sourcepackage"
               tal:content="context/sourcepackage/title"
               tal:attributes="href string:${context/sourcepackage/fmt:url}"
               >evolution in Ubuntu Hoary</a>
            <a tal:condition="context/productseries"
               tal:content="context/productseries/title"
               tal:attributes="href string:${context/productseries/fmt:url}"
               >Evolution Series: MAIN</a><br />
            <b>Path:</b>
            <a tal:attributes="href context/content/url"
               tal:content="context/path">po/foo.pot</a><br />
            <b>Uploader:</b><br />
            <img src="/@@/user" />
            <a tal:content="context/importer/browsername"
               tal:attributes="href context/importer/fmt:url"
               >Mark Shuttleworth</a><br />
            <b>Waiting since:</b>
            <span tal:replace="context/dateimported/fmt:date">
              2004-05-22
            </span><br />
            <b>Status:</b>
            <span tal:replace="context/status/name"></span><br />
            <b>Status changed on:</b>
            <span tal:replace="context/date_status_changed/fmt:date">
              2004-05-22
            </span><br />
        </div>
    </div>
</div>

