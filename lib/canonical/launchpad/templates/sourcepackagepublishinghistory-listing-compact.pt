<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

  <tr>
     <td>
       <span tal:replace="context/status/title">PUBLISHED</span>
       in
       <a tal:content="context/meta_sourcepackage/distroseries/name"
          tal:attributes="href context/meta_sourcepackage/fmt:url">
         alsa-utils
       </a>-<span tal:replace="context/pocket/title/fmt:lower">RELEASE</span>
       <tal:block replace="nothing">
         in the <span tal:replace="context/component/name">main</span>
         component
       </tal:block>
       <span
         tal:condition="not: view/isRemoved"
         tal:attributes="title context/datepublished/fmt:datetime"
         tal:content="context/datepublished/fmt:displaydate">
         2005-09-16
       </span>
       <span
         tal:condition="view/isRemoved"
         tal:attributes="title context/dateremoved/fmt:datetime"
         tal:content="context/dateremoved/fmt:displaydate">
         2005-09-16
       </span>
     </td>
  </tr>
</tal:root>
