<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    >

  <!-- Content directives.  We need to make sure SubURLs and other kinds of
       traversal work properly.  We also need to make security declarations.
    -->
  <content class="canonical.rosetta.stub.Projects">
    <allow interface="canonical.rosetta.interfaces.IProjects"/>
  </content>

  <content class="canonical.rosetta.stub.Project">
    <allow interface="canonical.rosetta.interfaces.IProject"/>
  </content>

  <content class="canonical.rosetta.stub.Product">
    <allow interface="canonical.rosetta.interfaces.IProduct"/>
  </content>

  <content class="canonical.rosetta.stub.POTemplate">
    <allow interface="canonical.rosetta.interfaces.IPOTemplate"/>
  </content>

  <content class="canonical.rosetta.stub.POFile">
    <allow interface="canonical.rosetta.interfaces.IPOFile"/>
  </content>

  <content class="canonical.rosetta.stub.Languages">
    <allow interface="canonical.rosetta.interfaces.ILanguages"/>
  </content>

  <content class="canonical.rosetta.stub.Language">
    <allow interface="canonical.rosetta.interfaces.ILanguage"/>
  </content>

  <content class="canonical.rosetta.stub.Translation">
    <allow interface="canonical.rosetta.interfaces.IPOTranslation" />
  </content>

  <utility
      factory="canonical.rosetta.stub.Projects"
      provides="canonical.rosetta.interfaces.IProjects"
      />

  <utility
      factory="canonical.rosetta.stub.Languages"
      provides="canonical.rosetta.interfaces.ILanguages"
      />

  <adapter for="zope.app.security.interfaces.IPrincipal"
      provides="canonical.rosetta.interfaces.IPerson"
      factory="canonical.rosetta.stub.personFromPrincipal" />
</configure>
