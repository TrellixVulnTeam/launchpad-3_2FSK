<div class="portlet">
    <h4>Subscriptions</h4>

    <div class="portletBody"
         tal:define="bounty_url string:/bounties/${context/name}">
        <div class="portletContent even"
             tal:define="subscriptions context/subscriptions">

            <h5>publisher:</h5>
            <ul class="people">
                <li><a
                  tal:content="context/owner/browsername"
                  tal:attributes="href
                    string:/people/${context/owner/name}">owner</a></li>
            </ul>

          <tal:subscriptions
            tal:define=
              "watches view/getWatches;
               ccs view/getCCs;
               ignores view/getIgnores">

            <h5 tal:condition="ccs">email:</h5>
            <ul class="people">
                <li tal:repeat="sub ccs">
                  <a href="#"
                     tal:content="sub/person/browsername"
                     tal:attributes="href
                     string:/people/${sub/person/name}">Dafydd Harries</a>
                </li>
            </ul>

            <h5 tal:condition="watches">watch:</h5>
            <ul class="people">
                <li tal:repeat="sub watches">
                  <a href="#"
                     tal:content="sub/person/browsername"
                     tal:attributes="href
                     string:/people/${sub/person/name}">Vincenzo</a>
                </li>
            </ul>

          </tal:subscriptions>
        <ul>
          <li class="edit"><a
            title="Subscribe"
            tal:attributes="href string:$bounty_url/+subscribe">
            Change your subscription
          </a></li>
        </ul>
    </div>
</div>
