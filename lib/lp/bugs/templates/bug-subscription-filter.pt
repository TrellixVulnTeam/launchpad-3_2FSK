<html
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xml:lang="en"
    lang="en"
    dir="ltr"
    metal:use-macro="view/macro:page/main_only"
    i18n:domain="malone">
  <body>
    <div metal:fill-slot="main">
      <dl tal:define="conditions view/conditions">
        <dt>Filter: <span tal:content="view/description" /></dt>
        <dd tal:condition="conditions">
          Matches when
          <tal:conditions repeat="condition conditions">
            <span tal:content="condition" />
            <tal:conjunction condition="not:repeat/condition/end">
              <br /><strong>and</strong>
            </tal:conjunction>
          </tal:conditions>
        </dd>
        <dd tal:condition="not:conditions">
          <em>Matches nothing</em>
        </dd>
      </dl>
    </div>
  </body>
</html>
