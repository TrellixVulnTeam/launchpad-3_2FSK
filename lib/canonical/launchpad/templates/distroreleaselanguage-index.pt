<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template_2col/master"
      i18n:domain="rosetta"
>
<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-about" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-stats" />
</metal:rightportlets>

<metal:heading fill-slot="pageheading">
  <h1>
    Programs you can translate into
    <tal:language replace="context/language/englishname">Catalan</tal:language>
  </h1>
</metal:heading>

<div metal:fill-slot="main">

  <tal:block condition="not:view/batchnav/currentBatch">
    <div class="documentDescription">
      There are no programs available to be translated.
    </div>
  </tal:block>

  <tal:block condition="view/batchnav/currentBatch">

    <p>
      Choose a template name to begin translating. Templates that are
      considered more important for translation are listed first.
    </p>

    <tal:navigation replace="structure view/batchnav/@@+navigation-links-upper" />

    <table class="listing sortable" width="100%" id="translationstatuses">
      <thead>
        <tr>
          <th>Template Name</th>
          <th>Length</th>
          <th>Status</th>
          <th>Last Edited</th>
          <th>By</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="entry view/batchnav/currentBatch">
          <td>
            <a tal:attributes="href string:${entry/fmt:url}/+translate"
               tal:content="entry/potemplate/name">
               apache2-dev
            </a>
          </td>
          <td tal:content="entry/potemplate/messageCount">87</td>
          <td>
            <tal:comment condition="nothing">
              This text is used for the sorting.
            </tal:comment>
            <span class="sortkey" tal:content="entry/translatedPercentage"/>
            <span style="white-space: nowrap"
                  tal:content="structure entry/@@+barchart" />
          </td>
          <td>
            <span class="sortkey"
              tal:condition="entry/last_touched_pomsgset"
              tal:content="
                entry/last_touched_pomsgset/date_reviewed/fmt:datetime">
              time sort key
            </span>
            <span
              tal:condition="entry/last_touched_pomsgset"
              tal:attributes="
                title entry/last_touched_pomsgset/date_reviewed/fmt:datetime"
              tal:content="
                entry/last_touched_pomsgset/date_reviewed/fmt:approximatedate"
              >
              2007-02-10
            </span>
            <tal:block condition="not: entry/last_touched_pomsgset">
                &mdash;
            </tal:block>
          </td>
          <td>
            <tal:block condition="entry/last_touched_pomsgset">
              <a tal:attributes="href entry/last_touched_pomsgset/reviewer/fmt:url"
                 tal:content="entry/last_touched_pomsgset/reviewer/browsername/fmt:shorten/25"></a>
            </tal:block>
            <tal:block condition="not: entry/last_touched_pomsgset">
                &mdash;
            </tal:block>
          </td>
        </tr>
      </tbody>
    </table>

    <tal:navigation replace="structure view/batchnav/@@+navigation-links-lower" />

    <div tal:replace="structure context/@@+rosetta-status-legend" />

  </tal:block>

</div>

</body>
</html>
