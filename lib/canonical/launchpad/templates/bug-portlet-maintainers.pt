<div class="portlet">
    <h4>Related People:</h4>

    <div class="portletBody">
        <div class="portletContent"
             tal:define="bugtasks context/bugtasks">

            <b>First reported by:</b><br />
            <ul class="people">
                <li><a href="#"
                       style="text-decoration: underline"
                       tal:content="context/owner/browsername"
                       tal:attributes="href context/owner/fmt:url" />
            </ul>
            <br />

            <b>Maintainers:</b><br />

            <ul class="people" tal:repeat="maintainer view/maintainers">
              <li>
                <a href="#"
                   style="text-decoration: underline"
                   tal:content="maintainer/browsername"
                   tal:attributes="href maintainer/fmt:url" />
              </li>
            </ul>

        </div>
    </div>
</div>

