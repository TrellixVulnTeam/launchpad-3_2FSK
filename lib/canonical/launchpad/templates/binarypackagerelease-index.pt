<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
  <!-- Plone style sheet -->
  <style type="text/css" media="screen">@import url(plone.css);</style>
  <!-- Soyuz style sheet -->
  <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<div metal:fill-slot="main">

<h1><span tal:content="context/binarypackagerelease/name">TITLE</span> 
(<span tal:content="context/version" />)
</h1>

 <fieldset>
   <legend>
     Binary Package Information
   </legend>

    <p><b>Binary Package name:</b>
    <a tal:content="context/binarypackagerelease/name" 
    tal:attributes="href string:../../${context/binarypackagerelease/name}"/>

    <p><b>Source Package Release:</b>
    <a tal:define="sourcerelease context/binarypackagerelease/build/sourcepackagerelease"
       tal:content="string:${sourcerelease/sourcepackage/name} (${sourcerelease/version})"
       tal:attributes="href string:../../../../src/${context/sourcedistrorelease/name}/${sourcerelease/sourcepackage/name}/${sourcerelease/version}"/> 

    <p><b>Component:</b>
    <span tal:content="context/binarypackagerelease/component/name"/> 

    <p><b>Section:</b>
    <span tal:content="context/binarypackagerelease/section/name"/> 

    <p><b>Priority:</b>
    <span tal:content="context/binarypackagerelease/pkgpriority"/>

    <p><a href="+license"><b>License</b></a>

 </fieldset>

<!-- XXX: Daniel Debonzi 2004-10-28 -->
<!-- Is the Bugs for a BinaryPackage"Release"? -->
<!--  <p><h4>Package Bugs:</h4> -->
<!--  <div class="dummy"> -->
<!--    <span>#1, #2, #3</span> -->
<!--  </div> -->

 <p><h4>Builds:</h4>
   <tal:dummy tal:condition="not:context/archs">
     <i> No Builds Available</i>
   </tal:dummy>

 <tal:block tal:repeat="arch context/archs">
 [
 <a tal:content="arch" tal:attributes="href arch">
   ARCH
 </a>
 ]
 </tal:block>

</div>
</body>
</html>
 
