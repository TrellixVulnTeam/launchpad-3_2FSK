<tal:do-this-first tal:content="view/process_form" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
  <title metal:fill-slot="title">Forgot Your Launchpad Password?</title>
  <style type="text/css" media="screen">@import url(plone.css);</style>
  <style type="text/css" media="screen">@import url(launchpad.css);</style>
</head>

<body>

<div metal:fill-slot="main">

<div>
  <h1>Forgot Your Launchpad Password?</h1>

  <div tal:condition="not: view/success">

    <div class="error" tal:condition="view/errortext"
      tal:content="view/errortext" />
   
    <div class="formHelp">
      Enter your email address on the form below. We will send you
      an email with instructions on how to reset your password and regain
      access to Launchpad. 
    </div>
    <br />


    <form name="forgottenpassword" method="POST">
    <div class="field">
      <label for="email">Email address:</label>
      <input type="text" size="50" name="email" />
      <div class="formHelp">
        Make sure this is the email address you registered with for your
        Launchpad account.
      </div>
      <div class="formControls">
        <input type="submit" value="Request Reset" />
      </div>
    </div>
    </form>
    </div>
  </div>

  <div tal:condition="view/success">
    <br />
    <p>We have sent you an email with instructions to reset your
    password.</p>
  </div>

</div>

</body>
</html>
