  <tal:block replace="nothing">
    You can include this listing in any page with code that looks like this:
      <div tal:replace="structure context/path/to/team/@@+teamlist" />
  </tal:block>

  <p tal:condition="not: context/isTeam" class="error message">
    <span tal:replace="context/browsername" /> does not have members,
    because <span tal:replace="context/browsername" /> is not a team.
  </p>

  <table class="listing" tal:condition="context/isTeam">
    <thead>
      <tr>
        <th>Member</th>
        <th>Joined</th>
        <th>Expires</th>
        <th>State</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="membership context/getActiveMemberships">
        <td>
          <a tal:content="membership/person/browsername"
             tal:attributes="href membership/person/fmt:url" />
        </td>
        <td>
          <span
            tal:attributes="title membership/datejoined/fmt:datetime"
            tal:content="membership/datejoined/fmt:approximatedate">
            12-12-2004
          </span>
        </td>
        <td>
          <span
            tal:attributes="title membership/dateexpires/fmt:datetime"
            tal:content="membership/dateexpires/fmt:approximatedate">
            12-12-2005
          </span>
        </td>
        <td tal:content="membership/status/title">Administrator</td>
      </tr>
    </tbody>
  </table>
