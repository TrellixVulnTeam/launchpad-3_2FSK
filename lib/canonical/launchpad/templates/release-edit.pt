<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Rosetta style sheet -->
    <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>

<div metal:fill-slot="main">

   <h1>Edit <span
   tal:content="context/release/title">Release</span> Release
   Information </h1> 

    <div class="documentDescription">	
    <p> Here you can edit <span
    tal:content="context/release/title">Release</span>
    Release Information
    </div>
    
    <div>
    <form name="edit" action="" method="POST">
    <fieldset>
    <legend><h3>Edit Release Information</h3><legend>
	<table>
	<tr><td>
	<div class="field">
	    <label>Name</label>
	    <div class="formHelp">
	    Enter the Release Name.
            </div>
	    <input type="text" name="name"
	    tal:attributes="value context/release/name|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Title</label>
	    <div class="formHelp">
	    Enter the Release Title.
            </div>
	    <input type="text" name="title" size="40"
	    tal:attributes="value context/release/title|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Description</label>
	    <div class="formHelp">
	    Enter the Release Description.
            </div>
            <textarea name="description" cols="60" rows="6"
	    tal:content="context/release/description|nothing">
	    </textarea>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Version</label>
	    <div class="formHelp">
	    Enter the Release Version.
            </div>
	    <input type="text" name="version"
	    tal:attributes="value context/release/version|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="formControls">
	  <input type="submit" value="Edit"/>
	</div>
	</td></tr>
	</table>
  </form>
  </div>

  <tla:block tal:condition="view/edit_action">
  <div>
  <h4><a tal:attributes="href string:../${context/release/name}">
  <span tal:content="context/release/title"/></a> Release Modified</h4>
  </div>
  </tla:block>





</div>

</body>
</html>
