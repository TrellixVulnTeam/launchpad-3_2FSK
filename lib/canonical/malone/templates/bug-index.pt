<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="rosetta">
<body>

<div metal:fill-slot="main">

<div id="content" class="documentEditable">

    <ul class="contentViews">

            
              <li id="contentview-view" class="selected">
                <a>View</a>
              </li>
            
            
              <li id="contentview-edit" class="plain">
                <a href="+edit">Edit</a>
              </li>
            
              <li id="contentview-edit" class="plain">
                <a href="activity">History</a>
              </li>

    </ul>

    <div class="contentActions">
    &nbsp;
    </div>

    <div class="documentContent" id="region-content">
    
        <h1>
            <span tal:replace="context/title" />
        </h1>
    
    
      <div class="discreet">
        <span class="bug-confirmed" title="Bug status">Confirmed</span>
        <span tal:condition="context/nickname">
          Bugname: <a href="" tal:content="context/nickname"></a>,
        </span>
        Created
        <span tal:replace="python:context.datecreated.strftime('%d %b %y %H:%M')">
            13 Sep 04 12:15
        </span>.
      </div>
    
        <div class="documentDescription"
           tal:content="context/description">Description</div>
      
    
    
      <fieldset class="collapsible">
        <legend><img src="++resource++arrowDown.gif" /> Follow-up</legend>
        
        <div class="field">
            <label>Current status</label>
            <div class="formHelp">
            Change status, if necessary
            </div>
            <select>
                <option>No change</option>
                <option>Resolve</option>
                <option>Reject</option>
                <option>Re-open</option>
            </select>
        </div>
        
        <div class="field">
        
            <label>Comment</label>
            <div class="formHelp">
            If you have additional relevant information, enter it below.
            </div>
            <textarea></textarea>
        </div>
      </fieldset>
    
    
            <div class="boardComment" tal:repeat="message context/messages">
                 
                <metal:comment metal:define-macro="comment">
    
                    <div class="boardCommentDetails">
                        
                        <strong tal:content="message/title">Subject</strong>
                        
                         Posted by 
                         <span tal:replace="message/personmsg/presentationname|string:(none)">author</span> 
                         at
                         <span tal:replace="python:message.datecreated.strftime('%d %b %y %H:%M')">Thursday 13:21</span>
                    </div>
                
                    <div class="boardCommentBody">
                
                        <div class="portrait"> 
                            <a href="#">                    
                                <img class="portraitPhoto"
                                     src="defaultUser.gif" 
                                     alt="" 
                                     border="0" 
                                     width="75" 
                                     height="100" 
                                     />
                                <div>screenshot.jpg</div>
                            </a>
                        </div>
                        
                        <div class="boardCommentContent" tal:content="message/contents">
                        Comment text.
                        </div>
                        
                    </div>
                    
                    <div class="visualClear"></div>
    
                    <div class="boardCommentActions" >
                    
                        <form>
                            <input class="standalone"
                                   type="submit" 
                                   value="Reply to this" 
                                   />
    
                        </form>
    
                    </div>
    
                </metal:comment>
            </div>
    
    <h2>Portlet material</h2>
    
      <p>
        <a href="assignments">Assignments</a>
      </p>
      <p>
        <a href="attachments">Attachments</a>
      </p>
      <p>
        <a href="references">External References</a>
      </p>
      <p>
        <a href="people">People</a>
      </p>
      
        <dl>
            <dt>Version</dt>
            <dd>1.2</dd>
    
            <dt>Affects</dt>
            <dd>Mozilla Composer, Firefox</dd>
        </dl>
              
      </div>
      
</div>

</div>
</body>
</html>
