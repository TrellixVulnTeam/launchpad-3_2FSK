<tal:layout define="columns1 default">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="malone"
>
  <body>
    <div metal:fill-slot="main">
      <h1 id="applications">
        <span tal:content="structure context/@@+applicationbuttons/code" />
        Bug tracking
      </h1>
      <div id="mainarea" class="tab-bugs">
        <div class="t">
          <div class="u">
            <div class="v">
              <div class="w">
                <div class="x">
                  <div class="y">
                    <div class="z">
                      <div id="container">
                        <ul class="rollover buttons">
                          <li>
                            <a href="+tour">
                              <img
                                alt="Take a tour"
                                src="/+icing/but-lrg-takeatour.gif"
                              />
                            </a>
                          </li>
                          <li>
                            <a href="+filebug">
                              <img
                                alt="Report a bug"
                                src="/+icing/but-lrg-reportabug.gif"
                              />
                            </a>
                          </li>
                        </ul>
                        <p
                          tal:condition="view/error_message"
                          tal:content="view/error_message"
                          class="error message"
                        >Error message.</p>
                        <form class="central" action="/bugs" method="get">
                          <table>
                            <tbody>
                              <tr>
                                <td style="text-align: right;">
                                  <input
                                    id="text"
                                    type="text"
                                    name="text"
                                    size="50"
                                  />
                                </td>
                                <td>
                                  <input
                                    type="submit"
                                    value="Search Bug Reports"
                                  />
                                </td>
                              </tr>
                              <tr>
                                <td style="text-align: right;">
                                  <label>
                                    <input
                                      name="scope"
                                      type="radio"
                                      value="all"
                                      checked="checked"
                                    />
                                    All projects
                                  </label>
                                  <label>
                                    <input
                                      name="scope"
                                      type="radio"
                                      value="project"
                                      onclick="document.getElementById('project').focus();"
                                    />
                                    One project:
                                    <input
                                      id="project"
                                      name="project"
                                      type="text"
                                    />
                                  </label>
                                </td>
                                <td>(<a href="choose">Choose&hellip;</a>)</td>
                              </tr>
                            </tbody>
                          </table>
                          <div>
                        </form>
                        <p id="application-summary">
                          Launchpad&rsquo;s bug tracker allows collaboration
                          between software teams on bug reports and fixes.
                        </p>
                        <div class="columns">
                          <div class="two column left">
                            <h2>Recently reported</h2>
                            <table>
                              <tbody>
                                <tr
                                  tal:repeat="bug context/latest_bugs"
                                  tal:replace="structure bug/@@+listing-detailed"
                                />
                              </tbody>
                            </table>
                          </div>
                          <div class="two column right">
                            <h2>Recently fixed</h2>
                            <table id="fixed-bugs">
                              <tbody>
                                <tr
                                  tal:repeat="fixed_bug view/getMostRecentlyFixedBugs"
                                  tal:replace="structure fixed_bug/@@+listing-detailed"
                                />
                              </tbody>
                            </table>
                          </div>
                        </div><!--columns-->
                        <div class="clear"></div>
                        <div
                          id="application-footer"
                          tal:content="structure context/@@+portlet-stats"
                        />
                      </div><!--container-->
                    </div><!--z-->
                  </div><!--y-->
                </div><!--x-->
              </div><!--w-->
            </div><!--v-->
          </div><!--u-->
        </div><!--t-->
      </div><!--mainarea-->
    </div><!--main-->
    <div metal:fill-slot="help">
      <p>
        Read more <a href="+about">about Malone</a>, the collaborative bug
        tracker for the open source world, and how you can share information
        about bugs in distributions and upstream.
      </p>
      <ul class="info">
        <li>
          <a href="https://help.launchpad.net/UsingMaloneEmail"
          >Sending commands by e-mail</a>
        </li>
      </ul>
    </div>
  </body>
</html>
</tal:layout>
<!-- 1-0 done -->
