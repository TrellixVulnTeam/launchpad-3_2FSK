<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en" lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">
  <head>
    <title metal:fill-slot="title">
      <span tal:replace="context/calendar/title">Calendar Title</span> -
      <span tal:replace="context/datestring">Time</span>
    </title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
  </head>

  <body>

    <div metal:fill-slot="main">
      <div id="content" class="documentEditable">
        <ul class="contentViews">
          <li id="contentview-day">
            <a tal:attributes="href context/dayViewURL">Day</a>
          </li>
          <li id="contentview-week">
            <a tal:attributes="href context/weekViewURL">Week</a>
          </li>
          <li id="contentview-month">
            <a tal:attributes="href context/monthViewURL">Month</a>
          </li>
          <li id="contentview-year" class="selected">
            <a tal:attributes="href context/yearViewURL">Year</a>
          </li>
        </ul>
        <div class="documentContent">
          <h1>
            <span tal:replace="context/calendar/title">Calendar Title</span> -
            <span tal:replace="context/datestring">Time</span>
          </h1>


          <a tal:attributes="href context/prevURL">&lt;- Previous</a>
          <a tal:attributes="href context/nextURL">Next -&gt;</a>

          <table>
            <tr tal:repeat="row context/layout" valign="top">
              <td tal:repeat="monthnum row">
                <div tal:define="month python:context.months[monthnum-1]">

                <h2 tal:content="month/monthname">Month</h2>

                <table border="1">
                  <tr>
                    <th tal:repeat="day context/daynames"
                        tal:content="day">Day of Week</th>
                  </tr>
                  <tr tal:repeat="row month/layout">
                    <td tal:repeat="daynum row">
                      <div tal:condition="daynum"
                           tal:define="day python:month.days[daynum-1]">
                      <a tal:attributes="href day/dayURL"
                         tal:content="day/date/day">1</a>
                      </div>
                    </td>
                  </tr>
                </table>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>

  </body>
</html>
