<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
  <div tal:replace="structure context/@@+portlet-subscribers" />
</metal:leftportlets>

<div metal:fill-slot="main">

<tal:not_subscribed condition="not: view/user_is_subscribed">
  <h1>Subscribe to branch</h1>
  <p class="documentDescription">
    If you subscribe to a branch it will show up on your
    personal pages.
  </p>
  <p>
    Choose "Subscribe" to become a subscriber to this branch, or "Cancel" to
    return to the branch page.
  </p>
</tal:not_subscribed>

<tal:subscribed condition="view/user_is_subscribed">
  <h1>Unsubscribe from branch</h1>
  <p class="documentDescription">
    If you unsubscribe from a branch it will no longer show up on your
    personal pages.
  </p>
  <p>
    Choose "Unsubscribe" to remove your current subscription to this branch,
    or "Cancel" to return to the branch page.
  </p>
</tal:subscribed>

  <form action="." method="POST">

    <div class="actions">
      <input type="submit"
             name="cancel"
             value="Cancel" />
      <input tal:condition="not: view/user_is_subscribed"
             type="submit" name="subscribe" value="Subscribe" />
      <input tal:condition="view/user_is_subscribed"
             type="submit" name="subscribe" value="Unsubscribe" />
    </div>
  </form>

</div>

</body>
</html>

