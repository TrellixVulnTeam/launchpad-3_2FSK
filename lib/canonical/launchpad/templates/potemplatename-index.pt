<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta">

<body>

<metal:rightportlets fill-slot="portlets_two">

<div class="portlet portletBody portletContent">
        <ul>
          <li class="edit"><a href="+edit">Edit template name</a></li>
        </ul>
</div>

</metal:rightportlets>

<div metal:fill-slot="main">

  <h1>Template name details</h1>

    <table class="listing">
      <tbody>
        <tr>
          <td>
            <dl class="potemplatenames">
              <dt>
                <dfn tal:content="context/title">
                  $POTemplateName.title
                </dfn>
                (<span tal:replace="context/name">$POTemplateName.name</span>)
              </dt>
              <dd tal:content="context/description">
                $POTemplateName.description
              </dd>
            </dl>
          </td>
        </tr>
      </tbody>
    </table>

    <tal:block condition="view/potemplates">

    <h2>PO Templates using this PO Template Name</h2>

    <table class="listing">
      <tbody>
        <tr tal:repeat="potemplate view/potemplates">
          <td>
            <dl class="potemplates">
              <dt>
                <a tal:attributes="href potemplate/url">
                  <dfn tal:content="potemplate/url">
                    some url
                  </dfn>
                </a>
              </dt>
              <dd tal:content="potemplate/description">
                $POTemplateName.description
              </dd>
            </dl>
          </td>
        </tr>
      </tbody>
    </table>

    </tal:block>

</div>

</body>
</html>
