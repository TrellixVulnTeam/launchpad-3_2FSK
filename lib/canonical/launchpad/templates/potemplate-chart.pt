<table class="listing" width="100%">
  <thead>
    <th>Language</th>
    <th>Todo</th>
    <th>Status</th>
    <th>Last Edited</th>
    <th>By</th>
  </thead>

  <tbody>
    <tr tal:repeat="pfview view/pofiles"
        tal:attributes="onclick string:window.location='${pfview/context/fmt:url}/+translate'"
        >
      <tal:block define="pf pfview/context">
        <td>
          <a tal:attributes="href string:${pf/fmt:url}/+translate"
             tal:content="pfview/language_name/fmt:shorten/25">
             Language Name
          </a>
        </td>
        <td tal:content="pf/untranslatedCount">0</td>
        <td>
          <div tal:replace="structure pf/@@+barchart" />
        </td>
        <td>
          <span tal:condition="pf/latest_submission"
                tal:replace="pf/latest_submission/datecreated/fmt:date" />
          <tal:block condition="not: pf/latest_submission">
              &mdash;
          </tal:block>
        </td>
        <td>
        <span
           tal:condition="pf/latest_submission"
           tal:replace="pf/latest_submission/person/browsername/fmt:shorten/25" />
          <tal:block condition="not: pf/latest_submission">
              &mdash;
          </tal:block>
        </td>
      </tal:block>
    </tr>
  </tbody>
</table>

