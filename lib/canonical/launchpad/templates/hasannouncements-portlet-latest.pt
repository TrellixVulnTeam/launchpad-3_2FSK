<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">
<tal:beta-testers-only condition="view/isBetaUser">
<tal:news define="announcements view/latest_announcements">
<div
  tal:condition="announcements"
  class="portlet"
  id="portlet-latest-announcements">
  <h2>Latest news
        <a title="Atom 1.0 feed" tal:attributes="
           href string:${modules/canonical.launchpad.webapp.vhosts/allvhosts/configs/feeds/rooturl}${context/fmt:url}/announcements.atom">
           <img src="/@@/rss" /></a></h2>
  <div class="portletBody portletContent">
    <ul class="news">
      <li tal:repeat="announcement announcements" class="news">
        <img src="/@@/warning" alt="[Not published]"
             title="This is not yet a public announcement"
             tal:condition="not: announcement/published" />
        <strong tal:content="announcement/title">Title here</strong><br />
        <tal:summary replace="announcement/summary/fmt:shorten/80" />
      </li>
    </ul>
  <a href="+announcements">&raquo; See all announcements...</a><br />
  <a tal:condition="context/required:launchpad.Edit"
     href="+announce">&raquo; Make a new announcement...</a>
  </div>
</div>
</tal:news>
</tal:beta-testers-only>
</tal:root>
