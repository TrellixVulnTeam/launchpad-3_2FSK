<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

  <metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-bugcontacts" />
    <div tal:replace="structure context/@@+portlet-latestbugs" />
    <div tal:replace="structure context/@@+portlet-latestquestions" />
  </metal:leftportlets>

  <metal:rightportlets fill-slot="portlets_two">
  </metal:rightportlets>

<div metal:fill-slot="main">

  <h1><span tal:replace="context/name" /> in
      <span tal:replace="context/distribution/displayname" /></h1>

  <h2>Upstream associations</h2>

  <table class="listing">
    <thead>
      <tr>
        <th colspan="2">
          <span tal:replace="context/distribution/displayname" /> version
        </th>
        <th>Upstream version</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="version view/published_versions">
        <td>
          <span tal:replace="version/distroseries">hoary</span>
        </td>
        <td>
          <table width="100%">
            <tbody>
              <tr tal:repeat="pocket version/pockets">
                <td tal:content="pocket/pocket">release</td>
                <td>
                  <table width="100%">
                    <tbody>
                      <tr tal:repeat="dspr pocket/dsprs">
                        <td tal:content="dspr/sourcepackagerelease/version">
                          0.12-1
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </td>
              </tr>
            </tbody>
          </table>
        </td>
        <td>
          <span tal:condition="version/packaging"
                tal:replace="version/packaging/productseries/title" />
          <tal:no_direct condition="not: version/packaging">
            None defined
          </tal:no_direct>
          <a tal:attributes="href string:${version/sp/fmt:url}/+edit-packaging"
             title="Edit association with upstream version">
            <img src="/@@/edit" />
          </a>
        </td>
      </tr>
    </tbody>
  </table>

  <h2>Version history</h2>

  <tal:block
    repeat="dspr context/releases"
    replace="structure dspr/@@+changes">
  </tal:block>

</div>
</body>
</html>

