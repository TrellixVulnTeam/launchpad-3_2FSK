<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-branches" tal:condition="view/branch_links">
  <h2>Branches</h2>
  <div class="portletBody portletContent">
    <ul class="branch">
      <li tal:repeat="branchlink context/branch_links">
        <a tal:attributes="href branchlink/branch/fmt:url"
           tal:content="branchlink/branch/title">Branch title</a>
        <a tal:condition="branchlink/required:launchpad.AnyPerson"
           tal:attributes="href branchlink/fmt:url"
          ><img src="/@@/edit" title="Change this branch link" /></a><tal:block condition="branchlink/summary"><br/>
        <i tal:content="branchlink/summary">summary</i></tal:block>
      </li>
    </ul>
  </div>
</div>
</tal:root>
