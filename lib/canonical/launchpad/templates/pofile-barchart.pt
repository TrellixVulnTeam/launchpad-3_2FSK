<!-- The PO file stats bar -->
<!-- Show an mdash if there is no graph -->
<span tal:condition="not: context/messageCount">&mdash;</span>
<span style="display: none" tal:content="string:${context/translatedPercentage} %" />
<img
  tal:condition="context/nonUpdatesCount"
  tal:attributes="
    alt string: ${context/nonUpdatesPercentage} percent published, ;
    title string:Published: ${context/nonUpdatesPercentage} %;
    width context/nonUpdatesPercentage;
  "
  src="/++resource++green-bar.png"
  style="height: 1em;"
/><img
  tal:condition="context/updatesCount"
  tal:attributes="
    alt string: ${context/updatesPercentage} percent changed, ;
    width context/updatesPercentage;
    title string: Changed: ${context/updatesPercentage} %
  "
  src="/++resource++blue-bar.png"
  style="height: 1em;"
/><img
  tal:condition="context/rosettaCount"
  tal:attributes="
    alt string: ${context/rosettaPercentage} percent new, ;
    width context/rosettaPercentage;
    title string: New: ${context/rosettaPercentage} %
  "
  src="/++resource++purple-bar.png"
  style="height: 1em;"
/><img
  tal:condition="context/untranslatedCount"
  tal:attributes="
    alt string: ${context/untranslatedPercentage} percent untranslated;
    width context/untranslatedPercentage;
    title string: Untranslated: ${context/untranslatedPercentage} %
  "
  src="/++resource++red-bar.png"
  style="height: 1em;"
/>
