<tal:tag condition="view/update"/>
<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

  <div metal:fill-slot="main">

    <div metal:use-macro="context/@@launchpad_editform/editform">

          <h1 tal:condition="view/label"
              tal:content="view/label"
              metal:fill-slot="heading"
              >Form Label will come from ZCML label="xxx"</h1>

    <div metal:fill-slot="extra_info" class="documentDescription">
      If you need to change the type of bug tracker, then please ask for
      admin support on #launchpad (see the bottom of the page for details).
    </div>

  </div>
    
</div>
</body>
</html>
