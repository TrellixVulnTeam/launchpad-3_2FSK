<div class="portlet" tal:condition="context/project">

    <h4><span tal:replace="context/project/title">project title</span>:</h4>

    <div class="portletBody">
        <div class="portletContent even">

            <div tal:condition="context/project/homepageurl" tal:omit-tag>
                <b>External links:</b><br />
                <img src="/++resource++link_icon.gif" alt="" />
                <a tal:attributes="href context/project/homepageurl">Project
                    home page</a><br />
            </div>

            <b>Project Maintainer:</b><br />
            <img src="/++resource++user.gif">
            <a tal:content="context/project/owner/browsername"
               tal:attributes="href
               string:/people/${context/project/owner/name}"
               href="#">ownername</a><br />

            <b tal:condition="view/projproducts">Other Products:<br /></b>
            <span tal:repeat="prod view/projproducts" tal:omit-tag>
                <img src="/++resource++product_icon.gif">
                <a tal:content="prod/displayname"
                   tal:attributes="href string:../${prod/name}">
                   product displayname</a><br />
            </span>

            <b>Project Status:</b><br />
            <span tal:condition="context/project/reviewed"
                  tal:omit-tag>Reviewed<br /></span>
            <span tal:condition="context/project/active"
                  tal:omit-tag>Active<br /></span>
            <span tal:condition="not: context/project/active"
                  tal:omit-tag>Disabled<br /></span>

        </div>
    </div>
</div>
