<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="context/@@main_template/master"
  i18n:domain="launchpad"
>
  <body>

<metal:portlets fill-slot="portlets">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:portlets>

<div metal:fill-slot="main">

    <div>
      <a
        tal:attributes="href context/sourcepackage/fmt:url"
        tal:content="context/sourcepackage/title"
      />
    </div>
    <h1><tal:release replace="context/version" /> version</h1>

  <h2>Download source</h2>

   <div id="files" tal:content="structure context/sourcepackagerelease/@@+files" />

  <tal:has_packages condition="context/sample_binary_packages">
    <p>
      Binary packages produced in
      <span tal:replace="context/distribution/displayname" />
      for this version of
      <a tal:attributes="href context/sourcepackage/fmt:url"
         tal:content="context/sourcepackage/name"/>:
    </p>

    <ul class="binary package">
      <li tal:repeat="drbp context/sample_binary_packages">
        <strong>
          <a tal:attributes="href drbp/fmt:url"
             tal:content="drbp/name"
             class="sprite package-binary">apache-utils</a>:
          <span tal:replace="drbp/summary">package summary</span>
        </strong>
        <div>
           <span tal:replace="drbp/description">
             description goes here
           </span>
        </div>
      </li>
    </ul>
  </tal:has_packages>

  <tal:diffs replace="structure context/sourcepackagerelease/@@+diffs" />

  <div tal:replace="structure context/@@+portlet-builds" />

  <h2>Publishing history</h2>
  <div id="publishing_history">
    <tal:block repeat="publishing context/publishing_history"
               replace="structure publishing/@@+listing-detailed">
    </tal:block>
  </div>

</div>
</body>
</html>
