<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">FOAF: Create a New Person</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<metal:leftportlets fill-slot="portlets_one">
<div tal:replace="structure view/leftMenu" />
</metal:leftportlets>

<div metal:fill-slot="main">
<tal:block tal:define="process view/add_action">
<div id="content" class="documentEditable">

    <div class="documentContent" id="region-content">

    <h1>Create a New Person</h1>

    <div class="documentDescription">	
    <p>Here you can create a new Person on Launchpad</p>
    </div>

      <div class="portalMessage" 
        tal:condition="view/error_msg"
        tal:content="view/error_msg">
      </div>
    
      <tal:block tal:condition="process">
        <div class="portalMessage" 
          tal:condition="not: view/error_msg">
          <div>
          <p> <a tal:attributes="href view/results/name"
                 tal:content="request/displayname">
                 PEOPLE</a> Successfully created.
          </div>
        </div>
      </tal:block>
    <div>
    <form name="add" action="" method="POST">
	<table>
	<tr><td>
	<div class="field">
	    <label>DisplayName</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter the Person DisplayName.
            </div>
	    <input type="text" name="displayname" size="40"
	    tal:attributes="value request/displayname|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Given Name</label>
	    <div class="formHelp">
	    Enter the Person Given Name.
            </div>
	    <input type="text" name="givenname"
	    tal:attributes="value request/givenname|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>FamilyName</label>
	    <div class="formHelp">
	    Enter the Person Family Name.
            </div>
	    <input type="text" name="familyname"
	    tal:attributes="value request/familyname|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Email Address</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter the Email Address.
            </div>
	    <input type="text" name="email"
	    tal:attributes="value request/email|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Password</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter a Password.
            </div>
	    <input type="password" name="password"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Retype Password</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter the same Password Again.
            </div>
	    <input type="password" name="retype"/> 
	</div>
	</td></tr>
	<tr><td>
	<div class="formControls">
	  <input type="submit" value="Create"/>
	</div>
	</td></tr>
	</table>
  </form>
  </div>

</tal:block>
</div>

</body>
</html>
