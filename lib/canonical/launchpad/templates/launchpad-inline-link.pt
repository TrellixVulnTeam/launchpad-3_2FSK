<tal:ns
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">
  <tal:link-enabled condition="context/enabled">
    <span class="action">
      <img alt=""
	   tal:condition="context/icon"
	   tal:attributes="src view/icon_url" />
      <tal:link replace="structure context/@@+link" />
    </span>
  </tal:link-enabled>
</tal:ns>
