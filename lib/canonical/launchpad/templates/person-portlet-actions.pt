<div class="portlet">

  <h4>Actions:</h4>
  
  <div class="portletBody portletContent">
    <ul>
      <li class="edit"><a href="+edit">Edit Details</a></li>
      <tal:block condition="not: context/isTeam">
        <!-- these are not for teams -->
        <li class="info"><a href="+karma">Show Karma</a></li>
        <li class="bugs"><a href="+reportedbugs">Show Bugs Reported</a></li>
        <li class="spec"><a href="+createdspecs">Show Specs Created</a></li>
        <li class="spec"><a href="+assignedspecs">Show Specs Assigned</a></li>
        <li class="spec"><a href="+draftedspecs">Show Specs Drafted</a></li>
        <li class="spec"><a href="+reviewspecs">Show Specs To Review</a></li>
        <li class="spec"><a href="+subscribedspecs">Show Subscribed Specs</a></li>
        <li class="ticket">
          <a href="+createdtickets">Show Tickets Created</a></li>
        <li class="ticket">
          <a href="+assignedtickets">Show Tickets Assigned</a></li>
        <li class="ticket">
          <a href="+answeredtickets">Show Tickets Answered</a></li>
        <li class="ticket">
          <a href="+subscribedtickets">Show Tickets Subscribed</a></li>
        <li class="edit"><a href="+editsshkeys">Edit SSH Keys</a></li>
        <li class="edit"><a href="+editgpgkeys">Edit GPG Keys</a></li>
        <li class="edit"><a href="+codesofconduct">Code of Conduct</a></li>
      </tal:block>
      <li class="packages"><a href="+packages">Packages</a></li>
      <tal:block condition="context/isTeam">
        <!-- these are only for teams -->
        <li class="people"><a href="+members">Show Members</a></li>
        <li class="people"><a href="+teamhierarchy">Show Team Hierarchy</a></li>
        <li class="mail" tal:condition="context/required:launchpad.Edit">
            <a href="+editemail">Edit Contact Address</a>
        </li>
        <li tal:condition="view/userIsActiveMember" class="remove">
          <a href="+leave">Leave the Team&#8230;</a>
        </li>
        <li tal:condition="not: view/userIsActiveMember" class="add">
          <a href="+join">Join the team&#8230;</a>
        </li>
        <tal:block condition="context/required:launchpad.Admin">
          <li class="edit">
            <a href="+reassign" alt="(Change owner)"
               title="Change the owner">Change Owner
            </a>
          </li>
        </tal:block>
      </tal:block>
      <li class="edit" tal:condition="context/required:launchpad.Admin">
        <a href="+review">Administer</a>
      </li>
    </ul>

  </div>

</div>
