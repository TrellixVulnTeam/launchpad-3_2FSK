<tal:do-this-first tal:content="view/process_form" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<div metal:fill-slot="main">

<div>
  <h1>Forgotten Your Launchpad Password?</h1>

  <div tal:condition="not: view/success">

    <div class="error" tal:condition="view/errortext"
      tal:content="view/errortext" />
   
    <p>
      Enter your e-mail address, and we will send you instructions
      on how to reset your password. 
    </p>

    <form name="forgottenpassword" method="POST">
    <div class="field">
      <label for="email">Email address:</label>
      <input type="text" size="50" name="email" />
      <div class="formHelp">
        Make sure this is the email address you registered with for your
        Launchpad account.
      </div>
      <div class="formControls">
        <input type="submit" value="Request Reset" />
      </div>
    </div>
    </form>
    </div>
  </div>

  <div tal:condition="view/success">
    <br />
    <p>We have sent you an email with instructions to reset your
    password.</p>
  </div>

</div>

</body>
</html>
