<tal:tag condition="view/update"/>
<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  lang="en"
  metal:use-macro="context/@@malone_template/master"
  i18n:domain="launchpad">

  <body>

<metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<metal:leftportlets fill-slot="portlets_two">
    <div tal:replace="structure context/@@+portlet-bugtasks" />
</metal:leftportlets>

    <div metal:fill-slot="main">

      <div metal:use-macro="context/@@launchpad_editform/editform">

        <h3 tal:condition="view/label"
            tal:content="view/label"
            metal:fill-slot="heading"
           >Form Label will come from ZCML label="xxx"</h3>

        <div metal:fill-slot="extra_info" class="documentDescription">
          This watch links <a tal:attributes="href
          context/bug/fmt:url">bug #<span
          tal:replace="context/bug/id">3452</span></a> to:
        </div>

      </div>
    
    </div>

  </body>
</html>
