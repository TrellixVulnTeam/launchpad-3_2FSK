<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
  <body>
    <metal:portlets fill-slot="portlets">
      <tal:portlet replace="structure context/@@+portlet-translations" />
      <tal:portlet replace="structure context/@@+portlet-lifecycle" />

  <div tal:replace="structure context/@@+portlet-milestones" />

    </metal:portlets>
    <div metal:fill-slot="main">
      <h1 tal:content="context/title">Ubuntu Linux</h1>
      <span tal:replace="structure context/fmt:icon" />
      <div tal:replace="structure context/summary/fmt:text-to-html" />
      <div tal:replace="structure context/description/fmt:text-to-html" />
      <ul class="buttons">
        <li>
          <a href="+filebug">
            <img alt="Report a bug" src="/+icing/but-sml-reportabug.gif" />
          </a>
        </li>
        <li tal:content="structure context/@@+ask-a-question-button" />
        <li>
          <a href="+translations">
            <img alt="Help translate" src="/+icing/but-sml-helptranslate.gif" />
          </a>
        </li>
      </ul>

  <form name="search" action="+search" method="get">

    <input type="text"
      name="text"
      size="35"
      tal:attributes="value request/name|nothing" />

        <input type="submit" value="Find a Package"/>

  </form>

      <div class="left">
        <div
          class="section"
          tal:content="structure context/@@+portlet-coming-sprints"
        />
        <div class="portlet">
          <h2>Releases</h2>
          <p tal:condition="not:context/releases">
            <tal:name replace="context/displayname" /> has no releases
            registered yet.
          </p>
          <ul tal:condition="context/releases" class="distrorelease">
            <li tal:repeat="release context/releases">
              <a tal:attributes="href release/fmt:url">
                <tal:version replace="release/version" />
                (<tal:codename replace="release/displayname" />)
              </a>
            </li>
          </ul>
        </div>
        <div class="portlet" tal:condition="context/currentrelease">
          <h2>
            Architectures for
            <tal:latestrelease replace="context/currentrelease/displayname" />
          </h2>
          <p tal:condition="not:context/currentrelease/architectures">
            <tal:name replace="context/currentrelease/displayname" />
            has no architectures managed in Launchpad.
          </p>
          <ul
            tal:condition="context/currentrelease/architectures"
            class="architecture"
          >
            <li tal:repeat="architecture context/currentrelease/architectures">
              <a
                tal:attributes="href architecture/fmt:url"
                tal:content="architecture/displayname"
              />
            </li>
          </ul>
        </div>
        <div tal:content="structure context/@@+portlet-latestbugs" />
        <div
          tal:condition="context/currentrelease"
          tal:content="structure context/currentrelease/@@+latest-uploads"
        />
      </div>
      <div class="right">
        <div
          class="two column section"
          tal:content="structure context/@@+portlet-details"
        />
        <div
          class="two column section"
          tal:content="structure context/@@+portlet-top-contributors"
        />
        <div
          class="two column section"
          tal:content="structure context/@@+portlet-latestspecs"
        />
      </div>
    </div>
  </body>
</html>
