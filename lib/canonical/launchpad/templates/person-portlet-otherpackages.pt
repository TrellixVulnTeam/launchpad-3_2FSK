<div class="portlet">
  <h4 tal:condition="python:view.user == context">
    My other packages
  </h4>
  <h4 tal:condition="python:not view.user == context"
      tal:content="string: ${context/displayname}'s other packages">
    Sample Person's other packages
  </h4>
  <div class="portletBody portletContent"
       tal:define="package_being_shown view/current_package">
    <ul style="list-style: none;">
      <li style="margin-left: -15px;"
          tal:repeat="bug_contact_package_link view/getOtherBugContactPackageLinks">
        <a href="#"
           tal:content="bug_contact_package_link/title"
           tal:attributes="href bug_contact_package_link/url">
        mozilla-firefox (Ubuntu)
        </a>
      </li>
    </ul>
    <br />
    <a href="#"
       tal:attributes="href string:${context/fmt:url}/+packagebugs">
      Package bugs overview
    </a>
  </div>
</div>
