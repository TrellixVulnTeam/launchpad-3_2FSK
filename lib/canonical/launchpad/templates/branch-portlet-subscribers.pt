<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-subscribers">
  <h2 class="unnecessary">Subscribers</h2>
  <div class="portletBody portletContent">

    <div tal:condition="not:view/owner_is_registrant">
      <h3><img src="/@@/mail" />Registered by:</h3>
      <dl>
        <dt>
          <img src="/@@/yes" />
          <tal:registrant tal:replace="structure context/registrant/fmt:link" />
        </dt>
      </dl>
    </div>

    <div>
      <h3><img src="/@@/mail" />Owner:</h3>
      <dl>
        <dt>
          <img src="/@@/yes" />
          <tal:owner tal:replace="structure context/owner/fmt:link" />
          <a
            tal:define="link context/menu:context/edit"
            tal:condition="link/enabled"
            tal:attributes="href link/url">
            <img src="/@@/edit" tal:attributes="alt link/text" />
          </a>
        </dt>
      </dl>
    </div>

    <div>
      <h3><img src="/@@/mail" />Subscribers:</h3>
      <div
        tal:define="link context/menu:context/subscription"
        tal:condition="link/enabled"
        tal:content="structure link/render"
        />
      <div
        tal:define="link context/menu:context/add_subscriber"
        tal:condition="link/enabled"
        tal:content="structure link/render"
        />
      <dl tal:condition="view/subscriptions" id="subscriptions">
        <tal:subscribers tal:repeat="subscription view/subscriptions">
          <dt class="subscriber">
            <img src="/@@/yes" />
            <tal:subscriber tal:replace="structure subscription/person/fmt:link" />
              <a tal:attributes="href subscription/fmt:url"
                tal:condition="subscription/editable">
                <img src="/@@/edit" alt="Edit subscription"/>
              </a>
          </dt>
        </tal:subscribers>
      </dl>
      <p tal:condition="not:view/subscriptions">
        No subscribers.
      </p>
    </div>
  </div>
</div>
