<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
</metal:rightportlets>

<div metal:fill-slot="main">

  <h1>All source packages</h1>

  <p class="documentDescription">
    This is complete list of the source packages currently published in
    <span tal:replace="context/displayname">Ubuntu</span>.
  </p>

  <tal:navigation
    replace="structure view/batchnav/@@+navigation-links"
    tal:condition="view/batch"/>

  <p>
  <tal:per_item repeat="result view/batch">
    <tal:pkg define="package result/distributionsourcepackage">
      <a tal:content="package/name"
         tal:attributes="href package/fmt:url">apache2</a>
    </tal:pkg>
  </tal:per_item>
  </p>

  <tal:navigation
    replace="structure view/batchnav/@@+navigation-links"
    tal:condition="view/batch"/>

</div>
</body>
</html>
