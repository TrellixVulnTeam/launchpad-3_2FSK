<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-coming-events"
  tal:define="coming_sprints context/coming_sprints"
  tal:condition="coming_sprints">

  <h2>Coming events</h2>

  <div class="portletBody portletContent">

    <table>
      <tal:per_sprint repeat="sprint coming_sprints"
                      replace="structure sprint/@@+listing-simple" />
    </table>

  </div>

</div>
