<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="view/macro:page/onecolumn"
  i18n:domain="launchpad"
>

<body>

<div metal:fill-slot="main">

  <h1 tal:content="view/heading">Bazaar branches</h1>

  <tal:branch-summary content="structure context/@@+branch-summary" />

  <tal:has-proposals condition="view/proposal_count">
    <div tal:replace="structure view/proposals/@@+listing" />
  </tal:has-proposals>

  <tal:no-proposals condition="not: view/proposal_count">
    <p tal:content="view/no_proposal_message">No reviews</p>
  </tal:no-proposals>

</div>

</body>
</html>
