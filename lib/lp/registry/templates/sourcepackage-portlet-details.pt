<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-details">
  <h2><span tal:replace="context/name" /> details</h2>

  <div class="portletBody portletContent">
    <tal:currentrelease tal:condition="context/currentrelease"
                        tal:define="current context/currentrelease">
      <b>Current version:</b>
      <span tal:replace="current/version" /><br />

      <b>Uploaded:</b>
      <span
        tal:attributes="title current/dateuploaded/fmt:datetime"
        tal:content="current/dateuploaded/fmt:approximatedate" /><br />
      
      <b>Urgency:</b>
      <span tal:content="current/urgency/title" /><br />

      <b>Component:</b>
      <span tal:content="current/component/name"/><br />

    </tal:currentrelease>
    <tal:norelease tal:condition="not: context/currentrelease">
      <i>No published releases of this package have been uploaded in
      <tal:block content="context/distroseries/fullseriesname" />
      </i>
    </tal:norelease>
  </div>

</div>
</tal:root>
