<tal:nomination
    tal:define="user_is_driver view/userCanMakeDecisionForNomination;
                nomination_form_id string:nomination${context/id};
                nomination_person view/getNominationPerson">
  <tr>
    <td style="padding: 0.3em 0em 0.3em 1.5em" colspan="4"
    tal:define="age view/getNominationDurationSinceCreatedOrDecided">
    <span class="discreet lesser" style="font-size: 100%">
      <span tal:content="context/status/title">
        Proposed
      </span>
      for
      <span tal:content="context/target/name/capitalize">
        Warty
      </span>
      by
      <a href="#"
         tal:attributes="href nomination_person/fmt:url"
         tal:content="nomination_person/displayname">
        Foo Bar
      </a>,
      <span tal:content="age/fmt:approximateduration">
        3 days ago
      </span>
      ago
    </span>
    <tal:release-management condition="user_is_driver">
        (<a href="#"
            tal:content="view/getApproveDeclineLinkText"
            tal:attributes="onclick string:return toggleFormVisibility(document.getElementById('${nomination_form_id}'));
                            href view/getNominationEditLink">approve/decline</a>)
      <div tal:attributes="id nomination_form_id"
           tal:condition="user_is_driver"
           style="display: none">
          <span style="padding-left: 1.5em" tal:content="structure context/@@+edit-form">
              Approve/Decline
          </span>
      </div>
    </tal:release-management>
  </td>
</tr>
</tal:nomination>