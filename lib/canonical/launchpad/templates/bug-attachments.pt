<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en">

<body>
  <h1>Bug Attachments</h1>
  <table tal:repeat="attach context/attachments">
    <tr>
      <td>Title</td>
      <td tal:content="attach/title">title</td>
    </tr>
    <tr>
      <td>Description</td>
      <td tal:content="attach/description">description</td>
    </tr>
    <tr>
      <td><a tal:attributes="href string:attachments/${attach/id}">Link</a></td>
    </tr>
  </table>
  <span tal:condition="not:context/attachments">No attachments</span>
</body>
</html>
