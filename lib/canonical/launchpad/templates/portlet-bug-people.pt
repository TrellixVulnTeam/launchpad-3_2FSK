<div class="portlet">
    <h6>Subscribers</h6>

    <div class="portletBody">
        <div class="portletContent even"
             tal:define="subscriptions context/subscriptions">

          <tal:subscriptions tal:define="ccs python:[s for s in subscriptions if s.subscription == 1];
                                         watches python:[s for s in subscriptions if s.subscription == 2]">
            <strong>CCed</strong><br />
            <li tal:repeat="cc ccs">
              <a href="#" tal:content="cc/person/name">Dafydd</a>
            </li>
            <i tal:condition="not: ccs">No subscribers CC'd</i>

            <br />
            <br />

            <strong>Watching</strong><br />
            <li tal:repeat="watch watches">
              <a href="#" tal:content="watch/person/name">Vincenzo</a>
            </li>
            <i tal:condition="not: watches">No subscribers watching</i>
          </tal:subscriptions>
        </div>
        <div class="portletContent odd">
          <form action="people/+new">
            <input type="submit" value="Add Subscriber">
          </form>
        </div>
    </div>
</div>
