<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">Search for Upstream Products</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Rosetta style sheet -->
    <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>

<div metal:fill-slot="main">

    <h1>Launchpad Upstream Product Search</h1>

    <form method="post">

        <fieldset>

            <legend>Search for a product</legend>

            <input name="text" size="60" tal:attributes="value view/text" />
            <input type="submit" value="Search" />

            <p class="formHelp">
            Enter any part of the product name, title or
            description.
            </p>

            <p>
            <a style="font-size: 0.85;" href="+search">Advanced
            Search</a>
            </p>

        </fieldset>

    </form>

    <div tal:condition="view/searchrequested">

        <table class="rowNavigation" width="100%">
            <tr tal:repeat="product view/searchresults"
                tal:attributes="onclick string:window.location='${product/name}';"
                valign="top"
                vspace="5">
                <td>
                    <img src="/++resource++product_icon.gif">
                    <b><a tal:attributes="href product/name" href="#"
                        tal:content="product/title">$Product.title</a></b>
                    (<span tal:content="product/name">$Product.name</span>)
                    <a tal:attributes="href product/homepageurl"
                        tal:content="product/homepageurl">http://www.gnu.org/</a>
                    <br />
                <span tal:content="product/shortdesc">
                    $Product.shortdesc</span>
                </td>
            </tr>
        </table>

        <div tal:condition="not: view/gotmatches"><b>No matching upstream
        products.</b> You can <a href="+new">register a new product </a>.</div>

    </div>

</div>

</body>
</html>
