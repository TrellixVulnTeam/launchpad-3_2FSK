<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:zope="http://namespaces.zope.org/zope"
    xmlns:lp="http://launchpad.canonical.com"
    i18n_domain="launchpad">

<facet facet="translations">

    <content class="canonical.launchpad.database.POTemplateName">
        <require
            permission="zope.Public"
            interface="canonical.launchpad.interfaces.IPOTemplateName"
            set_attributes="name title description translationdomain"
            />
    </content>

    <browser:defaultView
        for="canonical.launchpad.interfaces.IPOTemplateName"
        name="+index"
        />

    <browser:page
        name="+index"
        for="canonical.launchpad.interfaces.IPOTemplateName"
        permission="launchpad.Edit"
        template="../templates/potemplatename-index.pt"
        class="canonical.launchpad.browser.POTemplateNameView"
        />

    <browser:editform
        name="+edit"
        schema="canonical.launchpad.interfaces.IPOTemplateName"
        class="canonical.launchpad.browser.POTemplateNameEditView"
        label="Change PO template name information"
        permission="launchpad.Edit"
        template="../templates/potemplatename-edit.pt"
        fields="name title description translationdomain" >
        <browser:widget
            field="title"
            class="zope.app.form.browser.TextWidget"
            displayWidth="30"
            />
    </browser:editform>

    <securedutility
        class="canonical.launchpad.database.POTemplateNameSet"
        provides="canonical.launchpad.interfaces.IPOTemplateNameSet">
        <allow interface="canonical.launchpad.interfaces.IPOTemplateNameSet" />
    </securedutility>

    <browser:defaultView
        for="canonical.launchpad.interfaces.IPOTemplateNameSet"
        name="+index" />

    <browser:navigation
        module="canonical.launchpad.browser"
        classes="POTemplateNameSetNavigation"
        />

    <browser:pages
        for="canonical.launchpad.interfaces.IPOTemplateNameSet"
        permission="launchpad.Edit"
        class="canonical.launchpad.browser.POTemplateNameSetView" >
        <browser:page
            name="+index"
            template="../templates/potemplatenames-index.pt"
            />
    </browser:pages>

    <browser:addform
        name="+add"
        for="canonical.launchpad.interfaces.IPOTemplateNameSet"
        schema="canonical.launchpad.interfaces.IPOTemplateName"
        class="canonical.launchpad.browser.POTemplateNameAddView"
        label="Add a new PO template name"
        fields="name title description translationdomain"
        arguments=""
        keyword_arguments="name title description translationdomain"
        content_factory="canonical.launchpad.database.POTemplateName"
        permission="launchpad.Edit"
        template="../templates/potemplatename-add.pt" >
        <browser:widget
           field="title"
           class="zope.app.form.browser.TextWidget"
           displayWidth="30" />
    </browser:addform>

</facet>

</configure>
