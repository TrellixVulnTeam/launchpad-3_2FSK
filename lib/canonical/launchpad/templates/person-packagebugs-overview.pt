<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

  <metal:block fill-slot="head_epilogue">
    <!-- CSS rules local to this page -->
    <style>
      .results th {
        color: #828282;
        border: 1px solid #cfcfcf;
        background-color: #E0E0E0;
        text-align: left;
      }

      .bugcount {
        text-align: center;
      }

      .results td {
        border: 1px solid #cfcfcf;
        background-color: #ededed
      }
    </style>
  </metal:block>

  <metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
  </metal:leftportlets>

  <div metal:fill-slot="main">
    <tal:searchresults condition="request/search|nothing">
      some search results
    </tal:searchresults>
    <a href="#"
       tal:content="context/displayname"
       tal:attributes="href context/fmt:url">Sample Person</a>
    <tal:overview condition="not:request/search|nothing">
    is receiving bugmail from these packages:
    </tal:overview>

    <br /><br />
    <table class="results">
      <tr>
        <th width="40%">Package</th>
        <th width="14%">Open</th>
        <th width="14%">Critical</th>
        <th width="14%">Unassigned</th>
        <th width="18%">In Progress</th>
      </tr>
      <tr tal:repeat="package context/getBugContactPackages">
        <td>
          <a href="#"
             tal:content="package/displayname"
             tal:attributes="href string:${context/fmt:url}/+packagebugs-search?search=Search&field.distribution=${package/distribution/name}&field.sourcepackagename=${package/name}">mozilla-firefox (Ubuntu)</a>
        </td>
        <td class="bugcount">
          <a href="#"
             tal:attributes="href python:view.getOpenBugsURL(package)"
             tal:content="package/open_bugtasks/count">2</a>
        </td>
        <td class="bugcount">
          <a href="#"
             tal:attributes="href python:view.getCriticalBugsURL(package)"
             tal:content="package/critical_bugtasks/count">2</a>
        </td>
        <td class="bugcount">
          <a href="#"
             tal:attributes="href python:view.getUnassignedBugsURL(package)"
             tal:content="package/unassigned_bugtasks/count">2</a>
        </td>
        <td class="bugcount">
          <a href="#"
             tal:attributes="href python:view.getInProgressBugsURL(package)"
             tal:content="package/inprogress_bugtasks/count">2</a>
        </td>
      </tr>
    </table>
  </div>
</body>
</html>
