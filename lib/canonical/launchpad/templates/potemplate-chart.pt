<table class="sortable listing" id="language-chart" width="100%">
  <thead>
    <tr>
      <th>Language</th>
      <th class="amount">Todo</th>
      <th>Status</th>
      <th>Last Edited</th>
      <th>By</th>
    </tr>
  </thead>

  <tbody>
    <tr tal:repeat="pfview view/pofiles">
      <tal:block define="pf pfview/context">
        <td>
          <a tal:attributes="href string:${pf/fmt:url}/+translate"
             tal:content="pf/language/englishname/fmt:shorten/25">
             Language Name
          </a>
        </td>
        <td class="amount" tal:content="pf/untranslatedCount">0</td>
        <td style="white-space: nowrap">
          <div tal:replace="structure pf/@@+barchart" />
        </td>
        <td>
          <span tal:condition="pf/last_touched_pomsgset"
                tal:replace="pf/last_touched_pomsgset/date_reviewed/fmt:date" />
          <tal:block condition="not: pf/last_touched_pomsgset">
              &mdash;
          </tal:block>
        </td>
        <td>
          <tal:comment condition="nothing">
              XXX CarlosPerelloMarin 20070212: This code is exactly the same
              as in distroreleaselanguage-index.pt
          </tal:comment>
          <span tal:condition="pf/last_touched_pomsgset">
            <a tal:attributes="href pf/last_touched_pomsgset/reviewer/fmt:url"
               tal:replace="pf/last_touched_pomsgset/reviewer/browsername/fmt:shorten/25"></a>
          </span>
          <tal:block condition="not: pf/last_touched_pomsgset">
              &mdash;
          </tal:block>
        </td>
      </tal:block>
    </tr>
  </tbody>
</table>

