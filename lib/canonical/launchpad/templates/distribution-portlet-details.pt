<div class="portlet">

  <h4><span tal:replace="context/displayname">Ubuntu
      </span> distribution details:</h4>

  <div class="portletBody portletContent">

    <b>Registrant:</b><br />
    <img src="/@@/user.gif">
    <a tal:attributes="href context/owner/fmt:url"
       tal:content="context/owner/browsername">owner name</a> <br />

    <b>Members:</b><br />
    <img src="/@@/user.gif">
    <a tal:attributes="href string:${context/fmt:url}/+members"
       tal:content="context/members/browsername">members name</a><br /> 

    <b>Translation group:</b><br />
    <img src="/@@/languages.gif">
    <tal:block condition="context/translationgroup">
    <a tal:attributes="href context/translationgroup/fmt:url"
       tal:content="context/translationgroup/title"
    >Group</a><br />
    </tal:block>
    <tal:block condition="not: context/translationgroup">
    <i>Not assigned</i><br />
    </tal:block>
    <b>Translation policy:</b><br />
    <span tal:replace="context/translationpermission/title">Open</span>
    <br />

    <b>Uploads:</b><br />
    <tal:per_component repeat="dcu context/uploaders">
      <span tal:replace="dcu/component/name">main</span>:
      <img src="/@@/user" />
      <a tal:content="dcu/uploader/browsername"
         tal:attributes="href dcu/uploader/fmt:url" /><br />
    </tal:per_component>

    <b>Releases:</b><br />
    <ul tal:condition="context/releases">
      <li tal:repeat="release context/releases"
          class="distroreleases">
        <a tal:attributes="href release/fmt:url">
          <span tal:replace="release/name"/>
          <span tal:replace="release/version"/>
          (<span tal:replace="release/releasestatus/name"/>)
        </a>
      </li>
    </ul>

    <p tal:condition="not: context/releases">
       <span tal:replace="context/title"/> has no official releases yet.
    </p>

  </div>
</div>
