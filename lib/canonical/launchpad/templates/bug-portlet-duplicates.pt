<div class="portlet" tal:condition="context/duplicates">

  <h4>Duplicates of this bug:</h4>

  <div class="portletBody">
    <div class="portletContent">

      <ul tal:define="current_task view/currentBugTask">
        <li tal:repeat="dupe view/duplicates">
          <a tal:attributes="href string:${current_task/target/fmt:url}/+bug/${dupe/id};
            title dupe/title">
             Bug #<span tal:replace="dupe/id">3445</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
