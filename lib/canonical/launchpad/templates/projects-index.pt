<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">Launchpad Project Registry</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Launchpad style sheet -->
    <style type="text/css" media="screen">@import url(launchpad.css);</style>
</head>

<body>

<div metal:fill-slot="main">

    <h1>Launchpad Project Registry</h1>

    <form method="post">

        <fieldset>

            <legend>Search for a project</legend>

            <input name="text" size="45"
                   tal:attributes="value view/text" />

            &nbsp;
            
            <input type="submit" value="Search" />

            &nbsp;

            <p class="formHelp">
            Enter any part of the project name, title or
            description.
            </p>


        </fieldset>

    </form>

    <div tal:condition="view/searchrequested">

        <table class="rowNavigation" width="100%">
            <tr tal:repeat="project view/searchresults"
                tal:attributes="onclick string:window.location='${project/name}';"
                valign="top"
                vspace="5">
                <td>
                    <img src="/++resource++product_icon.gif">
                    <b tal:content="project/title">$Project.title</b>
                    (<a tal:attributes="href project/name" href="#"
                        tal:content="project/name">$Project.name</a>)
                    <br />
                <span tal:content="project/summary">
                    $Project.summary</span>
                </td>
            </tr>
        </table>

        <div tal:condition="not: view/gotmatches"><b>No matching upstream
        projects.</b> You can <a href="+new">register a new project </a>.</div>

    </div>

</div>

</body>
</html>
