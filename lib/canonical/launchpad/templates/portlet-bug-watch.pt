<div class="portlet" tal:condition="context/watches"
     tal:define="bug_url string:/malone/bugs/${context/id}">

    <h4 title="Bug watches keep track of this bug in other bug trackers.">
    BugTracker Watches
    </h4>
    
    <div class="portletBody">
        <div class="portletContent odd">

          <tal:block repeat="watch context/watches">
            <a tal:attributes="href string:$bug_url/watches/${watch/id}/+edit">
                <img src="/++resource++search_icon.gif" alt="" />
                 <span tal:replace="watch/bugtracker/name" />
                #<span tal:replace="watch/remotebug" />
                <div class="portletDetails"
                     tal:content="watch/remotestatus" />
            </a>
          </tal:block>

        </div>
        
        <div class="portletContent even">
            <img src="/++resource++add.gif" alt="Add">
            <a href="#" tal:attributes="href string:$bug_url/watches/+new">Link to other bug tracker...</a>
        </div> 
    </div>

</div>
