<table
  tal:define="
    prev_page_url context/prevBatchURL;
    next_page_url context/nextBatchURL;
    total context/batch/total"
  style="width: 100%;"
>
  <tbody>
    <tr>
      <td style="white-space: nowrap">
        <strong tal:content="context/batch/startNumber">1</strong>
        &rarr;
        <strong tal:content="context/batch/endNumber">10</strong>
        of
        <span tal:replace="total">42</span> result<span
            tal:omit-tag="" tal:condition="python: total != 1">s</span>
      </td>
      <td style="text-align: right; white-space: nowrap">
        <tal:previous condition="prev_page_url">
          <a tal:attributes="href prev_page_url" rel="previous"
          >&laquo;&nbsp;Previous</a>
        </tal:previous>
        <span
          tal:condition="not:prev_page_url"
          class="unavailable"
        >&laquo;&nbsp;Previous</span>
        <tal:intermediaries repeat="page_url context/batchPageURLs">
          <a
            tal:condition="python:len(page_url) > 1"
            tal:content="python:page_url.keys()[0]"
            tal:attributes="href python:page_url.values()[0]"
          >[1]</a>
        </tal:intermediaries>
        <tal:next condition="next_page_url">
          &mdash;
          <a tal:attributes="href next_page_url" rel="next"
          >Next&nbsp;&raquo;</a>
        </tal:next>
        <span
          tal:condition="not:next_page_url"
          class="unavailable"
        >&mdash; Next&nbsp;&raquo;</span>
      </td>
    </tr>
  </tbody>
</table>
