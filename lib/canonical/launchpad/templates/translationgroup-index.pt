<html metal:use-macro="view/macro:page/applicationhome"
      i18n:domain="launchpad">
  <body>
    <h1 metal:fill-slot="heading">Translation groups</h1>

    <div metal:fill-slot="main">
      <h1>
        <tal:translation-group replace="context/title">
          Foo bar
        </tal:translation-group> translation group
      </h1>

      <p class="documentDescription" tal:content="context/summary">
        $TranslationGroup.summary goes here. This should be quite short,
        just a single paragraph of text really, giving a summary of
        this TranslationGroup.
      </p>
      <div>
        <strong>
          <a tal:attributes="href view/translation_groups/fmt:url">
            &laquo; Back to translation groups list
          </a>
        </strong>
      </div>

      <div class="left">
        <div class="section">
          <div class="portlet">
            <h2>Translation Teams</h2>
            <tal:translators condition="context/translators">
              <table class="sortable listing" id="group-members">
                <thead>
                  <tr>
                    <th>Language</th>
                    <th>Translator</th>
                    <th></th>
                    <th>Appointed</th>
                    <th tal:condition="context/required:launchpad.Edit"></th>
                  </tr>
                </thead>
                <tr tal:repeat="translator view/translator_list">
                  <td tal:content="translator/lang" />
                  <td><a tal:content="translator/person/browsername"
                          tal:attributes="href translator/person/fmt:url" />
                  </td>
                  <td><a tal:attributes="href translator/code"><img
                         src="/@@/edit" alt="Change"
                         title="Change Translator"></a>
                  </td>
                  <td>
                    <span class="sortkey"
                      tal:content="translator/datecreated/fmt:datetime" />
                    <span
                      tal:attributes="title translator/datecreated/fmt:datetime"
                      tal:content="translator/datecreated/fmt:approximatedate">
                      2007-09-17
                    </span>
                  </td>
                  <td tal:condition="context/required:launchpad.Edit">
                    <form method="POST" action="+rm">
                        <input type="hidden" name="remove"
                               tal:attributes="value translator/code">
                         <input type="image" style="border: 0;"
                                src="/@@/remove" alt="Remove"
                                title="Remove Translator" name="rmform" />
                    </form>
                  </td>
                </tr>
              </table>
            </tal:translators>
            <tal:no-translators condition="not: context/translators">
              There are no translators appointed in this group yet.
            </tal:no-translators>
            <ul class="menu">
              <li tal:condition="context/required:launchpad.Edit" class="add">
                <a href="+appoint">Appoint additional translators</a>
              </li>
              <li tal:condition="not:request/lp:person" class="locked">
                <a href="+appoint">Appoint additional translators</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="right">
        <div class="section">
          <div tal:replace="structure context/@@+portlet-relateds" />
        </div>
      </div>
    </div>
  </body>
</html>
