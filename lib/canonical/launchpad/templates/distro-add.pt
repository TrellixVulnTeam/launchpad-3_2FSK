<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<div metal:fill-slot="main">
    <h1>New Distribution on Soyuz</h1>

    <div class="documentDescription">	
    <p> Here you can create a new Distribution
    </div>
    
    <div>
    <form name="add" action="" method="POST">
    <fieldset>
    <legend><h3>Create a New Distribution</h3><legend>
	<table>
	<tr><td>
	<div class="field">
	    <label>Name</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter the Distribution Name.
            </div>
	    <input type="text" name="name"
	    tal:attributes="value request/name|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Title</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter the Distribution Title.
            </div>
	    <input type="text" name="title" size="40"
	    tal:attributes="value request/title|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Description</label>
	    <div class="formHelp">
	    Enter the Distribution Description.
            </div>
            <textarea name="description" cols="60" rows="6"
	    tal:content="request/description|nothing">
	    </textarea>
	</div>
	</td></tr>
	<tr><td>
	<div class="formControls">
	  <input type="submit" value="Create"/>
	</div>
	</td></tr>
	</table>
  </form>
  </div>

  <tla:block tal:condition="view/add_action">
  <div>
  <h4><a tal:attributes="href request/name">
  <span tal:content="view/results/title"/></a> 
  Distribution added</h4>
  </div>
  </tla:block>

</div>

</body>
</html>
