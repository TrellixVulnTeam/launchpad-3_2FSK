<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<div metal:fill-slot="main">

     <tal:dummy condition="view/submitForm" />

        <h1>Edit the plural forms for this PO file</h1>

        <div class="portalMessage"
             tal:condition="view/status_message"
             tal:content="structure view/status_message">Successful</div>

        <form action="+edit" method="POST" enctype="multipart/form-data">

        <fieldset>
            Number of plural forms:
            <input type="text" name="pluralforms"
                   tal:attributes="value context/pluralforms"/>
            <br/>
            Plural form expression:
            <input type="text" name="expression"
                   tal:attributes="value view/header/getPluralFormExpression"/>
            <br/>
            <input type="submit" name="EDIT" value="Change" />
        </fieldset>
        </form>

</div>

</body>
</html>
