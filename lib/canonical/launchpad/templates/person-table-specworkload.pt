
<p tal:condition="not: view/workload">
  <i><span tal:replace="context/browsername">James Blackwell</span> is not
  currently responsible for any specifications that meet your criteria.</i>
</p>

<tal:workload condition="view/workload">

  <table class="listing sortable"
         tal:attributes="id string:specwork_${context/name}">
    <thead>
      <tr>
        <th>Priority</th>
        <th>Specification</th>
        <th>Definition</th>
        <th>Delivery</th>
        <th>Assign</th>
        <th>Draft</th>
        <th>Approve</th>
      </tr>
    </thead>
    <tbody class="lesser">
      <tr tal:repeat="spec view/workload">
        <td width="80">
          <span class="sortkey" tal:content="spec/priority/sortkey" />
          <span tal:content="spec/priority/title"
                tal:attributes="
                class string:specpriority${spec/priority/name}">High
          </span>
        </td>
        <td>
          <a tal:content="spec/name"
             tal:attributes="href spec/fmt:url">foo-bar</a>
        </td>
        <td width="80">
          <span class="sortkey" tal:content="spec/status/sortkey" />
          <span tal:content="spec/status/title"
                tal:attributes="
                class string:specstatus${spec/status/name}">Approved
          </span>
        </td>
        <td width="80">
          <span class="sortkey" tal:content="spec/delivery/sortkey" />
          <span tal:content="spec/delivery/title"
                tal:attributes="
                class string:specdelivery${spec/delivery/name}">Slow
          </span>
        </td>
        <td width="40">
          <tal:assignee condition="spec/assignee">X</tal:assignee>
        </td>
        <td width="40">
          <tal:drafter condition="spec/drafter">X</tal:drafter>
        </td>
        <td width="40">
          <tal:approver condition="spec/approver">X</tal:approver>
        </td>
      </tr>
    </tbody>
  </table>
    
</tal:workload>

