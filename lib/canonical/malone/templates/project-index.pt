<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="rosetta">
<body>

<div metal:fill-slot="main">
  <h1 tal:content="context/title">Project Title</h1>
  <div class="documentDescription"
       tal:content="context/description">Description</div>
  <table class="listing" tal:repeat="prod context/products">
    <tr>
        <th tal:content="prod/title" colspan="4">Title</th>
    </tr>
    <tr>
      <th>Bug</th>
      <th>Status</th>
      <th>Severity</th>
      <th>Priority</th>
    </tr>  
      <tr tal:repeat="bug prod/bugs">
        <td>
          <a tal:attributes="href string:/malone/bugs/${bug/bug/id}"
             tal:content="bug/bug/title">1</a>
        </td>
        <td tal:content="bug/bugstatus">1</td>
        <td tal:content="bug/priority">1</td>
        <td tal:content="bug/severity">1</td>
       </tr>
  </table>
</div>

</body>
</html>
