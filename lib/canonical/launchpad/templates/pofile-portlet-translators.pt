<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-translators">
  <h2><span tal:replace="context/language/englishname">Spanish</span>
  translators</h2>

  <div class="portletBody portletContent">

    <tal:block repeat="translator context/translators">
      <div>
        <img alt="" src="/@@/translation" />
        <a tal:content="translator/translationgroup/title"
           tal:attributes="href translator/translationgroup/fmt:url">
           Ubuntu Translation Group</a>:
      </div>
      <div>
        <img alt="" src="/@@/team" />
        <a tal:content="translator/translator/browsername"
           tal:attributes="href translator/translator/fmt:url">Ubuntu
           Afrikaans Team</a>
      </div>
      <tal:block condition="translator/translator/isTeam">
        <ul>
          <li class="person"
              tal:repeat="person translator/translator/allmembers">
            <a tal:content="person/browsername"
               tal:attributes="href person/fmt:url">Mark Shuttleworth</a>
          </li>
        </ul>
      </tal:block>
    </tal:block>
    <tal:block condition="not: context/translators">
      No translators currently designated for this PO file. Learn more about
      <a href="/translations/groups/">translation groups</a> and permissions.
    </tal:block>

  </div>
</div>
</tal:root>
