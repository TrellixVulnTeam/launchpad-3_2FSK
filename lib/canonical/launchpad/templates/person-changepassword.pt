<tal:do-this-first: tal:condition="view/processPasswordChangeForm" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

  <metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure context/@@+portlet-editdetails" />
  </metal:rightportlets>

  <div metal:fill-slot="main">

    <h1>Change your password</h1>

    <p class="portalMessage" tal:condition="view/message"
       tal:content="view/message" />

    <form action="" method="POST">

    <table>
      <tr><td colspan="2"><label>Current password:</label></td></tr>
      <tr>
        <td colspan="2"><input type="password" name="currentpassword" /></td>
      </tr>
      <tr>
        <td colspan="2" class="formHelp">
          The password you use to log into Launchpad.
        </td>
      </tr>

      <tr><td colspan="2">&nbsp;</td></tr>

      <tr>
        <td><label>New password:</label></td>
        <td><label>Retype new password:</label></td>
      </tr>
      <tr>
        <td><input type="password" name="newpassword" /></td>
        <td><input type="password" name="newpassword2" /></td>
      </tr>

      <tr>
        <td colspan="2" class="formControls">
          <input type="submit" value="Change Password" name="CHANGE_PASSWORD" />
        </td>
      </tr>
    </table>

  </div> 

</body>
</html>
