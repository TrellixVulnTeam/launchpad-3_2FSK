<div
  tal:condition="python:view.num_lists == 1"
  id="structural-children"
  class="primary"
>
  <tal:child repeat="child view/children">
    <tal:link replace="structure child/@@+shortlink" /><tal:comma
    condition="not:repeat/child/end">,</tal:comma></tal:child><tal:ellipsis condition="view/has_more_children">, &hellip;</tal:ellipsis>
</div>
<div tal:condition="python:view.num_lists == 2" id="structural-children">
  <div class="primary">
    <tal:child repeat="child view/children">
      <tal:link replace="structure child/@@+shortlink" /><tal:comma
      condition="not:repeat/child/end">,</tal:comma></tal:child><tal:ellipsis condition="view/has_more_children">, &hellip;</tal:ellipsis>
  </div>
  <div class="secondary">
    <tal:child repeat="child view/alt_children">
      <tal:link replace="structure child/@@+shortlink" /><tal:comma
      condition="not:repeat/child/end">,</tal:comma></tal:child><tal:ellipsis condition="view/has_more_alt_children">, &hellip;</tal:ellipsis>
  </div>
</div>
