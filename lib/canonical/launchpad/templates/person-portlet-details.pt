<div class="portlet">
  <h4><span tal:replace="context/browsername" />:</h4>
  
  <div class="portletBody portletContent">
	
    <tal:block condition="not: context/teamowner">
      <b tal:content="context/browsername">Mark Shuttleworth</b>
      (<img tal:condition="context/emblem"
            tal:attributes="src context/emblem/url" /><a
            tal:attributes="href context/fmt:url"
            tal:content="context/name">sabdfl</a>)<br />

      <tal:logged_in condition="request/lp:person">
        <b>Preferred address:</b><br />
        <img tal:condition="context/preferredemail"
             src="/++resource++email" />
        <span tal:condition="context/preferredemail"
              tal:replace="context/preferredemail/email">foo@bar.com</span>
        <tal:no_pref_mail condition="not: context/preferredemail">
          <img src="/++resource++alert" />
          <i>None set</i>
        </tal:no_pref_mail>
        <br />
      </tal:logged_in>

      <b>Timezone:</b>
      <span tal:replace="context/timezone">UTC</span>
      <i tal:condition="not: context/timezone">None given</i><br />

      <b>Ubuntero:</b>
      <tal:block condition="context/is_ubuntero">Yes</tal:block>
      <tal:block condition="not: context/is_ubuntero">Not yet</tal:block>
      <br />

      <b>Karma:</b>
      <span tal:replace="context/karma">342</span><br />

    </tal:block>
    <tal:block condition="context/teamowner">

      <b>Team:</b>
      <img tal:condition="context/emblem"
            tal:attributes="src context/emblem/url" />
      <a tal:attributes="href context/fmt:url"
         tal:content="context/name">sabdfl</a><br />
      <b>Team Owner:</b><br />
      <a tal:attributes="href context/teamowner/fmt:url"
         tal:content="context/teamowner/browsername">sabdfl</a><br />

      <b>Membership policy:</b>
      <span tal:replace="context/subscriptionpolicy/title">Open team</span>.
      <span tal:replace="context/subscriptionpolicy/description">More
      detail goes here.</span>
      <br />

    </tal:block>
    
    <tal:comment replace="nothing">
      Here we are going to put all the emblems from teams this person
      belongs to.
    </tal:comment>
    <tal:memberships repeat="membership context/myactivememberships">
      <a tal:attributes="href membership/team/fmt:url"
        ><img tal:condition="membership/team/emblem"
              tal:attributes="src membership/team/emblem/url;
                              title string:Emblem of ${membership/team/name}"
          /></a>
    </tal:memberships>
    
  </div>

</div>
