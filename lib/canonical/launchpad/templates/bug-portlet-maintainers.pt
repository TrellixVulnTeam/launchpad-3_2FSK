<div class="portlet">
    <h4>Related People:</h4>

    <div class="portletBody"
         tal:define="bug_url context/fmt:url">
        <div class="portletContent even"
             tal:define="bugtasks context/bugtasks">

            <b>First reported by:</b><br />
            <ul class="people">
                <li><a href="#"
                       style="text-decoration: underline"
                       tal:content="context/owner/browsername"
                       tal:attributes="href context/owner/fmt:url" />
            </ul>
            <br />

            <b>Maintainers:</b><br />

            <ul class="people" tal:repeat="task bugtasks">
                <li tal:condition="task/maintainer">
                <a href="."
                   style="text-decoration: underline"
                   tal:content="task/maintainer/browsername"
                   tal:attributes="href task/maintainer/fmt:url" />
                </li>
            </ul>

        </div>
    </div>
</div>

