<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="view/macro:page/onecolumn"
  i18n:domain="launchpad"
  >
<body>

<div metal:fill-slot="main">

  <h1>Edit dependencies for <tal:title replace="context/title" /></h1>

  <div metal:use-macro="context/@@launchpad_form/form">

    <div class="form" metal:fill-slot="widgets">

      <table>

        <tr tal:condition="not: view/has_dependencies">
          <td></td>
          <td>
            <p id="empty-dependencies"
            ><i>No dependencies recorded for this PPA yet.<i></p>
          </td>
        </tr>

        <tal:dependencies
          define="widget nocall:view/widgets/selected_dependencies|nothing"
          condition="view/has_dependencies">
          <metal:widget
            metal:use-macro="context/@@launchpad_form/widget_row" />
          <tr>
            <td></td>
            <td style="padding: .5em 0 1em 0;">
              <input
                tal:replace="structure view/actions/field.actions.remove/render" />
            </td>
          </tr>
        </tal:dependencies>


        <tal:add_dependency
          define="widget nocall:view/widgets/dependency_candidate|nothing"
          condition="widget">
          <metal:widget
            metal:use-macro="context/@@launchpad_form/widget_row" />
          <tr>
            <td></td>
            <td style="padding: .5em 0 1em 0;">
              <input
                tal:replace="structure view/actions/field.actions.add_ppa/render" />
            </td>
          </tr>
        </tal:add_dependency>

        <tal:primary_dependency
          define="widget nocall:view/widgets/primary_dependencies|nothing"
          condition="widget">
          <metal:widget
            metal:use-macro="context/@@launchpad_form/widget_row" />
          <tr>
            <td></td>
            <td style="padding: .5em 0 1em 0;">
              <input
                tal:replace="structure view/actions/field.actions.add_primary/render" />
            </td>
          </tr>
        </tal:primary_dependency>

      </table>

   </div> <!-- widgets -->

   <div class="actions" metal:fill-slot="buttons">
   </div> <!-- empty buttons -->


  </div> <!-- launchpad_form -->


</div> <!--main -->

</body>
</html>
