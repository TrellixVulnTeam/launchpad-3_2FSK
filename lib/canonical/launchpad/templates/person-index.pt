<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<metal:leftportlets fill-slot="portlets_one">
<div tal:replace="structure view/teamsPortlet" />
<div tal:replace="structure view/subteamsPortlet" />
<div tal:replace="structure view/membershipPortlet" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
<div tal:replace="structure view/bugsPortlet" />
</metal:rightportlets>


<div metal:fill-slot="main">

<div id="content" class="documentEditable">
    <ul class="contentViews">
        <li id="contentview-view" class="selected">
            <a>View</a>
        </li>

        <li id="contentview-edit" class="plain">
            <a href="+edit">Edit</a>
        </li>

	<li id="contentview-packages" class="plain">
            <a href="+packages">Packages</a>
        </li>
    </ul>

    <div class="documentContent" id="region-content">

      <h1><span tal:content="context/person/displayname">context</span>
      Page </h1>

      <table width="100%">
      <tr><td valign="top"> 
      <div>
      <table>
       <legend><h3>Private Information</h3></legend>
       <tr><td>Name:</td><td 
	tal:content="string:${context/person/displayname} (${context/person/name})">
	DISPLAYNAME(NICK)</td></tr>

       <tr tal:condition="context/person/teamowner">
       <td>Owner:</td>
       <td><a tal:attributes="href string:../${context/person/teamowner/name}"
              tal:content="context/person/teamowner/displayname">
              OWNER</a></td>
       </tr>

       <tr tal:condition="context/person/teamdescription">
       <td>Description:</td><td tal:content="context/person/teamdescription">
           DESCRIPTION</td>
       </tr>
       
       <tal:dummy tal:condition="context/email">
       <tr tal:repeat="email context/email">
       <td>Email:</td>
       <td tal:content="string:${email/email} (${email/statusname})">EMAIL</td>
       </tr>
       </tal:dummy>

       <tr tal:condition="context/wiki">
       <td>Wiki:</td><td> 
        <a tal:attributes="href string:${context/wiki/wiki}${context/wiki/wikiname}">  
	Wiki Homepage</a>
	</td></tr>

       <tr tal:condition="context/irc">
       <td>IRC:</td><td><span tal:content="context/irc/nickname"/> at 
       <span tal:content="context/irc/network"/></td>
       </tr> 

       <tr tal:condition="context/jabber">
       <td>Jabber:</td><td tal:content="context/jabber/jabberid"></td>
       </tr> 

       <tr tal:condition="context/archuser">
       <td>Arch User:</td><td tal:content="context/archuser/archuserid"></td>
       </tr>

       <tr tal:condition="context/gpg">
       <td>GPG:</td>
       <td tal:content="string:${context/gpg/keysize}${context/gpg/algorithmname}/${context/gpg/keyid}"></td>
       <th><a href="+key">Pub Key</a></th>
       </tr>
   </table>
   </div> 
   <!--Roles distro and distrorelease -->
    </td><td valign="top"> 
    <div>
      <table>
        <legend><h3>Roles</h3></legend>
        <tr><td>
	  <div>
	  <table>
	  <legend><b>Distribution Role</b></legend>
          
          <tr tal:condition="not:context/distroroles">
	    <td><b>No Distribution Roles</b></td>
          </tr>

          <tr tal:condition="context/distroroles"
	      tal:repeat="role context/distroroles">
	    <td><span tal:content="role/rolename">ROLENAME</span> on 
	      <a tal:attributes="href string:../../distros/${role/distribution/name}"
                 tal:content="role/distribution/title">DISTRO</a></td>
	  </tr>
          </table>
	  </div>
	</td></tr>
	<tr><td>
	  <div>
	  <table>
	  <legend><b>Release Roles</b></legend>
	
          <tr tal:condition="not:context/distroreleaseroles">
	      <td><b>No Release Roles</b></td>
          </tr>

	  <tr tal:condition="context/distroreleaseroles"
              tal:repeat="role context/distroreleaseroles">
	      <td><span tal:content="role/rolename">ROLENAME</span> on 
	          <a tal:attributes="href string:../../distros/${role/distrorelease/distribution/name}/releases/${role/distrorelease/name}"
	             tal:content="role/distrorelease/displayname">RELEASE</a>
              </td>
	  </tr>
	  </table>
          </div>
	</td></tr>
      </table>
    </div>
  </td></tr>
  </table>

</div>
</div>
</div>


</body>
</html>
