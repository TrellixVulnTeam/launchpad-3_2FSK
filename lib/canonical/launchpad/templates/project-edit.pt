<tal:tag condition="view/update"/>
<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

  <body>

    <div metal:fill-slot="main">

      <div metal:use-macro="context/@@launchpad_editform/editform">

          <h1 tal:condition="view/label"
              tal:content="view/label"
              metal:fill-slot="heading"
              >Form Label will come from ZCML label="xxx"</h1>

          <p metal:fill-slot="extra_info">
            Avoid changing the Name,
            because that will change the project&#8217;s <abbr>URL</abbr>,
            which will break all links from outside Launchpad.
            Take care with your changes,
            because they will be visible immediately.
          </p>
        
      </div>
    
    </div>

  </body>
</html>
