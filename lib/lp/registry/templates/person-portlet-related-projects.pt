<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-related-projects"
     tal:define="overview_menu context/menu:overview"
     tal:condition="view/first_five_related_projects">

  <h2>Related projects</h2>
  <table tal:define="pillarnames view/first_five_related_projects">
    <tbody>
      <tr tal:repeat="pillarname pillarnames">
        <td>
          <a tal:attributes="href string:/${pillarname/pillar/name};
                             class pillarname/pillar/image:sprite_css"
          tal:content="pillarname/pillar/title">Pillar title</a>
        </td>
      </tr>
    </tbody>
  </table>

  <a href="+projects" class="sprite info">
    Show <tal:count condition="view/has_more_related_projects"
                    content="string: all ${view/related_projects_count}"/>
    related projects</a>
</div>
</tal:root>
