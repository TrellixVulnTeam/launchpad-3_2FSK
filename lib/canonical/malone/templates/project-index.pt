<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="rosetta">
<body>

<div metal:fill-slot="main">
    <h1 tal:content="context/title">Project Title</h1>
    <div class="documentDescription"
        tal:content="context/description">Description</div>
    <table class="listing rowNavigation" tal:repeat="prod context/products">
        <tr>
            <th tal:content="prod/title" colspan="4">Title</th>
        </tr>
        <tr>
            <th>Bug</th>
            <th>Status</th>
            <th>Severity</th>
            <th>Priority</th>
        </tr>  
        <tr tal:repeat="bugass prod/bugs" tal:attributes="onclick
            string:window.location='../../bugs/${bugass/bug/id}';">
            <td>
                <a tal:attributes="href string:../../bugs/${bugass/bug/id}"
                    tal:content="bugass/bug/title">1</a>
            </td>
            <td tal:content="bugass/bugstatus/lp:BugAssignmentStatus">1</td>
            <td tal:content="bugass/priority/lp:BugPriority">1</td>
            <td tal:content="bugass/severity/lp:BugSeverity">1</td>
       </tr>
  </table>
</div>

</body>
</html>
