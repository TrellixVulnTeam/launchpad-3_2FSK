<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <div id="related-pages" class="portlet">
    <h2 tal:content="view/title">Subtitle</h2>

    <ul>
      <tal:link tal:repeat="link view/links">
        <li tal:condition="link/linked">
          <a tal:condition="link/enabled"
            tal:replace="structure link/fmt:icon-link" />
        </li>
      </tal:link>
    </ul>
  </div>
</tal:root>
