<tal:layout define="columns1 default">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en" metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-rosetta" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-foaf" />
  <div tal:replace="structure context/@@+portlet-malone" />
</metal:rightportlets>

<div metal:fill-slot="main">

      <!-- tal:buttons replace="structure context/@@+app-buttons" / -->
      <div id="applications">
        <a href="/products">
          <img alt="" src="/+icing/app-register.gif" />
          Register your project.
        </a>
        <a href="/bazaar">
          <img alt="" src="/+icing/app-register.gif" />
          Publish your code.
        </a>
        <a href="/bugs">
          <img alt="" src="/+icing/app-bugs.gif" />
          Share bug reports and fixes.
        </a>
        <a href="/specs">
          <img alt="" src="/+icing/app-features.gif" />
          Track specifications.
        </a>
        <a href="/rosetta">
          <img alt="" src="/+icing/app-translations.gif" />
          Localize your software.
        </a>
        <a href="/support">
          <img alt="" src="/+icing/app-support.gif" />
          Help your users.
        </a>
      </div>
      <form class="central" action="/products/" method="get">
        <label for="text">Is your project registered yet?</label>
        <input id="text" type="text" name="text" size="30" />
        <input type="submit" value="Search" />
      </form>
      <div class="bordered">
        <div class="left">
          <h2>Featured projects</h2>
          <ul>
            <li><a href="/distros/ubuntu">Ubuntu</a> (distribution)</li>
            <li><a href="/products/bzr">Bazaar</a> (product)</li>
            <li><a href="/products/gnomebacker">GnomeBaker</a> (product)</li>
          </ul>
        </div>
        <div class="right">
          <h2>More about Launchpad</h2>
          <ul>
            <li>marketing</li>
            <li>goes</li>
            <li>here</li>
          </ul>
        </div>
      </div>
    </div>
    <p metal:fill-slot="help">
      This panel provides help on individual Launchpad pages.
      Open it on any page that you don&rsquo;t understand.
    </p>
  </body>
</html>
</tal:layout>
