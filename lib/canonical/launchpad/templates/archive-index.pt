<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
  <body>

    <metal:heading fill-slot="pageheading">
      <h1 tal:content="context/title">Foo Bar PPA</h1>
    </metal:heading>


    <metal:leftportlets fill-slot="portlets_one">
      <div tal:replace="structure context/owner/@@+portlet-details" />
    </metal:leftportlets>

    <div metal:fill-slot="main">

      <p>PPA description:</p>

      <div id="description">
         <tal:archive-description
            replace="structure context/description/fmt:text-to-html" />
      </div>

      <p id="source_counter">
         This PPA contains <span tal:content="view/number_of_sources"
         /> sources.
      </p>

      <h2>Packages</h2>

         <ul>
            <li tal:repeat="pub context/getPublishedSources">
               <span tal:replace="pub/sourcepackagerelease/name" />
            </li>
         </ul>

    </div>

  </body>
</html>
