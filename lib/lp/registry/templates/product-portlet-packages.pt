<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-packages"
     tal:condition="context/sourcepackages">
  <h2>Packages</h2>
  <div class="portletBody portletContent">
    <ul>
      <li tal:repeat="package context/sourcepackages">
        <a tal:content="package/title"
           tal:attributes="href package/fmt:url"
           class="sprite package-source">
             apache in ubuntu hoary
        </a>
      </li>
    </ul>

  </div>
</div>
</tal:root>
