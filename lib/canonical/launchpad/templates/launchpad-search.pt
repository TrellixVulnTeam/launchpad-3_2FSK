<tal:layout define="columns1 default">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>

<body>

<div metal:fill-slot="main">

  <div id="applications" tal:content="structure context/@@+applicationbuttons" />

  <div id="mainarea">
  <div class="t">
  <div class="u">
  <div class="v">
  <div class="w">
  <div class="x">
  <div class="y">
  <div class="z">
  <div id="container">

    <div class="central" style="text-align: center">
      <form action="" method="get">
        <input type="text" name="q" size="30"
               tal:attributes="value view/search_string" />
        <input type="submit" name="search" value="Search" />
      </form>

    <p id="empty-search-string" tal:condition="not: view/search_string">
      Enter one or more words on the box above to search the existent
      Launchpad projects.
    </p>
    </div>

    <tal:non-empty-search-string condition="view/search_string">
      <p tal:condition="view/tooManyResultsFound"
           class="informational message">
        More than <span tal:replace="view/max_results_to_display" /> projects
        were found, so we're displaying only the ones that are most relevant
        to your search terms.
        If the project you are looking for is not on the list below, please
        do another search with more search terms.  
      </p>
    </tal:non-empty-search-string>

    <div id="search-results" style="margin: 0px 15px">
      <tal:results repeat="result view/results">
        <br />
        <strong><a tal:attributes="href string:/${result/name}">
          <span tal:replace="result/title">Ubuntu Linux</span>
        </a></strong> (<span tal:replace="result/type">distribution</span>)
        <br />
        <div style="margin-left: 25px;" tal:content="result/description">
          Description of Ubuntu Linux
        </div>
      </tal:results>
    </div>

  </div><!--container-->
  </div><!--z-->
  </div><!--y-->
  </div><!--x-->
  </div><!--w-->
  </div><!--v-->
  </div><!--u-->
  </div><!--t-->
  </div><!--mainarea-->

</div>

</body>
</html>
</tal:layout>
