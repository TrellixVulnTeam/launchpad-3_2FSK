<html metal:use-macro="view/macro:page/applicationhome"
      i18n:domain="launchpad">
  <body>
    <metal:css fill-slot="head_epilogue">
      <style type="text/css">
        div.inlined-widget {
          display: inline;
        }

        div.inlined-widget div {
          display: inline;
        }
      </style>
    </metal:css>

    <div metal:fill-slot="main">
      <h1 tal:condition="view/label"
          tal:content="view/label">
        Translation files waiting to be imported in Launchpad
      </h1>

      <div class="documentDescription">
        Here you have all translation related entries that are
        imported, blocked, deleted or waiting to be imported in Launchpad.
        <tal:login condition="not:request/lp:person">
          <a href="+login">Log in</a> to change items in this list.
        </tal:login>
      </div>

      <metal:translation-import-queue
        use-macro="view/translation_import_queue_content" />
    </div>
  </body>
</html>
