<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div id="portlet-details">
  <table class="summary" tal:define="overview_menu context/menu:overview">
    <tbody>
      <tr tal:condition="context/required:launchpad.Admin">
        <th>Status:</th>
        <td>
          <tal:block condition="context/active">Active</tal:block>
          <tal:block condition="not: context/active">Disabled</tal:block>
          <tal:block condition="context/reviewed"><br />Reviewed</tal:block>
          <tal:block condition="context/icon"><br />Branded
            <tal:icon replace="structure context/image:icon" />
          </tal:block>
        </td>
      </tr>
      <tr>
        <th>Maintainer:</th>
        <td>
          <a tal:replace="structure context/owner/fmt:link" />
          <tal:edit-maintainer
            content="structure overview_menu/reassign/fmt:icon" />
        </td>
      </tr>
      <tr>
        <th>Driver:</th>
        <td>
          <tal:no-driver condition="not:context/driver">
            Not yet appointed
          </tal:no-driver>
          <tal:has-driver condition="context/driver">
            <a tal:replace="structure context/driver/fmt:link">Driver</a>
          </tal:has-driver>
          <tal:edit-maintainer
            content="structure overview_menu/driver/fmt:icon" />
        </td>
      </tr>
      <tr>
        <th>Bug tracker:</th>
        <td>
          <a
            tal:condition="context/bugtracker"
            tal:content="context/bugtracker/title"
            tal:attributes="href context/bugtracker/fmt:url"
          >tracker title</a>
          <tal:none condition="not:context/bugtracker">None specified</tal:none>
        </td>
      </tr>
    </tbody>
  </table>
</div>
</tal:root>
