<table
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="summary" id="proposal-summary">

  <tbody>
    <tr>
      <th>Source branch:</th>
      <td tal:content="structure context/source_branch/fmt:link">~foo/bar/bzr</td>
    </tr>
    <tr>
      <th>Target branch:</th>
      <td tal:content="structure context/target_branch/fmt:link">~foo/bar/baz</td>
    </tr>
    <tr>
      <th>Status:</th>
      <td>
        <tal:status replace="context/queue_status/title">
        Work in progress</tal:status>
        <tal:queued condition="context/queue_status/enumvalue:QUEUED">
          (<a tal:attributes="href view/queue_location">view queue</a>)
        </tal:queued>
      </td>
    </tr>
    <tal:reviewed condition="context/reviewer">
      <tr>
        <th>Reviewed by:</th>
        <td tal:content="structure context/reviewer/fmt:link">Some User</td>
      </tr>
      <tr>
        <th>Reviewed revision:</th>
        <td tal:content="view/reviewed_revision_number">1234</td>
      </tr>
    </tal:reviewed>
    <tal:queued condition="context/queue_status/enumvalue:QUEUED">
      <tr>
        <th>Queued by:</th>
        <td tal:content="structure context/queuer/fmt:link">Some User</td>
      </tr>
      <tr>
        <th>Queued revision:</th>
        <td tal:content="view/queued_revision_number">1234</td>
      </tr>
    </tal:queued>
  </tbody>
</table>
