<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-web-links"
  tal:condition="context/externalrefs"
  tal:define="current_task view/currentBugTask;
              url current_task/fmt:url"
>

  <h2>Web links</h2>

  <div class="portletBody">
    <div class="portletContent">
      <ul>
        <li class="webref"
            tal:repeat="ref context/externalrefs">
          <a tal:attributes="href ref/url"
             tal:content="ref/title">http://www.wizardzz.com/path/to/data.html
          </a>
          <small>
            (<a tal:attributes="href string:$url/references/${ref/id}">edit</a>)
          </small>
        </li>
      </ul>
      <ul>
        <li class="add">
          <a tal:attributes="href string:$url/+addurl">Add</a>
        </li>
      </ul>
    </div>
  </div>
</div>
