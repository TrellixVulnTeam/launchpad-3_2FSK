<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-bounties"
  tal:condition="context/bounties">

  <h2><span tal:replace="context/displayname">Ubuntu</span> bounties</h2>

  <div class="portletBody portletContent">

    <ul>
      <li class="bounty" tal:repeat="bounty context/bounties">
        <a tal:content="bounty/title"
           tal:attributes="title bounty/summary;
                           href bounty/fmt:url">bounty title</a>
      </li>
    </ul>

    <ul><li class="info">
    <a href="+bounties"
        title="More bounties...">
        More...
    </a>
    </li></ul>

  </div>
</div>
