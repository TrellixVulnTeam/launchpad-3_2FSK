<div class="portlet" tal:condition="view/getLatestTickets">
  <h2>Latest support requests</h2>
  <div class="portletBody portletContent">

    <ul>
      <li class="ticket" tal:repeat="ticket view/getLatestTickets">
           [<span tal:attributes="
                    class string:ticketstatus${ticket/status/name}"
                  tal:content="ticket/status/title" />]
        <a tal:content="ticket/title/fmt:shorten/80"
           tal:attributes="href ticket/fmt:url">ticket title</a>
      </li>
    </ul>
  </div>
</div>
