<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">
    <span tal:replace="context/distribution/title">Title</span>:
    Releases
    </title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Launchpad style sheet -->
    <style type="text/css" media="screen">@import url(launchpad.css);</style>
</head>

<body>

<metal:leftportlets fill-slot="portlets_one">

<tal:block tal:define="distro context/distribution">

 <div class="portlet">
  <h4><span tal:content="distro/title">DISTRO</span> Links</h4>

   <div class="portletBody">

     <div class="portletContent even">

     <ul>
     <li><a tal:attributes="href string:/distros/${distro/name}">
     Home Page</a></li>
     <li>Releases</li>
     <li><a tal:attributes="href string:/distros/${distro/name}/src">
      Source Packages</a></li>
     <li><a tal:attributes="href string:/distros/${distro/name}/bin">
     Binary Packages</a></li>
     </ul>

     </div>
   </div>  
 </div>

</tal:block>

</metal:leftportlets>


<div metal:fill-slot="main">

  <h1><span tal:content="context/distribution/title" />: Releases</h1>

  <table class="listing">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Version</th>
    </tr>
    <tr tal:repeat="release context">
      <td><a tal:content="release/title"
	     tal:attributes="href release/name">RELEASE</a></td>
      <td tal:content="release/description">description</td>
      <td tal:content="release/version">version</td>
    </tr>

  </table>    

</div>

</body>
</html>
