<div class="portlet portletBody portletContent">

<ul>

  <li>
    <a tal:attributes="href view/getOpenBugsURL">
      Open
    </a>
    (<span tal:content="context/open_bugtasks/count">10</span>)
  </li>
  <li>
    <a href="#" tal:attributes="href view/getBugsAssignedToMeURL">
      Assigned to me
    </a>
    <tal:loggedin condition="view/user">
      (<span tal:content="view/getBugsAssignedToMeCount">50</span>)
    </tal:loggedin>
    <tal:notloggedin condition="not:view/user">
      (requires
      <a tal:attributes="href string:${request/URL}/+login">
      login</a>)
    </tal:notloggedin>
  </li>
  <li>
    <a tal:attributes="href view/getCriticalBugsURL">
      Critical
    </a>
    (<span tal:content="context/critical_bugtasks/count">42</span>)
  </li>
  <li>
    <a tal:attributes="href view/getUnconfirmedBugsURL">
      Unconfirmed
    </a>
    (<span tal:content="context/unconfirmed_bugtasks/count">42</span>)
  </li>
  <li>
    <a tal:attributes="href view/getUnassignedBugsURL">
      Unassigned
    </a>
    (<span tal:content="context/unassigned_bugtasks/count">42</span>)
  </li>
  <li>
    <a tal:attributes="href view/getAllBugsEverReportedURL">
      All bugs ever reported
    </a>
    (<span tal:content="context/all_bugtasks/count">42</span>)
  </li>
</ul>

</div>
