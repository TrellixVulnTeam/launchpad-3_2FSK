<table
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="summary">
  <tbody>
    <tr>
      <th>Drivers:</th>
      <td>
        <tal:has_drivers condition="context/drivers">
          <tal:per_driver repeat="driver context/drivers">
            <a tal:replace=" structure driver/fmt:link">Carlos
            Perello</a><br />
          </tal:per_driver>
        </tal:has_drivers>
        <tal:none condition="not:context/drivers">None appointed</tal:none>
      </td>
    </tr>
    <tr>
      <th>Status:</th>
      <td tal:content="context/status/title" />
    </tr>
    <tr>
      <tal:define define="sourcecount context/sourcecount">
        <tal:sources condition="sourcecount">
          <th>Source packages:</th>
          <td tal:content="context/sourcecount" />
        </tal:sources>
        <tal:no_sources condition="not: sourcecount">
          <td colspan="2">
            No sources imported or published.
          </td>
        </tal:no_sources>
      </tal:define>
    </tr>
    <tr>
      <tal:define define="binarycount context/binarycount">
        <tal:binaries condition="binarycount">
          <th>Binary packages:</th>
          <td tal:content="context/binarycount" />
        </tal:binaries>
        <tal:no_binaries condition="not: binarycount">
          <td colspan=2>
            No binaries imported or published.
          </td>
        </tal:no_binaries>
      </tal:define>
    </tr>
    <tr tal:condition="context/parent_series">
      <th>Derives from:</th>
      <td>
        <a tal:attributes="href context/parent_series/fmt:url">
          <tal:distro
            replace="context/parent_series/distribution/displayname"
          />
          <tal:distroseries replace="context/parent_series/displayname" />
        </a>
      </td>
    </tr>
  </tbody>
</table>
