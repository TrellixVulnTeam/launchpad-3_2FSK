<div class="portlet" id="portlet-related">
    <h2>This group translates for</h2>

    <div class="portletBody">
        <div class="portletContent">

            <h5 tal:condition="context/distributions">Distributions:</h5>
            <ul>
                <li tal:repeat="distribution context/distributions">
                  <a href="#"
                     tal:content="distribution/displayname"
                     tal:attributes="href
                       string:/${distribution/name}">Ubuntu</a>
                </li>
            </ul>

            <h5 tal:condition="context/products">Projects:</h5>
            <ul>
                <li tal:repeat="product context/products">
                  <a href="#"
                     tal:content="product/displayname"
                     tal:attributes="href
                     string:/${product/name}">Mozilla Firefox</a>
                </li>
            </ul>

            <h5 tal:condition="context/projects">Project Groups:</h5>
            <ul>
                <li tal:repeat="project context/projects">
                  <a href="#"
                     tal:content="project/displayname"
                     tal:attributes="href
                     string:/${project/name}">Gnome</a>
                </li>
            </ul>

        </div>

    </div>
</div>
