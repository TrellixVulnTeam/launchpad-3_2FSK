<tal:tag condition="view/update"/>
<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
</metal:rightportlets>

<div metal:fill-slot="main">

  <div metal:use-macro="context/@@launchpad_editform/editform">

    <h1 tal:condition="view/label"
        tal:content="view/label"
        metal:fill-slot="heading">Form Label comes from ZCML label="xxx"</h1>

    <div metal:fill-slot="extra_info" class="documentDescription">
      The bug contact is a person or team that receives notification of ALL new
      bugs opened for this distribution, and any changes to those bug reports
      (e.g. comments, status, etc.) The bug contact can be unsubscribed from
      individual bug reports.
    </div>

  </div>

</div>
</body>
</html>
