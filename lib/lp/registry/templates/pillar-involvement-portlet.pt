<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  id="involvement" class="portlet involvement"
  tal:condition="view/has_involvement"
  tal:define="overview_menu context/menu:overview"
  >
  <h2>Get Involved</h2>

  <ul class="involvement-service-links">
    <li tal:repeat="link view/enabled_links">
      <a tal:replace="structure link/fmt:link" />
    </li>

    <tal:disabled repeat="link view/visible_disabled_links">
      <li tal:condition="not: link/enabled"
          title="This link needs to be configured."
          class="disabled">
        <div style="padding: 0.3em 0 0.3em 0.3em">
          <div style="display: inline-block"
               class="sprite icon-only warning-icon"></div>

          <div style="height: 1.2em; float: right">
            <div class="sprite warning-icon"
                style="top: 50%; bottom: 50%; margin-top: -5px;
                       position: relative;
                       height: 9px; width: 14px; padding: 0"></div>
          </div>

          <span tal:content="link/text"/>
        </div>
      </li>
    </tal:disabled>
  </ul>

  <ul style="padding-top: 1em">
    <li tal:content="structure overview_menu/configure_bugtracker/fmt:link" />
  </ul>
</div>
