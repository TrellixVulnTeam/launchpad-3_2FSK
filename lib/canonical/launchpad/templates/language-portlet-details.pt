<div class="portlet" id="portlet-details">
  <h2 tal:content="context/englishname">
    Spanish
  </h2>
  <div class="portletBody portletContent">
    <b>English name:</b>
    <tal:englishname replace="context/englishname">Spanish</tal:englishname>
    <br />
    <tal:condition condition="context/nativename">
      <b>Native name:</b>
      <tal:nativename replace="context/nativename">
        Espa&ntilde;ol
      </tal:nativename>
      <br />
    </tal:condition>
    <b>Active in Launchpad:</b>
    <tal:visible replace="context/visible">Yes</tal:visible>
    <br />
    <b>Text Direction:</b>
    <tal:direction replace="context/direction/title">
      Left to Right
    </tal:direction>
  </div>
</div>
