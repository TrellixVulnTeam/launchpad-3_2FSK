<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-details">
  <h2>Import entry details</h2>

    <div class="portletBody">
        <div class="portletContent">
            <b>Origin:</b><br />
            <a tal:condition="context/sourcepackage"
               tal:content="context/sourcepackage/title"
               tal:attributes="href string:${context/sourcepackage/fmt:url}"
               >evolution in Ubuntu Hoary</a>
            <a tal:condition="context/productseries"
               tal:content="context/productseries/title"
               tal:attributes="href string:${context/productseries/fmt:url}"
               >Evolution Series: MAIN</a><br />
            <b>Path:</b>
            <a tal:attributes="href context/content/http_url"
               tal:content="context/path">po/foo.pot</a><br />
            <b>Uploader:</b><br />
            <a tal:replace="structure context/importer/fmt:link"
               >Mark Shuttleworth</a><br />
            <b>Waiting since:</b>
            <span
              tal:attributes="title context/dateimported/fmt:datetime"
              tal:content="context/dateimported/fmt:approximatedate">
              2004-05-22
            </span><br />
            <b>Status:</b>
            <span tal:replace="context/status/title"></span><br />
            <b>Status changed:</b>
            <span
              tal:attributes="title context/date_status_changed/fmt:datetime"
              tal:content="context/date_status_changed/fmt:approximatedate">
              2004-05-21
            </span><br />
        </div>
    </div>
</div>
</tal:root>
