<tal:layout define="columns1 default">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en" metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-rosetta" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-foaf" />
  <div tal:replace="structure context/@@+portlet-malone" />
</metal:rightportlets>

<div metal:fill-slot="main">

      <div id="applications" tal:content="structure context/@@+applicationbuttons" />
      <form
        class="central"
        style="text-align: center;"
        action="/products/"
        method="get"
      >
        <label for="text">Is your project registered yet?</label>
        <input id="text" type="text" name="text" size="30" />
        <input type="submit" value="Search" />
      </form>
      <div class="bordered">
        <div class="left">
          <h2>Featured projects</h2>
          <ul>
            <li><a href="/distros/ubuntu">Ubuntu</a> (distribution)</li>
            <li><a href="/products/bzr">Bazaar</a> (product)</li>
            <li><a href="/products/gnomebaker">GnomeBaker</a> (product)</li>
          </ul>
        </div>
        <div class="right">
          <h2>More about Launchpad</h2>
          <ul>
            <li>marketing</li>
            <li>goes</li>
            <li>here</li>
          </ul>
        </div>
      </div>
    </div>
    <p metal:fill-slot="help">
      This panel provides help on individual Launchpad pages.
      Open it on any page that you don&rsquo;t understand.
    </p>
  </body>
</html>
</tal:layout>
