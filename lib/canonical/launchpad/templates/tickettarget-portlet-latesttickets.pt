<div class="portlet">

  <h4>
    Latest <span tal:replace="context/displayname">Ubuntu</span>
    support requests:
  </h4>

  <div class="portletBody portletContent">

    <ul tal:condition="view/getLatestTickets">
      <li class="spec" tal:repeat="ticket view/getLatestTickets">
           [<span tal:attributes="
                    class string:ticketstatus${ticket/status/name}"
                  tal:content="ticket/status/title" />]
        <a tal:content="ticket/title"
           tal:attributes="href ticket/fmt:url">ticket title</a>
      </li>
    </ul>
    <p tal:condition="not: view/getLatestTickets">
      <i>No tickets created.</i>
    </p>
  </div>
</div>
