<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<metal:login-or-register define-macro="login_or_register">
  <p class="error message"
    tal:repeat="form_wide_error view/form_wide_errors"
    tal:content="structure form_wide_error">
    Schema validation errors.
  </p>

  <div>
    <h2>What is your e-mail address?</h2>

    <div>
      <tal:widget replace="structure view/widgets/email" />
    </div>

  </div>

  <div>
    <h2>Do you have a Launchpad password?</h2>

    <div>
      <div>
        <tal:widget replace="structure view/login_radio_button" /><br />
        <tal:widget replace="structure view/widgets/password" />
      </div>
      <div>
        <tal:widget replace="structure view/createaccount_radio_button" />
      </div>
      <div>
        <tal:widget replace="structure view/resetpassword_radio_button" />
      </div>
    </div>

    <div>
      <tal:submit replace="structure view/continue_action/render" />
    </div>

    <input name="redirect_url" type="hidden" value=""
        tal:attributes="value request/redirect_url|nothing" />
  </div>
</metal:login-or-register>
</tal:root>
