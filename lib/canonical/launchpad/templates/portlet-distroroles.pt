<div class="portlet" tal:condition="view/is_owner"> 

    <div tal:omit-tag="" tal:condition="view/add_role"/>

    <h4>Submit a New Role</h4>

    <div class="portletBody">
      <div class="portletContent even">
        <form name="add" action="" method="POST">
 	<table>
	<tr><td>
	<div class="field">
	    <label>Person</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Select a Person Name.
            </div>
	    <select class="listing" name="person">
	      <option tal:repeat="person view/people"
	              tal:content="person/displayname"
	              tal:attributes="value person/id">DISPLAYNAME</option>
            </select>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Role</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Select a Role
            </div>
	    <select class="listing" name="role">
	      <option value="">None</option>
	      <option tal:repeat="role view/roles"
	              tal:content="role/title"
	              tal:attributes="value role/value">ROLE</option>
            </select>
	</div>
	</td></tr>
	<tr><td>
	<div class="formControls">
	  <input class="listing" type="submit" value="Submit"/>
	</div>
	</td></tr>
	</table>
        </form>
	</div>
</div>
</div>

<div class="portlet"> 
   <h4>Roles</h4>

   <div class="portletBody">
    <div class="portletContent even">

    <div tal:condition="not:view/get_roles">
         <p>No Member Yet
    </div>

    <div tal:condition="view/get_roles">	
      <p tal:repeat="team view/get_roles"> 
          <img src="/++resource++user.gif" alt=""/>
          <a class="link" 
	     tal:attributes="href string:/foaf/people/${team/person/name}"
	     tal:content="team/person/displayname">PERSON</a> as
	     <span tal:content="team/rolename">ROLE</span>
      </p>
    </div>
   </div>
  </div>
</div>


