<tal:tag condition="view/update"/>
<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <h1>Select distribution members team
    </metal:heading>

<metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

    <div metal:fill-slot="main">

      <div metal:use-macro="context/@@launchpad_editform/editform">

        <p metal:fill-slot="extra_info">
          Select the Launchpad team that defines the members of
          <span tal:replace="context/title">Ubuntu Linux</span>.
        </p>
        <tal:XXX replace="nothing">
          2006-02-20 mpt: That blurb is not useful, and should be replaced by
          an explanation of what the distribution members team is for.
        </tal:XXX>
      </div>
    </div>
  </body>
</html>
