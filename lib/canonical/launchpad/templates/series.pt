<html xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">
      <span tal:replace="context/product/displayname">Product</span>
      Release Series:
      <span tal:replace="context/displayname">$PSeries.displayname</span>
    </title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
</head>

<body>

<metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure view/actionsPortlet" />
</metal:rightportlets>


<div metal:fill-slot="main">

    <h1>Release Series Details</h1>

    <p class="documentDescription" tal:content="context/summary">
        $ProductSeries.summary goes here. This should be quite short,
        just a single paragraph of text really, giving the status of
        this series of releases.
    </p>

    <div>
        [ <a href="+review">Review Series Details</a> ]
    </div>

    <div tal:condition="context/releases">
      <h2>Releases:</h2>

      <ul>
        <span tal:repeat="release context/releases" tal:omit-tag>
        <li>
          <a tal:attributes="href release/version"
             tal:content="release/version">$ProductRelease.version</a>
        </li>
        </span>
      </ul>

    </div>

</div>

</body>
</html>
