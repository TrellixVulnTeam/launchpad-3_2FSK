<div class="portlet">
    <h4>this group translates for...</h4>

    <div class="portletBody">
        <div class="portletContent">

            <h4 tal:condition="context/distributions">distributions</h4>
            <ul>
                <li tal:repeat="distribution context/distributions">
                  <a href="#"
                     tal:content="distribution/displayname"
                     tal:attributes="href
                       string:/distros/${distribution/name}">Ubuntu</a>
                </li>
            </ul>

            <h4 style="margin-top: 1em"
                tal:condition="context/products">products</h4>
            <ul>
                <li tal:repeat="product context/products">
                  <a href="#"
                     tal:content="product/displayname"
                     tal:attributes="href
                     string:/products/${product/name}">Mozilla Firefox</a>
                </li>
            </ul>

            <h5 tal:condition="context/projects">projects:</h5>
            <ul>
                <li tal:repeat="project context/projects">
                  <a href="#"
                     tal:content="project/displayname"
                     tal:attributes="href
                     string:/projects/${project/name}">Gnome</a>
                </li>
            </ul>

        </div>

    </div>
</div>
