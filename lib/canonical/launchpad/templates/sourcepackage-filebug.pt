<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

  <div metal:fill-slot="main">

  <div metal:use-macro="context/@@launchpad_addform/addform">

        <h1 metal:fill-slot="heading">
          Report a bug about
          <tal:thing content="context/title" />
        </h1>

        <p metal:fill-slot="extra_info">
          Before reporting a bug, please ensure it hasn&#8217;t
          been <a href="+bugs">reported already</a>.
        </p>

        <div class="row" metal:fill-slot="extra_top">
            <div class="label">Distribution</div>
            <div class="field"
                 tal:content="context/distribution/displayname" />
            <div class="label">Source Package Name</div>
            <div class="field" tal:content="context/name" />
        </div>

  </div>

  </div>

</html>

