<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

  <metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
  </metal:leftportlets>


  <metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure context/@@+portlet-actions" />
    <div tal:replace="structure context/@@+portlet-calendar" />
  </metal:rightportlets>

  <div metal:fill-slot="main">

    <tal:block define="tasks_assigned view/bugTasksAssignedToPerson;
                       tasks_on_maintained_software view/bugTasksOnMaintainedSoftware">

      <h1>Latest Bugs Assigned to <span tal:replace="context/browsername" /></h1>

      <p tal:condition="not: tasks_assigned">No bugs have been
      assigned to <span tal:replace="context/browsername" /> or to any
      package/product (s)he maintains.</p>

      <tal:block tal:condition="tasks_assigned">

      <div style="margin-bottom: 1em"
           tal:define="tasks tasks_assigned;">

        <h2 style="margin-bottom: 0;">Directly assigned</h2>

      <tal:assignedbugs
          metal:use-macro="context/@@+bugtask-macros-tableview/table" />

      </div>

      <div style="margin-bottom: 1em"
           tal:condition="tasks_on_maintained_software"
           tal:define="tasks tasks_on_maintained_software">

        <h2 style="margin-bottom: 0;">Assigned to maintained packages
        and products</h2>

      <tal:assignedbugs
          metal:use-macro="context/@@+bugtask-macros-tableview/table" />

      </div>

      <tal:block tal:condition="request/lp:person">

        <tal:block tal:define="tasks view/bugTasksWithSharedInterest"
                   tal:condition="tasks">

          <h2 style="margin-bottom: 0;">Bugs relevant to you</h2>

          <tal:assignedbugs
              metal:use-macro="context/@@+bugtask-macros-tableview/table" />

          <span class="discreet">These are bugs that you and <span
          tal:replace="context/browsername" /> share interest in.</span>

        </tal:block>

      </tal:block>

    </tal:block>
    </tal:block>

  </div>

</body>
</html>
