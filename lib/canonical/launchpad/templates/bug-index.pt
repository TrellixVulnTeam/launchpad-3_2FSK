<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="rosetta">

    <title metal:fill-slot="title">Malone: Bug #<span
    tal:replace="context/id">1234</span>
    </title>

<body>

<metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure view/peoplePortlet" />
    <div tal:replace="structure view/productInfestationPortlet" />
    <div tal:replace="structure view/packageInfestationPortlet" />

</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure view/actionsPortlet" />
    <div tal:replace="structure view/cvePortlet" />
    <div tal:replace="structure view/referencePortlet" />
    <div tal:replace="structure view/watchPortlet" />
</metal:rightportlets>


  <div metal:fill-slot="main">

    <address class="bugid">
      Malone #bugnumbergoeshere
      <span tal:condition="context/name" tal:omit-tag>
        (#<a href="" tal:content="context/name">$Bug.name</a>)
      </span>
    </address>
    <address class="created">
      Reported by
      <a
        href=""
        tal:content="context/owner/browsername"
        tal:attributes="href string:/people/${context/owner/name}"
      >[someone]</a>,
      <span
        tal:replace="python:context.datecreated.strftime('%Y-%m-%d')"
        tal:omit-tag
      >[unknown date]</span>&nbsp;<span
        tal:replace="python:context.datecreated.strftime('%H:%M')"
        tal:omit-tag
      >[unknown time]</span>
    </address>
    <h2>
      Description
      <a href="+edit"><img 
        alt="[Edit]"
        src="/++resource++edit.gif"
        title="Lets you edit the summary and description."
      ></a>
    </h2>
    <div class="boardCommentContent" 
      tal:content="structure context/description/fmt:nice_pre">
      $Bug.description
    </div>

    <h2>Status</h2>
    <div tal:replace="structure view/tasksHeadline"
    />
    <p class="navigation">
      <img src="/++resource++add.gif" alt="+" />
      <a href="+upstreamtask"
        title="Mark this bug as occurring upstream"
      >Upstream Task...</a>
      <img src="/++resource++add.gif" alt="+" />
      <a href="+distrotask"
        title="Mark this bug as occurring in another package"
      >Distro Task...</a>
      <img src="/++resource++add.gif" alt="+" />
      <a href="+distroreleasetask"
        title="Mark this bug as occurring in another package for a specific distro release"
      >Distro Release Task...</a>
    </p>

    <h2>More information</h2>


    <div tal:repeat="message context/messages" tal:omit-tag>

        <div class="boardCommentDetails">
            <strong tal:content="message/title">$Bugmessage.title</strong>

            Posted by <span
            tal:replace="message/owner/displayname|string:(none)">
            $Person.displayname
            </span>
            at <span tal:replace="python:message.datecreated.strftime(
                '%d %b %y %H:%M')">Thursday 13:21</span>
        </div>

        <div class="boardCommentBody">
            <div class="boardCommentContent"
                tal:content="structure message/contents/fmt:nice_pre">
                Comment text.
            </div>
        </div>

        <fieldset class="collapsible collapsed">
            <legend>Follow up on this</legend>

            <div class="field">
                <form action="+messages/+new" method="post">
                    <label>Comment</label>
                    <b>Subject:</b>
                    <input name="field.title"
                           type="text" size="50"
                           value=""
                           tal:attributes="value message/followup_title" /><br />
                    <b>Comment:</b>
                    <textarea name="field.contents" rows="10"></textarea>
                    <p>
                      Please only add information that will help resolve the bug.
                    </p>
                    <input type="submit" name="UPDATE_SUBMIT" value="Add" />
                </form>
            </div>
        </fieldset>
        <div class="visualClear"></div>

      </div>
    <h2>Add more information</h2>
        <fieldset class="collapsible collapsed">
            <legend>Add information to this bug report</legend>

            <div class="field">
                <form action="+messages/+new" method="post">
                    <b>Subject:</b>
                    <input name="field.title" type="text" size="50" 
                        tal:attributes="value context/followup_title" /><br />
                    <b>Information:</b>
                    <textarea name="field.contents" rows="10"></textarea>
                    <p>
                      Please only add information that will help resolve the bug.
                    </p>
                    <input type="submit" name="UPDATE_SUBMIT" value="Add" />
                </form>
            </div>

        </fieldset>

  </div>
</body>
</html>
