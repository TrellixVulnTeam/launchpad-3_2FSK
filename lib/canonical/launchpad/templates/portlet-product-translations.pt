<div class="portlet"
     tal:define="translatable context/primary_translatable"
     tal:condition="translatable">

    <h4>Translation Sets:</h4>

    <div class="portletBody">

        <div class="portletContent even">

        <table class="rowNavigation" border="0">

            <tr tal:repeat="template translatable/potemplates"

                tal:attributes="onclick
                string:window.location='/products/${context/name}/${translatable/version}/+pot/${template/name}';">
                <td tal:content="template/title">template title</td>
            </tr>

        </table>

        <a tal:attributes="href string:/rosetta/products/${context/name}"
            style="font-size: 85%; float: right; display: inline; clear: both; text-decoration: none;"
            title="See more translation options for this product">
            <img src="/++resource++add.gif" alt="+" />
            More...
        </a><br />

        </div>
                
    </div>
</div>
