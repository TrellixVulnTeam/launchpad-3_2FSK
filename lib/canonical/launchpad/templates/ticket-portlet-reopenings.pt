<div class="portlet">
  <h4>This request was reopened:</h4>

  <div class="portletBody portletContent">

    <ul>
      <li class="ticket" tal:repeat="reop context/reopenings">
        <span tal:replace="reop/datecreated/fmt:date">2005-10-05</span> by
        <img alt="" src="/@@/user" />
        <a tal:attributes="href reop/reopener/fmt:url"
           tal:content="reop/reopener/browsername">Foo Bar</a>
      </li>
    </ul>
    <p tal:condition="not: context/reopenings">
      <i>Never re-opened.</i>
    </p>
  </div>
</div>
