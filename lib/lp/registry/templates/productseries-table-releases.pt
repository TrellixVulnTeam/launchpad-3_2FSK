<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<table class="listing"
  tal:condition="context/milestones"
  tal:attributes="id string:series_${context/name}">
  <thead>
    <tr>
      <th>Version "Codename"</th>
      <th>Expected</th>
      <th>Released</th>
      <th>Summary</th>
    </tr>
  </thead>
  <tbody>
    <tal:row repeat="milestone context/all_milestones">
      <tal:milestone replace="structure milestone/@@+productseries-table-row" />
    </tal:row>
  </tbody>
</table>
</tal:root>
