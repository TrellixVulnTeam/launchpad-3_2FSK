<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  metal:use-macro="view/macro:page/main_side"
  i18n:domain="launchpad"
>
  <body>

<metal:portlets fill-slot="side">
  <tal:menu replace="structure context/@@+global-actions" />
  <tal:lifecycle replace="structure context/@@+portlet-related-questions" />
</metal:portlets>

<div metal:fill-slot="main">

    <div id="faq-details">
        Created by:
        <span tal:content="structure context/owner/fmt:link" /> on
        <tal:creationdate
            attributes="title context/date_created/fmt:datetime"
            content="context/date_created/fmt:datetime" />
        <tal:last_updated_by condition="context/last_updated_by">
          - Last updated by:
          <span tal:content="structure context/last_updated_by/fmt:link" /> on
          <tal:updateddate
              attributes="title context/date_last_updated/fmt:datetime"
              content="context/date_last_updated/fmt:datetime" />
        </tal:last_updated_by>
    </div>

    <div id="faq-keywords"><b>Keywords: </b>
        <tal:keywords content="context/keywords">keywords</tal:keywords>
    </div>

    <div id="faq-content"
         tal:condition="context/content"
         tal:content="structure context/content/fmt:text-to-html">Content</div>
</div>

</body>
</html>

