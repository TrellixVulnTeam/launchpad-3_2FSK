<div class="portlet">

    <h4>Project Bug Trackers:</h4>

    <div class="portletBody">
        <div class="portletContent even">

        <table class="rowNavigation" border="0" width="100%">
            <tr tal:repeat="tracker context/bugtrackers"
                tal:attributes="onclick
                string:window.location='/malone/bugtrackers/${tracker/name}';">
                <td><b>
                    <span tal:replace="tracker/name">bugtracker-name</span></b>:
                    <br />
                    <span tal:replace="tracker/title">tracker title</span>
                </td>
            </tr>
        </table>

        <ul><li class="add">
        <a href="+newbugtracker"
            title="Add a project bugtracker">
            Add a bug tracker...
        </a>
        </li></ul>

        </div>
                
    </div>
</div>
