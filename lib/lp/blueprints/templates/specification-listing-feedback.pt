<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<table width="100%">
  <tr>
    <td width="10px">
      <img src="/@@/blueprint" />
    </td>
    <td width="80%">
      <a tal:attributes="
           href context/fmt:url;
           title context/name"
         tal:content="context/title">Spec Title Here</a>
      <img src="/@@/info" alt="Informational"
           title="Informational specification"
           tal:condition="context/informational" />
      [<span tal:content="context/priority/title"
             tal:attributes="
               class string:specpriority${context/priority/name}">High</span>]
    </td>
    <td class="lesser">
      <tal:block condition="context/specurl">
        <img src="/@@/link" />
        <a tal:attributes="href context/specurl">Spec</a>
      </tal:block>
    </td>
  </tr>
  <tr class="lesser">
    <td>&nbsp;</td>
    <td colspan="2" class="discreet">
      <span tal:replace="context/summary/fmt:shorten/500">summary</span>.
    </td>
  </tr>
  <tr class="lesser" tal:repeat="fbreq view/feedbackrequests">
    <td>&nbsp;</td>
    <td colspan="2">
      <a tal:replace="structure fbreq/requester/fmt:link">Foo Bar</a>
      wants your feedback:<br />
      <span tal:replace="fbreq/queuemsg">
        Feedback queue message
      </span>
    </td>
  </tr>
</table>
</tal:root>
