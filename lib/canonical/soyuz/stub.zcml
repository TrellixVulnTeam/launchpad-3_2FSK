<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    >

  <!-- Content directives.  We need to make sure SubURLs and other kinds of
       traversal work properly.  We also need to make security declarations.
    -->
  <content class="canonical.soyuz.stub.Packages">
    <allow interface="canonical.soyuz.interfaces.IPackages"/>
  </content>

  <content class="canonical.soyuz.stub.BinaryPackages">
    <allow interface="canonical.soyuz.interfaces.IBinaryPackageSet"/>
    <!-- implementing IItemContainer allows automatic traversal by name
         and __getitem__.
      -->
    <implements interface="zope.app.container.interfaces.IItemContainer"/>
  </content>

  <content class="canonical.soyuz.stub.BinaryPackage">
    <allow interface="canonical.soyuz.interfaces.IBinaryPackage"/>
  </content>
  
  <content class="canonical.soyuz.stub.Projects">
    <allow interface="canonical.soyuz.interfaces.IProjects"/>
  </content>
  
  <content class="canonical.soyuz.stub.Project">
    <allow interface="canonical.soyuz.interfaces.IProject"/>
  </content>

  <content class="canonical.soyuz.stub.Product">
    <allow interface="canonical.soyuz.interfaces.IProduct"/>
  </content>
  <content class="canonical.soyuz.stub.Sync">
    <allow interface="canonical.soyuz.interfaces.ISync"/>
  </content>

  <!-- This is the collection of packages.  For now, stubbed out.
       Later on, this will query the database.
       So, we can register a utility for IPackages that is a stub
       implementation, or that is a SQLObject implementation.

       IPackages provides an interface to query, iterate over, and modify
       packages.
    -->
  <utility
      factory="canonical.soyuz.stub.Packages"
      provides="canonical.soyuz.interfaces.IPackages"
      />

  <utility
      factory="canonical.soyuz.stub.BinaryPackages"
      provides="canonical.soyuz.interfaces.IBinaryPackageSet"
      />
  <utility
      factory="canonical.soyuz.stub.Projects"
      provides="canonical.soyuz.interfaces.IProjects"
      />
      <!--
  <utility
      factory="canonical.soyuz.stub.Project"
      provides="canonical.soyuz.interfaces.IProject"
      />
      -->

</configure>

