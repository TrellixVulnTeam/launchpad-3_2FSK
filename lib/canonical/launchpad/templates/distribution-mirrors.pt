<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template_2col/master"
      i18n:domain="launchpad"
>
<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
</metal:rightportlets>

<metal:heading fill-slot="pageheading">
  <h3 tal:content="context/title">Ubuntu Linux</h3>
  <h1 tal:content="view/heading">Archive Mirrors</h1>
</metal:heading>

<div metal:fill-slot="main">

  <tal:block define="mirrors_by_country view/getMirrorsGroupedByCountry">

  <div tal:condition="not: mirrors_by_country">
    This distribution has no 
    <span tal:replace="view/heading">Archive Mirrors</span>.
  </div>

  <div tal:condition="mirrors_by_country">
    <metal:mirror-list
      use-macro="context/@@+distributionmirror-macros/mirrors-table" />
  </div>

  </tal:block>

</div>

</body>
</html>
