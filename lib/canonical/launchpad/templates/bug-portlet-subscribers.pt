<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-subscribers">
  <h2>Subscribers</h2>
  <div class="portletBody"
       tal:define="from_dupes_subscribers context/getSubscribersFromDuplicates;
                   also_notified_subscribers context/getAlsoNotifiedSubscribers">

    <ul class="person">
      <li tal:repeat="subscriber context/getDirectSubscribers">
        <a href="#"
           tal:content="subscriber/browsername"
           tal:attributes="href subscriber/fmt:url">Dafydd Harries</a>
      </li>
      <li class="info" tal:condition="not: context/getDirectSubscribers">
        <i>No subscribers</i>
      </li>
    </ul>

    <div tal:condition="from_dupes_subscribers">
      <br />
      <b>From duplicates:</b><br />
      <ul class="person">
        <li tal:repeat="subscriber from_dupes_subscribers">
          <a href="#"
             tal:content="subscriber/browsername"
             tal:attributes="href subscriber/fmt:url">Dafydd Harries</a>
        </li>
      </ul>
    </div>

    <div tal:condition="also_notified_subscribers">

      <br />
      <b>Also notified:</b><br />
      <ul class="person">
        <li tal:repeat="subscriber also_notified_subscribers">
          <a href="#"
             tal:content="subscriber/browsername"
             tal:attributes="href subscriber/fmt:url">Dafydd Harries</a>
        </li>
      </ul>

    </div>
  </div>
</div>
