<html xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">
<body>

<div metal:fill-slot="main">

    <h1>Download translations</h1>

    <tal:thing content="view/processForm" />

    <tal:block condition="view/errorMessage">
        <p class="portalMessage" tal:content="view/errorMessage">
        Blah blah.
        </p>
    </tal:block>

    <tal:block condition="view/formProcessed">
        <p>
        Your download request has been received.
        The results should arrive by email shortly.
        </p>
    </tal:block>

    <tal:block condition="not: view/formProcessed">

        <h2>Select files to download</h2>

        <form action="" method="POST">

            <div class="field">
                <label>
                    <input name="what" type="radio" value="all"
                        checked="checked">
                    Everything
                </label>
            </div>

            <div class="field">
                <label>
                    <input name="what" type="radio" value="some" />
                    Selected files:
                </label>

                <div class="listbox" style="margin-left: 1.5em;">
                    <div>
                        <label>
                            <input type="checkbox" name="potemplate" />
                            The PO template
                        </label>
                    </div>
                    <tal:thing repeat="pofile view/pofiles">
                        <div>
                            <label>
                                <input type="checkbox"
                                    tal:attributes="name pofile/value" />
                                <span tal:content="pofile/browsername">Spanish</span>
                            </label>
                        </div>
                    </tal:thing>
                </div>
            </div>

            <div class="field" style="clear: left">
                <label>
                Format:
                    <select name="format">
                        <option
                            tal:repeat="format view/formats"
                            tal:content="format/title"
                            tal:attributes="value format/value">PO format</option>
                    </select>
                </label>
            </div>

          <p>
            When the files you have selected are ready,
            a message will be sent to
            <code tal:content="view/user/preferredemail/email">user@domain</code>
            containing a link to download them.
          </p>


            <div class="formControls">
                <input type="submit" value="Request Download" />
            </div>

        </form>

    </tal:block>

</div>

</body>
</html>
