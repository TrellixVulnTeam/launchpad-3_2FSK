<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<div metal:fill-slot="main">

  <h1>Distributions overview: (<span tal:content="context/entries"/>
   Distributions)</h1>

  <div class="documentDescription">
  <p> This page shows all Distributions Hosted by Soyuz Application 
  </div>

  <table class="listing">
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>
    <tr tal:repeat="distribution context/distributions">
      <td>
        <a tal:content="distribution/title" 
	   tal:attributes="href distribution/name">
	  distribution name
	</a>
      </td>
      <td tal:content="distribution/description">
        description
      </td>
    </tr>
  </table>    

<fieldset>
<div>
<a href="+add">Add New Distribution</a>
</div>
</fieldset>

</div>

</body>
</html>
