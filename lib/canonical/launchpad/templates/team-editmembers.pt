<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
  <title metal:fill-slot="title">Members of
    <span tal:replace="context/displayname">Name</span></title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(launchpad.css);</style>
</head>

<body>

<div metal:fill-slot="main">

  <div id="content" class="documentEditable">

    <div class="documentContent" id="region-content">

      <h1 tal:content="context/displayname">Name</h1>

      <form name="edit" action="" method="post">
      <fieldset tal:define="members context/proposedmembers" 
                tal:condition="members">
        <legend>Members awaiting authorization</legend>
        <table>
          <tr tal:repeat="member members">
            <td><input type="checkbox" tal:attributes="name member/id" /></td>
            <td><span tal:content="member/browsername" /></td>
          </tr>
        </table>

        <div style="float: right">
        <table>
          <tr><td>
            <select name="action">
              <option value="authorize">Authorize</option>
              <option value="notauthorize">Do not authorize</option>
            </select>
          </td>
          <td>
            <input type="submit" value="Submit">
          </td></tr>
        </table>
        </div>
      </fieldset>

      <fieldset tal:define="members context/administrators" 
                tal:condition="members">
      <legend>Administrators of this team</legend>
        <table>
          <tr tal:repeat="member members">
            <td><input type="checkbox" tal:attributes="name member/id" /></td>
            <td><span tal:content="member/browsername" /></td>
          </tr>
        </table>

        <div style="float: right">
        <table>
          <tr><td>
            <select name="action">
              <option value="revokeadmin">Revoke admin role</option>
              <option value="remove">Remove from team</option>
            </select>
          </td>
          <td>
            <input type="submit" value="Submit">
          </td></tr>
        </table>
        </div>
      </fieldset>

      <fieldset tal:define="members context/members" 
                tal:condition="members">
      <legend>Members of this team</legend>
        <table>
          <tr tal:repeat="member members">
            <td><input type="checkbox" tal:attributes="name member/id" /></td>
            <td><span tal:content="member/browsername" /></td>
          </tr>
        </table>

        <div style="float: right">
        <table>
          <tr><td>
            <select name="action">
              <option value="giveadmin">Give admin role</option>
              <option value="remove">Remove from team</option>
            </select>
          </td>
          <td>
            <input type="submit" value="Submit">
          </td></tr>
        </table>
        </div>
      </fieldset>

    </div>
  </div>
</div>


</body>
</html>
