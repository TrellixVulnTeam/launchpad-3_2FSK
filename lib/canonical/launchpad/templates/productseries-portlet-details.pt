<div class="portlet">
  <h4 tal:content="context/title">Product series details</h4>

  <div class="portletBody portletContent">
    <b>Product:</b>
    <a tal:attributes="href context/product/fmt:url"
       tal:content="context/product/displayname">product</a><br />

    <b>Series:</b>
    <span tal:replace="context/name">name</span><br />

    <b>Registrant:</b><br />
    <img alt="" src="/@@/user" />
    <a tal:attributes="href context/owner/fmt:url"
       tal:content="context/owner/browsername">owner name</a><br />

    <b>Drivers:</b><br />
    <tal:per_driver repeat="driver context/drivers">
      <img alt="" src="/@@/user" />
      <a tal:content="driver/browsername"
         tal:attributes="href driver/fmt:url">Carlos Perello</a>
      <br />
    </tal:per_driver>

    <tal:block define="branch context/branch" condition="branch">
    <b>Bazaar Branch:</b><br />
    <img alt="" src="/@@/branch" />
    <a tal:attributes="href branch/fmt:url" tal:content="branch/name">
      branch name
    </a>:
    <span tal:condition="branch/author" tal:replace="branch/author/name">
      branch author
    </span>
    <span tal:condition="not:branch/author" tal:replace="branch/owner/name">
      branch registrant
    </span>
    </tal:block>
  </div>
</div>
