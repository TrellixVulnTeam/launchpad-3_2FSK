<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">
<input size="19" type="text"
   tal:attributes="name view/name; id view/name; value view/formvalue;
                   disabled view/disabled_flag;" />
<a href="javascript:void(0)"
   tal:attributes="
     onclick string:pickDateTime('${view/name}', ${view/daterange});"
   ><span class="PopcalTrigger"
    ><img name="popcal" align="absmiddle" src="/+popcalxp/calbtn.gif"
         width="34" height="22" border="0" alt="(choose)" /></span></a>
<tal:display_zone condition="view/display_zone">
  in time zone: <tal:tz replace="view/timezone_name" />
  <tal:can_change condition="not: view/required_timezone">
    [ <a tal:condition="request/lp:person"
         tal:attributes="href string:${request/lp:person/fmt:url}/+edit"
         >change time zone</a><a
         tal:condition="not: request/lp:person"
         href="/people/+me/+edit">login to set time zone</a> ]
  </tal:can_change>
</tal:display_zone>
</tal:root>
