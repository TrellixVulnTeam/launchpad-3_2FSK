<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en" lang="en"
  metal:use-macro="context/@@main_template/master"
  i18n:domain="malone"
>
  <body>
    <div metal:fill-slot="main" class="tab-bugs">
      <h1>Bugs in Ubuntu</h1>
      <p class="demo">Search form missing here</p>
      <xmetal:search
        use-macro="context/@@+bugtarget-macros-search/simple-search-form"
      />
      <div class="columns">
        <div class="two column left">
          <img alt="" src="/@@/nyet-mugshot" title="pie chart here" />
        </div>
        <div class="two column right">
          <h2>Key contacts</h2>
          <table class="summary" style="width: 100%;">
            <tbody>
              <tr>
                <th>Driver:</th>
                <td>
                  <tal:none condition="not:context/driver">None set</tal:none>
                  <a
                    tal:condition="context/driver"
                    tal:attributes="href context/driver/fmt:url"
                    tal:content="context/driver/displayname"
                  >John Smith</a>
                </td>
              </tr>
              <tr>
                <th>Bug contact:</th>
                <td>
                  <tal:none condition="not:context/bugcontact"
                  >None set</tal:none>
                  <a
                    tal:condition="context/bugcontact"
                    tal:attributes="href context/bugcontact/fmt:url"
                    tal:content="context/bugcontact/displayname"
                  >Bob Johnson</a>
                </td>
              </tr>
              <tr>
                <th>Security contact:</th>
                <td>
                  <tal:none condition="not:context/security_contact"
                  >None set</tal:none>
                  <a
                    tal:condition="context/security_contact"
                    tal:attributes="href context/security_contact/fmt:url"
                    tal:content="context/security_contact/displayname"
                  >Billy Anderson</a>
                </td>
              </tr>
            </tbody>
          </table>
          <ul class="cross-reference">
            <li>
              <a href="">
                <strong tal:content="nothing"></strong>
                bugs fixed elsewhere
              </a>
            </li>
            <li>
              <a href="">
                <strong tal:content="nothing"></strong>
                open CVE bugs
              </a>
            </li>
          </ul>
          <ul class="buttons">
            <li class="report-bug">
              <a href="+filebug">Report a bug</a>
            </li>
            <li class="request-support">
              <a href="+addticket">Request support</a>
            </li>
          </ul>
        </div><!-- two column right -->
      </div><!-- columns -->
      <div class="clear"></div>
      <tal:latest-bugs replace="structure context/@@+portlet-latestbugs" />
      <xtal:touched-bugs replace="structure context/@@+portlet-touched-bugs" />
    </div><!-- main -->
  </body>
</html>
<!-- 1-0 in-progress Needs search form, pie chart, "Recently reported", "Recently touched". -->
