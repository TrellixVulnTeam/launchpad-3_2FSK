<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<div metal:fill-slot="main">
    <div metal:use-macro="context/@@launchpad_generalform/generalform">
        <div metal:fill-slot="extra_info">
            Please set the title to something relevant for a bug report. 
            Review and change the bug description appropriately.
        </div>

        <div class="actions" metal:fill-slot="buttons">
            <input type="submit"
                    name="cancel"
                    value="Cancel" />
            <input type="submit"
                    name="create"
                    value="Create Bug Report" />
        </div>
    </div>
</div>

</body>
</html>
