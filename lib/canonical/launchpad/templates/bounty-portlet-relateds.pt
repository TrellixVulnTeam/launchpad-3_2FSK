<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  tal:condition="python: context.distributions or context.products or context.projects" class="portlet" id="portlet-related">

    <h2 tal:condition="context/distributions">Related distributions</h2>

    <div tal:condition="context/distributions"
         class="portletBody portletContent">

      <ul>
        <li class="products" tal:repeat="distribution context/distributions">
          <a href="#"
             tal:content="distribution/displayname"
             tal:attributes="href
               string:/${distribution/name}">Ubuntu</a>
        </li>
      </ul>

    </div>

    <h2 tal:condition="context/products">Related projects</h2>

    <div tal:condition="context/products"
         class="portletBody portletContent">

      <ul>
        <li class="products" tal:repeat="product context/products">
          <a href="#"
             tal:content="product/displayname"
             tal:attributes="href
             string:/${product/name}">Mozilla Firefox</a>
        </li>
      </ul>

    </div>

    <h2 tal:condition="context/projects">Related projects</h2>

    <div tal:condition="context/projects"
         class="portletBody portletContent">

      <ul>
        <li class="products" tal:repeat="project context/projects">
          <a href="#"
             tal:content="project/displayname"
             tal:attributes="href
             string:/${project/name}">Gnome</a>
        </li>
      </ul>

    </div>

</div>
