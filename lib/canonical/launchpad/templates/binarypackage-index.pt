<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
  <!-- Plone style sheet -->
  <style type="text/css" media="screen">@import url(plone.css);</style>
  <!-- Soyuz style sheet -->
  <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

  <div metal:fill-slot="main" id="content" class="documentEditable">
    <div class="documentContent" id="region-content">
      <h1>
        <span tal:content="context/shortdesc">
          TITLE</span>
      </h1>

      <h4>Binary Package Information</h4>
      <p tal:content="context/description" />
      <ul>
            
	<li><b>Package Version:</b> <span tal:replace="context/version" />

	<li><b>Package Status:</b> <span tal:replace="context/status" />

        <li><b>Component:</b>
           <span tal:content="context/component/name">
           Component</span>
	</li>

        <li><b>Priority:</b>
           <span tal:content="context/pkgpriority">
           PRIORITY</span>
	</li>

      </ul>
<!-- xxxxxxxxxxxxxxxxxxxx -->
<fieldset>
  <table width="100%">

    <tr>

      <td width="50%" valign="top">
        <div align="center">
	  <h4>Package Dependences</h4>
	</div>
	  <ul>
	    <i tal:condition="not:view/depends"> 
	      Not Available
	    </i>
	    <span tal:repeat="bindepends view/depends">
	      <li>
	        <a tal:content="bindepends/name"
		tal:attributes="href string:../../../${bindepends/name}"/> 
		<tal:dummy condition="bindepends/signal">
		  ( <span tal:content="bindepends/signal" /> 
		  <span tal:content="bindepends/version" />)
		</tal:dummy> 
	      </li> 
	    </span> 
	  </ul> 
      </td>

      <td width="50%" valign="top">
        <div align="center">
          <h4>Package Recommends</h4>
	</div>
	  <ul>
	    <i tal:condition="not:view/recommends">
	      Not Available
	    </i>
	    <span tal:repeat="binrecommends view/recommends">
	      <li>
	        <a tal:content="binrecommends/name"
		tal:attributes="href string:../../../${binrecommends/name}"/>
		<tal:dummy condition="binrecommends/signal">
		  ( <span tal:content="binrecommends/signal" />
		  <span tal:content="binrecommends/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>

    </tr>


    <tr>

      <td width="50%" valign="top">
        <div align="center">
          <h4>Package Conflicts</h4>
	</div>
	  <ul>
	    <i tal:condition="not:view/conflicts">
	      Not Available
	    </i>
	    <span tal:repeat="binconflicts view/conflicts">
	      <li>
	        <a tal:content="binconflicts/name"
		tal:attributes="href string:../../../${binconflicts/name}"/>
		<tal:dummy condition="binconflicts/signal">
		  ( <span tal:content="binconflicts/signal" />
		  <span tal:content="binconflicts/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>

      <td width="50%" valign="top">
        <div align="center">
          <h4>Package Replaces</h4>
	</div>
	  <ul>
	    <i tal:condition="not:view/replaces">
	      Not Available
	    </i>
	    <span tal:repeat="binreplaces view/replaces">
	      <li>
	        <a tal:content="binreplaces/name"
		tal:attributes="href string:../../../${binreplaces/name}"/>
		<tal:dummy condition="binreplaces/signal">
		  ( <span tal:content="binreplaces/signal" />
		  <span tal:content="binreplaces/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>

    </tr>

    <tr>

      <td width="50%" valign="top">
        <div align="center">
          <h4>Package Suggests</h4>
	</div>
	  <ul>
	    <i tal:condition="not:view/suggests">
	      Not Available
	    </i>
	    <span tal:repeat="binsuggests view/suggests">
	      <li>
	        <a tal:content="binsuggests/name"
		tal:attributes="href string:../../../${binsuggests/name}"/>
		<tal:dummy condition="binsuggests/signal">
		  ( <span tal:content="binsuggests/signal" />
		  <span tal:content="binsuggests/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>

      <td width="50%" valign="top">
        <div align="center">
	   <h4>Package Provides</h4>
	</div>
	  <ul>
	    <i tal:condition="not:view/provides">
	      Not Available
	    </i>
	    <span tal:repeat="binprovides view/provides">
	     <li>
	      <span tal:content="binprovides/name" />
		<tal:dummy condition="binprovides/signal">
		  ( <span tal:content="binprovides/signal" />
		  <span tal:content="binprovides/version" /> )
		</tal:dummy>
	      </li>
	    </span>
	  </ul>
      </td>

    </tr>

   </table>
</fieldset>
<!-- xxxxxxxxxxxxxxxxxxxx -->

      <!-- XXX: Daniel Debonzi. Should it be a portlet? --> 
      <fieldset tal:define="lastversions context/lastversions">
   	<legend>
	   Last Packages
        </legend>
	  <ul tal:condition="lastversions">
	    <li tal:repeat="lastversion lastversions">
	      <a tal:content="lastversion/version" tal:attributes="href
	                      lastversion/version">0.0.0-0</a>
	    </li>
	  </ul>
	  <i tal:condition="not:context/lastversions">
	    No last versions for this package.
	  </i>
      </fieldset>

    </div>
  </div>

</body>
</html>
 
