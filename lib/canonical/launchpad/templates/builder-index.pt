<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<metal:block fill-slot="head_epilogue">
    <meta http-equiv="refresh" content="300">
</metal:block>

<metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

  <div metal:fill-slot="main" tal:define="job context/currentjob">

      <h2>Current status</h2>

      <tal:job condition="job">
        <table class="listing">
          <tbody>
            <tr>
              <td class="left icon"><img alt="" src="/@@/progress" /></td>
              <td>
                <a tal:attributes="href job/build/fmt:url">
                  <span tal:replace="job/build/title">NAME</span>
                </a>
              </td>
            </tr>
            <tr class="secondary">
              <td></td>
              <td>
                Requested
                <tal:requested
                  content="job/build/datecreated/fmt:datetime"
                />
              </td>
            </tr>
            <tr class="secondary">
              <td></td>
              <td>
                Started
                <tal:built content="job/buildstart/fmt:datetime" />
              </td>
            </tr>
          </tbody>
        </table>
        <tal:logtail
          condition="job/logtail"
          content="structure job/logtail/fmt:text-to-html"
        >Things are crashing and burning all over the place.</tal:logtail>
      </tal:job>
      <p tal:condition="not: job">
        <tal:builder content="context/title" /> is idle.
      </p>

      <h2>Recent builds</h2>

      <div tal:replace="structure context/@@+builds-list"/>

      <p class="discreet">Last updated <span tal:replace="view/now"/></p>

    </div>
  </body>
</html>
