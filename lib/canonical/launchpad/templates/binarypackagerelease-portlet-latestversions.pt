<div class="portlet">
  <h2>Latest versions</h2>
  <div
    class="portletBody portletContent"
    tal:define="lastversions context/lastversions"
  >
    <ul tal:condition="lastversions">
      <li tal:repeat="spackage lastversions">
        <a tal:content="string:${spackage/name}-${spackage/version}"
        tal:attributes="href spackage/version" />
      </li>
    </ul>
    <p tal:condition="not:lastversions">
      <i>No latest versions.</i>
    </p>
  </div>
</div>
