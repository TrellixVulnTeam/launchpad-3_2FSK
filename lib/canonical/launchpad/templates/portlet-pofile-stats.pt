<div class="portlet">

    <h4>Statistics:</h4>

    <div class="portletBody">

        <div class="portletContent even">

            <b>Messages:</b>
            <span tal:replace="context/potemplate/count:len">N</span>
            <br/>
            <b>Progress:</b>
            <span tal:replace="view/completeness">N%</span>
            <br />
            <b>Todo:</b>
            <span tal:replace="view/untranslated">N</span>
            <tal:block condition="context/lasttranslator">
                <b>Latest contributor:</b>
                <br />
                <img src="/++resource++user.gif" />
                <span tal:replace="context/lasttranslator/browsername" />
                <br />
            </tal:block>

        </div>

    </div>

</div>
