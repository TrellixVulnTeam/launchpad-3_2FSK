<div class="portlet">
    <h6 title="Bug watches keep track of this bug in external bug trackers.">
    Bug Watches
    </h6>
    
    <div class="portletBody">
        <div class="portletContent odd"
             tal:repeat="watch context/watches">
            
            <a tal:attributes="href string:watches/${watch/id}/+edit">
                #<span tal:replace="watch/remotebug" />,
                 <span tal:replace="watch/bugtracker/title" />
                <div class="portletDetails"
                     tal:content="watch/remotestatus" />
            </a>

        </div>
        
        <div class="portletContent even">
            <form action="watches/+new" method="post">
                <input type="submit" value="Add Watch" />
            </form>
        </div> 
    </div>
</div>
