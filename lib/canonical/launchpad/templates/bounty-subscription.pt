<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

<body>

<div metal:fill-slot="main">

    <h1>Subscribe to <span tal:replace="context/title">$Bounty.title</span></h1>

    <div class="documentDescription">
        You can subscribe to this bounty.
    </div>

    <fieldset>

        <legend>Subscription Details</legend>

        <form action="." method="post">

        <div class="field">

            <label>Subscription</label>

            <span class="fieldRequired" title="Required">(Required)</span>

              <div class="formHelp">
                Choose "Watch" to have this bounty
                show on your personal bounty lists, "CC" to be emailed whenever
                the bounty status changes, or "None" to remove any
                subscription you have to this bounty.
              </div>

            <span tal:replace="structure view/subselector">
              Selector
            </span>

        </div>
        
        <div class="formControls">

            <input class="context" type="submit"
                   name="Subscribe"
                   value="Set Subscription" />

        </div>

        </form>

    </fieldset>

</div>

</body>
</html>
