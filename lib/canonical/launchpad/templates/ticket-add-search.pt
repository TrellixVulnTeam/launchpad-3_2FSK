<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  lang="en"
  metal:use-macro="context/@@main_template/master"
  i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-latesttickets" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:rightportlets>

<metal:main fill-slot="main">
  <metal:form use-macro="context/@@launchpad_form/form">

    <p metal:fill-slot="extra_info">
      Please enter a short description (at least 4 words) that describes your
      problem. We will use it to look for similar support requests that
      might already exists.
    </p>

    <div class="actions" metal:fill-slot="buttons">
      <input tal:replace="structure view/continue_action/render" />
    </div>

  </metal:form>
</metal:main>

</body>
</html>

