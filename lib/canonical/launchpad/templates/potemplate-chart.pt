<table class="sortable listing" id="language-chart" width="100%">
  <thead>
    <tr>
      <th>Language</th>
      <th class="amount">Todo</th>
      <th>Status</th>
      <th>Last Edited</th>
      <th>By</th>
    </tr>
  </thead>

  <tbody>
    <tr tal:repeat="pfview view/pofiles"
        tal:attributes="onclick string:window.location='${pfview/context/fmt:url}/+translate'"
        >
      <tal:block define="pf pfview/context">
        <td>
          <a tal:attributes="href string:${pf/fmt:url}/+translate"
             tal:content="pfview/context/language/englishname/fmt:shorten/25">
             Language Name
          </a>
        </td>
        <td class="amount" tal:content="pf/untranslatedCount">0</td>
        <td>
          <div tal:replace="structure pf/@@+barchart" />
        </td>
        <td>
          <span tal:condition="pf/latestsubmission"
                tal:replace="pf/latestsubmission/datecreated/fmt:date" />
          <tal:block condition="not: pf/latestsubmission">
              &mdash;
          </tal:block>
        </td>
        <td>
        <span
           tal:condition="pf/latestsubmission"
           tal:replace="pf/latestsubmission/person/browsername/fmt:shorten/25" />
          <tal:block condition="not: pf/latestsubmission">
              &mdash;
          </tal:block>
        </td>
      </tal:block>
    </tr>
  </tbody>
</table>

