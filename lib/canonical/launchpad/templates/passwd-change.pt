<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Rosetta style sheet -->
    <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>


<div metal:fill-slot="main">

<tal:block tal:define="result view/getResult">

<div class="portalMessage" tal:condition="view/error"> 
   Sorry, there has been a problem in resetting your password. 
   Please try again, using the Forgotten password 
   <a href=".."> form </a>
</div>
<tal:block tal:condition="not:view/success">
<div class="portalMessage" tal:condition="result" tal:content="result"> MESSAGE </div>
</tal:block>
<br>
<h2> Reset password</h2>
<br>
<div tal:condition="view/success" tal:content="result"> MESSAGE </div>

<fieldset tal:condition="not:view/success">
  <legend>
    Account details
  </legend>
  <form name="chpasswd" method="POST">
    <label for="__ac_email">Email address</label>
    <br>
    <div class="formHelp">Enter the email address you used to request a new password.</div>
    <input type="text" size="50" name="email" tal:attributes="value request/email|nothing" />
    <br>

    <label for="__ac_email">Password</label>
    <br>
    <div class="formHelp"> Type your new password </div>
    <input type="password" size="30" name="password" tal:attributes="value request/password|nothing" />
    <br>

    <label for="__ac_email">Confirm password</label>
    <br>
    <div class="formHelp"> Re-type your new password </div>
    <input type="password" size="30" name="repassword" tal:attributes="value request/repassword|nothing" />
    <input type="hidden" name="code" tal:attributes="value context/code" />
    <div class="formControls">
      <input class="context" tabindex="4" type="submit" value="Submit"/>
      <input class="context" tabindex="4" type="reset" value="Cancel"/>
    </div>
  </form>

</fieldset>

</tal:block>
</div>



</body>
</html>
