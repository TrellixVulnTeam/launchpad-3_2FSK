<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<img src="/@@/product" />
<a tal:attributes="href context/fmt:url"
   tal:content="context/title">Project Title Here</a>
(<a tal:attributes="href string:${context/fmt:url}/+review-license"
  >Review license</a>)
<table style="margin-left: 17px;">
  <tr><th width="1">Active:</th><td tal:content="context/active"/>
  <tr><th>Licenses:</th>
    <td>
    <tal:loop repeat="license context/licenses">
      <span tal:replace="license/title"/><br/>
    </tal:loop>
    </td>
  </tr>
  <tr>
    <td colspan="2"
        tal:content="context/summary" tal:condition="context/summary">
      Summary Goes Here
    </td>
  </tr>
  <tr>
    <td colspan="2">
    Registered by <a
      tal:replace="structure context/owner/fmt:link">Foo Bar</a>
    <span
      tal:attributes="title context/datecreated/fmt:datetime"
      tal:content="context/datecreated/fmt:displaydate">2005-10-12</span>
    </td>
  </tr>
</table>
</tal:root>
