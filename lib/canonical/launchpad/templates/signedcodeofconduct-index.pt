<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta">
<body>

<metal:rightportlets fill-slot="portlets_two">
        <div tal:replace="structure context/@@+portlet-actions" />
</metal:rightportlets>


<div metal:fill-slot="main">

      <h1>Signed Code of Conduct Entry</h1>

      <div class="documentDescription">
        Signed Code of Conduct.
      </div>

      <p><b>Displayname:</b> 
         <span tal:content="context/displayname">CoC</span></p>

      <p tal:condition="context/active"><b>Status:</b> Active</p>
      <p tal:condition="not:context/active"><b>Status:</b> Inactive</p>

      <p><b>DateCreated:</b> 
         <span tal:content="context/datecreated">DATE</span></p>

      <p><b>SignedCode:</b></p>
      <pre tal:content="context/signedcode">CONTENT</pre>

      <p tal:condition="context/recipient"><b>Recipient:</b> 
         <span tal:content="context/recipient/browsername">RECIPIENT</span></p>

      <p tal:condition="context/admincomment"><b>AdminComment:</b></p>
      <pre tal:condition="context/admincomment" 
           tal:content="context/admincomment">COMMENT</pre>

</div>

</body>
</html>
