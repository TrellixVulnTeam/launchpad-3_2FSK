<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:xmlrpc="http://namespaces.zope.org/xmlrpc"
    xmlns:lp="http://namespaces.canonical.com/lp"
    i18n_domain="launchpad">
    <include
        package=".browser"/>

  <class class="lp.app.browser.linkchecker.LinkCheckerAPI">
    <allow interface="lp.app.browser.linkchecker.ILinkCheckerAPI"/>
  </class>

  <browser:url
     for="lp.app.browser.linkchecker.ILinkCheckerAPI"
     path_expression="string:check-links"
     parent_utility="canonical.launchpad.interfaces.ILaunchpadRoot"
    />

</configure>
