<tal:do-this-first tal:content="view/processForm" />

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <h1>Confirm OpenPGP key</h1>
    </metal:heading>

<div metal:fill-slot="main">

    <div tal:condition="not: view/successfullyProcessed">

        <p
          tal:condition="view/errormessage"
          tal:content="structure view/errormessage"
          class="error message"
        />

        <p>
          Confirm the OpenPGP key
          <code tal:content="context/fingerprint">12345</code> for
          <tal:name replace="context/requester/displayname">Foo Bar</tal:name>
        </p>

      <form name="validate" action="" method="POST">
        <input type="submit" name="VALIDATE" value="Confirm" />
      </form>
    </div>

</div>


</body>
</html>
