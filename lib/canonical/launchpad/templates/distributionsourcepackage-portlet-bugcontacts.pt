<div class="portlet">

  <h4>Bug contacts:</h4>

  <div class="portletBody portletContent"
       tal:define="pkg_bug_contacts context/bugcontacts;
                   distribution context/distribution">
    <b>For this package:</b>
    <br />
    <div tal:condition="pkg_bug_contacts">
      <ul class="people">
        <li tal:repeat="pkg_bug_contact pkg_bug_contacts">
          <a href="#"
             tal:content="pkg_bug_contact/bugcontact/browsername"
             tal:attributes="href pkg_bug_contact/bugcontact/fmt:url">Ubuntu Team</a>
        </li>
      </ul>
      <br />
    </div>
    <div tal:condition="not:pkg_bug_contacts">
      <i class="info" tal:condition="not:pkg_bug_contacts">No people or teams are
        subscribed to bugmail for this package.</i>
      <br /><br />
    </div>
    <b tal:content="string:For all ${distribution/name/title} packages:">For all Debian packages:</b>
    <br />
    <div tal:condition="distribution/bugcontact">
      <ul class="people">
        <li>
          <a href="#"
             tal:content="distribution/bugcontact/browsername"
             tal:attributes="href distribution/bugcontact/fmt:url">Ubuntu Team</a>
        </li>
      </ul>
    </div>
    <div tal:condition="not: distribution/bugcontact">
      <i>There is no distribution-wide bug contact set.</i>
      <a tal:condition="distribution/required:launchpad.Edit"
         tal:attributes="href string:${distribution/fmt:url}/+editbugcontact">
        (set one)
      </a>
      <i tal:condition="not:distribution/required:launchpad.Edit">
        (You don't have the permissions to change this.)
      </i>
    </div>
  </div>
</div>
