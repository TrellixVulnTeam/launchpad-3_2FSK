<html xml:lang="en" lang="en"
    xmlns="http://www.w3.org/1999/xhtml" 
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

  <body>
    <div metal:fill-slot="main">
      <table class="listing">
        <thead>
          <tr>
            <th>Relying Party</th>
            <th>Trust Root</th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="rpconfig context/getAll">
            <td><a tal:attributes="href rpconfig/fmt:url"
                   tal:content="rpconfig/displayname">RP Config</a></td>
            <td tal:content="rpconfig/trust_root">http://blah</td>
          </tr>
        </tbody>
      </table>

      <div>
        <a tal:attributes="href string:${context/fmt:url}/+add">
          Add an RP config</a>
      </div>
    </div>
  </body>
</html>
