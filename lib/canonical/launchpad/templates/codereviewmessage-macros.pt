<tal:root
   xmlns:tal="http://xml.zope.org/namespaces/tal"
   xmlns:metal="http://xml.zope.org/namespaces/metal"
   omit-tag="">
  <metal:view-message define-macro="view-message">
    <div class="boardComment">
        <div class="boardCommentDetails">
            <span tal:content="structure comment/message/owner/fmt:link"
                  id="comment-from" />
            <span tal:condition="comment/vote" >vote:
                <span id="comment-vote" tal:content="comment/vote/title" />
            </span>
        </div>
        <div class="boardCommentBody">
            <tt id="comment-subject" tal:content="comment/message/subject" />
            <div>
              <tt id="comment-body"
                  tal:content="comment/message/text_contents" />
            </div>
        </div>
    </div>
  </metal:view-message>
</tal:root>
