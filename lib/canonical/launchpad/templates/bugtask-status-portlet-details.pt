<div class="portlet">

  <h2>Details</h2>

  <div class="portletBody"
       tal:define="bug context/bug">
    <div class="portletContent">

      <b>Reported by:</b><br />
      <img src="/@@/user" />
      <a tal:attributes="href context/owner/fmt:url"
        tal:content="context/owner/browsername"
        style="text-decoration: underline"></a><br />

      <b>In:</b>
      <a tal:content="context/targetname"
         tal:attributes="href string:${context/target/fmt:url}/+bugs">ubuntu</a><br />

      <b>When:</b>
      <span
        tal:attributes="title context/datecreated/fmt:datetime"
        tal:content="context/datecreated/fmt:displaydate" />

    </div>
  </div>
</div>
