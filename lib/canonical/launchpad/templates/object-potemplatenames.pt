<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta">

<body>

<metal:rightportlets fill-slot="portlets_two">

<div class="portlet portletBody portletContent">
          <ul>
            <li class="add">
              <a href="/potemplatenames/+add">New PO Template Name</a>
            </li>
          </ul>
</div>

</metal:rightportlets>

<div metal:fill-slot="main">

    <h1>PO Template Names in
        <span tal:content='context/title'>context.title</span>
    </h1>

    <div tal:condition="view/potemplatenames">

        <table class="data">
          <tbody>
            <tr>
              <td>
                <dl class="potemplatenames">
                  <tal:block repeat="potemplatename view/potemplatenames">
                    <dt>
                      <a tal:attributes="href string:/potemplatenames/${potemplatename/id}"
                        ><dfn
                          tal:content="potemplatename/title"
                        >$POTemplateName.title</dfn>
                        (<span
                          tal:replace="potemplatename/name"
                        >$POTemplateName.name
                      </span>)</a>
                    </dt>
                    <dd tal:content="potemplatename/description">
                      $POTemplateName.description
                    </dd>
                  </tal:block>
                </dl>
              </td>
            </tr>
          </tbody>
        </table>

    </div>

</div>

</body>
</html>
