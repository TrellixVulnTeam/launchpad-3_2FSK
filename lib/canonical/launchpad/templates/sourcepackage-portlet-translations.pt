<div class="portlet"
     tal:condition="context/currentpotemplates">

    <h4>Translation Sets:</h4>

    <div class="portletBody">

        <div class="portletContent even">

          <ul>
            <li class="languages"
                tal:repeat="template context/currentpotemplates">
              <a tal:attributes="href template/fmt:url"
                 tal:content="template/title">template title</a>
            </li>
          </ul>

          <ul style="text-align: right;">
            <li class="info">
              <a href="+translations"
                 title="See more translation options for this product">
                 More...
              </a>
            </li>
          </ul>

        </div>
                
    </div>
</div>
