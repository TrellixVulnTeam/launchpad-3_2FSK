<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>


<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" /> 
  <div tal:replace="structure context/@@+portlet-langstats" /> 
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-latestbugs" />
</metal:rightportlets>

<div metal:fill-slot="main" tal:define="distro context/distribution">
    
  <h1><span tal:replace="context/title" /> overview</h1> 

    <div class="documentDescription"
         tal:content="structure context/summary/fmt:text-to-html"/>
            
    <div class="highlighted" style="font-size: 80%;">
      <p tal:replace="structure context/description/fmt:text-to-html"/>
    </div>


    <tal:block tal:define="sourcecount context/sourcecount"
               tal:condition="sourcecount" tal:omit-tag>
    <h2>Binary packages in <span tal:replace="context/title" /></h2>
      <p>
         This release of 
         <span tal:replace="context/distribution/displayname" /> contains
         <span tal:replace="context/binarycount" /> software packages, 
         across <span tal:replace="context/architecturecount" /> architectures
         from a total of <span tal:replace="sourcecount" /> source 
         packages.
      </p>

      <form name="search" action="+search" method="GET">
        <input title="Search Packages" size="35" type="text" name="text"/>
        <input type="submit" value="Search"/>
      </form>
    </tal:block>

    <tal:block tal:condition="not: context/binarycount">
      <p><span tal:replace="context/title" /> has no packages available.</p>
    </tal:block>

</div>

</body>
</html>
