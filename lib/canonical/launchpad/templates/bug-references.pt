<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="malone">

<body>

<div metal:fill-slot="main">
  <h1>External References</h1>
  <table class="listing">
    <thead>
    <tr>
      <th>Type</th>
      <th>Description</th>
      <th>Data</th>
    </tr>
    </thead>
    <tbody>
    <tr tal:repeat="ref context/references">
      <td tal:content="ref/bugreftype/lp:BugExternalReferenceType">type</td>
      <td tal:content="ref/description">description</td>
      <td>
        <a tal:attributes="href ref/url"
           tal:content="ref/data">999</a>
      </td>
    </tr>
    <tr tal:condition="not:context/references">
      <td colspan="3">No references found.</td>
    </tr>
    </tbody>
  </table>
</div>

</body>
</html>
