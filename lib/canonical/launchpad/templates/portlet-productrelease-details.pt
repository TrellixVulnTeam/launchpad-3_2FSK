<div class="portlet">
    <h4 tal:content="context/title">productrelease title</h4>

    <div class="portletBody">
        <div class="portletContent even">

            <b>Product:</b><br />
            <a href="#"
               tal:attributes="href string:/products/${context/product/name}/"
               tal:content="context/product/displayname"
               class="link">product displayname</a><br />

            <b>Release Version:</b><br />
            <span tal:replace="context/version" /><br />

            <b>Translation Group(s):</b><br />
            <tal:block repeat="group context/product/translationgroups">
              <img src="/++resource++languages.gif" />
              <a href="#"
                 tal:content="group/title"
                 tal:attributes="href string:/rosetta/groups/${group/name}/"
                 >Group</a><br />
            </tal:block>
            <tal:block condition="not: context/product/translationgroups">
              <i>None assigned</i><br />
            </tal:block>
            <b>Translation Perms:</b>
            <span tal:replace="context/product/aggregatetranslationpermission/title">Open</span><br />

        </div>
    </div>
</div>
