<div class="portlet">
  <h4>Subscribers to bug <span tal:replace="context/id">4</span>:</h4>

  <div class="portletBody portletContent"
       tal:define="subscribers_from_dupes context/subscribers_from_duplicates">

    <ul class="people">
      <li tal:repeat="sub context/subscriptions">
        <a href="#"
           tal:content="sub/person/browsername"
           tal:attributes="href sub/person/fmt:url">Dafydd Harries</a>
      </li>
      <li class="info" tal:condition="not: context/subscriptions">
        <i>No subscribers</i>
      </li>
    </ul>

    <div tal:condition="subscribers_from_dupes">
      <br />
      <b>From duplicates:</b>
      <ul class="people">
        <li tal:repeat="subscriber subscribers_from_dupes">
          <a href="#"
             tal:content="subscriber/browsername"
             tal:attributes="href subscriber/fmt:url">Dafydd Harries</a>
        </li>
      </ul>
    </div>

</div>
