<div class="portlet">
    <h4>Distribution Release Actions:</h4>

    <div class="portletBody"
         tal:define="path 
                string:/distros/${context/distribution/name}/${context/name}">
        <div class="portletContent even">
        <img src="/++resource++edit.gif" />
        <a tal:attributes="href string:${path}/+edit">Edit Details</a><br />
        <img src="/++resource++add.gif" />
        <a tal:attributes="href 
                     string:${path}/+sources">View Source Packages</a><br />
        <img src="/++resource++add.gif" />
        <a tal:attributes="href 
                     string:${path}/+bugs">View Release Bugs</a><br />
        <img src="/++resource++add.gif" />
        <a tal:attributes="href 
                     string:${path}/+translations">View Translations</a><br />
        </div>
    </div>
</div>
