<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>


<metal:leftportlets fill-slot="portlets_one">
<div tal:replace="structure view/emailPortlet" />  
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">

</metal:rightportlets>


<div metal:fill-slot="main">

<div id="content" class="documentEditable">
    <ul class="contentViews">
        <li id="contentview-view" class="plain">
            <a href="index.html">View</a>
        </li>
	
	<li id="contentview-packages" class="plain">
            <a href="+packages">Packages</a>
        </li>

        <li id="contentview-edit" class="selected">
            <a>Edit</a>
        </li>

	<li id="contentview-add" class="plain">
            <a href="+add">Add</a>
        </li>

    </ul>

    <div class="documentContent" id="region-content">

      <div class="portalMessage" 
           tal:condition="not:view/permission">
	   <p>Warning: You are not authorized to change this page. If you
	      change something your changes will be lost.
	   <div align="right"><a href="index.html"><i>back</i></a></div>
      </div>

    <div tal:condition="view/permission">
    <h1>Edit <span tal:content="context/person/displayname">DISPLAYNAME</span> 
	Information</h1>

    <div class="documentDescription">	
    <p> Here you edit the Information about <span
    tal:content="context/person/displayname">DISPLAYNAME</span>  
    </div>
    
    <div>
    <form name="edit" action="" method="POST">
	<table>
	<tr><td>
	<div class="field">
	    <label>Display Name</label>
	    <div class="formHelp">
	    Enter the Display Name.
            </div>
	    <input type="text" name="displayname"
	    tal:attributes="value context/person/displayname|nothing"/>
	</div>
	</td></tr>

	<tal:block tal:condition="not:context/person/teamowner">
	<tr><td>
	<div class="field">
	    <label>Given Name</label>
	    <div class="formHelp">
	    Enter the Given Name.
            </div>
	    <input type="text" name="givenname"
	    tal:attributes="value context/person/givenname|nothing"/>
	</div>
	</td><td>
	<div class="field">
	    <label>Familyname</label>
	    <div class="formHelp">
	    Enter the Family Name.
            </div>
	    <input type="text" name="familyname"
	    tal:attributes="value context/person/familyname|nothing"/>
	</div>
	</td></tr>
	</tal:block>


	<tal:block tal:condition="context/person/teamowner">
	<tr><td>
	<div class="field">
	    <label>Team Description</label>
	    <div class="formHelp">
	    Enter the Team Description.
            </div>
            <textarea name="teamdescription" cols="60" rows="6"
	    tal:content="context/person/teamdescription|nothing">
	    </textarea>
	</div>
	</td></tr>
	</tal:block>

	<tr><td>
	<div class="field">
	    <label>Wiki</label>
	    <div class="formHelp">
	    Enter the Wiki
            </div>
	    <input type="text" name="wiki" size="40"
	    tal:attributes="value context/wiki/wiki|nothing"/>
	</div>
	</td><td>
	<div class="field">
	    <label>Wikiname</label>
	    <div class="formHelp">
	    Enter the Wiki Name.
            </div>
	    <input type="text" name="wikiname"
	    tal:attributes="value context/wiki/wikiname|nothing"/>
	</div>
	</td></tr>

	<tr><td>
	<div class="field">
	    <label>IRC Network</label>
	    <div class="formHelp">
	    Enter the IRC Network.
            </div>
	    <input type="text" name="network" size="40"
	    tal:attributes="value context/irc/network|nothing"/>
	</div>
	</td><td>
	<div class="field">
	    <label>IRC Nickname</label>
	    <div class="formHelp">
	    Enter the IRC NickName.
            </div>
	    <input type="text" name="nickname"
	    tal:attributes="value context/irc/nickname|nothing"/>
	</div>
	</td></tr>

	<tr><td>
	<div class="field">
	    <label>Arch User ID</label>
	    <div class="formHelp">
	    Enter the Arch User ID.
            </div>
	    <input type="text" name="archuserid" 
	    tal:attributes="value context/archuser/archuserid|nothing"/>
	</div>
	</td><td>
	<div class="field">
	    <label>JABBER ID</label>
	    <div class="formHelp">
	    Enter the Jabber ID.
            </div>
	    <input type="text" name="jabberid" size="20"
	    tal:attributes="value context/jabber/jabberid|nothing"/>
	</div>
	</td></tr>


	<tr><td class="dummy">	
	PUB KEY IMPORT ENGINE ????
	</td></tr>


	<tr><td>
	<div class="formControls">
	  <input type="submit" value="Edit"/>
	</div>
	</td></tr>
	</table>
  </form>
  </div>
  
  <div tal:condition="view/edit_action">
  <p> <a tal:attributes="href string:../${context/person/name}"
         tal:content="context/person/displayname">PERSON</a>
    Modified
  </div>
  
  </div>
</div>
</div>
</div>

</body>
</html>
