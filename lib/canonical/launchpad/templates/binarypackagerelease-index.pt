<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <h1 tal:content="context/summary">Package summary</h1>
    </metal:heading>

  <metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
  </metal:leftportlets>

  <!-- XXX: matsubara 20060213 
       see bug https://launchpad.net/productslaunchpad/+bug/31342 
       the main template is broken when there is no actions portlet -->
  <metal:rightportlets fill-slot="portlets_two">
    <div>&nbsp;</div>
  </metal:rightportlets>

  <div metal:fill-slot="main">

    <p class="highlighted" tal:content="context/description" />

    <b>Source package:</b>
    <a tal:define="spackage context/distributionsourcepackagerelease"
       tal:content="spackage/name"
       tal:attributes="href spackage/fmt:url">
       SOURCEPACKAGE</a><br />

    <b>Download:</b>
    <ul tal:condition="context/files">
      <li class="download" tal:repeat="file context/files">
        <a tal:content="file/libraryfile/filename"
           tal:attributes="href file/libraryfile/url"></a>
        (<span tal:replace="file/libraryfile/content/filesize/fmt:bytes" />)
      </li>
    </ul>
    <p tal:condition="not: context/files">
      No files for this binary package.
    </p>

    <h2>Relationship to other packages</h2>

    <table>
      <tbody>
        <tr id="provides" tal:define="relationships view/provides"
            tal:condition="relationships/has_items">
          <th><label>Provides:</label></th>
          <td>
              <tal:block replace="structure relationships/@@+render-list"/>
           </td>
          </tr>

          <tr id="depends" tal:define="relationships view/depends"
              tal:condition="relationships/has_items">
            <th><label>Depends on:</label></th>
            <td>
              <tal:block replace="structure relationships/@@+render-list"/>
            </td>
          </tr>

          <tr id="recommends" tal:define="relationships view/recommends"
              tal:condition="relationships/has_items">
            <th><label>Recommends:</label></th>
            <td>
              <tal:block replace="structure relationships/@@+render-list"/>
            </td>
          </tr>

          <tr id="suggests" tal:define="relationships view/suggests"
              tal:condition="relationships/has_items">
            <th><label>Suggests:</label></th>
            <td>
              <tal:block replace="structure relationships/@@+render-list"/>
            </td>
          </tr>

          <tr id="conflicts" tal:define="relationships view/conflicts"
              tal:condition="relationships/has_items">
            <th><label>Conflicts with:</label></th>
            <td>
              <tal:block replace="structure relationships/@@+render-list"/>
            </td>
          </tr>

          <tr id="replaces" tal:define="relationships view/replaces"
              tal:condition="relationships/has_items">
            <th><label>Replaces:</label></th>
            <td>
              <tal:block replace="structure relationships/@@+render-list"/>
            </td>
          </tr>

        </tbody>
      </table>

    </div>
  </body>
</html>
