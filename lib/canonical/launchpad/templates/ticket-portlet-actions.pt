<div class="portlet portletBody portletContent">

    <ul>
      <tal:is_open condition="not: context/is_resolved">
        <li class="edit">
          <a href="+edit">Edit Request</a></li>
        <li class="edit" tal:condition="context/distribution">
          <a href="+sourcepackage">Edit Source Package</a></li>
        <li class="edit">
          <a href="+priority">Edit Priority &amp; Assignee</a></li>
      </tal:is_open>
      <li class="edit" tal:condition="context/can_be_rejected">
        <a href="+reject">Reject Request</a></li>
      <li class="edit" tal:condition="context/can_be_reopened">
        <a href="+reopen">Reopen Request</a></li>
      <li class="list" tal:condition="context/reopenings">
        <a href="+history">Show History</a></li>
      <tal:is_open condition="not: context/is_resolved">
        <li class="mail" tal:condition="not: view/subscription">
          <a href="+subscribe">Subscribe</a></li>
        <li class="edit" tal:condition="view/subscription">
          <a href="+subscribe">Unsubscribe</a></li>
        <li class="add"><a href="+linkbug">Link Existing Bug</a></li>
        <li class="edit" tal:condition="context/bugs">
          <a href="+unlinkbug">Remove Bug Link</a></li>
        <li class="add" tal:condition="not: context/bugs">
          <a href="+makebug"
             title="Create a bug report from this support request"
             >Create Bug Report</a></li>
      </tal:is_open>
      <li class="ticket"><a tal:attributes="
        href string:${context/target/fmt:url}/+tickets">Other Support Requests</a>
      </li>
      <li class="edit" tal:condition="context/required:launchpad.Admin">
        <a href="+admin">Administer</a>
      </li>
    </ul>

</div>
