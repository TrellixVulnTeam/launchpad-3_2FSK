<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
  <title metal:fill-slot="title">
    <span tal:replace="context/displayname">Name</span>
    Personal Information</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(launchpad.css);</style>
</head>

<body>

<metal:leftportlets fill-slot="portlets_one">
<div tal:replace="structure view/leftMenu" />
</metal:leftportlets>

<div metal:fill-slot="main">

  <div id="content" class="documentEditable">
    <ul class="contentViews">
      <li id="contentview-view" class="selected">
        <a href=".">Profile</a>
      </li>

      <!--
      <li tal:condition="context/packages" id="contentview-packages"
      -->
      <li id="contentview-packages"
          class="plain">
        <a href="+packages">Packages</a>
      </li>

      <!--
      <li tal:condition="context/bugs" id="contentview-bugs" class="plain">
      -->
      <li id="contentview-bugs" class="plain">
        <a href="+bugs">Bugs</a>
      </li>

      <!--
      <li tal:condition="context/translations" id="contentview-translations"
      -->
      <li id="contentview-translations"
          class="plain">
        <a href="+translations">Translations</a>
      </li>

      <!--
      <li tal:condition="context/activities" id="contentview-karma"
      -->
      <li id="contentview-karma"
          class="plain">
        <a href="+karma">Karma</a>
      </li>
    </ul>

    <div class="documentContent" id="region-content">

    <div>
      <h1><span tal:content="context/displayname"></span></h1>
        <br />
        <table width="80%">
          <tr>
            <td>Name:</td>
            <td tal:content="string:${context/displayname} 
                            (${context/name})">NAME(NICK)</td>
          </tr>

          <tr tal:condition="context/teamowner">
            <td>Owner:</td>
            <td><a tal:attributes="href string:../${context/teamowner/name}"
                   tal:content="context/teamowner/displayname"></a></td>
          </tr>

          <tr tal:condition="context/teamdescription">
            <td>Description:</td>
            <td tal:content="context/teamdescription">DESCRIPTION</td>
          </tr>
               
          <tal:dummy tal:condition="context/emails">
          <tal:block tal:repeat="email context/emails">
          <tr>
            <td>Email:</td>
            <td tal:content="string:${email/email} (${email/statusname})"></td>
          </tr>
          </tal:block>
          </tal:dummy>

          <tr tal:condition="context/wiki">
            <td>Wiki:</td>
            <td><a tal:attributes="href string:${context/wiki/wiki}${context/wiki/wikiname}">Wiki</a>
            </td>
          </tr>

          <tr tal:condition="context/irc">
            <td>IRC:</td>
            <td><span tal:content="context/irc/nickname"/> at 
                <span tal:content="context/irc/network"/>
            </td>
          </tr> 

          <tr tal:condition="context/jabber">
            <td>Jabber:</td>
            <td tal:content="context/jabber/jabberid"></td>
          </tr> 

          <tr tal:condition="context/archuser">
            <td>Arch User:</td>
            <td tal:content="context/archuser/archuserid"></td>
          </tr>

          <tr tal:condition="context/karma">
            <td>Karma:</td>
            <td tal:content="context/karma"></td>
          </tr>

          <tr tal:condition="context/gpg">
            <td>GPG:</td>
            <td><a href="+gpg" tal:content="string:${context/gpg/keysize}${context/gpg/algorithmname}/${context/gpg/keyid}"></a></td>
          </tr>

          <tr tal:condition="context/sshkeys">
            <td>SSH:</td>
			<td><a href="+sshkey"><span tal:replace="python:
						len(context.sshkeys)">0</span> SSH key(s)</a></td>
          </tr>

          <tr>
            <td></td>
            <td class="listingNext"><a href="+edit">Edit Profile</a></td>
          </tr>
        </table>
    </div> 


    <!-- Teams and Roles-->
    <div tal:condition="python: context.teams or
                                context.distroroles or
                                context.distroreleaseroles">
      <fieldset>
        <legend><span tal:replace="context/displayname"></span> is
        </legend>
        <table>
          <tr tal:repeat="team context/teams">
            <td>
              <span tal:replace="team/rolename"></span> of 
              <a tal:attributes="href string:../${team/team/name}"
                 tal:content="team/team/displayname">foo</a>
            </td>
          </tr>
          <tr><td></td></tr>
          <tr tal:condition="context/distroroles"
              tal:repeat="role context/distroroles">
            <td><span tal:content="role/rolename">ROLENAME</span> on 
              <a tal:attributes="href string:/soyuz/distros/${role/distribution/name}"
                 tal:content="role/distribution/title">DISTRO</a></td>
          </tr>
          <tr><td></td></tr>
          <tr tal:condition="context/distroreleaseroles"
              tal:repeat="role context/distroreleaseroles">
            <td><span tal:content="role/rolename">ROLENAME</span> on 
              <a tal:attributes="href string:/soyuz/distros/${role/distrorelease/distribution/name}/releases/${role/distrorelease/name}"
                 tal:content="role/distrorelease/displayname">RELEASE</a>
            </td>
          </tr>
        </table>
      </fieldset>
    </div>


    <!--Roles distro and distrorelease 
    <div tal:condition="python: context.distroroles or 
                                context.distroreleaseroles">
