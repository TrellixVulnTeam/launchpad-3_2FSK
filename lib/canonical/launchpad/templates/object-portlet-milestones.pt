<div class="portlet" tal:condition="context/milestones">
  <h4><span tal:replace="context/displayname"
           >Ubuntu</span> milestones:</h4>

  <div class="portletBody portletContent">

    <ul tal:condition="context/milestones">
      <li class="milestone" tal:repeat="milestone context/milestones">
        <a tal:content="milestone/name"
           tal:attributes="href milestone/fmt:url">
           milestone name
        </a>
      </li>
    </ul>
  </div>
</div>
