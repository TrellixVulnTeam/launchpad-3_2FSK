<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  lang="en"
  metal:define-macro="master"
  metal:extend-macro="context/@@main_template/master"
  i18n:domain="launchpad">

<body>
<metal:heading fill-slot="pageheading">
  <metal:slot define-slot="pageheading">
    <h1 tal:content="view/label">Remove link to bug report</h1>
  </metal:slot>
</metal:heading>

<metal:leftportlets fill-slot="portlets_one">
  <metal:slot define-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
  </metal:slot>
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <metal:slot define-slot="portlets_two">
    <div tal:replace="structure context/@@+portlet-bugs" />
  </metal:slot>
</metal:rightportlets>

<div metal:fill-slot="main">
  <tal:nobugs condition="not:context/bugs">
    <p class="informational message"
      i18n:translate="">
      There are no links to bug reports to remove.
    </p>
  </tal:nobugs>

  <tal:somebugs condition="context/bugs">
    <tal:nopermission condition="not:view/bugsWithPermission">
      <p class="informational message"
         i18n:translate="">
        There are no links that you are allowed to remove.
      </p>
    </tal:nopermission>

    <form action="."
          tal:condition="view/bugsWithPermission"
          tal:attributes="action request/URL"
          method="post">

      <p class="error message"
         tal:condition="view/status"
         tal:content="view/status" />

      <metal:extra_info define-slot="extra_info" />

      <div metal:use-macro="context/@@launchpad_widget_macros/launchpad_widget_rows"
           />

      <div class="actions">
        <input tal:replace="structure view/actions/form.actions.remove/render" />
      </div>
    </form>
  </tal:somebugs>

</div>
</body>
</html>

