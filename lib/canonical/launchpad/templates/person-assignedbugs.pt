<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

  <metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
  </metal:leftportlets>

  <div metal:fill-slot="main">

    <tal:block define="task_batch_navigator view/bugTasksAssignedToPerson">

      <h1>Bugs Assigned to <span tal:replace="context/browsername" /></h1>

      <p tal:condition="not: task_batch_navigator/batch">No bugs have been
      assigned to <span tal:replace="context/browsername" />.</p>

      <tal:block condition="task_batch_navigator/batch">

      <tal:navigation
           replace="structure task_batch_navigator/@@+navigation-links" />

      <div tal:define="tasks task_batch_navigator/batch;">

      <tal:assignedbugs
          metal:use-macro="context/@@+bugtask-macros-tableview/table" />

      </div>

      <tal:navigation
           replace="structure task_batch_navigator/@@+navigation-links" />

    </tal:block>
    </tal:block>

  </div>

</body>
</html>
