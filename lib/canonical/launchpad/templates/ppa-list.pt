<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <h1>Personal Package Archives of Ubuntu</h1>
    </metal:heading>

  <div metal:fill-slot="main">

    <ul class="person">
      <li tal:repeat="ppa view/getAllPPAs">
        <a tal:content="ppa/owner/browsername"
           tal:attributes="href ppa/owner/fmt:url">Foo Bar</a>:
        <span tal:replace="ppa/description" />
	<a tal:attributes="href ppa/archive_url">See the archive</a>
      </li>
    </ul>

  </div>
</body>
</html>

