<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">
<tr>
  <th>Last mirrored:</th>
  <tal:mirrored-yet tal:condition="context/last_mirrored">
    <td tal:attributes="title context/last_mirrored/fmt:datetime"
        tal:content="context/last_mirrored/fmt:approximatedate"/>
  </tal:mirrored-yet>
  <tal:not-mirror-yet tal:condition="not:context/last_mirrored">
    <td>Not mirrored yet</td>
  </tal:not-mirror-yet>
</tr>
<tr>
  <th>Next mirror:</th>
  <tal:mirror-disabled tal:condition="view/mirror_disabled">
    <td>Disabled</td>
  </tal:mirror-disabled>
  <tal:mirror-enabled tal:condition="not:view/mirror_disabled">
    <tal:mirror-in-future tal:condition="not:view/in_mirror_queue">
      <td tal:attributes="title context/next_mirror_time/fmt:datetime"
          tal:content="context/next_mirror_time/fmt:approximatedate"/>
    </tal:mirror-in-future>
    <tal:mirror-in-past tal:condition="view/in_mirror_queue">
      <td>As soon as possible</td>
    </tal:mirror-in-past>
  </tal:mirror-enabled>
</tr>
</tal:root>
