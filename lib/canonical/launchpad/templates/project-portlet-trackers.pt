<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-bugtrackers">

    <h2>Project group bug trackers</h2>

    <div class="portletBody portletContent">

      <ul class="info">
        <li tal:repeat="tracker context/bugtrackers">
          <a tal:content="tracker/title"
             tal:attributes="href tracker/fmt:url">tracker title</a>
        </li>
      </ul>

        <ul><li class="add">
        <a href="+newbugtracker"
            title="Add a project group bugtracker">
            Add a bug tracker...
        </a>
        </li></ul>

    </div>
</div>
</tal:root>
