<div class="portlet">
    <h4 tal:content="context/title">product title</h4>

    <div class="portletBody">
        <div class="portletContent even">

        <div tal:condition="context/homepageurl" tal:omit-tag>
            <b>External links:</b><br />
            <img src="/++resource++link_icon.gif" alt="" />
            <a tal:attributes="href context/homepageurl"
               class="link">Home page</a><br />
        </div>

        <b>Lead Maintainer:</b><br />
        <img src="/++resource++user.gif">
        <span tal:replace="context/owner/browsername">ownername</span><br />

        <b>Product Status:</b><br />
        <span tal:condition="context/reviewed"
              tal:omit-tag>Reviewed<br /></span>
        <span tal:condition="context/active"
              tal:omit-tag>Active<br /></span>
        <div tal:condition="not: context/active">Disabled<br /></div>

        </div>
    </div>
</div>
