<div class="portlet" id="portlet-details">

  <h2>Build details</h2>

  <div class="portletBody portletContent">

    <b>Package:</b>
    <a tal:content="context/distributionsourcepackagerelease/displayname"
       tal:attributes="href context/distributionsourcepackagerelease/fmt:url">
       foobar
    </a>
    <br />

    <b>Built on:</b>
    <a tal:content="context/distribution/name"
       tal:attributes="href context/distribution/fmt:url">
      ubuntu</a>
    <a tal:content="context/distroseries/name"
       tal:attributes="href context/distroseries/fmt:url">
      hoary
    </a>
    <br />

    <b>Architecture:</b>
    <span tal:replace="context/distroarchseries/architecturetag">
      i386
    </span>
    <br />

    <b>Status:</b>
    <span tal:replace="context/buildstate/title">Fully built</span>
    <br />

    <b>Queued:</b><br />
    <span
      tal:attributes="title context/datecreated/fmt:datetime"
      tal:content="context/datecreated/fmt:approximatedate">
      2005-10-05 5:45
    </span>
    <br />

    <tal:is_build condition="context/datebuilt">
      <b>Built:</b><br />
    <span
      tal:attributes="title context/datebuilt/fmt:datetime"
      tal:content="context/datebuilt/fmt:approximatedate">
      2005-10-05 5:45
    </span>
      <br />
    </tal:is_build>

  </div>

</div>
