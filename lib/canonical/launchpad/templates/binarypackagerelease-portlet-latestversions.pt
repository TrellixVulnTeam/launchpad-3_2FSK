<div class="portlet">
  <h4>Latest Versions:</h4>
  <div class="portletBody portletContent">
    <ul tal:define="lastversions context/lastversions">
      <li tal:condition="not:lastversions">
        <i>No Latest Versions.</i>	   
      </li>
      <li tal:repeat="spackage lastversions">
        <a tal:content="string:${spackage/name}-${spackage/version}"
        tal:attributes="href spackage/version" />
      </li>
    </ul>
  </div>
</div>
