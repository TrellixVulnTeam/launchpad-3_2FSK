<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <h1>Build machines for Launchpad</h1>
    </metal:heading>

<metal:block fill-slot="head_epilogue">
    <meta http-equiv="refresh" content="300">
</metal:block>

  <div metal:fill-slot="main">

      <table class="listing sortable" tal:attributes="id string:builders">
      <thead>
        <tr>
            <th>Name</th>
            <th>Architecture</th>
            <th>Owner</th>
            <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <tal:builder repeat="builder context/getBuilders">
          <tr>
            <td>
              <img alt="[builder]" src="/@@/info" />
              <a tal:attributes="href builder/fmt:url">
                 <span tal:replace="builder/name" />
              </a>
            </td>
            <td tal:content="builder/processor/name">LOCATION</td>
            <td>
              <a tal:replace="structure builder/owner/fmt:link" />
            </td>
            <td tal:content="builder/status">STATUS</td>
          </tr>
        </tal:builder>
      </tbody>
      </table>

      <p class="discreet">Last updated <span tal:replace="view/now"/></p>

  </div>
</body>
</html>

