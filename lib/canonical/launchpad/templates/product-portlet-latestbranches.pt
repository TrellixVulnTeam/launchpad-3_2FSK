<div class="portlet" tal:condition="context/getLatestBranches">
  <h2>Latest branches of <span tal:replace="context/name">firefox</span></h2>
  <div class="portletBody portletContent">
    
  <ul>
    <li tal:repeat="branch context/getLatestBranches" class="branch">
      <a tal:attributes="href branch/fmt:url"
         tal:content="branch/name"
      >branch name</a>:
      <span tal:condition="branch/author"
            tal:replace="branch/author/name"
      >author</span> 
      <span tal:condition="not:branch/author"
            tal:replace="branch/owner/name"
      >registrant</span> 
    </li>
  </ul>

  </div>
</div>
