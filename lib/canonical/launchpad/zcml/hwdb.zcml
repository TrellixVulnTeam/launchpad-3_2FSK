<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="launchpad">

    <!-- HWDBApplication -->
    <class class="canonical.launchpad.systemhomes.HWDBApplication">
        <allow interface="canonical.launchpad.interfaces.IHWDBApplication" />
    </class>

    <securedutility
        class="canonical.launchpad.systemhomes.HWDBApplication"
        provides="canonical.launchpad.interfaces.IHWDBApplication">
        <allow interface="canonical.launchpad.interfaces.IHWDBApplication" />
    </securedutility>

    <browser:navigation
        module="canonical.launchpad.browser"
        classes="HWDBApplicationNavigation"
        />

    <browser:url
        for="canonical.launchpad.interfaces.IHWDBApplication"
        path_expression="string:+hwdb"
        parent_utility="canonical.launchpad.interfaces.ILaunchpadRoot"
    />

    <browser:page
        for="canonical.launchpad.interfaces.IHWDBApplication"
        class="canonical.launchpad.browser.HWDBUploadView"
        permission="zope.Public"
        name="+submit"
        template="../templates/hwdb-submit-hardware-data.pt"
        />

    <class class="canonical.launchpad.database.HWSubmission">
        <require
            permission="launchpad.View"
            interface="canonical.launchpad.interfaces.IHWSubmission"
            attributes="id" />
        <require
            permission="launchpad.Edit"
            set_attributes="status" />
    </class>

    <browser:url
        for="canonical.launchpad.interfaces.IHWSystemFingerprint"
        path_expression="string:+fingerprint/${fingerprint}"
        parent_utility="canonical.launchpad.interfaces.IHWDBApplication"
        />

    <browser:url
        for="canonical.launchpad.interfaces.IHWSubmission"
        path_expression="string:+submission/${submission_key}"
        parent_utility="canonical.launchpad.interfaces.IHWDBApplication"
        />

    <browser:defaultView
        for="canonical.launchpad.interfaces.IHWSubmission"
        name="+text" />

    <browser:page
        for="canonical.launchpad.interfaces.IHWSubmission"
        class="canonical.launchpad.browser.HWDBSubmissionTextView"
        permission="zope.Public"
        name="+text"
        />

    <securedutility
        class="canonical.launchpad.database.HWSubmissionSet"
        provides="canonical.launchpad.interfaces.IHWSubmissionSet">
        <allow interface="canonical.launchpad.interfaces.IHWSubmissionSet" />
    </securedutility>

    <class class="canonical.launchpad.database.HWSystemFingerprint">
        <allow
            interface="canonical.launchpad.interfaces.IHWSystemFingerprint" />
    </class>

    <securedutility
        class="canonical.launchpad.database.HWSystemFingerprintSet"
        provides="canonical.launchpad.interfaces.IHWSystemFingerprintSet">
        <allow
            interface="canonical.launchpad.interfaces.IHWSystemFingerprintSet" />
    </securedutility>

    <browser:page
        for="canonical.launchpad.interfaces.IPerson"
        permission="zope.Public"
        class="canonical.launchpad.browser.HWDBPersonSubmissionsView"
        template="../templates/person-hwdb-submissions.pt"
        name="+hwdb-submissions"
        />

    <class class="canonical.launchpad.browser.hwdb.HWDBFingerprintSetView">
        <allow
            interface="zope.publisher.interfaces.browser.IBrowserPublisher" />
        <allow attributes="__call__" />
    </class>

    <class class="canonical.launchpad.database.HWVendorName">
        <allow interface="canonical.launchpad.interfaces.IHWVendorName" />
        <allow attributes="id" />
    </class>

    <securedutility
        class="canonical.launchpad.database.HWVendorNameSet"
        provides="canonical.launchpad.interfaces.IHWVendorNameSet">
        <allow interface="canonical.launchpad.interfaces.IHWVendorNameSet" />
    </securedutility>

    <class class="canonical.launchpad.database.HWVendorID">
        <allow interface="canonical.launchpad.interfaces.IHWVendorID" />
        <allow attributes="id" />
    </class>

    <securedutility
        class="canonical.launchpad.database.HWVendorIDSet"
        provides="canonical.launchpad.interfaces.IHWVendorIDSet">
        <allow interface="canonical.launchpad.interfaces.IHWVendorIDSet" />
    </securedutility>

    <class class="canonical.launchpad.database.HWDevice">
        <allow interface="canonical.launchpad.interfaces.IHWDevice" />
    </class>

    <browser:url
        for="canonical.launchpad.interfaces.IHWDevice"
        path_expression="string:+device/${id}"
        parent_utility="canonical.launchpad.interfaces.IHWDBApplication"
        />

    <securedutility
        class="canonical.launchpad.database.HWDeviceSet"
        provides="canonical.launchpad.interfaces.IHWDeviceSet">
        <allow interface="canonical.launchpad.interfaces.IHWDeviceSet" />
    </securedutility>

    <class class="canonical.launchpad.database.HWDeviceNameVariant">
        <allow interface=
            "canonical.launchpad.interfaces.IHWDeviceNameVariant" />
    </class>

    <securedutility
        class="canonical.launchpad.database.HWDeviceNameVariantSet"
        provides="canonical.launchpad.interfaces.IHWDeviceNameVariantSet">
        <allow interface=
            "canonical.launchpad.interfaces.IHWDeviceNameVariantSet" />
    </securedutility>

    <class class="canonical.launchpad.database.HWDriver">
        <allow
            interface="canonical.launchpad.interfaces.IHWDriver" />
    </class>

    <browser:url
        for="canonical.launchpad.interfaces.IHWDriver"
        path_expression="string:+driver/${id}"
        parent_utility="canonical.launchpad.interfaces.IHWDBApplication"
        />

    <securedutility
        class="canonical.launchpad.database.HWDriverSet"
        provides="canonical.launchpad.interfaces.IHWDriverSet">
        <allow
            interface="canonical.launchpad.interfaces.IHWDriverSet" />
    </securedutility>

    <class class="canonical.launchpad.database.HWDeviceDriverLink">
        <allow
            interface="canonical.launchpad.interfaces.IHWDeviceDriverLink" />
        <allow attributes="id" />
    </class>

    <securedutility
        class="canonical.launchpad.database.HWDeviceDriverLinkSet"
        provides="canonical.launchpad.interfaces.IHWDeviceDriverLinkSet">
        <allow
            interface="canonical.launchpad.interfaces.IHWDeviceDriverLinkSet" />
    </securedutility>

    <class class="canonical.launchpad.database.HWDeviceClass">
        <allow
            interface="canonical.launchpad.interfaces.IHWDeviceClass" />
        <allow attributes="id" />
    </class>

    <securedutility
        class="canonical.launchpad.database.hwdb.HWDeviceClassSet"
        provides="canonical.launchpad.interfaces.IHWDeviceClassSet">
        <allow
            interface="canonical.launchpad.interfaces.IHWDeviceClassSet" />
    </securedutility>

    <class class="canonical.launchpad.database.HWSubmissionDevice">
        <allow
            interface="canonical.launchpad.interfaces.IHWSubmissionDevice" />
    </class>

    <browser:url
        for="canonical.launchpad.interfaces.IHWSubmissionDevice"
        path_expression="string:+submissiondevice/${id}"
        parent_utility="canonical.launchpad.interfaces.IHWDBApplication"
        />

    <securedutility
        class="canonical.launchpad.database.HWSubmissionDeviceSet"
        provides="canonical.launchpad.interfaces.IHWSubmissionDeviceSet">
        <allow
            interface="canonical.launchpad.interfaces.IHWSubmissionDeviceSet" />
    </securedutility>

    <class class="canonical.launchpad.database.HWSubmissionBug">
        <allow
            interface="canonical.launchpad.interfaces.IHWSubmissionBug" />
        <allow attributes="id" />
    </class>

    <securedutility
        class="canonical.launchpad.database.HWSubmissionBugSet"
        provides="canonical.launchpad.interfaces.IHWSubmissionBugSet">
        <allow
            interface="canonical.launchpad.interfaces.IHWSubmissionBugSet" />
    </securedutility>
</configure>
