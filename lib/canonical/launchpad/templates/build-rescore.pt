<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<body>

  <div metal:fill-slot="main"
       tal:define="message view/rescore_build; error view/error|nothing">

    <h1>Rescore <span tal:replace="context/title"/></h1>

    <p
      tal:condition="message"
      tal:content="structure message"
      class="informational message"
    />

    <p
      tal:condition="error"
      tal:content="error"
      class="error message"
    />

    <tal:can_rescore condition="context/can_be_rescored">
      <form name="RESCORE" action="" method="POST">
      <div><label for="SCORE">Priority:</label>
           <input name="SCORE" type="text" size="5"
	          tal:attributes="value context/buildqueue_record/lastscore"/>
           <input name="RESCORE" type="hidden" value="1"/>
           <input type="submit" value="Update"/>
      </div>
      </form>
    </tal:can_rescore>

  </div>
</body>
</html>
