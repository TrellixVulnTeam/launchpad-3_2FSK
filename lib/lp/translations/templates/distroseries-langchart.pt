<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

  <p tal:condition="context/hide_all_translations" class="visibility-notice">
    <strong>Translations for this series are currently hidden.</strong>

    <!-- Bounce regular users to "translations unavailable" page. -->
    <metal:check-available tal:omit-tag="view/checkTranslationsViewable" />
  </p>


  <table class="sortable listing" width="100%" id="languagestats">
    <thead>
      <tr>
        <th>Language</th>
        <th>Contributors</th>
        <th>Status</th>
        <th>Untranslated</th>
        <th>Need review</th>
        <th>Changed</th>
      </tr>
    </thead>

    <tbody>
      <tr tal:repeat="drlang view/distroserieslanguages"
          tal:attributes="class drlang/css_class">
        <td>
          <a tal:attributes="href string:${drlang/content/fmt:url}"
             tal:content="drlang/content/language/englishname">
             Language Name
          </a>
        </td>
        <td>
          <span class="sortkey" tal:content="drlang/content/contributor_count">0</span>
          <tal:count
            tal:condition="drlang/content/contributor_count"
            tal:replace="drlang/content/contributor_count">0</tal:count>
          <tal:count condition="not: drlang/content/contributor_count">
            &mdash;
          </tal:count>
        </td>
        <td style="white-space: nowrap">
          <div tal:replace="structure drlang/content/@@+barchart" />
        </td>
        <td>
          <span class="sortkey" tal:content="drlang/content/untranslatedCount">0</span>
          <tal:count
            tal:condition="drlang/content/untranslatedCount"
            tal:replace="drlang/content/untranslatedCount">0</tal:count>
          <tal:count condition="not: drlang/content/untranslatedCount">
            &mdash;
          </tal:count>
        </td>
        <td>
          <span class="sortkey" tal:content="drlang/content/unreviewedCount">0</span>
          <tal:count
            tal:condition="drlang/content/unreviewedCount"
            tal:replace="drlang/content/unreviewedCount">0</tal:count>
          <tal:count condition="not: drlang/content/unreviewedCount">
            &mdash;
          </tal:count>
        </td>
        <td>
          <span class="sortkey" tal:content="drlang/content/updatesCount">0</span>
          <tal:count
            tal:condition="drlang/content/updatesCount"
            tal:replace="drlang/content/updatesCount">0</tal:count>
          <tal:count condition="not: drlang/content/updatesCount">
            &mdash;
          </tal:count>
        </td>
      </tr>
    </tbody>
  </table>
  <div align="right">
    [ <a href="/+editmylanguages">Choose Preferred Languages...</a> 
      &mdash;
      <a href="#" id="toggle-languages-visibility">
        View All Languages</a> 
    ]
  </div>
</tal:root>
