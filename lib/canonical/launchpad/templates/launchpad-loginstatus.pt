<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">
<div tal:condition="not:view/logged_in" class="login">
  <tal:block condition="view/login_shown">
    Not logged in &#8212;
    <a tal:attributes="href view/login_url">
      Log In / Register
    </a>
  </tal:block>
</div>
<form
  tal:condition="view/logged_in"
  action="+logout"
  class="login"
  method="post"
>
  <input type="hidden" name="loggingout" value="1" />
  Logged in as
    <a tal:replace="structure request/lp:person/fmt:link"
    >User's browser name</a>
    &ndash;
  <input type="submit" name="logout" value="Log Out" />
</form>
</tal:root>
