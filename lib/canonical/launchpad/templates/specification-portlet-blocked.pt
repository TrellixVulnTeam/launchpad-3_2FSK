<tal:blocked_specs define="blocked_specs context/blocked_specs">
  <div tal:condition="blocked_specs" class="portlet">

    <h2>Blocks</h2>

    <div class="portletBody portletContent">

      <ul tal:condition="blocked_specs">
        <li class="spec" tal:repeat="spec blocked_specs">
          <a tal:attributes="href spec/fmt:url"
             tal:content="spec/title">Spec Title Goes Here</a>
        </li>
      </ul>
      <p tal:condition="not: blocked_specs">
        No specifications are blocked on this one.
      </p>
	
    </div>

  </div>
</tal:blocked_specs>
