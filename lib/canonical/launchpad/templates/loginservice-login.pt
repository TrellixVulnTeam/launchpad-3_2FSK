<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">
  <body>
    <div metal:fill-slot="main">
      <h1>Launchpad Login Service</h1>

      <form method="post" accept-charset="UTF-8" action="/+login-foo">
        <tal:widget replace="structure view/widgets/nonce/hidden" />

        <p class="error message"
          tal:repeat="form_wide_error view/form_wide_errors"
          tal:content="structure form_wide_error">
          Schema validation errors.
        </p>

        <div>
          <label tal:attributes="for view/widgets/email/name"
            >What is your email address?</label>
        </div>
        <div>
          <tal:widget replace="structure view/widgets/email" />
        </div>

        <br />
        <div>
          <label>Do you have a Launchpad passphrase?</label>
        </div>
        <div>
          <label tal:attributes="for view/widgets/password/name"
            >Passphrase:</label>
          <tal:widget replace="structure view/widgets/password" />
        </div>
        <!--
        <div>
          <label>
            <input type="radio" value="createaccount"
                   tal:attributes="name view/input_action">
            No, I want to create an account now
          </label>
        </div>
        <div>
          <label>
            <input type="radio" value="login" checked="true"
                   tal:attributes="name view/input_action">
            Yes, my passphrase is:
          </label>
        </div>
        <div>
          <input type="password" tal:attributes="name view/input_passphrase" />
        </div>
        <div>
          <label>
            <input type="radio" value="recoverpassword"
                   tal:attributes="name view/input_action">
            I've forgotten my passphrase
          </label>
        </div>
        -->

        <br />
        <div>
          <tal:submit replace="structure view/continue_action/render" />
        </div>

      </form>

    </div>
  </body>
</html>

