<div class="portlet"> 
    <h4>Your Languages:</h4>

    <div class="portletBody">
        <div class="portletContent even">

        <table class="listing rowNavigation" border="0" width="100%">
            <tr><th></th></tr>
            <tr tal:repeat="language view/languages">
                <td><b><span tal:replace="language/englishname">language</span></b>
                    <span tal:condition="language/nativename" tal:omit-tag>
                        (<span tal:replace="language/nativename">nativename</span>)
                    </span>
                </td>
            </tr>
        </table>

        <ul><li class="info">
        <a href="+newbugtracker"
            title="Change Language Prefs">
            Change Language Prefs...
        </a>
        </li></ul>

        </div>
                
    </div>
</div>
