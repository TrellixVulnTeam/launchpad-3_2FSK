<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="launchpad">

<facet facet="translations">

    <class class="canonical.launchpad.database.TranslationMessage">
        <allow
            interface="canonical.launchpad.interfaces.ITranslationMessage" />
        <require
            permission="launchpad.Edit"
            set_schema="canonical.launchpad.interfaces.ITranslationMessage" />
    </class>

    <!-- Dummy Translation Message. It's a read only class. -->
    <class class="canonical.launchpad.database.DummyTranslationMessage">
        <allow
            interface="canonical.launchpad.interfaces.ITranslationMessage" />
    </class>

    <!-- XXX CarlosPerelloMarin 2007-11-16 Commented until we start migrating
         view code.
    <class class="canonical.launchpad.browser.POMsgSetSuggestions">
        <allow
            interface="canonical.launchpad.interfaces.ITranslationMessageSuggestions"
            />
    </class>
    -->

    <browser:url
        for="canonical.launchpad.interfaces.ITranslationMessage"
        path_expression="string:${potmsgset/sequence}"
        attribute_to_parent="browser_pofile"
        />

    <browser:menus
        module="canonical.launchpad.browser.translationmessage"
        classes="CurrentTranslationMessageFacets
                 CurrentTranslationMessageAppMenus"
        />

    <browser:defaultView
        for="canonical.launchpad.interfaces.ITranslationMessage"
        name="+index"
        layer="canonical.launchpad.layers.TranslationsLayer" />

    <browser:page
        for="canonical.launchpad.interfaces.ITranslationMessage"
        class="canonical.launchpad.browser.translationmessage.CurrentTranslationMessageIndexView"
        permission="zope.Public"
        name="+index"
        layer="canonical.launchpad.layers.TranslationsLayer"
        />

    <browser:page
        name="+translate"
        for="canonical.launchpad.interfaces.ITranslationMessage"
        class="canonical.launchpad.browser.translations.TranslateRedirectView"
        permission="zope.Public"
        />

    <browser:page
        name="+translate"
        for="canonical.launchpad.interfaces.ITranslationMessage"
        permission="zope.Public"
        template="../templates/translationmessage-translate.pt"
        class="canonical.launchpad.browser.translationmessage.CurrentTranslationMessagePageView"
        layer="canonical.launchpad.layers.TranslationsLayer"
        />

    <browser:page
        name="+display"
        for="canonical.launchpad.interfaces.ITranslationMessageSuggestions"
        permission="launchpad.AnyPerson"
        template="../templates/translationmessage-suggestions.pt"
        layer="canonical.launchpad.layers.TranslationsLayer"
        />

    <!-- TranslationMessageSet -->
    <securedutility
        class="canonical.launchpad.database.TranslationMessageSet"
        provides="canonical.launchpad.interfaces.ITranslationMessageSet">
        <allow
            interface="canonical.launchpad.interfaces.ITranslationMessageSet" />
    </securedutility>

</facet>

</configure>
