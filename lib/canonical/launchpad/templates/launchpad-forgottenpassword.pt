<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">
<tal:do-this-first tal:content="view/process_form" />
<html
  metal:use-macro="view/macro:page/main_only">
  <head metal:fill-slot="head_epilogue">
    <meta name="robots" content="noindex" />
  </head>

<body>

  <div class="top-portlet" metal:fill-slot="main">

  <div>

    <h1>Need a new Launchpad password?</h1>

    <div tal:condition="not: view/success">

      <tal:block condition="view/errortext">
        <h1>Your password reset request was unsuccessful</h1>
        <p class="error message"
           style="margin-top: 2em;"
           tal:content="structure view/errortext" />
      </tal:block>

      <p>
        Enter your e-mail address, and we will send you instructions
        on how to reset your password.  You'll also need to answer a simple
        question so we know that you're human.
      </p>

      <form name="forgottenpassword" method="POST">
        <input type="hidden"
               tal:attributes="name view/captcha_hash;
                               value view/get_captcha_hash" />
      <div class="field">
        <table>
          <tr>
            <th>
              <label for="email">Email address:</label>
            </th>
            <td>
              <input type="text" size="50" name="email" />
            </td>
          </tr>
          <tr>
            <th>
              <label>Random question:</label>
            </th>
            <td>
              <span id="problem" tal:content="view/captcha_problem" />
              <input type="text" size="5"
                     id="captcha_submission" value=""
                     tal:attributes="name view/captcha_submission"
                     />
            </td>
          </tr>
        </table>
        <div class="formHelp">
          <p>
          Enter the email address registered for your Launchpad account.
          </p>
          <p>
          If you are claiming an existing account but don't know the email
          address that was used, <a href="/feedback">contact a
          Launchpad administrator</a>.
          </p>
        </div>
        <div class="formControls">
          <input type="submit" value="Request Reset" />
        </div>
      </div>
      </form>
      </div>
    </div>

    <div tal:condition="view/success">
      <br />
      <p>We have sent you an email with instructions to reset your
      password.</p>
    </div>

  </div>

</body>
</html>
</tal:root>
