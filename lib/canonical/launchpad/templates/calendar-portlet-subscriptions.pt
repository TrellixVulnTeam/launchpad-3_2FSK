<div class="portlet" tal:condition="view/subscriptions">
  <h4>Subscriptions:</h4>
  <div class="portletBody portletContent">
    <table>
      <tr tal:repeat="sub view/subscriptions" valign="top">
        <td>
          <div tal:attributes="style string:border: solid 1px black;;
                                        width: 1em;; height: 1em;;
                                        background-color: ${sub/colour}"></div>
        </td>
        <td>
          <a tal:attributes="href sub/calendar/fmt:url"
             tal:content="sub/calendar/title">Calendar name</a>
        </td>
      </tr>
    </table>
    <ul>
      <li class="edit">
        <a href="/calendar/+subscriptions">
          Manage Subscriptions
        </a>
      </li>
    </ul>
  </div>
</div>
