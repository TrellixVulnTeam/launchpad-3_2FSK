<tal:layout define="columns1 default">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

  <metal:block fill-slot="head_epilogue">
    <style>
      .results th {
        color: #828282;
        border: 1px solid #cfcfcf;
        background-color: #E0E0E0;
        text-align: left;
      }

      .results td {
        border: 1px solid #cfcfcf;
        background-color: #ededed
      }

      #content {
      display: inline; /* avoid MSIE Double Float Margin bug */
      float: left;
      width: 74%;
      }

      #sidebar {
      display: inline;
      float: left;
      margin-left: 2%; /* whitespace */
      width: 24%; /* = 25% - 1% whitespace */
      }

      #filter {
          list-style: none;
          margin-left: 3px;
          padding-left: 3px;
      }

      #filter li {
          margin-bottom: 2px;
      }

      #filter li:before {
          content: "\00BB \0020";
      }
    </style>
  </metal:block>

  <div metal:fill-slot="main">
    <div id="content" style="margin-bottom: 2px;">
      <h2 class="lpcontext"
          tal:content="string:${context/displayname}'s Package Bug Reports">
        Sample Person Package Bug Reports
      </h2>
      <strong>
        <small tal:content="python:view.getPackage().displayname">
          mozilla-firefox (Ubuntu)
        </small>
      </strong>
      <div tal:define="batch_navigator view/search;
                       prev_page_url batch_navigator/prevBatchURL;
                       next_page_url batch_navigator/nextBatchURL;
                       total batch_navigator/batch/total;
                       start_number batch_navigator/batch/startNumber;
                       end_number batch_navigator/batch/endNumber">
        <form method="GET" name="search" action="">
          <input type="hidden" value="#"
                 name="field.distribution"
                 tal:attributes="value python:request.form.get('field.distribution')" />
          <input type="hidden" value="#"
                 name="field.sourcepackagename"
                 tal:attributes="value python:request.form.get('field.sourcepackagename')" />
          <input type="text" name="field.searchtext" size="40" />
          <input type="submit" name="search" value="Search" />
          <span style="color: #A8A8A8"><small>(Advanced search coming soon)</small></span>
        </form>
        <script>
          <!--
              document.forms['search'].searchtext.focus()
            -->
        </script>
        <br />
        <table style="width: 55%; margin-left: 0;">
          <tr>
            <td style="border-color: #DEDEDE; border-style: solid;
                       border-width: 1px 1px 0px 1px;
                       padding: 3px 0px 3px 0px;
                       text-align: center"
                width="15%">
              <small><strong>Filter</strong></small>
            </td>
            <td style="border-color: #DEDEDE; border-style: solid; border-width: 0px 0px 1px 0px;">
              &nbsp;
            </td>
          </tr>
          <tr>
            <td style="border-color: #DEDEDE; border-style: solid; border-width: 0px 1px 1px 1px; padding: 5px; width: 5em"
                colspan="2">
              <small>
              <ul id="filter">
            <li tal:repeat="search_link view/getSearchFilterLinks">
              <a href="#"
                 tal:content="python:search_link[0]"
                 tal:attributes="href python:search_link[1]">
                mozilla-firefox (Ubuntu)</a><span tal:condition="not:repeat/search_link/end"></span>
            </li>
            <li>
              <span tal:repeat="status_filter_link view/getStatusFilterLinks">
                <span tal:condition="repeat/status_filter_link/end">
                  <span tal:condition="python:repeat['status_filter_link'].length() > 1">
                    or
                  </span>
                </span>
                <a href="#"
                   tal:content="python:status_filter_link[0]"
                   tal:attributes="href python:status_filter_link[1]">
                  in progress
                </a><span tal:condition="not:repeat/status_filter_link/end">,</span></span>
            </li>
            <li tal:condition="view/getSearchTextFilterLink">contains
            <span tal:define="searchtext_filter_link view/getSearchTextFilterLink">
            <a href="#"
               tal:content="python:searchtext_filter_link[0]"
               tal:attributes="href python:searchtext_filter_link[1]">
              foobar
            </a>
            </span>
            in the title or description
              </li>
</ul>
              </small>
            </td>
          </tr>
        </table>
        <br />
        <div>
          <small>Results
            <strong tal:content="start_number">1</strong>
            -
            <strong tal:content="end_number">50</strong>
            of
            <strong tal:content="total">64</strong>
          </small>
        </div>
        <table class="results">
          <tr>
            <th width="8%">ID</th>
            <th width="60%">Summary</th>
            <th widtrh="16%">Importance</th>
            <th width="16%">Status</th>
          </tr>
          <tr tal:repeat="bugtask batch_navigator/batch">
            <td tal:content="bugtask/bug/id">42</td>
            <td>
              <a href="#"
                 tal:content="bugtask/bug/title"
                 tal:attributes="href bugtask/fmt:url">
                drop-down list in search bar disappears when using blah blah blah
              </a>
            </td>
            <td tal:content="bugtask/severity/title">Critical</td>
            <td tal:content="bugtask/status/title">Confirmed</td>
          </tr>
    </table>
    <div style="margin-bottom: 5px">
      <small>Results
        <strong tal:content="start_number">1</strong>
        -
        <strong tal:content="end_number">50</strong>
        of
        <strong tal:content="total">64</strong>
      </small>

      <span style="float: right">
        <small>
          <tal:previous condition="prev_page_url">
            <a tal:attributes="href prev_page_url" rel="previous"
               >&laquo; Previous</a>
          </tal:previous>
          <span
             tal:condition="not:prev_page_url"
             class="unavailable"
             >&laquo; Previous</span>
          <tal:intermediaries repeat="page_url batch_navigator/batchPageURLs">
            <a
               tal:condition="python:len(page_url) > 1"
               tal:content="python:page_url.keys()[0]"
               tal:attributes="href python:page_url.values()[0]"
               >[1]</a>
          </tal:intermediaries>
          <tal:next condition="next_page_url">
            &mdash;
            <a tal:attributes="href next_page_url" rel="next"
               >Next &raquo;</a>
          </tal:next>
          <span
             tal:condition="not:next_page_url"
             class="unavailable"
             >&mdash; Next &raquo;</span>
        </small>
      </span>
    </div>
      </div>
    </div>
    <div id="sidebar">
      <tal:notlogin condition="python: '+login' not in request.getURL()">
        <ul
          tal:define="facetmenu CONTEXTS/menu:facet"
          tal:condition="facetmenu"
          class="facets"
        >
          <tal:facet repeat="link facetmenu">
            <tal:available condition="link/enabled">
              <li
                tal:condition="link/selected"
                tal:attributes="title link/summary"
                class="current"
              >
                <a tal:condition="link/linked"
                  tal:attributes="href link/url"
                  tal:content="structure link/escapedtext"
                >abc</a>
                <span
                  tal:condition="not: link/linked"
                  tal:replace="structure link/escapedtext"
                >def</span>
                <tal:menu
                  condition="not:exists:body"
                  replace="structure CONTEXTS/@@+menubox"
                />
              </li>
              <li
                tal:condition="not: link/selected"
                tal:attributes="title link/summary"
              ><a
                  tal:attributes="href link/url"
                  tal:content="structure link/escapedtext"
                >ghi</a><span
                  class="disabled"
                  tal:condition="not: link/linked"
                  tal:content="structure link/escapedtext"
                >jkl</span></li>
            </tal:available>
            <li
              tal:condition="not: link/enabled"
              tal:attributes="title link/summary"
              tal:content="structure link/escapedtext"
              class="unavailable"
            />
          </tal:facet>
        </ul>
      </tal:notlogin>
      <div tal:content="structure context/@@+portlet-otherpackages" />
    </div>
    <div class="visualClear">&nbsp;</div>
  </div>
</body>
</html>
</tal:layout>
