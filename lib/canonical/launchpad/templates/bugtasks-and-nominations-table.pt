<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  omit-tag="">
<script type="text/javascript">
  function toggleFormVisibility(row_id) {
    row = document.getElementById(row_id)
    edit_icon = document.getElementById(row_id + "-edit")
    if (row.style.display=="none") {
      row.style.display = "table-row";
    } else {
      row.style.display = "none";
    }
    return false;
  }
</script>

<table tal:attributes="class python: context.duplicateof and 'duplicate listing' or 'listing'">
  <thead>
    <tr>
      <th colspan="2">Affects</th>
      <th>Status</th>
      <th>Importance</th>
      <th colspan="2">Assigned to</th>
    </tr>
  </thead>

  <tbody>
    <tal:bugtask-or-nomination
        repeat="task_or_nom view/getBugTasksAndNominations">
      <tal:block
          condition="task_or_nom/is_conjoined_slave"
          replace="structure task_or_nom/row_context/@@+bugtasks-and-nominations-table-row/renderConjoinedSlave" />
      <tal:block
          condition="not:task_or_nom/is_conjoined_slave"
          replace="structure task_or_nom/row_context/@@+bugtasks-and-nominations-table-row/renderNonConjoinedSlave" />
    </tal:bugtask-or-nomination>
  </tbody>

</table>

<div style="text-align: right; margin-bottom: 1em;"
     tal:condition="view/displayAlsoAffectsLinks"
     tal:define="current_bugtask view/currentBugTask">

  Also affects:
  <span style="white-space: nowrap">
      <img src="/@@/add" alt="+" />
      <a tal:attributes="href string:${current_bugtask/fmt:url}/+choose-affected-product"
         title="Record this bug as occurring in another project">
        Project&hellip;
      </a>
  </span>

  <span style="white-space: nowrap">
      <img src="/@@/add" alt="+" />
      <a tal:attributes="href string:${current_bugtask/fmt:url}/+distrotask"
         title="Record this bug as occurring in another distribution and/or package">
        Distribution/Package&hellip;
      </a>
  </span>

</div>
</tal:root>
