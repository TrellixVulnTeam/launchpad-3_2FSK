<div class="portlet" id="portlet-milestones"
     tal:condition="context/milestones">
  <h2>Active milestones</h2>
  <div class="portletBody portletContent">
    <ul tal:condition="context/milestones">
      <li class="milestone" tal:repeat="milestone context/milestones">
        <a tal:content="milestone/name"
           tal:attributes="href milestone/fmt:url">
           milestone name
        </a>
      </li>
    </ul>
    <p><a tal:attributes="href string:${context/fmt:url}/+milestones">
      All milestones</a>
    </p>
  </div>
</div>
