
<p tal:condition="not: view/workload">
  <i><span tal:replace="context/browsername">Ubuntu</span> is not currently
  responsible for any specifications.</i>
</p>

<tal:workload condition="view/workload">

  <table class="listing sortable"
         tal:attributes="id string:specwork_${context/name}">
    <thead>
      <tr>
        <th>Priority</th>
        <th>Specification</th>
        <th>Defn.</th>
        <th>Delivery</th>
        <th>Assgn</th>
        <th>Drft</th>
        <th>Apprv</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="spec view/workload" class="lesser">
        <td width="80">
          <span style="display: none"
                tal:content="spec/spec/priority/value" />
          <span tal:content="spec/spec/priority/title"
                tal:attributes="
                class string:specpriority${spec/spec/priority/name}">High
          </span>
        </td>
        <td>
          <a tal:content="spec/spec/name"
             tal:attributes="href spec/spec/fmt:url">foo-bar</a>
        </td>
        <td width="80">
          <span style="display: none"
                tal:content="spec/spec/status/value" />
          <span tal:content="spec/spec/status/title"
                tal:attributes="
                class string:specstatus${spec/spec/status/name}">Approved
          </span>
        </td>
        <td width="80">
          <span style="display: none"
                tal:content="spec/spec/delivery/value" />
          <span tal:content="spec/spec/delivery/title"
                tal:attributes="
                class string:specdelivery${spec/spec/delivery/name}">Slow
          </span>
        </td>
        <td width="40">
          <tal:assignee condition="spec/assignee">X</tal:assignee>
        </td>
        <td width="40">
          <tal:drafter condition="spec/drafter">X</tal:drafter>
        </td>
        <td width="40">
          <tal:approver condition="spec/approver">X</tal:approver>
        </td>
      </tr>
    </tbody>
  </table>
    
</tal:workload>

