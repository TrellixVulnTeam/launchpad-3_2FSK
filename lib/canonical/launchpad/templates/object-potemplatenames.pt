<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <h1>
        PO template names for
        <tal:thing replace="context/displayname">product or source package</tal:thing>
      </h1>
    </metal:heading>


<div metal:fill-slot="main">

    <div tal:condition="view/potemplatenames">

        <table class="listing">
          <tbody>
            <tr>
              <td>
                <dl class="potemplatenames">
                  <tal:block repeat="potemplatename view/potemplatenames">
                    <dt>
                      <a tal:attributes="href string:/potemplatenames/${potemplatename/id}"
                        ><dfn
                          tal:content="potemplatename/title"
                        >$POTemplateName.title</dfn>
                        (<span
                          tal:replace="potemplatename/name"
                        >$POTemplateName.name
                      </span>)</a>
                    </dt>
                    <dd tal:content="potemplatename/description">
                      $POTemplateName.description
                    </dd>
                  </tal:block>
                </dl>
              </td>
            </tr>
          </tbody>
        </table>

    </div>

      <ul>
        <li class="add">
          <a href="/potemplatenames/+add">Add a PO template name</a>
        </li>
      </ul>
    </div>
  </body>
</html>
