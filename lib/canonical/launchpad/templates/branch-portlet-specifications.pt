<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  class="portlet" id="portlet-blueprints"
  tal:condition="context/spec_links">
  <h2>Blueprints</h2>
  <div class="portletBody portletContent">
    <ul class="blueprint">
      <li tal:repeat="speclink context/spec_links">
        <a tal:attributes="href speclink/specification/fmt:url"
           tal:content="speclink/specification/title">Spec title</a>
        <a tal:condition="speclink/required:launchpad.AnyPerson"
           tal:attributes="href speclink/fmt:url"
          ><img src="/@@/edit" title="Change this blueprint link" /></a><tal:block condition="speclink/summary"><br/>
        <i tal:content="speclink/summary">summary</i></tal:block>
      </li>
    </ul>
  </div>
</div>
