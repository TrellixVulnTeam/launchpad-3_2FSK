<tal:link-enabled
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  condition="context/enabled"
><a
  href=""
  class=""
  title=""
  tal:condition="context/icon"
  tal:attributes="
    class string:menu-link-${context/name} sprite ${context/icon};
    href context/url;
    title context/summary;
  "
  tal:content="structure context/escapedtext"
/><a

  tal:condition="not:context/icon"
  style="line-height: 20px;"
  href=""
  class=""
  title=""
  tal:attributes="
    class string:menu-link-${context/name};
    href context/url;
    title context/summary;
  "
  tal:content="structure context/escapedtext"
/></tal:link-enabled>
