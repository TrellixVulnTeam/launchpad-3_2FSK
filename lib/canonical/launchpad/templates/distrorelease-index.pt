<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
  <body>
    <metal:portlets fill-slot="portlets">
      <tal:portlet replace="structure context/@@+portlet-lifecycle" />
    </metal:portlets>

<div metal:fill-slot="main" tal:define="distro context/distribution">

      <h1 tal:content="context/displayname">Luix 5.10</h1>
      <ul class="buttons">
        <li>
          <a href="+filebug">
            <img alt="Report a bug" src="/+icing/but_sml_reportabug.gif" />
          </a>
        </li>
        <li>
          <a href="+translations">
            <img alt="Help translate" src="/+icing/but_sml_helptranslate.gif" />
          </a>
        </li>
        <li>
          <a href="+addticket">
            <img
              alt="Ask a question"
              src="/+icing/but_sml_requestsupport.gif"
            />
          </a>
        </li>
      </ul>
      <img alt="" class="mugshot" src="/@@/nyet-mugshot" />
      <div tal:replace="structure context/summary/fmt:text-to-html" />
      <div tal:replace="structure context/description/fmt:text-to-html" />
      <tal:packages condition="context/binarycount">

      <form name="search" action="+search" method="GET">
        <input size="35" type="text" name="text"/>
        <input type="submit" value="Find a Package"/>
      </form>
      
      </tal:packages>

    <tal:block tal:condition="not: context/binarycount">

        <p>
          <tal:distrorelease replace="context/title" />
          has no packages recorded in Launchpad.
        </p>

    </tal:block>

      <div class="left">
        <div
          class="section"
          tal:condition="context/milestones"
          tal:content="structure context/@@+portlet-milestones"
        />
        <div
          class="section"
          tal:condition="context/getLastUploads"
          tal:content="structure context/@@+last-uploads"
        />
        <div class="section" tal:condition="context/architectures">
          <h2>Architectures</h2>
          <ul class="architecture">
            <li tal:repeat="architecture context/architectures">
              <a tal:attributes="href architecture/fmt:url">
                <tal:name replace="architecture/displayname" />
                <tal:official condition="architecture/official"
                >(official)</tal:official>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="right">
        <div
          class="section"
          tal:content="structure context/@@+portlet-details"
        />
        <div
          class="section"
          tal:content="structure context/@@+portlet-latestbugs"
        />
        <div
          class="section"
          tal:content="structure context/@@+portlet-latestspecs"
        />
      </div>
    </div>
  </body>
</html>
