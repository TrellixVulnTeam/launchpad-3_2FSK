<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

    <div id="not-translated-in-launchpad">
      <strong>
      <div tal:omit-tag
        tal:condition="context/translations_usage/enumvalue:UNKNOWN">
        Launchpad does not know what
        <tal:project replace="context/displayname" /> uses for
        translations.
      </div>
      <div tal:omit-tag
        tal:condition="context/translations_usage/enumvalue:EXTERNAL">
        <tal:project replace="context/displayname" /> is not using Launchpad 
        for translations.
      </div>
      <div tal:omit-tag
        tal:condition="context/translations_usage/enumvalue:NOT_APPLICABLE">
        <tal:project replace="context/displayname" /> does not use
        translansations. 
      </div>
      </strong>
      <ul>
        <li>
          <a tal:replace="structure context/menu:overview/configure_translations/fmt:link"/>
        </li>
        <li>
          <a href="/+help/getting-started-for-your-project.html" target="help"
            >Getting started with translating your project in Launchpad</a>
        </li>
      </ul>
    </div>
    <div id="ubuntu-translations"
      tal:define="packages context/ubuntu_packages | nothing"
      tal:condition="packages">
      <tal:project replace="context/displayname" /> messages are
      tracked in: <tal:packages repeat="package packages">
        <tal:package replace="structure package/fmt:link" /><tal:comma
        condition="not:repeat/package/end">, </tal:comma></tal:packages>.
    </div>
    <div id="automatic-imports">
      <!-- Auto imports here -->
    </div>

</tal:root>
