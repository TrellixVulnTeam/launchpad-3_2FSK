<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  tal:define="context_menu context/menu:context">

  <h2>Related source package recipes</h2>

  <div id="recipes">
    <img src="/@@/package-source" />
    <a href="+recipes" tal:content="structure view/recipe_count_text">
      1 branch
    </a>
    based off of this branch.

  </div>

  <div
    tal:define="link context_menu/create_recipe"
    tal:condition="link/enabled"
    tal:replace="structure link/render"
    />


</div>
