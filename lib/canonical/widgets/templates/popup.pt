
<input type="text"
    tal:attributes="value view/formToken; id view/name; name view/name; size view/displayWidth; maxlength view/displayMaxWidth; cssClass view/cssClass" />

<select
    tal:define="matches view/matches" 
    tal:condition="python:len(matches) > 0"
    tal:attributes="disabled python:len(matches) == 1">
    <option
        tal:repeat="match matches"
        tal:attributes="value match/token;
            selected python:path('match/token') == path('view/formToken');
            onclick string:this.form['${view/name}'].value = this.value"
        tal:content="match/title" 
        />
</select>

<a tal:attributes="href view/popupHref">(list)</a>

