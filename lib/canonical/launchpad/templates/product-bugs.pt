<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="malone">

<body>

<div metal:fill-slot="column_one">
</div>

<div metal:fill-slot="main" class="visualPadding">
    <h1>Bug reports on upstream
        <span tal:replace="context/displayname">$Product.displayname</span>
    </h1>

    <div class="documentDescription"
        tal:content="context/summary">$Product.summary
    </div>

    <div metal:use-macro="context/@@bugtask_search_listing/buglisting" />

    <p tal:condition="not: context/bugtasks">No bugs filed against
        <span tal:replace="context/displayname">$Product.displayname</span>
    </p>
    <ul>
      <li style="list-style-image: url(/++resource++add.gif)">
        <a href="+filebug">Report a new bug</a>
      </li>
      <li style="list-style-image: url(/++resource++product_icon.gif)">
        <a tal:attributes="href string:/products/${context/name}"
        ><span tal:replace="context/displayname">Product</span>
        details</a>
      </li>
    </ul>
</div>

</body>
</html>
