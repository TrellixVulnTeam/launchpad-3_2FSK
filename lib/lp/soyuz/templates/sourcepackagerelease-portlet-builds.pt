<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-builds" tal:condition="context/builds">

  <h2>Builds</h2>

  <div class="portletBody portletContent">

    <ul>
      <li tal:repeat="build context/builds">
        <a tal:attributes="href build/fmt:url">
          <span tal:replace="build/distroarchseries/distroseries/name">
            hoary
          </span>
          <span tal:content="build/distroarchseries/architecturetag">i386</span>
        </a>
        <span tal:replace="build/buildstate/title">Failure</span>
        <span tal:condition="build/package_upload">
          (<span tal:replace="build/package_upload/status/name">NEW</span>)
        </span>
      </li>
    </ul>

  </div>

</div>
</tal:root>
