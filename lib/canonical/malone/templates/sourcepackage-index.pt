<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="malone">
<body>

<div metal:fill-slot="main">
    <h1>Source package: 
        <span tal:content="context/title">$Sourcepackage.title</span>
    </h1>
    <div class="documentDescription"
        tal:content="context/description">$Sourcepackage.description
    </div>

    <h2>Bugs assigned to this package</h2>
    
    <table class="listing rowNavigation">
        <tr>
            <th>Bug</th>
            <th>Status</th>
            <th>Severity</th>
            <th>Priority</th>
            <th>Binary Package</th>
        </tr> 
        <tr tal:repeat="bugass context/bugs"
            tal:attributes="onclick
                string:window.location='../../bugs/${bugass/bug/id}';">
            <td>
                <a href="#" 
                    tal:attributes="href string:../../bugs/${bugass/bug/id}"
                    tal:content="bugass/bug/title">
                    $Bug.title</a>
            </td>
            <td tal:content="bugass/bugstatus/lp:BugAssignmentStatus">
                $SourcepackageBugAssignment.bugstatus
            </td>
            <td tal:content="bugass/severity/lp:BugSeverity">
                $SourcepackageBugAssignment.severity
            </td>
            <td tal:content="bugass/priority/lp:BugPriority">
                $SourcepackageBugAssignment.priority
            </td>
            <td>
                <span tal:content="bugass/binarypackage/binarypackagename/name">
                    $BinarypackageName.name
                </span>
                <span tal:content="bugass/binarypackage/version">
                    $Binarypackage.version
                </span>
            </td>
        </tr>
    </table>

    <h2>Affected packages</h2>
    
    <table class="listing" xtal:repeat="prod context/products">
        <tr>
            <th rowspan="2">Package</th>
            <th colspan="5">Severity</th>
        </tr>
        <tr>
            <th>Critical</th>
            <th>Major</th>
            <th>Normal</th>
            <th>Minor</th>
            <th>Wishlist</th>
        </tr>  
        <tr xtal:repeat="bug prod/bugs">
            <td>
                <a xtal:attributes="href "
                   xtal:content="bug/bug/title">Binary Package name</a>
            </td>
            <td xtal:content="">1</td>
            <td xtal:content="">5</td>
            <td xtal:content="">7</td>
            <td xtal:content="">1</td>
            <td xtal:content="">7</td>
        </tr>
    </table>

</div>

</body>
</html>
