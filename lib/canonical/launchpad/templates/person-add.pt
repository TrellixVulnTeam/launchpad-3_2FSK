<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">FOAF: Create a New Team</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>


<div metal:fill-slot="main">

    <div id="content" class="documentEditable">
        <ul class="contentViews">
            <li id="contentview-view" class="plain">
                <a href=".">View</a>
            </li>

	    <li id="contentview-packages" class="plain">
                <a href="+packages">Packages</a>
            </li>

            <li tal:condition="view/permission"
	        id="contentview-edit" class="plain">
                <a href="+edit">Edit</a>
            </li>

	    <li tal:condition="view/permission"
	        id="contentview-add" class="selected">
                <a href="+add">Add</a>
            </li>

        </ul>

        <div class="documentContent" id="region-content">

      <div class="portalMessage" 
           tal:condition="not:view/permission">
	   <p>Warning: You are not authorized to change this page. If you
	      change something your changes will be lost.
	   <div align="right"><a href="index.html"><i>back</i></a></div>
      </div>

    <div tal:condition="view/permission">
    <h1>Create a New Team</h1>

    <div class="documentDescription">	
    <p> Here you can create a new Team
    </div>
    
    <div tal:condition="view/add_action">
         <p> <a tal:attributes="href string:../${view/results/name}"
                tal:content="view/results/displayname">NAME</a> 
                Team added
    </div>

    <div>
    <form name="add" action="" method="POST">

    <legend><h3>Create a New team</h3><legend>
	<table>
	<tr><td>
	<div class="field">
	    <label>Display Name</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter the Display Name.
            </div>
	    <input type="text" name="displayname"
	    tal:attributes="value request/displayname|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Team Description</label>
	    <div class="formHelp">
	    Enter the Team Description.
            </div>
            <textarea name="teamdescription" cols="40" rows="4"
	    tal:content="request/teamdescription|nothing">
	    </textarea>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Email Address</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter the Email Address.
            </div>
	    <input type="text" name="email"
	    tal:attributes="value request/email|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Password</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter a Password.
            </div>
	    <input type="password" name="password"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Retype Password</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter the same Password Again.
            </div>
	    <input type="password" name="retype"/> 
	</div>
	</td></tr>
	<tr><td>
	<div class="formControls">
	  <input type="submit" value="Create"/>
	</div>
	</td></tr>
	</table>
  </form>
  </div>
  </div>

  </div>
 </div>
</div>

</body>
</html>
