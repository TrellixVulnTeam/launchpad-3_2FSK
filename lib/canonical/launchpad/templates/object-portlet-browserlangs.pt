<div class="portlet" tal:condition="view/browserLanguages">

    <h4>Your browser languages:</h4>

    <div class="portletBody">

        <div class="portletContent">

          <ul>
            <li class="languages"
                tal:repeat="lang view/browserLanguages">
              <span tal:replace="lang/englishname" />
            </li>
          </ul>

        </div>
    </div>
</div>
