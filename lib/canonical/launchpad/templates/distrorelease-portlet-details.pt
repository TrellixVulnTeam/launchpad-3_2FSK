<table class="summary">
  <tbody>
    <tr>
      <th>Drivers:</th>
      <td>
        <ul tal:condition="context/drivers">
          <li tal:repeat="driver context/drivers">

      <a tal:content="driver/browsername"
         tal:attributes="href driver/fmt:url">Carlos Perello</a>

          </li>
        </ul>
        <tal:none condition="not:context/drivers">None specified</tal:none>
      </td>
    </tr>
    <tr>
      <th>Status:</th>
      <td tal:content="context/releasestatus/title" />
    </tr>
    <tr>
      <th>Source packages:</th>
      <td tal:content="context/sourcecount" />
    </tr>
    <tr>
      <th>Binary packages:</th>
      <td tal:content="context/binarycount" />
    </tr>
    <tr tal:condition="context/parentrelease">
      <th>Derives from:</th>
      <td>
        <a tal:attributes="href context/parentrelease/fmt:url">
          <tal:distro
            replace="context/parentrelease/distribution/displayname"
          />
          <tal:distrorelease replace="context/parentrelease/displayname" />
        </a>
      </td>
    </tr>
  </tbody>
</table>
