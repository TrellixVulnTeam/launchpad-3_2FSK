<div class="portlet">

  <h2><span tal:replace="context/target/displayname">Ubuntu</span> question
      #<span tal:replace="context/id">234</span></h2>

  <div class="portletBody portletContent">

    <b>Question from:</b><br />
    <a tal:replace="structure context/owner/fmt:link">Foo Bar</a><br />

    <b>Language:</b>
    <span tal:replace="context/language/englishname">English</span><br />

    <b>Status:</b>
    <span tal:replace="context/status/title">Open</span><br />

    <b>Priority:</b>
    <span tal:replace="context/priority/title">Normal</span><br />

    <b>For:</b>
    <span tal:condition="context/product"
          tal:replace="context/product/name">Firefox</span>
    <span tal:condition="context/distribution"
          tal:replace="context/distribution/name">ubuntu</span>
    <span tal:condition="context/sourcepackagename"
          tal:replace="context/sourcepackagename/name">moz-ff</span>
    <br />

    <tal:block condition="context/datedue">
      <b>Due:</b>
      <span tal:replace="context/datedue/fmt:date" /><br />
    </tal:block>

    <b>Created:</b>
    <span tal:replace="context/datecreated/fmt:datetime" /><br />

    <b>Assignee:</b><br />
    <tal:block condition="context/assignee">
      <a tal:replace="structure context/assignee/fmt:link">Foo Bar</a>
    </tal:block>
    <tal:block condition="not: context/assignee">
      <i>No assignee</i>
    </tal:block>
    <br />

    <tal:block condition="context/answerer">
      <b>Solved by:</b><br />
      <a tal:replace="structure context/answerer/fmt:link">Foo Bar</a>
      <br />
    </tal:block>

    <b>Last query:</b>
    <span tal:replace="context/datelastquery/fmt:date" /><br />

    <tal:block condition="context/datelastresponse">
      <b>Last reply:</b>
      <span tal:replace="context/datelastresponse/fmt:date" /><br />
    </tal:block>

    <tal:block condition="context/dateanswered">
      <b>Solved:</b>
      <span tal:replace="context/dateanswered/fmt:date" /><br />
    </tal:block>

  </div>

</div>
