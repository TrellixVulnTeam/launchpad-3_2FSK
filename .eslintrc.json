{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "$": false,
        "LP": true,
        "YUI": false,
        "YUI_config": true
    },
    "rules": {
        "eqeqeq": [
            "error",
            "smart"
        ],
        "guard-for-in": "error",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "max-len": [
            "error",
            {
                "ignoreRegExpLiterals": true
            }
        ],
        "no-new": "error",
        "no-tabs": "error",
        "no-trailing-spaces": "error",
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
