<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">Launchpad: Complete List</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
</head>

<body>

<div metal:fill-slot="main">

    <p>A complete list:</p>

    <div tal:repeat="item context" tal:omit-tag>

        <p><b tal:content="item/title">title</b>
            [ <a tal:attributes="href string:${item/name}">View</a> ]
        </p>

        <p style="margin-left: 30px;"
           tal:content="item/summary">summary
        </p>

    </div>

</div>

</body>
</html>
