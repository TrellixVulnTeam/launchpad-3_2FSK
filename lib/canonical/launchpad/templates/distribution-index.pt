<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="view/macro:page/default"
  i18n:domain="launchpad"
>
<body>
  <metal:portlets fill-slot="portlets">
    <tal:portlet replace="structure context/@@+portlet-lifecycle" />
    <tal:portlet replace="structure context/@@+portlet-milestones" />
  </metal:portlets>

<div metal:fill-slot="main">

   <link rel="alternate" type="application/atom+xml" 
         tal:attributes="title string:Announcements for ${context/displayname};
                         href view/feed_url" />

      <span tal:replace="structure context/image:mugshot" />
      <h1 tal:content="context/title">Ubuntu Linux</h1>
      <div
        class="description"
        tal:content="structure context/summary/fmt:text-to-html"
      />
      <div
        class="description"
        tal:content="structure context/description/fmt:text-to-html"
      />
      <ul class="buttons">
        <li>
          <a href="+filebug">
            <img alt="Report a bug" src="/+icing/but-sml-reportabug.gif" />
          </a>
        </li>
        <li tal:content="structure context/@@+ask-a-question-button" />
        <li tal:content="structure context/@@+help-translate-button" />
        <li tal:define="has_mentoring context/mentoring_offers/count">
          <a href="+mentoring" tal:condition="has_mentoring">
            <img alt="Mentoring available"
                 src="/+icing/but-sml-mentoring.gif"/>
          </a>
          <a href="+mentoring" tal:condition="not: has_mentoring">
            <img alt="No mentoring available"
                 src="/+icing/but-sml-mentoring-off.gif" />
          </a>
        </li>
      </ul>

  <form name="search" action="+search" method="get">

    <input type="text"
      name="text"
      size="35"
      tal:attributes="value request/name|nothing" />

        <input type="submit" value="Find a Package"/>

  </form>

      <div class="left">
        <div
          class="section"
          tal:content="structure context/@@+portlet-coming-sprints"
        />
        <div
          class="section"
          tal:content="structure context/@@+portlet-latestannouncements"
        />
        <div
          class="portlet section"
          tal:condition="context/serieses">
          <h2>Series</h2>
          <ul class="distroseries">
            <tal:per_series repeat="series context/serieses">
              <li tal:condition="series/active">
                <a tal:attributes="href series/fmt:url">
                  <tal:version replace="series/version" />
                  "<tal:codename replace="series/displayname" />"
                </a>
                - <tal:status replace="series/status/name/fmt:lower" />
              </li>
            </tal:per_series>
          </ul>
          <a href="+series">See all versions...</a>
        </div>
        <div
          class="section"
          tal:condition="context/currentseries"
          tal:content="structure context/currentseries/@@+pagelet-architectures"
        />
        <div
          class="section"
          tal:content="structure context/@@+portlet-latestbugs" />
        <div
          class="section"
          tal:condition="context/currentseries"
          tal:content="structure context/currentseries/@@+portlet-latestuploads"
        />
      </div>

      <div class="right">
        <div
          class="two column section"
          tal:content="structure context/@@+portlet-details"
        />
        <div
          class="two column section"
          tal:content="structure context/@@+portlet-top-contributors"
        />
        <div
          class="two column section"
          tal:content="structure context/@@+portlet-latestspecs"
        />
        <div
          class="two column section"
          tal:content="structure context/@@+portlet-latestquestions"
        />
      </div>
    </div>
  </body>
</html>
