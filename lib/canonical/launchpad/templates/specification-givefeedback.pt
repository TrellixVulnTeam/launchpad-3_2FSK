<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-feedbackqueue" />
</metal:rightportlets>

<div metal:fill-slot="main">

  <h1>Give Feedback on Specification</h1>

  <p class="documentDescription">
    Use this form to indicate which feedback requests you have completed.
    Select the requests which you wish to remove from your queue.
  </p>

  <form action="." method="POST">

    <div class="actions">
      <input type="submit"
             name="cancel"
             value="Cancel" />
      <input tal:condition="view/feedbackrequests"
             type="submit"
             name="feedback"
             value="Feedback Completed" />
    </div>

  </form>

</div>

</body>
</html>
