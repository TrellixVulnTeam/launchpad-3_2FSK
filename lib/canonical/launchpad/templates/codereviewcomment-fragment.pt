<tal:root
   xmlns:tal="http://xml.zope.org/namespaces/tal"
   xmlns:metal="http://xml.zope.org/namespaces/metal"
   omit-tag="">
  <div class="boardCommentSummary" tal:attributes="id string:comment${context/id}">
    <div class="boardCommentDetails">
      <tal:voted tal:condition="context/vote">
        <strong tal:content="context/vote/title"
                tal:condition="context/vote"
                /><tal:colon condition="not: context/vote_tag"
                >:</tal:colon>
        <tal:has-tag condition="context/vote_tag">
          &mdash;
          <strong tal:content="context/vote_tag"
                  tal:condition="context/vote_tag" />:
        </tal:has-tag>
      </tal:voted>
      <tal:subject replace="context/message/subject" />
    </div>
    <div class="boardCommentBody">
      <tal:short-message-view condition="view/message_summary|nothing">
        <tal:message replace="structure view/message_summary/fmt:nice_pre" />
        <tal:long-message condition="view/is_long_message">
          (<a tal:attributes="href context/fmt:url" >full message</a>)
        </tal:long-message>
      </tal:short-message-view>
      <tal:full-message-view condition="not: view/message_summary|nothing">
        <tal:message replace="structure context/message/text_contents/fmt:nice_pre" />
      </tal:full-message-view>
    </div>
  </div>
  <div class="clearfix">
    <div style="float:right">
      <tal:author replace="structure context/message/owner/fmt:link:mainsite"/>
      <tal:date replace="context/message/datecreated/fmt:displaydate" />
      <tal:reply tal:define="link context/menu:context/reply"
                 tal:condition="link/enabled"
                 tal:replace="structure link/render">
        Add comment
      </tal:reply>
    </div>

  </div>
</tal:root>
