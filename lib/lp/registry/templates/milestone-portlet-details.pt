<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-details">

  <h2><span tal:replace="context/title">Milestone title</span> details</h2>

  <div class="portletBody portletContent">

    <b>Name:</b>
    <span tal:replace="context/name">foo</span><br />

    <tal:hascodename condition="context/code_name">
        <b>Codename:</b>
        <tal:codename replace="context/code_name" /><br/>
    </tal:hascodename>

    <b>Date expected:</b>
    <span
      tal:replace="context/dateexpected/fmt:approximatedate|nothing">
      2005-06-01
    </span>
    <i tal:condition="not: context/dateexpected">None set.</i>
    <br />

    <b>For:</b>
    <a tal:content="context/target/displayname"
       tal:attributes="href context/target/fmt:url">Ubuntu</a>
    <a tal:content="context/series_target/displayname"
       tal:condition="context/series_target"
       tal:attributes="href context/series_target/fmt:url">Hoary</a>
    <br />

  </div>

</div>
