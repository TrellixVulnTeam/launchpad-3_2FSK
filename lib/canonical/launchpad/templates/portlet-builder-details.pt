<div class="portlet">
   <h4><span tal:replace="context/title">BUILDER</span> Details:</h4>
   <div class="portletBody">
      <div class="portletContent">
        <b>Name</b><br/>
        <span tal:replace="context/title"/><br/>
        <b>Location</b><br/>
        <span tal:replace="context/url"/><br/>
        <b>Trusted</b><br/>
        <span tal:replace="context/trusted"/><br/>
        <b>Description</b><br/>
        <div tal:content="structure context/description/fmt:text-to-html"/>
        <b>Status</b><br/>
        <div tal:content="structure context/status/fmt:text-to-html"/>
        <b>Owner</b><br/>
        <a tal:attributes="href string:/people/${context/owner/name}"
           tal:content="context/owner/displayname">OWNER</a>       
      </div>
   </div>
</div>

