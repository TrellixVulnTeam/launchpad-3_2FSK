<table width="100%">
  <tr>
    <td width="10px">
      <img src="/@@/spec" />
    </td>
    <td width="80%">
      <a tal:attributes="
           href context/fmt:url;
           title context/name"
         tal:content="context/title">Spec Title Here</a>
      <img src="/@@/info" alt="Informational"
           title="Informational specification"
           tal:condition="context/informational" />
    </td>
    <td align="right" class="lesser">
    </td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td colspan="2" class="discreet">
      [<span tal:attributes="
               class string:specpriority${context/priority/name}"><span 
        tal:content="context/priority/title">High</span>
        Priority</span>]
      <span tal:replace="context/summary/fmt:shorten/600">summary</span>
      <tal:block condition="context/specurl">
        <img src="/@@/link" />&nbsp;<a
             tal:attributes="href context/specurl">Specification</a>
      </tal:block>
    </td>
  </tr>
</table>
