<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">
<body>

  <metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
  </metal:leftportlets>

  <div metal:fill-slot="main">

    <h1>Options of Poll 
      &#8220;<span tal:replace="context/title" />&#8221;
    </h1>

    <tal:block condition="context/getAllOptions">
      <table class="listing data">
        <thead>
          <tr>
            <th>Shortname</th>
            <th>Name</th>
            <th>Is Active?</th>
          </tr>
        </thead>
        <tr tal:repeat="polloption context/getAllOptions">
          <td>
            <a tal:attributes="href polloption/fmt:url">
              <span tal:replace="polloption/shortname" />
            </a>
          </td>
          <td>
            <span tal:replace="polloption/name" />
          </td>
          <td>
            <span tal:condition="polloption/active">Yes</span>
            <span tal:condition="not: polloption/active">No</span>
          </td>
        </tr>
      </table>
    </tal:block>

    <tal:block condition="not: context/getAllOptions">
      <p>This poll doesn't have any options for people to vote on.</p>
    </tal:block>

    <ul class="add">
      <li><a href="+newoption">Create a new Option for this Poll</a></li>
    </ul>

  </div>

</body>
</html>

