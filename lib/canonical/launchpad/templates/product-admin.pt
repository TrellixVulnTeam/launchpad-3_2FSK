<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="context/@@main_template/master"
  i18n:domain="launchpad"
>

<body>

<metal:leftportlets fill-slot="portlets_one">
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-details" />
  <div tal:condition="context/project"
       tal:replace="structure context/project/@@+portlet-details" />
</metal:rightportlets>

<div metal:fill-slot="main">

  <div style="margin-bottom: 1em">
    This project was registered by <a tal:attributes="href
    context/owner/fmt:url" tal:content="context/owner/unique_displayname" />
    <a tal:condition="context/owner/preferredemail" 
       tal:attributes="href string:mailto:${context/owner/preferredemail/email}"
       tal:content="string: &lt;${context/owner/preferredemail/email}&gt;" /> on
    <span tal:replace="context/datecreated/fmt:datetime" />
  </div>

  <div metal:use-macro="context/@@launchpad_form/form" />
    
</div>

</body>
</html>
