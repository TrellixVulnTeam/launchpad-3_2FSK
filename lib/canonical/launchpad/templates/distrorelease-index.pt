<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>


<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" /> 
  <div tal:replace="structure context/distribution/@@+portlet-details" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-actions" />
  <div tal:replace="structure context/@@+portlet-translations" /> 
  <div tal:replace="structure context/@@+portlet-langstats" /> 
</metal:rightportlets>

<div metal:fill-slot="main" tal:define="distro context/distribution">
    
    <h1>Distribution release overview</h1> 

        <div class="documentDescription"
             tal:content="structure context/summary/fmt:text-to-html">
             Release summary
        </div>
            
        <tal:description content="structure context/description/fmt:text-to-html">
          description
        </tal:description>

        <tal:architectures condition="context/architectures">
          <h2>Architectures</h2>

      <ul>
          <li tal:repeat="arch context/architectures">
	    <a tal:attributes="href arch/architecturetag">
	      <span tal:replace="arch/processorfamily/name" />:
        <span tal:replace="arch/processorfamily/title" /></a>
             (<span tal:replace="arch/architecturetag"/>) 
          </li>
      </ul>
        </tal:architectures>

      <tal:block tal:define="sourcecount context/sourcecount "
                 tal:condition="sourcecount" tal:omit-tag>
      <h2>Packages</h2>

      <p>This release of
      <span tal:replace="context/distribution/displayname" /> contains
      <span tal:replace="context/binarycount" /> software packages, 
      across <span tal:replace="context/architecturecount" /> architectures
      from a total of <span tal:replace="sourcecount" /> source
      packages.</p>

          <div tal:condition="sourcecount">

              <form name="search" method="POST" action="+packages">
               <div class="formControls">
                <label>Search:</label>
                <input title="Search for a package" size="30"
                   type="text" name="text"/>
                <input type="submit" value="Search"/>
               </div>
              </form>
 
              <table>
              </table>

          </div>

      </tal:block>

</div>

</body>
</html>
