<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Rosetta style sheet -->
    <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>

<div metal:fill-slot="main">

    <h1><span
    tal:content="context/release/displayname">displayname</span> 
    Overview</h1> 

   <table width="100%" border="0">
   <tr><td>
      <table width="100%">
      <legend><h4>Description</h4></legend>
      <tr><td>
        <fieldset>
        <div>
	  <table>
	  <tr><td>
	  <span tal:content="context/release/description">description</span>   
	  <br>
	  <br>
	  <br>
	  <br>
	  </td></tr>
	  </table>
	</div>
      </td></tr>
      </table>
   </td><td>
      <table width="100%">
      <legend><h4>Release Information</h4></legend>
      <tr><td>
       <fieldset>
       <div>      
         <table width="100%">
         <tr><td>Owner</td>
         <th align="right"> 
           <a tal:attributes="href string:../../../../people/${context/release/owner/id}"
	      tal:content="context/release/owner/displayname">OWNER</a>
         </th></tr> 
         <tr><td>State</td>
         <th align="right">
           <span tal:content="context/release/state">STATE</span>
         </th></tr>
         <tr><td>DateReleased</td>
         <th align="right">
           <span tal:content="context/release/datereleased">DATERELEASED</span>
         </th></tr>
         <tr tal:condition="context/release/parentrelease">
	 <td>ParentRelease</td>
         <th align="right"><a 
	 tal:attributes="href string:../${context/release/parentrelease/name}">
           <span tal:content="context/release/parentrelease/title">
	   PARENTRELEASE</span></a>
         </th></tr>
         </table>
       </div>
      </td></tr>
      </table>
   </td></tr>
   <tr><td></td>
   <th align="right">
      <a href="+edit">Edit Release Information</a>
   </th></tr>
   <tr><td>
     <div class="dummy">
      <table width="100%">
      <legend><h4>Release Bugs (XXX)</h4></legend>
      <tr><td>
        <fieldset>
        <div>
	<table>
	<tr><th>120</th><th>Openned Bugs</th></tr>
	<tr><th>20</th><th>Resolved Bugs</th></tr>
	<tr><th>12</th><th>Security Bugs</th></tr>
	</table>
	</div>
      </td></tr>
      </table>
     </div> 
   </td><td>
     <div class="dummy">
      <table width="100%">
      <legend><h4>Releases Translations (XXX)</h4></legend>
      <tr><td>
        <fieldset>
        <div>
	<table>
	<tr><th>Welsh</th></tr>
	<tr><th>English</th></tr>
	<tr><th>Japanese</th></tr>
	</table>
	</div>
      </td></tr>
      </table>
     </div>   
   </td></tr>
   <tr>
   <th align="right">
   <a href="+bugs">More <span tal:content="context/release/title"/> Bugs</a>
   </th><th align="right">
   <a href="+translations">More <span
      tal:content="context/release/title"/> Translations</a> 
   </th></tr>
   <tr><td>
     <div>
      <table width="100%">
      <legend><h4>Release Team</h4></legend>
      <tr><td>
        <fieldset>
        <div>
	<table>
	<tr tal:repeat="role context/roles">
	 <td>
	  <a tal:attributes="href string:../../../../people/${role/person/id}"
	     tal:content="role/person/displayname">TEAM</a>
         </td>
	 <td tal:content="role/rolename">ROLE</td>
        </tr>	
	</table>
	</div>
      </td></tr>
      </table> 
     </div>   
   </td></tr>
   <tr><th align="right">
   <a
   tal:attributes="href string:../../team/${context/release/name}">
   More <span tal:content="context/release/title"/> Teams</a>   
   </th></tr>
   <tr><td>
      <table>
      <legend><h4><span tal:content="context/release/title"/>
      Packages</h4></legend>
      <tr><td>
      <fieldset>
      <div>
        <table>
	<tr><td>
        <form name="search" method="POST" action="+search">
         <div class="field">
	    <label>Name</label>
	    <div class="formHelp">
	    Enter the package name .
            </div>
	    <input type="text" name="name"/>
	 </div>
	 <div class="formControls">
	    <input type="submit" value="Search"/>
	 </div>
	 </form>
	 </td>
	 <td>
	 <div>
	    <table>
	    <tr><th><a 
	    tal:attributes="href string:../../src/${context/release/name}">
	    View Source Packages List</a></th>
	    <th>(<span tal:content="context/release/sourcecount"/> 
	    Packages)</th>
	    </tr><tr>
	    <th><a
	    tal:attributes="href string:../../bin/${context/release/name}">
	    View Binary Packages List</a></th>
	    <th>(<span tal:content="context/release/binarycount"/> 
	    Packages)</th>
	    </tr>
	    </table>
	 </div>
      </td></tr>
      </table>	
      </div>
      </td></tr>
      </table>
   </td></tr>
   <tr><th>
   <a href="+deliver">Deliver <span tal:content="context/release/title"/></a>
   </th></tr>
   </table>   

</div>




</body>
</html>
