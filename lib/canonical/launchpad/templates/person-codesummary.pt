<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  id="page-summary"
  tal:condition="view/show_summary">

  <p>
    <strong class="count" tal:content="view/owned_branch_count">100</strong>
    <tal:link
        define="link context/menu:branches/owned"
        replace="structure link/render"
        />,
    <strong class="count" tal:content="view/registered_branch_count">100</strong>
    <tal:link
        define="link context/menu:branches/registered"
        replace="structure link/render"
        />,
    <strong class="count" tal:content="view/subscribed_branch_count">100</strong>
    <tal:link
        define="link context/menu:branches/subscribed"
        replace="structure link/render"
        />
  </p>
  <p id="merge-counts">
    <strong class="count" tal:content="view/active_review_count">5</strong>
    <tal:link
        define="link context/menu:branches/active_reviews"
        replace="structure link/render"
        />,
    <strong class="count" tal:content="view/approved_merge_count">5</strong>
    <tal:link
        define="link context/menu:branches/approved_merges"
        replace="structure link/render"
        />,
    <strong class="count" tal:content="view/requested_review_count">5</strong>
    <tal:link
        define="link context/menu:branches/requested_reviews"
        replace="structure link/render"
        />
  </p>
</div>
