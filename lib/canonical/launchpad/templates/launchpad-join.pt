<tal:do-this-first tal:content="view/process_form" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<div metal:fill-slot="main">

  <div tal:condition="not: view/registration_success">
    <h1>Join The Launchpad</h1>

    <div class="formHelp">
      To create an account in The Launchpad please enter your
      email address on the form below. We will send an email
      to verify your address, containing a URL which you can
      use to complete the registration process. Please note that
      we will never disclose, share or sell your personal information.
    </div>

    <div class="portalMessage" tal:condition="view/registration_error"
         tal:content="structure view/registration_error" />

    <p> </p>

    <div class="documentContent" id="region-content">
      <br />
      <form name="join" action="" method="POST">
      <table>
        <tr>
          <td><b>Email address:</b></td>
          <td><input type="text" size="40" name="email"
                     tal:attributes="value view/email|nothing" /></td>
          <td>
            <input type="submit" name="SUBMIT" value="Join" />
          </td>
        </tr>
      </table>
      </form>
    </div>
  </div>

  <div tal:condition="view/registration_success">

    <h1>Thank You</h1>

    <p> </p>

    <div class="documentContent" id="region-content">
      <br />
      <p>Your registration URL has been sent to
      <b tal:content="view/email">email@address</b>.
      Thank you for your interest in the Launchpad!</p>
    </div>
  </div>

</div>
</body>

</html>

