<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-contributors"
     tal:condition="view/contributors">
  <h2>Contributors</h2>

  <div class="portletBody">

    <div class="portletContent"
         tal:define="contributors view/contributors">

      <ul tal:condition="contributors">
        <li tal:repeat="contributor contributors" class="person">
          <a tal:content="contributor/browsername"
             tal:attributes="href contributor/fmt:url"
             >Mark Shuttleworth</a><br />
        </li>
      </ul>
      <p tal:condition="not: contributors">
        <i>No contributors yet</i>.
      </p>
    </div>
  </div>
</div>
</tal:root>
