<tal:do-this-first tal:content="view/process_form" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
  <title metal:fill-slot="title">Forgot your Password?</title>
  <style type="text/css" media="screen">@import url(plone.css);</style>
</head>

<body>

<div metal:fill-slot="main">

<div id="content" class="documentEditable">

<div>
  <h1> Forgot your password? </h1>

  <div tal:condition="not: view/success">

    <div class="error" tal:condition="view/errortext"
      tal:content="view/errortext" />
   
    <p class="documentDescription">
      Enter your registration email address on the form below.  
      You will receive an email with instructions on how to reset your password. 
    </p>


    <form name="forgottenpassword" method="POST">
    <div class="field">
      <label for="email">Email address</label>
        <div class="formHelp">
          Make sure this is the email address you registered with.
        </div>
        <input type="text" size="50" name="email" />
        <div class="formControls">
          <input type="submit" value="Submit" />
        </div>
    </div>
    </form>
    </div>
  </div>

  <div tal:condition="view/success">
    <div class="documentDescription">
       You have been sent an email with instructions to reset your password.
  </div>

</div>
</div>
</div>

</body>
</html>
