<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">Launchpad Product Registry</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Launchpad style sheet -->
    <style type="text/css" media="screen">@import url(launchpad.css);</style>
</head>

<body>

<metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure view/detailsPortlet" />
</metal:leftportlets>


<div metal:fill-slot="main">

    <h1>Launchpad Product Registry</h1>

    <form method="post">

        <fieldset>

            <legend>Search for a product</legend>

            <input name="text" size="45" tal:attributes="value view/text" />
            &nbsp;
            <input type="submit" value="Search" />
            &nbsp;
            <a style="font-size: 0.85;" href="+search">Advanced
            Search</a>
            
            <p class="formHelp">
            Enter any part of the product name, title or
            description.
            </p>

        </fieldset>

    </form>

    <div tal:condition="view/searchrequested">

        <table class="rowNavigation" width="100%">
            <tr tal:repeat="product view/searchresults"
                tal:attributes="onclick string:window.location='${product/name}';"
                valign="top"
                vspace="5">
                <td>
                    <img src="/++resource++product_icon.gif">
                    <b tal:content="product/title">$Product.title</b>
                    (<a tal:attributes="href product/name" href="#"
                        tal:content="product/name">$Product.name</a>)
                    <br />
                <span tal:content="product/shortdesc">
                    $Product.shortdesc</span>
                </td>
            </tr>
        </table>

        <div tal:condition="not: view/gotmatches"><b>No matching upstream
        products.</b> You can <a href="+new">register a new product </a>.</div>

    </div>

</div>

</body>
</html>
