<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
</metal:rightportlets>

<div metal:fill-slot="main">

  <h1>Set goals</h1>

  <p class="documentDescription">
    This page allows you to accept or decline specifications as goals for
    <span tal:replace="context/displayname">Mozilla Firefox 1.0</span>.
  </p>

  <p class="portalMessage"
     tal:define="status view/process_form"
     tal:condition="status"
     tal:content="status" />

  <form tal:attributes="action request/URL" method="POST">

    <table>
      <tbody>
        <tr tal:repeat="spec view/specs">
          <td>
            <input type="checkbox" name="specification"
                   tal:attributes="
                     value spec/name;
                     id string:spec_${spec/name}" />
          </td>
          <td>
            <label tal:content="spec/title"
                   tal:attributes="
                     for string:spec_${spec/name}">fix-it</label>
            <div tal:content="spec/summary"
                 class="lesser" />
          </td>
        </tr>
      </tbody>
    </table>

    <div class="discreet">
      Select the specifications that you wish to accept or decline.
    </div>

    <div class="actions">
      <input type="submit"
             name="cancel"
             value="Cancel" />
      <input tal:condition="view/count"
             type="submit"
             name="FORM_SUBMIT"
             value="Accept" />
      <input tal:condition="view/count"
             type="submit"
             name="FORM_SUBMIT"
             value="Decline" />
    </div>

  </form>

</div>

</body>
</html>
