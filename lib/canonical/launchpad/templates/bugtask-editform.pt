<tal:tag condition="view/update"/>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="launchpad">
  <body>
    <div metal:fill-slot="main">
      <div>
        Bug #<span tal:replace="context/bug/id">1234</span> in
        <span tal:replace="context/contextname">some context</span>
      </div>
      <h1 tal:content="context/bug/title">Can't smegging smeg</h1>
      <p
        tal:condition="context/bug/duplicateof"
        class="portalMessage"
      >
        This bug is a duplicate of
        <a href="#"
            tal:attributes="href context/bug/duplicateof/@@absolute_url"
            tal:content="context/bug/duplicateof/id">42</a>
      </p>
      <h2>
        Status in
        <span tal:replace="context/contextname">something</span>
      </h2>

      <div metal:define-macro="editform">

        <form
          action="."
          tal:attributes="action request/URL"
          method="post"
          enctype="multipart/form-data"
        >
          <div metal:define-macro="formbody">
            <p class="portalMessage"
               tal:define="status view/update"
               tal:condition="status"
               tal:content="status"
            />
            <p tal:condition="view/errors"
               class="portalMessage"
               i18n:translate=""
            >
              There are <strong
              tal:content="python:len(view.errors)"
              i18n:name="num_errors">6</strong> input errors.
            </p>
            <div metal:use-macro="context/@@launchpad_widget_macros/launchpad_widget_rows"
            />
          </div>
          <div class="actions">
            <input
              type="submit"
              name="UPDATE_SUBMIT"
              value="Save Changes"
              i18n:attributes="value submit-button"
            />
          </div>
          <br />
          <p>
            <a
              href=""
              tal:attributes="href string:/malone/bugs/${context/bug/id}"
            >Subscribers and status elsewhere</a>
          </p>
          <h2>Description</h2>
          <div tal:content="context/bug/description">
            Bad stuff happens. Steps to reproduce: Walk outside.
          </div>
        </form>
      </div>
      <p tal:condition="context/product">
        <a href=""
            tal:attributes="href string:/malone/products/${context/product/name}"
            tal:content="string:More ${context/product/displayname} bugs"
        >More Mozilla Firefox bugs</a>
      </p>
    </div>
  </body>
</html>
