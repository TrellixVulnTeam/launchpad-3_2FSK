<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-details">
    <h2 tal:content="context/title">bugtracker title</h2>

    <div class="portletBody">
        <div class="portletContent">

        <b>Base URL:</b><br />
        <img alt="" src="/@@/link" />
        <a
           tal:attributes="href context/baseurl"
           tal:content="context/baseurl">http://test.mozilla.org</a><br />

        <b>Tracker Type:</b>
        <span tal:replace="context/bugtrackertype/title">BugZilla</span>
        <br />

        <b>Number of watches:</b>
        <span tal:replace="context/watches/count" /><br />

        <b>Contact Details:</b><br />
        <span tal:replace="context/contactdetails">contact details go here
        in a long mess</span><br />

        <b>Creator:</b>
        <a tal:replace="structure context/owner/fmt:link">ownername</a><br />

        </div>
    </div>
</div>
