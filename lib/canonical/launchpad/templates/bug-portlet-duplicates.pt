<div class="portlet" tal:condition="context/duplicates">

  <h4>Duplicates of this bug:</h4>

  <div class="portletBody">
    <div class="portletContent">

      <ul tal:define="current_task view/currentBugTask">
        <li tal:repeat="dup context/duplicates">
          <a tal:attributes="href string:${current_task/target/fmt:url}/+bug/${dup/id};
                             title dup/title">
             Bug #<span tal:replace="dup/id">3445</span>
          </a>
          <tal:block condition="dup/name">
            (<span tal:replace="dup/name" tal:omit-tag="">foobar</span>)
          </tal:block>
        </li>
      </ul>
    </div>
  </div>
</div>
