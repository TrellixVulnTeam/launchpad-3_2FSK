<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:browser="http://namespaces.zope.org/browser"
  xmlns:i18n="http://namespaces.zope.org/i18n"
  xmlns:zope="http://namespaces.zope.org/zope"
  i18n_domain="launchpad">

  <class class="canonical.launchpad.database.CodeReviewVoteReference">
    <allow interface="canonical.launchpad.interfaces.ICodeReviewVoteReference" />
  </class>

  <browser:url
      for="canonical.launchpad.interfaces.ICodeReviewVoteReference"
      path_expression="string:+review/${id}"
      attribute_to_parent="branch_merge_proposal"
      rootsite="code" />

  <subscriber
    for="canonical.launchpad.interfaces.ICodeReviewVoteReference
         canonical.launchpad.event.interfaces.IReviewerNominatedEvent"
    handler="canonical.launchpad.mailout.branchmergeproposal.send_review_requested_notifications" />


</configure>
