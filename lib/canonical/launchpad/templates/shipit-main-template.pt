<metal:page define-macro="master"
            extend-macro="context/@@+shipit-macros/meta-master">

  <metal:block define-slot="top_slot" />
  <head>

    <metal:extra-head fill-slot="extra-head">
      <link rel="icon" href="/@@/ubuntu-icon" />
      <style type="text/css" media="screen"> @import url(/@@/ubuntu-plone.css);</style>
      <style type="text/css" media="screen"> @import url(/@@/ubuntu.css);</style>
      <style type="text/css" media="screen"> @import url(/@@/ubuntu-masthead.css);</style>
      <style type="text/css" media="screen"> @import url(/@@/ubuntu-discs.css);</style>

      <style type="text/css">
        <!-- 
          /* Undo Ubuntu's CSS treachery */
          .shipitPortlet {
              font-size: 80%;
           }
          .shipitPortlet .shipitPortletBody {
              position: relative;
              top: -1px;
              background: transparent;
              border: 1px solid #8cacbb;
              padding: 1em;
              margin: 0;
          }
          .shipitPortlet h4 {
            margin: 0;
            background-color: #dee7ec;
            border: 1px solid #8cacbb;
            padding: 0em 0.3em 0em 1em;
            text-transform: lowercase;
            display: block;
            font-size: 1em;
            font-weight: normal;
          }
          label {font-weight: inherit;}
          ul {margin-bottom: 1em;}
          :link {
            color: #660000;
          }
          :visited {
            color: #993333;
          }
        -->
      </style>
    </metal:extra-head>

  </head>

  <body>

    <div metal:fill-slot="footer" class="footer inside"
         style="background: url(/@@/ubuntu-header-bg4.png) bottom left repeat-x #fff;">
      &copy; 2004-2006 <a href="http://www.canonical.com">Canonical Ltd</a>.
      Ubuntu, ShipIt and Canonical are registered trademarks of Canonical Ltd.
      <a href="http://www.ubuntu.com/support/faq#head-7eef2db63e0a75424cdd663ee6f7b8eedcf19607"
      >Ubuntu ShipIt FAQ</a>
    </div>

  </body>

</metal:page>
