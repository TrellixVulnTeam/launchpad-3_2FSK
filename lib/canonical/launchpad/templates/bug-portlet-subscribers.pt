<div class="portlet">
  <h2>Subscribers to bug <span tal:replace="context/id">4</span></h2>

  <div class="portletBody portletContent"
       tal:define="indirect_subscribers context/getIndirectSubscribers">

    <ul class="people">
      <li tal:repeat="subscriber context/getDirectSubscribers">
        <a href="#"
           tal:content="subscriber/browsername"
           tal:attributes="href subscriber/fmt:url">Dafydd Harries</a>
      </li>
      <li class="info" tal:condition="not: context/getDirectSubscribers">
        <i>No subscribers</i>
      </li>
    </ul>

    <div tal:condition="indirect_subscribers">

      <br />
      <b>Also notified:</b><br />
      <ul class="people">
        <li tal:repeat="subscriber indirect_subscribers">
          <a href="#"
             tal:content="subscriber/browsername"
             tal:attributes="href subscriber/fmt:url">Dafydd Harries</a>
        </li>
      </ul>

    </div>
</div>
