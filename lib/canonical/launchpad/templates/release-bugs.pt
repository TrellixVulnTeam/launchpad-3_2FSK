<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>

    <title metal:fill-slot="title">
    Release <span tal:replace="context/title">Title</span>: Bugs
    </title>

    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
    <title>Open bugs on <span tal:content="context/name">Distro</span></title>
</head>

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure view/detailsPortlet" /> <br />
  <div tal:replace="structure view/linksPortlet" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure view/actionsPortlet" />
</metal:rightportlets>

<div metal:fill-slot="main" tal:define="distro context/distribution">
  <div id="content" class="documentEditable">
    <div class="documentContent" id="region-content"/>    
 
   <h1>Packages with bugs: release <span tal:replace="context/title">Title</span>
	</h1>

  <tal:block tal:define="bn view/bugSourcePackagesBatchNavigator;
                         prev_url bn/prevBatchURL;
                         next_url bn/nextBatchURL;">

    <ul tal:repeat="package python:list(bn.currentBatch())">
      <li><a tal:content="package/shortdesc"
             tal:attributes="href string:sources/${package/name}">PACKAGE</a>
      (<a tal:attributes="href
      string:/malone/packages/${package/name}">View Bug List</a>)
    </ul>

  <table>
    <tr>
    <td align="center">
    <fieldset tal:condition="python:prev_url or next_url">
    <div>
    	  <table>
	  <tr>
          <th tal:condition="prev_url">
	       <a tal:attributes="href prev_url"><b><< Prev</b></a>
	  </th>
          <th tal:repeat="page_link bn/batchPageURLs">
	     <a tal:attributes="href python:page_link.values()[0]"
                tal:content="python:page_link.keys()[0]"></a>
	  </th>
          <th tal:condition="next_url" >
	     <a tal:attributes="href next_url"><b>Next >></b></a>
          </th>
          </tr>
	  </table>
     </div>
     </fieldset>
    </td>
    </tr>
  </table>
  </tal:block>

 </div>
</div>

</body>
</html>
