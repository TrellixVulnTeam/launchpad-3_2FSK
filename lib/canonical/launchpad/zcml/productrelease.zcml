<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:zope="http://namespaces.zope.org/zope"
    i18n_domain="launchpad">


    <!-- This is class ProductReleaseSet -->
    <class class="canonical.launchpad.database.ProductReleaseSet">
        <allow interface="canonical.launchpad.interfaces.IProductReleaseSet" />
        <require
            permission="zope.Public"
            set_schema="canonical.launchpad.interfaces.IProductReleaseSet" />
    </class>

    <securedutility
        class="canonical.launchpad.database.ProductReleaseSet"
        provides="canonical.launchpad.interfaces.IProductReleaseSet">
        <allow interface="canonical.launchpad.interfaces.IProductReleaseSet" />
    </securedutility>


    <!-- This is class ProductRelease -->
    <class class="canonical.launchpad.database.ProductRelease">
        <allow interface="canonical.launchpad.interfaces.IProductReleasePublic" />
        <require
            permission="launchpad.Edit"
            interface="canonical.launchpad.interfaces.IProductReleaseEditRestricted" />
        <require
            permission="zope.Public"
            set_schema="canonical.launchpad.interfaces.IProductRelease" />
    </class>

    <browser:navigation
        module="canonical.launchpad.browser"
        classes="ProductReleaseNavigation"
        />

    <browser:menus
        module="canonical.launchpad.browser"
        classes="ProductReleaseContextMenu"
        />

    <browser:url
        for="canonical.launchpad.interfaces.IProductRelease"
        path_expression="version"
        attribute_to_parent="productseries"
        />

    <browser:url
        for="canonical.launchpad.interfaces.IProductReleaseFile"
        path_expression="string:+file/${libraryfile/filename}"
        rootsite="api"
        attribute_to_parent="productrelease"
        />

    <browser:defaultView
        for="canonical.launchpad.interfaces.IProductRelease"
        name="+index" />

    <browser:pages
        for="canonical.launchpad.interfaces.IProductRelease"
        facet="overview"
        permission="zope.Public">
        <!-- ProductReleases Portlets -->
        <browser:page
            name="+portlet-details"
            template="../templates/productrelease-portlet-details.pt"
            />
        <browser:page
            name="+portlet-summary"
            template="../templates/object-portlet-summary.pt"
            />
    </browser:pages>

    <browser:page
        for="canonical.launchpad.interfaces.IProductRelease"
        facet="overview"
        permission="zope.Public"
        name="+index"
        class="canonical.launchpad.browser.ProductReleaseView"
        template="../templates/productrelease-index.pt"
        />

    <browser:page
        for="canonical.launchpad.interfaces.IProductRelease"
        class="canonical.launchpad.browser.ProductReleaseRdfView"
        facet="overview"
        permission="zope.Public"
        name="+rdf"
        attribute="__call__"
        />

    <browser:page
        for="canonical.launchpad.interfaces.IProductRelease"
        name="+adddownloadfile"
        class="canonical.launchpad.browser.productrelease.ProductReleaseAddDownloadFileView"
        permission="launchpad.Edit"
        facet="overview"
        template="../templates/productrelease-file-add.pt"
        />

    <browser:page
        for="canonical.launchpad.interfaces.IProductRelease"
        name="+delete"
        class="canonical.launchpad.browser.ProductReleaseDeleteView"
        permission="launchpad.Edit"
        facet="overview"
        template="../templates/productrelease-delete.pt"
        />

    <browser:page
      name="+edit"
      for="canonical.launchpad.interfaces.IProductRelease"
      class="canonical.launchpad.browser.productrelease.ProductReleaseEditView"
      facet="overview"
      permission="launchpad.Edit"
      template="../templates/productrelease-edit.pt" />

    <!-- This is class ProductReleaseFile -->
    <class class="canonical.launchpad.database.ProductReleaseFile">
        <allow interface="canonical.launchpad.interfaces.IProductReleaseFilePublic" />
        <require
            permission="launchpad.Edit"
            interface="canonical.launchpad.interfaces.IProductReleaseFileEditRestricted" />
    </class>

</configure>
