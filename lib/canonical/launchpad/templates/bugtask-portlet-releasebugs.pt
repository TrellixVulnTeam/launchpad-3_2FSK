<div
  class="portlet"
  tal:define="release_buglistings view/release_buglistings"
>

  <h4>Release bugs:</h4>

  <div class="portletBody portletContent">
    <ul>
      <li class="bugs" tal:repeat="release_openbugs release_buglistings">
        <a href=""
           tal:content="release_openbugs/displayname"
           tal:attributes="href release_openbugs/url">sid</a>
        (<span tal:replace="release_openbugs/count">2</span>)
      </li>
    </ul>
  </div>

</div>
