<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">
<tal:news define="announcements view/latest_announcements">
<div
  class="portlet"
  id="portlet-latest-announcements">
  <h2>Latest news</h2>
  <div class="portletBody portletContent">
    <a title="Atom 1.0 feed"
       tal:attributes="href view/feed_url"><img src="/@@/rss" align="right"/>
    </a>
    <ul>
      <li tal:repeat="announcement announcements" class="news">
        <img src="/@@/warning" alt="[Not published]"
             title="This is not yet a public announcement"
             tal:condition="not: announcement/published" />
        <a
          tal:attributes="href announcement/fmt:url"
          tal:content="announcement/title"
        />
      </li>
    </ul>
    <div
      tal:define="link context/menu:overview/announcements"
      tal:condition="link/enabled"
      tal:content="structure link/render"
    />
    <div
      class="actions"
      tal:define="link context/menu:overview/announce"
      tal:condition="link/enabled"
      tal:content="structure link/render"
    />
  </div>
</div>
</tal:news>
</tal:root>
