<aside
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  id="privacy"
  tal:attributes="
    class python: path('context/private') and 'portlet private' or 'portlet public'
  "
  tal:define="link context/menu:context/visibility"
>
  <div tal:condition="not:context/private">
    <a
      tal:condition="link/enabled"
      tal:attributes="href link/url; title link/text"
      style="
        padding-left: 18px; background: url(/@@/edit) center left no-repeat;
      "
    >This report is public</a>
    <tal:unchangeable condition="not:link/enabled"
    >This report is public</tal:unchangeable>
  </div>
  <div tal:condition="context/private">
    <a
      tal:condition="link/enabled"
      tal:attributes="href link/url; title link/text"
      style="
        padding-left: 18px; background: url(/@@/edit) center left no-repeat;
      "
    >This report is <strong>private</strong></a>
    <tal:unchangeable condition="not:link/enabled"
    >This report is private</tal:unchangeable>
  </div>
  <div
    tal:condition="context/security_related"
    style="
      margin-top: 0.5em;
      padding-left: 18px;
      background:url(/@@/security) center left no-repeat;
    "
  >Security vulnerability</div>
</aside>
