<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="launchpad">

  <securedutility
      class="canonical.launchpad.database.CodeMailJobSource"
      provides="canonical.launchpad.interfaces.ICodeMailJobSource" >
    <allow interface="canonical.launchpad.interfaces.ICodeMailJobSource" />
  </securedutility>

  <class class="canonical.launchpad.database.CodeMailJob">
    <allow attributes="destroySelf run toMessage"/>
  </class>

</configure>
