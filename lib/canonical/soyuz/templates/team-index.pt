<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Rosetta style sheet -->
    <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>

<div metal:fill-slot="main">

  <h1><span tal:content="context/distribution/title" /> Team Overview</h1>


  <p>Go to 
     <a href="../">
     <span tal:content="context/distribution/title"/> Release Page</a>
     for more Information about the Distribution itself.

  <table width="50%">
  <tr><td>
    <div>
    <table class="listing">	
       <legend>Teams</legend>
       <tr> <th> Name</th> <th> Role</th> </tr>
       <tr tal:repeat="team context/team">
          <td tal:condition="not:team/person/teamowner">
	      <a tal:attributes="href string:../../../people/${team/person/id}"
	         tal:content="team/person/displayname">
               Displayname</a></td>
	  <td tal:condition="team/person/teamowner">
              <a href="" tal:content="team/person/teamdescription">
               TEAMDESCRIPTION</a></td>
          <td><span tal:content="team/rolename">ROLENAME</span>
          (<span tal:content="team/role">ROLE</span>)</td>
       </tr>
     </table>
     </div>
  </td><td valign="top">
   <div>
   <table>
    <legend>Releases</legend>
    <tr tal:repeat="release context">
        <td><a tal:content="release/title"
	       tal:attributes="href release/name">RELEASE</a>
	</td>
    </tr>
   </table> 
   </div>    
  </table>

  <div class="dummy">
  <h3>Package Maintainers for 
  <span tal:content="context/distribution/title"/></h3>

    <form name="add" action="" method="POST">
    	<table>
	<tr><td>Maintainer</td> 
	<td><input type="text" name="name"/></td>
	<td> <input type="submit" value="Search"/></td>
	<td> <table>
	     <tr><td><a href="+list">View List</a></td></tr>
	     <tr><td> (350 entries)</td></tr>
	     </table>
	</td> 
	</tr>
	</table>
    </form>
   </div>

</div>

</body>
</html>
