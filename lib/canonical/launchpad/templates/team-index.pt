<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
  <title metal:fill-slot="title">Team 
    <span tal:replace="context/browsername">Name</span>
    Information</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(launchpad.css);</style>
</head>

<body>

<metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure view/actionsPortlet" />
</metal:rightportlets>


<div metal:fill-slot="main">

    <div>
      <h1>Team Overview</h1>
        <br />
        <table width="80%">
          <tr tal:condition="context/teamdescription">
            <td>Description:</td>
            <td tal:content="context/teamdescription">DESCRIPTION</td>
          </tr>

          <tr>
            <td>Owner:</td>
            <td><a tal:attributes="href string:../${context/teamowner/name}"
                   tal:content="context/teamowner/browsername"></a></td>
          </tr>

          <tr>
            <td>Active Members:</td>
            <td><span tal:content="view/activeMembersCount" />
                <tal:block tal:condition="view/userIsActiveMember">
                <tal:block tal:condition="not: view/userIsOwner">
                  <a href="+leave">(Leave)</a>
                </tal:block>
                </tal:block>

                <tal:block tal:condition="not: view/userIsActiveMember">
                <tal:block tal:condition="not: view/userIsOwner">
                  <a href="+join">(Join)</a>
                </tal:block>
                </tal:block>
            </td>
          </tr>

          <tr>
            <td>Subscription Policy:</td>
            <td tal:content="view/subscriptionPolicyDesc">123</td>
          </tr>

          <tr tal:condition="context/preferredemail">
            <td>Email:</td>
            <td><span tal:replace="context/preferredemail/email"></span></td>
          </tr>

        </table>
    </div> 


    <table width="100%">
    <tr><td width="50%" valign="top"
            tal:define="subteams context/subteams"
            tal:condition="subteams">
      <!-- SubTeams -->
      <fieldset>
        <legend>Subteams</legend>
        <table>
          <tr tal:repeat="team subteams">
            <td>
              <a tal:attributes="href string:../${team/name}"
                 tal:content="team/browsername">name</a>
            </td>
          </tr>
        </table>
      </fieldset>
    </td>
    <td valign="top" tal:define="superteams context/teams"
        tal:condition="superteams">
      <!-- SuperTeams -->
      <fieldset>
        <legend>Superteams</legend>
        <table>
          <tr tal:repeat="team superteams">
            <td>
              <a tal:attributes="href string:../${team/name}"
                 tal:content="team/browsername">name</a>
            </td>
          </tr>
        </table>
      </fieldset>
    </td></tr>
    </table>

</div> 

</body>
</html>
