<div class="portlet">

  <h4>Package "<span tal:replace="context/name">apache2</span>"
  (<span tal:replace="context/distroarchrelease/architecturetag">i386</span>)
  in
  <span tal:replace="context/distribution/name">ubuntu</span>
  <span tal:replace="context/distrorelease/name">hoary</span>:</h4>

  <div class="portletBody portletContent"
       tal:define="cr context/currentrelease">

    <tal:has_currentrelease condition="cr">
      <b>Current Release:</b>
      <a tal:content="cr/version"
         tal:attributes="href cr/fmt:url">3.2.1-3</a><br />
    </tal:has_currentrelease>
    <tal:no_currentrelease condition="not: cr">
      <img src="/++resource++alert" />
      <i>There is no current release for this package in
        <span tal:replace="context/distribution/displayname">ubuntu</span>
        <span tal:replace="context/distrorelease/name">hoary</span>
        (<span tal:replace="context/distroarchrelease/architecturetag">
          i386
        </span>)</i>
    </tal:no_currentrelease>

  </div>

</div>
