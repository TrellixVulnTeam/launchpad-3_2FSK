<tal:root
   xmlns:tal="http://xml.zope.org/namespaces/tal"
   xmlns:metal="http://xml.zope.org/namespaces/metal"
   omit-tag="">
    <div class="boardComment">
        <div class="boardCommentDetails">
            <span tal:content="structure context/message/owner/fmt:link"
                  id="comment-from" />
            <span tal:condition="context/vote" >vote:
                <span id="comment-vote" tal:content="context/vote/title" />
            </span>
        </div>
        <div class="boardCommentBody">
            <tt id="comment-subject" tal:content="context/message/subject" />
            <div>
              <tt id="comment-body"
                  tal:content="context/message/text_contents" />
            </div>
        </div>
    </div>
</tal:root>
