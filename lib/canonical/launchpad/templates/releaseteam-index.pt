<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<div metal:fill-slot="main">

  <h1><span tal:content="context/release/displayname" /> Team Overview</h1>


  <p>Go to 
     <a tal:attributes="href string:../../releases/${context/release/name}">
     <span tal:content="context/release/displayname"/> Release Page</a>
     for more Information about the Release itself.

  <div class="dummy">
  <p> Back to 
     <a href="../">
     <span tal:content="context/release/distribution/title"/> Team Page</a>
     for more Information about the Distribution Teams.
  </div>

  <table width="50%">
   <tr>
      <td>
      <h4>Teams</h4>
      </td>
  </tr>
  <tr>
  <td>
  <div>
  <table class="listing">	
   <tr> <th> Name</th> <th> Role</th> </tr>
    <tal:block tal:repeat="team context/team">
      <tr>
      <td> 
        <a tal:attributes="href string:/foaf/people/${team/person/name}"
            tal:content="team/person/displayname">
            Displayname</a></td>
      <td><span tal:content="team/rolename">ROLE</span></td></tr>
    </tal:block>
  </table>
  </div>
  </td>
  </tr>
  </table>

  <p><a href="+new">Add New</a>
</div>

</body>
</html>
