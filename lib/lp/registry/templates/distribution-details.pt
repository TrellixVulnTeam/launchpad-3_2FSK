<table
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  id="table-details"
  class="summary"
  tal:define="overview_menu context/menu:overview">
  <tbody>
    <tr>
      <th>Driver:</th>
      <td>
        <tal:nodriver condition="not:context/driver">None</tal:nodriver>
        <tal:driver condition="context/driver">
          <a tal:replace="structure context/driver/fmt:link" />
        </tal:driver>
        <tal:edit-driver
          replace="structure overview_menu/driver/fmt:icon" />
      </td>
    </tr>
    <tr>
      <th>Members:</th>
      <td>
        <tal:nomembers condition="not:context/members">None</tal:nomembers>
        <tal:members condition="context/members">
          <a tal:replace="structure context/members/fmt:link" />
        </tal:members>
        <tal:edit-members
          replace="structure overview_menu/members/fmt:icon" />
      </td>
    </tr>
    <tr>
      <th>Uploaders:</th>
    </tr>
    <tr tal:repeat="permission context/uploaders">
      <th><tal:component replace="permission/component/name" /></th>
      <td>
        <a tal:replace="structure permission/person/fmt:link" />
      </td>
    </tr>
    <tr>
      <th>Mirror admins:</th>
      <td>
        <tal:nomembers condition="not:context/mirror_admin">None</tal:nomembers>
        <tal:members condition="context/mirror_admin">
          <a tal:replace="structure context/mirror_admin/fmt:link" />
        </tal:members>
        <tal:mirror_admin
          replace="structure overview_menu/mirror_admin/fmt:icon" />
      </td>
    </tr>
  </tbody>
</table>
