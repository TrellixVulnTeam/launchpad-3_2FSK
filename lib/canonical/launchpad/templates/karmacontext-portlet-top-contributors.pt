<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-top-contributors"
  tal:condition="view/getTopFiveContributors">
  <h2>Top contributors</h2>
  <div class="portletBody portletContent">
    <table>
      <tr tal:repeat="contributor view/getTopFiveContributors">
        <td>
          <a tal:replace="structure contributor/person/fmt:link">
            Guilherme Salgado
          </a>
        </td>
        <td align="right">
          <span tal:replace="contributor/karmavalue" /> points
        </td>
      </tr>
    </table>
  </div>

</div>
