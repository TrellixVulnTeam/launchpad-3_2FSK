<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="launchpad">
  <body>
  <metal:leftportlets fill-slot="portlets_one">
    <!-- XXX, Brad Bollenbach, 2005-05-31: This might belong
    in the search page instead.
    <div tal:replace="structure view/bugStatsForContext" />
    -->
    <div tal:replace="structure view/bugPeoplePortlet" />
  </metal:leftportlets>

  <metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure view/bugStatusPortlet" />
    <div tal:replace="structure view/alsoReportedInPortlet" />
  </metal:rightportlets>

    <div metal:fill-slot="main">
      <p
        tal:condition="context/bug/duplicateof"
        class="portalMessage">
        This bug is a duplicate of
        <a href="#"
            tal:attributes="href context/bug/duplicateof/@@absolute_url"
            tal:content="context/bug/duplicateof/id">42</a>
      </p>

      <div metal:define-macro="editform">
        <form
          action="."
          tal:attributes="action request/URL"
          method="post"
          enctype="multipart/form-data">
          <div metal:define-macro="formbody">
            <!-- XXX: Brad Bollenbach, 2005-06-02: Implement this after
                  merging initial task page changes.
            <p class="portalMessage">
              Updated: status, assignee, status explanation
            </p>
            -->
            <p class="portalMessage"
               tal:define="status view/update|nothing"
               tal:condition="status"
               tal:content="status" />
            <p tal:define="errors view/errors|nothing"
               tal:condition="errors"
               class="portalMessage"
               i18n:translate="">
              There are <strong
              tal:content="view/errors/count:len"
              i18n:name="num_errors">6</strong> input errors.
            </p>
          </div>

          <div class="field">
            <label>Title</label>
            <br />
            <tal:block content="context/bug/title" />
            [<a href="#"
                tal:attributes="href string:${context/bug/@@absolute_url}/+edit">Edit</a>]
          </div>

          <div class="field" tal:condition="context/bug/summary|nothing">
            <label>Summary</label>
            <br />
            <tal:block content="context/bug/summary" />
            [<a href="#"
                tal:attributes="href string:${context/bug/@@absolute_url}/+edit">Edit</a>]
          </div>

          <div class="field">
            <table style="width: 20%">
            <tr>
              <td>
                <label for="status"
                       tal:content="view/status_widget/label">
                  Status
                </label>
              </td>
              <td>
                <label for="severity"
                       tal:content="view/severity_widget/label">
                  Severity
                </label>
              </td>
              <td>
                <label for="priority"
                       tal:content="view/priority_widget/label">
                  Priority
                </label>
              </td>
              <td tal:condition="context/product">
                <label for="target"
                       tal:content="view/milestone_widget/label">
                  Target
                </label>
              </td>
              <td>
                <label for="assignee"
                       tal:content="view/assignee_widget/label">
                  Assignee
                </label>
              </td>
            </tr>
            <tr>
              <td tal:content="structure view/status_widget" />
              <td tal:content="structure view/severity_widget" />
              <td tal:content="structure view/priority_widget" />
              <td tal:condition="context/product"
                  tal:content="structure view/milestone_widget" />
              <td nowrap tal:content="structure view/assignee_widget" />
            </tr>
            <tr tal:condition="python:context.distribution or context.distrorelease">
              <td colspan="0">
                <label for="sourcepackagename"
                       tal:content="view/sourcepackagename_widget/label">
                  Status
                </label>
              </td>
            </tr>
            <tr tal:condition="python:context.distribution or context.distrorelease">
              <td colspan="0"
                  tal:content="structure view/sourcepackagename_widget" nowrap />
            </tr>
            </table>
          </div>

          <!-- XXX: Brad Bollenbach, 2005-06-03: Finish implementing this when
          Bjorn lands the status whiteboard patch.
          <div class="field">
            <label for="whiteboard"
                   tal:content="view/whiteboard_widget/label" />
            <tal:block replace="structure view/whiteboard_widget" />
          </div>
          -->

          <div class="field">
            <label>Description</label>
            <br />
            <tal:block replace="structure view/bugdescription_quoted" />
            [<a href="#"
                tal:attributes="href string:${context/bug/@@absolute_url}/+edit">Edit</a>]
          </div>

          <div class="actions">
            <input
              type="submit"
              name="UPDATE_SUBMIT"
              value="Save Changes"
              i18n:attributes="value submit-button" />
          </div>
          <br />
        </form>
      </div>
    </div>
  </body>
</html>
