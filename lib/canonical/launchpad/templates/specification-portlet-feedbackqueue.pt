<tal:fbreqs define="fbreqs context/feedbackrequests">
  <div tal:condition="fbreqs" class="portlet">
    <h4>Feedback requests:</h4>

    <div class="portletBody portletContent">

      <ul class="info">
        <li tal:repeat="fbreq fbreqs">
          <a href="#" tal:content="fbreq/reviewer/browsername"
           tal:attributes="href fbreq/reviewer/fmt:url">Dafydd Harries
          </a><tal:block condition="fbreq/queuemsg">:
              <i tal:content="fbreq/queuemsg">brief message.</i>
            </tal:block>
        </li>
        <li tal:condition="not: fbreqs">
          <i>No feedback requests outstanding.</i>
        </li>
      </ul>
    </div>
  </div>
</tal:fbreqs>
