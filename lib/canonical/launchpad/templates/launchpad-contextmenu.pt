<div
  tal:define="menu context/menu:context"
  tal:condition="menu"
  class="portletBody portletContent"
>
  <ul>
    <tal:block repeat="link menu">
      <li tal:attributes="class link/icon" tal:condition="link/enabled">
        <a
          tal:attributes="href link/url; title link/summary"
          tal:content="structure link/escapedtext"
        >link text</a>
      </li>
    </tal:block>
  </ul>
</div>
