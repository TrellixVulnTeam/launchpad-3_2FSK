<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<div metal:fill-slot="main"
     tal:define="listing_columns view/listing_columns">

  <h1>Bugs in
    <span tal:replace="string:${context/distribution/name} ${context/name}">
      Title
    </span>
  </h1>

  <table id="sourcepackagebugs">
    <tr tal:repeat="task view/open_bugs">
      <metal:taskrow use-macro="task/@@+bugtask-macros-listview/item" />
    </tr>
</div>

</body>
</html>
