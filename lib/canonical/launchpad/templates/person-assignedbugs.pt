<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

  <metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
  </metal:leftportlets>

  <div metal:fill-slot="main">

    <tal:block define="tasks_assigned view/bugTasksAssignedToPerson">

      <h1>Bugs Assigned to <span tal:replace="context/browsername" /></h1>

      <p tal:condition="not: tasks_assigned">No bugs have been
      assigned to <span tal:replace="context/browsername" />.</p>

      <tal:block tal:condition="tasks_assigned">

      <div style="margin-bottom: 1em"
           tal:define="tasks tasks_assigned;">

      <tal:assignedbugs
          metal:use-macro="context/@@+bugtask-macros-tableview/table" />

      </div>

    </tal:block>
    </tal:block>

  </div>

</body>
</html>
