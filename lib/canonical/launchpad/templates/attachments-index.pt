<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="launchpad">

<head>
  <title metal:fill-slot="title">Malone Bug Attachments</title>
</head>

<body>

<div metal:fill-slot="main">
  <h1>Attachments List</h1>
  <table class="listing">
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>
    <tr tal:repeat="attach context">
      <td>
        <a tal:attributes="href attach/id"
           tal:content="attach/title">Title</a>
      </td>
      <td tal:content="attach/description">Description</td>
    </tr>
  </table>
  <input type="submit" value="Add" onclick="window.open('+new','_top')" />
</div>

</body>
</html>
