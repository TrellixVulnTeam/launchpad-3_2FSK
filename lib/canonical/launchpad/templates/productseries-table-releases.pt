<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<table class="listing"
  tal:condition="context/releases"
  tal:attributes="id string:series_${context/name}">
  <thead>
    <tr>
      <th>Version</th>
      <th>Codename</th>
      <th>Date Released</th>
    </tr>
  </thead>
  <tbody>
    <tr tal:repeat="release context/releases">
      <td><a tal:content="release/version"
             tal:attributes="href release/fmt:url">version</a></td> 
      <td><span tal:replace="release/codename">code name</span></td>
      <td>
        <span
          tal:attributes="title release/datereleased/fmt:datetime"
          tal:content="release/datereleased/fmt:approximatedate">
          2005-12-13
        </span>
      </td>
    </tr>
  </tbody>
</table>
</tal:root>
