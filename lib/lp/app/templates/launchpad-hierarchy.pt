<ol
  class="breadcrumbs"
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="launchpad">

<tal:breadcrumbs repeat="breadcrumb view/items"
                 condition="view/display_breadcrumbs">
  <li>
    <a tal:attributes="href breadcrumb/url">
      <tal:icon condition="breadcrumb/icon"
                replace="structure breadcrumb/icon">
        <span title="Undecided" class="sprite bug-undecided" />
      </tal:icon>
      <tal:text replace="breadcrumb/text">
        Bugs on redfish
      </tal:text>
    </a>
  </li>
</tal:breadcrumbs>
</ol>
