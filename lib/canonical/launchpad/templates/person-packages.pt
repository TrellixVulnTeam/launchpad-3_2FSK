<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">Packages Maintained By
      <span tal:replace="context/displayname">Name</span></title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

  <metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure view/actionsPortlet" />
  </metal:rightportlets>

  <div metal:fill-slot="main">

      <h1>Package Maintenance Report</h1>
      
      <p tal:condition="not: context/packages"><span
      tal:replace="context/displayname">Person DisplayName</span> is not
      currently recorded as the maintainer of any packages in the Launchpad
      system.</p>

         <table>
           <tr tal:repeat="package context/packages">
             <td tal:define="name package/name; 
                             distrorelease package/distrorelease/name;
                             distro package/distrorelease/distribution/name;
                             distro_path string:/distros/${distro};">
      
               <a tal:attributes="href distro_path"
                  tal:content="package/distrorelease/distribution/title">DISTRO</a> ::
               <a tal:attributes="href string:${distro_path}/${distrorelease}/"
                  tal:content="package/distrorelease/title">DISTRORELASE</a> ::
               <a tal:attributes="href string:${distro_path}/${distrorelease}/+sources/${name}"
                  tal:content="string:${name}">PACKAGES</a> ::
               <a tal:condition="package/product"
                  tal:attributes="href string:/doap/products/${package/product/name}"
                  tal:content="string:${package/product/displayname}">PRODUCT</a>
	       <span tal:condition="not:package/product">No Product Available</span>
             </td>
          </tr>
     </table>

  </div>

</body>
</html>
