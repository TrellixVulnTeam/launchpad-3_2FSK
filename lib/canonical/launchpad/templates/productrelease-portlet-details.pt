<div class="portlet">
    <h2 tal:content="context/title">productrelease title</h2>

    <div class="portletBody">
        <div class="portletContent even">

            <b>Registrant:</b><br />
            <tal:registrant replace="structure context/owner/fmt:link"/><br />

            <b>When:</b>
            <span
              tal:attributes="title context/datecreated/fmt:datetime"
              tal:content="context/datecreated/fmt:approximatedate" /><br />

            <b>Product:</b>
            <a href="#"
               tal:attributes="href context/product/fmt:url"
               tal:content="context/product/displayname"
               class="link">product displayname</a><br />

            <b>Series:</b>
            <span tal:replace="context/productseries/name" /><br />

            <b>Release version:</b>
            <span tal:replace="context/version" /><br />

            <b>Released:</b>
            <span
              tal:attributes="title context/datereleased/fmt:datetime"
              tal:content="context/datereleased/fmt:approximatedate" /><br />

        </div>
    </div>
</div>
