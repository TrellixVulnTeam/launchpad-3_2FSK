<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-translations"
     tal:define="translatable view/primary_translatable">

  <h2>Translations for <span tal:replace="context/displayname" /></h2>

  <div class="portletBody portletContent">

    <tal:block condition="translatable">

      <ul>
        <li class="translations"
            tal:repeat="template translatable/getCurrentTranslationTemplates">
          <a tal:attributes="href template/fmt:url"
             tal:content="template/title">template title</a>
        </li>
      </ul>

  </tal:block>
  <tal:block condition="not: translatable">
    No translation templates registered upstream or in Ubuntu
  </tal:block>

    <ul>
      <li class="info">
        <a href="+translations"
           title="See more translation options">
          More translations...
        </a>
      </li>
    </ul>

  </div>

</div>
</tal:root>
