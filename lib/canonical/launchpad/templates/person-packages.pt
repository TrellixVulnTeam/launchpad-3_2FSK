<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">Packages Maintained By
      <span tal:replace="context/displayname">Name</span></title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Launchpad style sheet -->
    <style type="text/css" media="screen">@import url(launchpad.css);</style>
</head>

<body>

  <metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure view/actionsPortlet" />
  </metal:rightportlets>

  <div metal:fill-slot="main">

      <h1>Package Maintenance Report</h1>

      <p tal:condition="context/maintainerships"><span
      tal:replace="context/displayname">Person DisplayName</span> is the
      maintainer of the following distribution packages:</p>
      
      <p tal:condition="not: context/maintainerships"><span
      tal:replace="context/displayname">Person DisplayName</span> is not
      currently recorded as the maintainer of any packages in the Launchpad
      system.</p>

         <table tal:condition="context/maintainerships">
           <tr tal:repeat="maintainership context/maintainerships">
             <span tal:define="spname maintainership/sourcepackagename/name; 
                               distro maintainership/distribution;
                               distrorelease distro/currentrelease;"
                   tal:omit-tag>
             <td>
               <a tal:attributes="href string:/distros/${distro/name}"
                  tal:content="distro/title">DISTRO</a>
             </td>
             <td>
               <a tal:attributes="href string:/distros/${distro/name}/${distrorelease/name}/+sources/${spname}"
                  tal:content="spname">PACKAGE</a> ::
             </td>
             </span>
          </tr>
     </table>

  </div>

</body>
</html>
