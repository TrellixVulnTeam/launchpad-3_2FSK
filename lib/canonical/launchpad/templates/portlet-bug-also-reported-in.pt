<div class="portlet">

    <h4>also reported in:</h4>

    <div class="portletBody"
         tal:define="bug_url context/@@absolute_url;
                     other_occurrences view/alsoReportedIn;">
      <div class="portletContent odd">
      <center>
      <tal:block condition="not:other_occurrences">
        <i>
          No other known occurrences.
        </i>
      </tal:block>

      <table class="listing" style="width:100%"
             tal:condition="other_occurrences">
        <tbody>
          <tr>
            <th>Where</th>
            <th>Status</th>
          </tr>
          <tr tal:repeat="task other_occurrences">
            <td><a href=""
                   tal:attributes="href task/@@absolute_url"
                   tal:content="task/contextname"
                   style="text-decoration: underline">Upstream Firefox</a>
            </td>
            <td style="border: 1px solid #8cacbb; text-transform: lowercase;"
                tal:content="task/status/title">Pending</td>
          </tr>
        </tbody>
      </table>
      </center>

