<html metal:use-macro="view/macro:page/applicationhome" i18n:domain="bazaar">

  <body>

    <h1 metal:fill-slot="heading">
      Code Import '<tal:block tal:replace="context/name" />'
    </h1>

    <div metal:fill-slot="main" class="visualPadding">

      <table>
        <tbody>
	  <tr>
            <th>Date Created:</th>
            <td tal:content="context/date_created/fmt:datetime">
              2007
            </td>
	  </tr>
          <tal:block condition="context/rcs_type/enumvalue:CVS">
            <tr>
              <th>CVS</th>
	    </tr>
	    <tr>
              <th>Root:</th>
              <td tal:content="context/cvs_root">
                :pserver:anonymous@anoncvs.gnome.org:/cvs/gnome
              </td>
	    </tr>
	    <tr>
	      <th>Module:</th>
	      <td tal:content="context/cvs_module">evolution</td>
            </tr>
          </tal:block>
          <tal:block condition="context/rcs_type/enumvalue:SVN">
            <tr>
              <th>Subversion:</th>
              <td tal:content="context/svn_branch_url">
                http://svn.gnome.org/evolution/trunk
              </td>
            </tr>
          </tal:block>
          <tr>
            <th>Review Status:</th>
            <td tal:content="context/review_status/title">Syncing</td>
          </tr>
          <tr tal:condition="context/product">
            <th>Product:</th>
            <td>
              <a href=""
                 tal:content="context/product/displayname"
                 tal:attributes="href context/product/fmt:url">
                Evolution
              </a>
            </td>
          </tr>
          <tr tal:condition="context/series">
            <th>Series:</th>
            <td>
              <a href=""
                 tal:content="context/series/displayname"
                 tal:attributes="href context/series/fmt:url">
                head
              </a>
            </td>
          </tr>
          <tr tal:condition="context/branch">
            <th>Bazaar branch:</th>
            <td>
              <a id="import-branch-link"
                 tal:attributes="href context/branch/fmt:url"
                 tal:content="context/branch/displayname">
                Mozilla Thunderbird 0.9.1
              </a>
            </td>
          </tr>
        </tbody>
      </table>

    </div>

  </body>
</html>
