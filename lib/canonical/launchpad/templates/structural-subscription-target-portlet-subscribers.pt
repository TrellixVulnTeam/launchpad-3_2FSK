<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-structural-subscribers">

  <h2>Bug subscriptions</h2>

  <div class="portletBody portletContent"
       tal:define="subscriptions context/bug_subscriptions">
    <b>For <tal:target-title replace="context/title" />:</b>
    <br />
    <div tal:condition="subscriptions">
      <ul class="person">
        <li tal:repeat="subscription subscriptions">
          <a href="#"
             tal:content="subscription/subscriber/browsername"
             tal:attributes="href subscription/subscriber/fmt:url">Ubuntu Team</a>
        </li>
      </ul>
      <br />
    </div>
    <div tal:condition="not:subscriptions">
      <i class="info">No people or teams are
        subscribed to bugmail for this package.</i>
      <br /><br />
    </div>
  </div>
</div>
