<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

  <metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
  </metal:leftportlets>

  <div metal:fill-slot="main">

    <tal:block condition="context/isNotYetOpened">
      <div metal:use-macro="context/@@launchpad_addform/addform">

        <h1 metal:fill-slot="heading">
          Add a Poll Option
        </h1>

      </div>
    </tal:block>

    <tal:block condition="not: context/isNotYetOpened">
      <p class="portalMessage" tal:condition="context/isClosed">
        This poll is already closed, you can't add new options.
      </p>
      <p class="portalMessage" tal:condition="context/isOpen">
        This poll is already open, you can't add new options.
      </p>
    </tal:block>

  </div>

</body>
</html>
