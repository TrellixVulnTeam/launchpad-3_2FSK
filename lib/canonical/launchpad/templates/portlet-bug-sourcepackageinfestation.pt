<div tal:condition="context/packageinfestations"
     tal:define="bug_url string:/malone/bugs/${context/id}">
    <table class="listing rowNavigation">
        <tr>
            <th>Source Package</th>
        </tr>
        <tr tal:repeat="pkginfest context/packageinfestations"
            tal:attributes="onclick
            string:window.location='$bug_url/packageinfestations/${pkginfest/id}/+edit';">
            <td><span tal:replace="python: pkginfest.sourcepackagerelease.sourcepackagename.name + ' ' +
                             pkginfest.sourcepackagerelease.version">$Product.title</span>
            <span tal:replace="pkginfest/infestationstatus/title">
                $BugInfestationStatus</span>
            </td>
        </tr>
    </table>
    [ <a href="#" tal:attributes="href
    string:$bug_url/packageinfestations/+new">New Package Infestation</a> ]
</div>
