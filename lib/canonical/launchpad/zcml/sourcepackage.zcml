<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:lp="http://launchpad.canonical.com"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="launchpad">

    <!-- This is class SourcePackageRelease -->
    <content class="canonical.launchpad.database.SourcePackageRelease">
      <allow interface="canonical.launchpad.interfaces.ISourcePackageRelease"/>
      <implements interface="zope.app.container.interfaces.IItemContainer"/>
    </content>

    <!-- This is class VSourcePackageReleasePublishing -->
    <content class="canonical.launchpad.database.VSourcePackageReleasePublishing">
      <allow interface="canonical.launchpad.interfaces.ISourcePackageReleasePublishing"/>
      <implements interface="zope.app.container.interfaces.IItemContainer"/>
    </content>

    <!-- SourcePackage -->
    <content class="canonical.launchpad.database.SourcePackage">
        <allow interface="canonical.launchpad.interfaces.ISourcePackage" />
        <implements interface="zope.app.container.interfaces.IItemContainer"/>
    </content>
    
    <!-- SourcePackageInDistro -->
    <content class="canonical.launchpad.database.SourcePackageInDistro">
        <allow interface="canonical.launchpad.interfaces.ISourcePackage" />
        <implements interface="zope.app.container.interfaces.IItemContainer"/>
    </content>

    <browser:defaultView
        for="canonical.launchpad.interfaces.ISourcePackage"
        name="+index" />

    <browser:pages
        for="canonical.launchpad.interfaces.ISourcePackage"
        permission="zope.Public"
        class="canonical.launchpad.browser.SourcePackageView">
        <browser:page
            name="+index"
            template="../templates/malone-sourcepackage-index.pt"
            lp:url="malone/sourcepackage/$SourcePackage.name/+malone-index" />
    </browser:pages>

    <!-- SourcePackageName -->
    <content class="canonical.launchpad.database.SourcePackageName">
        <allow interface="canonical.launchpad.interfaces.ISourcePackageName" />
    </content>

    <!-- SourcePackageContainer -->
    <content class="canonical.launchpad.database.SourcePackageContainer">
        <allow
            interface="canonical.launchpad.interfaces.ISourcePackageContainer"
            />
    </content>

    <utility
        factory="canonical.launchpad.database.SourcePackageContainer"
        provides="canonical.launchpad.interfaces.ISourcePackageContainer" />

    <browser:traverse
        for="canonical.launchpad.interfaces.ISourcePackageContainer"
        getter="__getitem__" />

    <browser:defaultView
        for="canonical.launchpad.interfaces.ISourcePackageContainer"
        name="+index" />

    <browser:pages for="canonical.launchpad.interfaces.ISourcePackageContainer"
        permission="zope.Public">
        <browser:page 
            name="+index"
            template="../templates/sourcepackages-index.pt"
            lp:url="malone/sourcepackages/+index" />
    </browser:pages>

</configure>
