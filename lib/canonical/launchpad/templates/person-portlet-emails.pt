<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<tal:block condition="request/lp:person">
<tal:block condition="not: context/hide_email_addresses">
  <tal:block condition="context/validatedemails">
    <div class="portlet" id="portlet-emails">

      <h2>Additional e-mails</h2>

      <div class="portletBody portletContent">

        <ul>
          <li class="mail"
              tal:repeat="email context/validatedemails"
              tal:content="email/email">
              foo@bar.com
          </li>
        </ul>

      </div>

    </div>
  </tal:block>
</tal:block>
</tal:block>
</tal:root>
