<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-branches" tal:condition="view/branch_links">
  <h2>Branches</h2>
  <div class="portletBody portletContent">
    <dl>
      <tal:branch-link tal:repeat="branchlink context/branch_links">
        <dt>
          <tal:branchlink
              replace="structure branchlink/branch/fmt:project-link"/>
          <a tal:condition="branchlink/required:launchpad.AnyPerson"
             tal:attributes="href branchlink/fmt:url"
             ><img src="/@@/edit" title="Change this branch link" /></a>
        </dt>
        <dd condition="branchlink/summary">
          <em tal:content="branchlink/summary">summary</em>
        </dd>
      </tal:branch-link>
    </dl>
  </div>
</div>
</tal:root>
