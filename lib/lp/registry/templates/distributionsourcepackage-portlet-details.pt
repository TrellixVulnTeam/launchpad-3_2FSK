<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-details">

  <h2>"<span tal:replace="context/name">apache2</span>" source package in
  <span tal:replace="context/distribution/name">ubuntu</span></h2>

  <div class="portletBody portletContent"
       tal:define="cr context/currentrelease">

    <tal:has_currentrelease condition="cr">
      <b>Latest release:</b>
      <a tal:content="cr/version"
         tal:attributes="href cr/fmt:url">3.2.1-3</a><br />
      <div tal:replace="structure cr/sourcepackagerelease/@@+portlet-details-content" />
    </tal:has_currentrelease>
    <tal:no_currentrelease condition="not: cr">
      There is no current release for this source package in
      <span tal:replace="context/distribution/displayname">ubuntu</span>.
    </tal:no_currentrelease>

  </div>

</div>
