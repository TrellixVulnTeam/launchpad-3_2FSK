<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  class="portlet" id="portlet-related-bugs"
  tal:define="links view/buglinks"
  tal:condition="links" >

    <h2>Related bugs</h2>

    <div class="portletBody portletContent">

      <ul>
        <li tal:repeat="link links">
          <a tal:replace="structure link/bug/fmt:link"></a>
        </li>
      </ul>

    </div>

</div>
