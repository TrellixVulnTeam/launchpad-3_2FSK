<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<div metal:fill-slot="main">

  <h1>Translation Activity</h1>

  <p class="documentDescription">This page lists any files that include
  contributions in some form from <span tal:replace="context/browsername">
  Mark Shuttleworth</span>.</p>

  <tal:block define="pofiles context/touched_pofiles">

    <tal:block condition="pofiles">
      <table class="listing">
        <thead>
          <tr>
            <th>Language</th>
            <th>Application</th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="pofile context/touched_pofiles">
            <td tal:content="pofile/language/englishname">Spanish</td>
            <td><a tal:content="pofile/potemplate/title"
                   tal:attributes="href pofile/fmt:url">
            foo bar in package bla</a>
            </td>
          </tr>
        </tbody>
      </table>
    </tal:block>
    <tal:block condition="not: pofiles">
      <p><i>No translations recorded from
      <span tal:replace="context/browsername">Foo Bar</span>.</i></p>
    </tal:block>
  </tal:block>

</div>


</body>
</html>
