<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Rosetta style sheet -->
    <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>

<div metal:fill-slot="main">

    <h1>Edit <span tal:content="context/distribution/title">DISTRO</span> 
	Information</h1>

    <div class="documentDescription">	
    <p> Here you edit the Information about <span
    tal:content="context/distribution/title">DISTRO</span>  
    Distribution
    </div>
    
    <div>
    <form name="edit" action="" method="POST">
    <fieldset>
    <legend><h3>Edit <span
	tal:content="context/distribution/title">DISTRO</span>
	 Information</h3><legend> 
	<table>
	<tr><td>
	<div class="field">
	    <label>Name</label>
	    <div class="formHelp">
	    Enter the Distribution Name.
            </div>
	    <input type="text" name="name"
	    tal:attributes="value context/distribution/name|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Title</label>
	    <div class="formHelp">
	    Enter the Distribution Title.
            </div>
	    <input type="text" name="title" size="40"
	    tal:attributes="value context/distribution/title|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Description</label>
	    <div class="formHelp">
	    Enter the Distribution Description.
            </div>
            <textarea name="description" cols="60" rows="6"
	    tal:content="context/distribution/description|nothing">
	    </textarea>
	</div>
	</td></tr>
	<tr><td>
	<div class="formControls">
	  <input type="submit" value="Edit"/>
	</div>
	</td></tr>
	</table>
  </form>
  </div>

  <tla:block tal:condition="view/enable_edited">
  <div>
  <h4><a tal:attributes="href string:../${request/name}">
  <span tal:content="request/title"/></a>
   Distribution Modified</h4>
  </div>
  </tla:block>




</div>

</body>
</html>
