<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Rosetta style sheet -->
    <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>

<div metal:fill-slot="main">

  <h1><span tal:content="context/release/displayname" /> Team Overview</h1>


  <p>Go to 
     <a tal:attributes="href string:../../releases/${context/release/name}">
     <span tal:content="context/release/displayname"/> Release Page</a>
     for more Information about the Release itself.

  <div class="dummy">
  <p> Back to 
     <a href="../">
     <span tal:content="context/release/distribution/title"/> Team Page</a>
     for more Information about the Distribution Teams.
  </div>

  <table width="50%">
   <tr>
      <td>
      <h4>Teams</h4>
      </td>
  </tr>
  <tr>
  <td>
  <div>
  <table class="listing">	
   <tr> <th> Name</th> <th> Role</th> </tr>
    <tal:block tal:repeat="team context/team">
      <tr>
      <td> <a tal:attributes="href string:../../../../people/${team/person/id}"
              tal:content="team/person/displayname">
              Displayname</a></td>
      <td><span tal:content="team/rolename">ROLE</span>
          (<span tal:content="team/role">ROLE</span>)</td></tr>
    </tal:block>
  </table>
  </div>
  </td>
  </tr>
  </table>

  <div class="dummy">
  <h3>Package Maintainers for <span tal:content="context/release/displayname"/></h3>
    <form name="add" action="" method="POST">
    	<table>
	<tr><td>Maintainer</td> 
	<td><input type="text" name="name"/></td>
	<td> <input type="submit" value="Search"/></td>
	<td> <table>
	     <tr><td><a href="+list">View List</a></td></tr>
	     <tr><td> ( 350 entries)</td></tr>
	     </table>
	</td> 
	</tr>
	</table>
    </form>
  </div>

</div>

</body>
</html>
