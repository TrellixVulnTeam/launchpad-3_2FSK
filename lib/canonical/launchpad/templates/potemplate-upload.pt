<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<div metal:fill-slot="main">

     <tal:dummy condition="view/submitForm" />

        <h1>Upload a new version of <span tal:replace="context/title" /></h1>

        <div class="portalMessage"
             tal:condition="view/status_message"
             tal:content="structure view/status_message">Successful</div>

        <form action="+upload" method="POST" enctype="multipart/form-data">

        <fieldset>
            <label>Select a template file to import:
              <input name="file" type="file" />
            </label>
            <br />
            <input name="UPLOAD" type="submit" value="Upload"/>
        </fieldset>

</div>

</body>
</html>
