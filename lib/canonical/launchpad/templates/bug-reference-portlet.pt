<div>
    <table class="listing rowNavigation">
        <tr>
            <th>Type</th>
            <th>Description</th>
            <th>URL</th>
        </tr>
        <tr tal:repeat="ref context/externalrefs"
            tal:attributes="onclick 
                string:window.location='references/${ref/id}/+edit';">
            <td tal:content="ref/bugreftype/lp:BugExternalReferenceType">
                $BugExternalRef.bugreftype
            </td>
            <td tal:content="ref/description">
                $BugExternalRef.description
            </td>
            <td tal:content="ref/url">
               $BugExternalRef.data, sort of
            </td>
        </tr>
    </table>
    <form action="references/+new" method="post">
        <input type="submit" value="New" />
    </form>
</div>
