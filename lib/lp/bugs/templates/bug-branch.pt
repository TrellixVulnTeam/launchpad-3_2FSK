<div
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    tal:define="show_edit context/required:launchpad.Edit"
    tal:condition="context/branch/required:launchpad.View">
  <div class="bug-branch-summary">
    <tal:branch-ref replace="structure context/branch/fmt:link"/>
    (<span tal:content="context/branch/lifecycle_status/title"
    tal:attributes="class string:branchstatus${context/branch/lifecycle_status/name}"
    >Experimental</span>)
    <a title="Remove link"
       tal:condition="show_edit"
       tal:attributes="href string:${context/branch/fmt:url}/+bug/${context/bug/id}/+delete;">
      <img src="/@@/remove"/>
    </a>
  </div>
</div>
