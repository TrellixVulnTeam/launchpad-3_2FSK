<div>
    <table class="listing rowNavigation">
        <tr>
            <th>Product</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Severity</th>
            <th>Assignee</th>
        </tr>
        <tr tal:repeat="bugass context/productassignment"
            tal:attributes="onclick 
            string:window.location='productassignments/${bugass/id}/+edit';">
            <td tal:content="bugass/product/title">$Product.title</td>
            <td tal:content="bugass/bugstatus/lp:BugAssignmentStatus">
                $ProductBugAssignment.bugstatus
            </td>
            <td tal:content="bugass/priority/lp:BugPriority">
                $ProductBugAssignment.priority
            </td>
            <td tal:content="bugass/severity/lp:BugSeverity">
                $ProductBugAssignment.severity
            </td>
            <td tal:content="bugass/assignee/browsername|python: string('(not assigned)')">
                $ProductBugAssignment.assignee
            </td>

        </tr>
    </table>
    [ <a href="productassignments/+new">Assign Bug to a Product</a> ]
</div>
