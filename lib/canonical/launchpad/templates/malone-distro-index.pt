<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">
      Malone Distribution Manager: <span
      tal:replace="context/title">distribution title</span>
      </title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure view/detailsPortlet" />
</metal:leftportlets>

<div metal:fill-slot="main">

 <div id="content" class="documentEditable">
  <div class="documentContent" id="region-content">
 
   <h1><span tal:replace="context/title">TITLE</span>:
    Distribution Overview</h1>

    <p class="documentDescription" tal:content="context/summary">
        Distribution Summary
    </p>

    <p tal:content="context/description">
        Distribution description
    </p>

    <h2>Releases:</h2>

    <p><span tal:replace="context/title" /> has the following
    releases under development, or released:</p>

    <table width="100%" class="listing rowNavigation">
        <tr>
            <th>Release</th>
            <th>Title</th>
            <th>Version</th>
            <th>Status</th>
        </tr>
        <tr tal:repeat="release context/releases"
            tal:attributes="onclick string:window.location='${release/name}'">
            <td tal:content="release/displayname">displayname</td>
            <td><a tal:content="release/title"
                   tal:attributes="href string:${release/name}">
                   distribution name</a>
            </td>
            <td tal:content="release/version">VERSION</td>
            <td tal:content="release/state">RELEASESTATE</td>
        </tr>
    </table>
    
    <!--It is not inside the table because this table rows behave like links-->
    <i tal:condition="not: context/releases">
      &nbsp&nbsp&nbsp No Releases Yet.
    </i>

  </div>
 </div>
</div>

</body>
</html>
