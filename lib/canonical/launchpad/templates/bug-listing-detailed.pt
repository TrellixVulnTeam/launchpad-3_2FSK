<tr>
  <td class="icon left">
    <img alt="" src="/@@/bug" />
  </td>
  <td>
    <div>
      <a tal:attributes="href context/fmt:url">
        <span tal:replace="context/id">4</span>.
        <strong tal:content="context/title">Bug Title Here</strong>
      </a>
    </div>
    <div class="lesser">
      in 
        <tal:per_task repeat="task context/pillar_bugtasks">
          <b tal:condition="task/distribution"
             tal:content="task/distribution/displayname"
        /><b tal:condition="task/product"
             tal:content="task/product/displayname" />,
        </tal:per_task>
      reported by <a
      tal:attributes="href context/owner/fmt:url"
      tal:content="context/owner/browsername">Foo Bar</a> on
      <span tal:replace="context/datecreated/fmt:date">2005-10-05</span>
    </div>
  </td>
</tr>
