<tal:link-enabled
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  condition="context/enabled">
  <tal:link-linked
      condition="python: context.linked and not context.hidden"><a
      href="" class="" title=""
      tal:condition="context/icon"
      tal:attributes="
        class string:menu-link-${context/name} ${view/sprite_class} ${context/icon};
        href context/url;
        title context/summary;
        "
      tal:content="structure context/escapedtext"
    /><a
      tal:condition="not: context/icon"
      style="line-height: 20px;"
      href="" class="" title=""
      tal:attributes="
        class string:menu-link-${context/name};
        href context/url;
        title context/summary;
        "
      tal:content="structure context/escapedtext"
    /></tal:link-linked>
  <tal:link-linked-hidden
    condition="python: context.linked and context.hidden"><a
      href="" class="" title=""
      style="line-height: 20px;"
      tal:condition="context/icon"
      tal:attributes="
        class string:menu-link-${context/name} ${view/sprite_class}
            ${context/icon} invisible-link;
        href context/url;
        title context/summary;
        "
      tal:content="structure context/escapedtext"
    /><a
      tal:condition="not: context/icon"
      style="display: none"
      href="" class="" title=""
      tal:attributes="
        class string:menu-link-${context/name};
        href context/url;
        title context/summary;
        "
      tal:content="structure context/escapedtext"
    /></tal:link-linked-hidden>
  <tal:link-not-linked
    condition="not: context/linked"><span
      tal:condition="context/icon"
      tal:attributes="
        class string:menu-link-${context/name} nolink
              ${view/sprite_class} ${context/icon};
        "
      tal:content="structure context/escapedtext"
    >link text</span><span
      tal:condition="not: context/icon"
      tal:attributes="
        class string:menu-link-${context/name} nolink
        "
      tal:content="structure context/escapedtext"
    >link text</span></tal:link-not-linked>
</tal:link-enabled>
