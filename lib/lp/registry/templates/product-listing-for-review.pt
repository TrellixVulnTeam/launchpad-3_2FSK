<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

  <tr tal:attributes="id string:project-${context/name}">
    <td>
      <p>
        <a tal:replace="structure context/fmt:link" />
        (<span tal:replace="context/name" />)
        registered
        <span
          tal:attributes="title context/datecreated/fmt:datetime"
          tal:content="context/datecreated/fmt:displaydate">2005-10-12</span>
        <a class="sprite edit"
          tal:attributes="href string:${context/fmt:url}/+review-license"
          >Review</a>
      </p>

      <dl class="horizontal">
        <dt>Maintained by</dt>
        <dd><a tal:replace="structure context/owner/fmt:link" /></dd>
        <dt>Registered by</dt>
        <dd><a tal:replace="structure context/registrant/fmt:link" /></dd>
      </dl>

      <p tal:content="context/summary" />

      <div
        tal:content="structure context/description/fmt:text-to-html"
        tal:condition="context/description" />
    </td>
    <td>
      <dl class="horizontal">
        <dt>Active</dt>
        <dd>
          <img tal:replace="structure context/active/image:boolean"/>
        </dd>
        <dt>Reviewed</dt>
        <dd>
          <img tal:replace="structure context/license_reviewed/image:boolean"/>
        </dd>
        <dt>Approved</dt>
        <dd>
          <img tal:replace="structure context/license_approved/image:boolean"/>
        </dd>
      </dl>

      <dl class="horizontal"
        tal:attributes="id string:project-licenses-${context/name}">
        <dt>Licenses</dt>
        <dd>
          <ul class="horizontal">
            <li tal:condition="not: context/licenses">None</li>
            <li tal:repeat="license context/licenses">
              <tal:title tal:replace="license/title"/>
            </li>
          </ul>
        </dd>
      </dl>

      <dl class="horizontal"
        tal:attributes="id string:project-commercial-${context/name}"
        tal:condition="not: context/qualifies_for_free_hosting">
        <dt>Commercial subscription expiration</dt>
        <dd
          tal:condition="context/commercial_subscription"
          tal:content="context/commercial_subscription/date_expires/fmt:date" />
        <dd
          tal:condition="not: context/commercial_subscription">None</dd>
      </dl>

      <dl class="horizontal"
        tal:attributes="id string:project-license-info-${context/name}"
        tal:condition="view/show_license_info">
        <dt>Licenses info</dt>
        <dd tal:content="structure context/license_info/fmt:text-to-html" />
      </dl>

      <div
        tal:attributes="id string:project-whiteboard-${context/name}"
        tal:content="context/reviewer_whiteboard/fmt:text-to-html" />
    </td>
  </tr>
</tal:root>
