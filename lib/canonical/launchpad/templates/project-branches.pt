<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="rosetta">

<head>
  <title metal:fill-slot="title">Bazaar Summary for
    <span tal:replace="context/title">The Project</span>
  </title>
</head>
<body>

<div metal:fill-slot="main">

    <h1>Revision Control Summary for
        <span tal:replace="context/title">Project Title</span></h1>

    <div tal:content="context/shortdesc">Project Summary</div>
    
    <div tal:repeat="prod context/products">
        
        <br clear="right" />

        <h2 tal:content="prod/title">Product Title</h2>

        <table class="listing"
               style="float: right;">
            <tr>
              <th>Bazaar Branch Names</th>
            </tr>
            <tr tal:repeat="branch prod/branches"
                class="rowNavigation">
                <td tal:content="branch/title">x
                </td>
           </tr>
           <tr tal:condition="not: prod/branches">
                <td>No Bazaar branches for this product.</td>
            </tr>
            <tr>
              <th>Other Revision Control Sources</th>
            </tr>
            <tr tal:repeat="source prod/sourcesources"
                class="rowNavigation">
                <td tal:content="source/title">x
                </td>
           </tr>
           <tr tal:condition="not: prod/sourcesources">
                <td>No revision control system for this product.</td>
            </tr>
        </table>


        <p tal:content="prod/shortdesc">Product Summary</p>

        <p><img src="/++resource++add.gif">
           <a href="#" tal:attributes="href prod/name">See all
           branches for <span tal:replace="prod/displayname">product</span>...</a></p>
    
    </div>

</div>

</body>
</html>
