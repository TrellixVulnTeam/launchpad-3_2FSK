<html xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">
<body>

<div metal:fill-slot="main">

    <h1>PO file export</h1>

        <form action="" method="POST">
            <div class="field">
                <label>
                Format:
                    <select name="format">
                        <option
                            tal:repeat="format view/formats"
                            tal:content="format/title"
                            tal:attributes="value format/value">PO format</option>
                    </select>
                </label>
            </div>
            <p>
              Once you complete this form, the file will be exported,
              and you will be notified by e-mail to
              <code
                tal:content="view/user/preferredemail/email"
              >user@domain</code>.
            </p>

            <div class="formControls">
                <input type="submit" value="Confirm Export" />
            </div>
        </form>

</div>

</body>
</html>
