<span metal:define-macro="bugbranches">
  <!-- BugBranch badges -->
  <tal:bugbranch repeat="bugbranch branch/bugbranches">
    <tal:visible 
        define="bug bugbranch/bug"
        condition="bug/required:launchpad.View">
      <a tal:attributes="href bug/fmt:url;
                         title string:Bug ${bug/id} - ${bug/title} (${bugbranch/status/title})">
        <img src="/@@/bug" />
      </a>
    </tal:visible>
  </tal:bugbranch>
</span>
