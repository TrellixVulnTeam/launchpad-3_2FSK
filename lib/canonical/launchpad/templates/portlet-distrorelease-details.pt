<div class="portlet">

    <h4>Release Details:</h4>

    <div class="portletBody">
        <div class="portletContent even">

            <b>Release:</b><br />
            <a tal:attributes="href string:/distros/${context/distribution/name}/${context/name}/">
            <span tal:replace="context/displayname" /></a><br />

            <b>Admin:</b><br />
            <img src="/++resource++user.gif">
            <a tal:attributes="href string:/people/${context/owner/name}"
               tal:content="context/owner/browsername">owner name</a><br />

            <b>Status:</b><br />
            <span tal:replace="context/releasestatus/title">Status</span><br />

            <b>Release Date:</b><br />
            <span
                tal:condition="context/datereleased"
                tal:replace="context/datereleased/fmt:date">release date</span>
            <span
                tal:condition="not: context/datereleased">When it's
                done.</span>
            <br />

            <span tal:condition="context/parentrelease" tal:omit-tag>
              <b>Derives from:</b><br />
              <a tal:attributes="href
              string:/distros/${context/parentrelease/distribution/name}/${context/parentrelease/name}">
              <span tal:replace="context/parentrelease/distribution/name" />
              <span tal:replace="context/parentrelease/name" /></a>
            </span>
            <br />

            <span tal:condition="context/architectures" tal:omit-tag>
              <b>Architecture Releases:</b><br />
                <ul>
                  <li tal:repeat="arch context/architectures"
                    class="architecture"
                  ><a tal:content="arch/architecturetag"
                    tal:attributes="href
string:/distros/${context/distribution/name}/${context/name}/${arch/architecturetag}"
                  /></li>
                </ul>
            </span>
           
        </div>
    </div>
</div>
