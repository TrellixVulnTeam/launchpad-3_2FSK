<tal:do-this-first tal:content="view/submitForm" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title"> Rosetta:
        <span tal:replace="context/title">Some product or other</span>
        - Edit</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Rosetta style sheet -->
    <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>

<div metal:fill-slot="main">

    <h1>Edit "<span
    tal:content="context/potemplatename/name">$POTemplate.name</span>" POTemplate
    Details</h1>

    <div class="portalMessage"
         tal:condition="view/status_message"
         tal:content="structure view/status_message">Successful</div>

    <div class="documentDescription">
    Please edit the po template details below for <span
    tal:content="context/potemplatename/name">$POTemplate.name</span>.
    </div>

    <fieldset>

        <legend>POTemplate Details</legend>

        <form method="POST" enctype="multipart/form-data"
            tal:attributes="action string: ${request/URL}">

        <div class="field">

            <label>Name</label>

            <span class="fieldRequired" title="Required">(Required)</span>

                <div class="formHelp">
                  The name of the po template is a short name - a unique
                  name that identifies the po template, and is used in 
                  URLs and references to the po template. All lowercase,
                  no special characters.
                </div>

                <input type="text" name="name" size="15"
                       value="" style="text-transform: lowercase"
                       tal:attributes="value context/potemplatename/name" />
        </div>

        <div class="field">

            <label>Title</label>

            <span class="fieldRequired" title="Required">(Required)</span>

                <div class="formHelp">
                  This is the full title of the po template, can contain
                  spaces, special characters etc. This is what you would
                  imagine seeing at the top of a page about the po template.
                  For example, <i>Main template</i>, <i>Airports names</i>.
                </div>

                <input type="text" name="title" size="30"
                       value="" tal:attributes="value context/title" />
        </div>

        <div class="formControls">
            <input class="context" type="submit"
                   name="EDIT"
                   value="Edit" />
        </div>

        </form>

    </fieldset>

    <fieldset>
        <legend>Upload PO Template Data</legend>

        <form method="POST" enctype="multipart/form-data"
            tal:attributes="action string: ${request/URL}">

        <div class="field">

            <label>File</label>

            <div class="formHelp">
            The PO template file we want to upload to translate.
            </div>

            <input name="file" type="file" />
        </div>

        <div class="formControls">
            <input class="context" type="submit"
                   name="UPLOAD"
                   value="Upload" />
        </div>


        </form>
    </fieldset>

</div>

</body>
</html>
