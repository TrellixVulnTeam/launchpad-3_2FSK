<tal:layout define="columns1 default">
<html metal:use-macro="context/@@main_template/master">
  <body>
    <metal:heading fill-slot="pageheading">
      <h1 class="exception">Oops!</h1>
    </metal:heading>
    <div metal:fill-slot="main">
      <p>
        Sorry, something just went wrong in Launchpad.
      </p>
      <p>
        Please <a href="/products/launchpad/+bugs">report this as a bug</a>,
        after checking that it isn&#8217;t reported already.
      </p>

      <tal:comment condition="nothing">
        XXX: system-error@launchpad.ubuntu.com is not working. Please uncomment
        this once it's working.
        <p>
          (If this error is preventing you from reporting bugs,
          <a href="mailto:system-error@launchpad.ubuntu.com">e-mail us</a>
          instead, with &#8220;Bug&#8221; in the Subject line.)
        </p>
      </tal:comment>

      <tal:oopsmessage tal:replace="structure request/@@+oopsmessage" />

      <p>
        Thanks for helping improve Launchpad, and sorry for the inconvenience.
      </p>

      <tal:replace tal:replace="structure view/maybeShowTraceback" />
    </div>
  </body>
</html>
</tal:layout>
