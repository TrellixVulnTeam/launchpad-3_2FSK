<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>


<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-actions" />
</metal:rightportlets>

  <div metal:fill-slot="main" 
       tal:define="tasks view/reportedBugTasks;
                   listing_columns python:['id', 'product-or-package',
                                           'title', 'status',
                                           'severity',
                                           'submittedon'
                                           ];">

    <h1>Recently Reported Bugs</h1>

    <p tal:condition="not: tasks">No bugs have been 
      reported by <span tal:replace="context/browsername" />.
    </p>

      <tal:assignedbugs
           condition="tasks"
           metal:use-macro="context/@@+bugtask-macros-tableview/table" />

  </div>

</body>
</html>
