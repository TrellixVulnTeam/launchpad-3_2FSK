<div class="portlet portletBody portletContent">
    <ul>
      <li class="edit">
        <a tal:attributes="href string:${context/fmt:url}/+editstatus">
          Edit Status
        </a>
      </li>
      <li class="edit" tal:condition="view/isReleaseTargetableContext">
        <a tal:attributes="href string:${context/fmt:url}/+target">Target Fix to Releases</a>
      </li>
      <li class="add">
        <a tal:attributes="href string:${context/target/fmt:url}/+filebug">
          Report a Bug in <span tal:replace="context/target/displayname" />
        </a></li>
      <li class="bugs">
        <a tal:attributes="href string:${context/target/fmt:url}/+bugs">
          Search <span tal:replace="context/target/displayname" /> Bugs
        </a>
      </li>
    </ul>
</div>
