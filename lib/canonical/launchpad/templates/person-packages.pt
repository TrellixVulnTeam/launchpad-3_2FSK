<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">Packages Maintained By
      <span tal:replace="context/displayname">Name</span></title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<metal:leftportlets fill-slot="portlets_one">
<div tal:replace="structure view/leftMenu" />
</metal:leftportlets>

<div metal:fill-slot="main">

<div id="content" class="documentEditable">

    <ul class="contentViews">
      <li id="contentview-profile" class="plain">
        <a href=".">Profile</a>
      </li>

      <li tal:condition="context/packages" id="contentview-packages"
          class="selected">
        <a href="+packages">Packages</a>
      </li>

      <li tal:condition="context/bugs" id="contentview-bugs" class="plain">
        <a href="+bugs">Bugs</a>
      </li>

      <li tal:condition="context/translations" id="contentview-translations"
          class="plain">
        <a href="+translations">Translations</a>
      </li>

      <li tal:condition="context/activities" id="contentview-karma"
          class="plain">
        <a href="+karma">Karma</a>
      </li>
    </ul>

    <div class="documentContent" id="region-content">
      <h1>Packages maintained By 
      <span tal:content="context/displayname">context</span></h1>
        <div>
         <table>
           <tr tal:condition="not:context/packages">
             <td> No packages available </td>
           </tr>

           <tr tal:repeat="package context/packages">
             <td tal:define="name package/name; 
                             distrorelease package/distrorelease/name;
                             distro package/distrorelease/distribution/name;
                             distro_path string:/soyuz/distros/${distro};">
      
               <a tal:attributes="href distro_path"
                  tal:content="package/distrorelease/distribution/title">DISTRO</a> ::
               <a tal:attributes="href string:${distro_path}/${distrorelease}/"
                  tal:content="package/distrorelease/title">DISTRORELASE</a> ::
               <a tal:attributes="href string:${distro_path}/${distrorelease}/sources/${name}"
                  tal:content="string:${name}">PACKAGES</a>
             </td>
          </tr>
     </table>
    </div>

</div>
</div>
</div>


</body>
</html>
