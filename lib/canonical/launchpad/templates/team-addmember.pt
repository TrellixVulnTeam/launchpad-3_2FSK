<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="launchpad">

  <body>

  <!-- This page uses the launchpad-addform.pt METAL -->

  <div metal:fill-slot="main">

  <div metal:use-macro="context/@@launchpad_addform/addform">

        <h1 metal:fill-slot="heading">Select the new member</h1>

        <div metal:fill-slot="extra_info" class="formHelp">

        </div>

        <div metal:fill-slot="extra_top"> 
          <p class="portalMessage" tal:condition="view/addedMember">
            <span tal:replace="string: ${view/addedMember/browsername} (${view/addedMember/name})" />
            was added as a member of <span tal:replace="context/team/browsername" />.
          </p>

          <p class="portalMessage" tal:condition="view/alreadyMember">
            <span tal:replace="string: ${view/alreadyMember/browsername} (${view/alreadyMember/name})" />
            is already a member of <span tal:replace="context/team/browsername" />.
          </p>
        </div>

  </div>

  </div>
  </body>

</html>

