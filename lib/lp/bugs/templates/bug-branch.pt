<div
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    tal:define="
      bug_branch context;
      show_edit bug_branch/required:launchpad.Edit"
    tal:condition="bug_branch/branch/required:launchpad.View"
    tal:attributes="id string:bug-branch-${bug_branch/id}"
    class="bug-branch-summary">
  <tal:branch-ref replace="structure bug_branch/branch/fmt:link"/>
  (<span tal:content="bug_branch/branch/lifecycle_status/title"
  tal:attributes="class string:branchstatus${bug_branch/branch/lifecycle_status/name}"
  >Experimental</span>)
  <a title="Remove link"
     class="bugbranch-delete"
     tal:condition="show_edit"
     tal:attributes="
       href string:${bug_branch/branch/fmt:url}/+bug/${bug_branch/bug/id}/+delete;
       id string:bugbranch-${bug_branch/id}-delete;">
    <img src="/@@/remove"/>
  </a>
</div>
