  <!--Membership if team case-->     
<fieldset tal:condition="context/person/teamowner"> 
 <div>
 
  <h3>Members</h3>

  <table>
   <tr tal:condition="not:context/members">
      <td>This Team has no Member yet</td></tr>

   <tr tal:condition="context/members">
      <th>Name</th><th>Role</th><th>Status</th></tr>

   <tr tal:repeat="member context/members">
       <td><a tal:attributes="href string:../${member/person/name}"
	      tal:content="member/person/displayname">MEMBER</a></td>
       <td tal:content="member/rolename">ROLE</td>
       <td tal:content="member/statusname">STATUS</td>
   </tr>

   </table>

   <div tal:condition="view/person">
     <div tal:condition="not:view/is_member">
       <a href="+join">Join This Team</a>
     </div>

     <div tal:condition="view/is_member">
       <a href="+unjoin">Unjoin This Team</a>
     </div>
   </div>

 </div>
</fieldset>