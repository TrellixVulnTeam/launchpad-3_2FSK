<tal:subs define="subs context/subscriptions">
  <div tal:condition="subs" class="portlet">
    <h4>Specification subscribers:</h4>

    <div class="portletBody portletContent">

      <ul class="people">
        <li tal:repeat="sub subs">
          <a href="#"
             tal:content="sub/person/browsername"
             tal:attributes="href sub/person/fmt:url">Dafydd Harries</a>
        </li>
        <li tal:condition="not: subs">
          <i>No subscribers.</i>
        </li>
      </ul>
    </div>
  </div>
</tal:subs>
