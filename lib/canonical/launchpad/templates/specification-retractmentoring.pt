<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:rightportlets>

<metal:heading fill-slot="pageheading">
</metal:heading>

<div metal:fill-slot="main">

  <tal:mentor condition="view/userIsMentor">

    <h1>Retract offer of mentoring</h1>

    <p>
      Choose "Retract" to remove your offer of mentorship for
      this specification, or "Cancel" to return to the specification page.
    </p>

  </tal:mentor>

  <tal:not_mentor condition="not: view/userIsMentor">

    <h1>You are not a mentor</h1>

    <p>
      You cannot retract an offer you have not yet made.
    </p>
  
  </tal:not_mentor>

    <form action="." method="POST">

      <div class="actions">
        <input tal:condition="view/userIsMentor"
               type="submit"
               name="retract_mentoring"
               value="Retract" />
        <input type="submit"
               name="cancel"
               value="Cancel" />
      </div>
    </form>

</div>

</body>
</html>
