<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<div metal:fill-slot="main">
    <h1>Join Team</h1>

    <div class="documentDescription">	
    <p> Here you can Join the 
    <span tal:content="context/person/displayname">TEAM</span>
    </div>
    
    <div>
    <form name="add" action="" method="POST">
    <fieldset>
    <legend><h3>Join Team</h3><legend>
	<table>
	<tr><td>
	<div class="dummy">
	    <label>ID</label>
	    <div class="formHelp">
	    Enter the Person ID.
            </div>
	    <input class="formHelp" type="text" name="id" 
	    tal:attributes="value request/id|nothing"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="formControls">
	  <input type="submit" value="Join"/>
	</div>
	</td></tr>
	</table>
  </form>
  </div>

  <tla:block tal:condition="view/join_action">
  <div>
  <h4><a tal:attributes="href string:../${context/person/name}"
         tal:content="context/person/displayname">
         TEAM</a> was Joined by 
	 <a tal:attributes="href string:../${view/person/name}"
         tal:content="view/person/displayname"></a></h4>
  </div>
  </tla:block>

</div>

</body>
</html>
