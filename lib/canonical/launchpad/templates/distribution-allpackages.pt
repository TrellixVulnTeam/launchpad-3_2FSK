<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <h1>
        All source packages in
        <tal:distro replace="context/displayname">Fuix</tal:distro>
      </h1>
    </metal:heading>

<metal:leftportlets fill-slot="portlets_one">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
</metal:rightportlets>

<div metal:fill-slot="main">

  <tal:per_item repeat="cache context/source_package_caches">
    <tal:pkg define="package cache/distributionsourcepackage">
      <a tal:content="package/name"
         tal:attributes="href package/fmt:url">apache2</a>
    </tal:pkg>
  </tal:per_item>

</div>
</body>
</html>
