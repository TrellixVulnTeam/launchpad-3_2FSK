<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">
<tr>
  <td class="icon left">
    <img alt="" tal:replace="structure context/image:icon" />
  </td>
  <td>
    <div>
      <a tal:attributes="href string:/${context/name}"
      tal:content="context/displayname">Pillar displayname</a>
    </div>
    <div>
      <tal:summary replace="context/summary/fmt:shorten/240" />
    </div>
  </td>
</tr>
</tal:root>
