<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="view/macro:page/onecolumn"
  i18n:domain="launchpad"
>

<body>

<div metal:fill-slot="main">

  <h1>Bazaar branches of <tal:project-name replace="context/displayname"/></h1>

  <tal:has-branches condition="view/branch_count"
                    define="branches view/branches">
    <tal:branchlisting content="structure branches/@@+branch-listing" />
  </tal:has-branches>

  <div class="related" id="branch-series-links">
    <h2>Branches in other series</h2>
    <tal:series-link repeat="link view/series_links">
      <span class="branch-series-link">
        <a tal:condition="link/linked"
           tal:attributes="href link/package/fmt:url"
           tal:content="link/series_name">
        </a>
        <tal:not-linked tal:condition="not: link/linked"
                        tal:replace="link/series_name" />
      </span>
    </tal:series-link>
  </div>

</div>

</body>
</html>
