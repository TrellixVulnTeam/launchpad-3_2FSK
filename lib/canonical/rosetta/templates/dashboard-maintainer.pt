<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta">

<head>
    <title metal:fill-slot="title">Rosetta: Maintainer dashboard</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Rosetta style sheet -->
    <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>

<div metal:fill-slot="main">

    <h1>Project Maintainer's Dashboard</h1>

    <div class="rosettaDashboardElement">
        <h2>My current projects</h2>

        <form action="projects/+submit">
            <input type="submit" class="context" value="Add new project" />
        </form>


        <table class="listing">
            <thead>
                <tr>
                    <th rowspan="2">Project</th>
                    <th rowspan="2">Category</th>
                    <th colspan="2">Progress</th>
                    <th colspan="2">Notify me when</th>
                </tr>
                <tr>
                    <th>Language</th>
                    <th>Complete</th>
                    <th>Translation starts</th>
                    <th>Translation is ready</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td><a href="project-page.html">Evolution</a></td>
                    <td>Mail client</td>
                    <td><a href="rosetta-translation-overview.html">pt-br</a></td>
                    <td>9.5%</td>

                    <td class="listingCheckbox">
                        <input class="noborder" type="checkbox" checked="checked" />
                    </td>
                    <td class="listingCheckbox">
                        <input class="noborder" type="checkbox" checked="checked" />
                    </td>
                </tr>

                <tr class="even">
                    <td><a href="project-page.html">Mozilla</a></td>
                    <td>Browser</td>
                    <td colspan="4"
                        style="border-top: 1px solid #8cacbb">
                        Pending approval for inclusion</td>

                </tr>
            </tbody>

        </table>

    </div>

</div>

</body>
</html>
