<configure xmlns="http://namespaces.zope.org/zope">

    <content class=".client.LibrarianClient">
        <implements interface=".interfaces.ILibrarianClient" />
        <allow interface=".interfaces.ILibrarianClient" />
    </content>

    <content class=".client._File">
        <allow attributes="read close" />
    </content>

    <securedutility
        class=".client.LibrarianClient"
        provides=".interfaces.ILibrarianClient">
        <allow interface=".interfaces.IFileUploadClient" />
        <allow interface=".interfaces.IFileDownloadClient" />
    </securedutility>
</configure>

