<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta">

<head>
    <title metal:fill-slot="title">Rosetta: Upload PO file or template</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Rosetta style sheet -->
    <style type="text/css" media="screen">@import url(rosetta.css);</style>
</head>

<body>

<div metal:fill-slot="main">

    <p tal:content="view/processUpload" />

    <h1>Update POT or PO Files</h1>

    <form method="POST" enctype="multipart/form-data"
            tal:attributes="action request/URL"
            tal:define="languages view/languages">
        <label>File: <input name="file" type="file" /></label>
        <br/>
        <label>Available languages</label>
        <br />
        <!-- These are the available languages. -->
        <select id="prefs-available-languages"
                name="language"
                size="10"
                style="width: 20em;">
            <option tal:repeat="language languages"
                    tal:content="language/englishname"
                    tal:attributes="name language/code" />
        </select>
        <input name="SUBMIT" type="submit" value="Upload"/>
    </form>

</div>

</body>
</html>
