/* Ensure a bug is not a duplicate of itself */
ALTER TABLE Bug ADD CONSTRAINT notduplicateofself CHECK (not id = duplicateof);

/* 
    Add an 'assignee' to a productbugassignment 
    and a sourcepackagebugassignment
 */
ALTER TABLE ProductBugAssignment 
    ADD assignee integer NOT NULL REFERENCES Person(id);
ALTER TABLE SourcepackageBugAssignment 
    ADD assignee integer NOT NULL REFERENCES Person(id);


