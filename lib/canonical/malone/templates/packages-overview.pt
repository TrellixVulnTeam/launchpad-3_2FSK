<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="malone">
<body>

<div metal:fill-slot="main">
    <h1 xtal:content="context/title">Project Title</h1>
    <div class="documentDescription"
         xtal:content="context/description">Description</div>

    <h2>Bug overview</h2>
    
    <table class="listing" xtal:repeat="prod context/products">
        <tr>
            <th rowspan="2">Package</th>
            <th colspan="5">Severity</th>
        </tr>
        <tr>
            <th>Critical</th>
            <th>Major</th>
            <th>Normal</th>
            <th>Minor</th>
            <th>Wishlist</th>
        </tr>  
        <tr xtal:repeat="bug prod/bugs">
            <td>
                <a xtal:attributes="href "
                   xtal:content="bug/bug/title">Package name</a>
            </td>
            <td xtal:content="">1</td>
            <td xtal:content="">5</td>
            <td xtal:content="">7</td>
            <td xtal:content="">1</td>
            <td xtal:content="">7</td>
        </tr>
    </table>
</div>

</body>
</html>
