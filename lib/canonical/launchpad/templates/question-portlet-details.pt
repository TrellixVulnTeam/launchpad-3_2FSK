<div class="portlet">

  <h2><span tal:replace="context/target/displayname">Ubuntu</span> question
      #<span tal:replace="context/id">234</span></h2>

  <div class="portletBody portletContent">

    <b>Question from:</b><br />
    <a tal:replace="structure context/owner/fmt:link">Foo Bar</a><br />

    <b>Language:</b>
    <span tal:replace="context/language/englishname">English</span><br />

    <b>Status:</b>
    <span tal:replace="context/status/title">Open</span><br />

    <b>Related FAQ:</b><br />
    <tal:block condition="context/faq">
      <a href="#"
         tal:attributes="href context/faq/fmt:url"
         tal:content="context/faq/title">FAQ Title</a>
    </tal:block>
    <tal:block condition="not: context/faq">
      <i>None</i>
    </tal:block>
    <br />

    <b>For:</b>
    <span tal:replace="context/target/name">Firefox</span>
    <br />

    <tal:block condition="context/datedue">
      <b>Due:</b>
      <span
        tal:attributes="title context/datedue/fmt:datetime"
        tal:content="context/datedue/fmt:approximatedate" /><br />
    </tal:block>

    <b>Created:</b>
    <span
      tal:attributes="title context/datecreated/fmt:datetime"
      tal:content="context/datecreated/fmt:approximatedate" /><br />

    <b>Assignee:</b><br />
    <tal:block condition="context/assignee">
      <a tal:replace="structure context/assignee/fmt:link">Foo Bar</a>
    </tal:block>
    <tal:block condition="not: context/assignee">
      <i>No assignee</i>
    </tal:block>
    <br />

    <tal:block condition="context/answerer">
      <b>Solved by:</b><br />
      <a tal:replace="structure context/answerer/fmt:link">Foo Bar</a>
      <br />
    </tal:block>

    <b>Last query:</b>
    <span
      tal:attributes="title context/datelastquery/fmt:datetime"
      tal:content="context/datelastquery/fmt:approximatedate" /><br />

    <tal:block condition="context/datelastresponse">
      <b>Last reply:</b>
      <span
        tal:attributes="title context/datelastresponse/fmt:datetime"
        tal:content="context/datelastresponse/fmt:approximatedate" /><br />
    </tal:block>

    <tal:block condition="context/dateanswered">
      <b>Solved:</b>
      <span
        tal:attributes="title context/dateanswered/fmt:datetime"
        tal:content="context/dateanswered/fmt:approximatedate" /><br />
    </tal:block>

  </div>

</div>
