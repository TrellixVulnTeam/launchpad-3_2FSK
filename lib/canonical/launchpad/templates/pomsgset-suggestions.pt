<tal:block condition="context/submissions">
  <tr class="discreet secondary translation">
    <th colspan="3" style="border: inherit;">
      <label tal:content="string:${context/title}:" />
    </th>
  </tr>
  <tal:submission repeat="submission context/submissions">
  <tr class="discreet secondary"
      tal:define="submissionlang submission/pomsgset/pofile/language">
    <td colspan="3" />
    <td class="icon left right">
      <tal:user-is-official-translator
        condition="context/user_is_official_translator">
        <input
          type="radio"
          tal:attributes="
            name string:msgset_${context/pomsgset/potmsgset/id}_${submissionlang/code}_translation_${submission/pluralform}_radiobutton;
            value string:msgset_${context/pomsgset/potmsgset/id}_${submissionlang/code}_suggestion_${submission/id}_${submission/pluralform};
            onClick string:
              javascript:copyInnerHTMLById(
                'msgset_${context/pomsgset/potmsgset/id}_${submissionlang/code}_suggestion_${submission/id}_${submission/pluralform}',
                'msgset_${context/pomsgset/potmsgset/id}_${submissionlang/code}_translation_${submission/pluralform}_new')
            " />
      </tal:user-is-official-translator>
      <tal:user-is-not-official-translator condition="not:context/user_is_official_translator">
        <a href=""
          tal:attributes="
            onClick string:
              javascript:copyInnerHTMLById(
                'msgset_${context/pomsgset/potmsgset/id}_${submissionlang/code}_suggestion_${submission/id}_${submission/pluralform}',
                'msgset_${context/pomsgset/potmsgset/id}_${submissionlang/code}_translation_${submission/pluralform}_new');;
              selectWidget('msgset_${context/pomsgset/potmsgset/id}_${submissionlang/code}_translation_${submission/pluralform}_new_select', event);;
            return false;;
          "><img alt="Copy text" src="/@@/copy"></a>
      </tal:user-is-not-official-translator>
    </td>
    <td>
      <div tal:attributes="
        lang submissionlang/dashedcode;
        dir submissionlang/abbreviated_text_dir;
        id string:msgset_${context/pomsgset/potmsgset/id}_${submissionlang/code}_suggestion_${submission/id}_${submission/pluralform}"
        tal:content="structure submission/potranslation/translation/fmt:text-to-html">
        suggestion</div>
    </td>
  </tr>
  <tr class="suggestion secondary">
    <th colspan="3">
      Coming from:
    </th>
    <td class="icon left right" />
    <td style="overflow: auto;">
      <a tal:content="submission/pomsgset/pofile/potemplate/displayname"
         tal:attributes="href string:${submission/pomsgset/fmt:url}/+translate">
        Spanish translation for evolution
      </a> by
      <a tal:content="submission/person/browsername"
         tal:attributes="href submission/person/fmt:url">Foo Bar</a> on
      <span tal:content="submission/datecreated/fmt:datetime">
        2006-08-05 01:04 UTC
      </span>
    </td>
  </tr>
  </tal:submission>
</tal:block>
