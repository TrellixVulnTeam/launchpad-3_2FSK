<tal:subs define="subscribers context/subscribers">
  <div tal:condition="subscribers" class="portlet">
    <h4>Specification subscribers:</h4>

    <div class="portletBody portletContent">

      <ul class="people">
        <li tal:repeat="subscriber subscribers">
          <a href="#"
             tal:content="subscriber/browsername"
             tal:attributes="href subscriber/fmt:url">Dafydd Harries</a>
        </li>
        <li tal:condition="not: subscribers">
          <i>No subscribers.</i>
        </li>
      </ul>
    </div>
  </div>
</tal:subs>
