<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="soyuz">

<head>
  <!-- Plone style sheet -->
  <style type="text/css" media="screen">@import url(plone.css);</style>
  <!-- Rosetta style sheet -->
  <style type="text/css" media="screen">@import url(rosetta.css);</style>

</head>

<body>

<div metal:fill-slot="main">
<h1><span tal:content="context/release/displayname"/> Packages</h1>


<table>
  <legend><h4><span tal:content="context/release/title"/>
  Packages</h4></legend>
  <tr><td>
  <fieldset>
  <div>
   <table>
     <tr><td>
       <form name="search" method="POST" action="+search">
       <div class="field">
	  <label>Name</label>
	  <div class="formHelp">
	  Enter the package name .
       </div>
       <input type="text" name="name" tal:attributes="value request/name|nothing"/>
       </div>
       <div class="formControls">
	<input type="submit" value="Search"/>
       </div>
       </form>
       </td>
       <td>
	<div>
	 <table>
	 <tr><th><a 
	 tal:attributes="href string:../../src/${context/release/name}">
	 View Source Packages List</a></th>
	 <th>( <span tal:content="context/release/sourcecount"/> 
	 Packages)</th>
	 </tr><tr>
	 <th><a
	 tal:attributes="href string:../../bin/${context/release/name}">
	 View Binary Packages List</a></th>
	 <th>( <span tal:content="context/release/binarycount"/> 
	 Packages)</th>
	 </tr>
	 </table>
	 </div>
     </td></tr>
   </table>	
  </div>
 </td></tr>
</table>


<h4 tal:condition="view/search_action">Search Results</h4> 

<div tal:condition="view/sources">
<fieldset>
<h3>Source Packages</h3>
<ul>
 <li tal:repeat="source view/sources">
  <a tal:attributes="href string:../../src/${context/release/name}/${source/name}"
     tal:content="source/name">SOURCE</a> : 
    <span tal:content="source/shortdesc"/>
  </li> 
</ul>
</fieldset>
</div>


<div tal:condition="view/binaries">
<fieldset>
<h3>Binary Packages</h3>
<ul>
  <li tal:repeat="binary view/binaries">
    <a tal:attributes="href string:../../bin/${context/release/name}/${binary/name}" 
    tal:content="binary/name">BIN</a>  : 
    <span tal:content="binary/shortdesc"/>
  </li> 
</ul>
</fieldset>
</div>




<h3><a tal:attributes="href string: ../${context/release/name}">Back
to <span tal:content="context/release/title"/> 
Page</a></h3>


</div>
</body>
</html>
