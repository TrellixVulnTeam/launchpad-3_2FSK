<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <h1>Official mirrors</h1>      
    </metal:heading>

<metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/@@+portlet-details" />
</metal:leftportlets>

<metal:rightportlets fill-slot="portlets_two">
</metal:rightportlets>

<div metal:fill-slot="main">

  <div tal:condition="not: context/enabled_official_mirrors">
    This distribution has no registered mirrors.
  </div>

  <table tal:condition="context/enabled_official_mirrors" 
         id="mirrors" class="listing sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Speed</th>
      <th>Country</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <tr tal:repeat="mirror context/enabled_official_mirrors">
      <td><a tal:attributes="href mirror/fmt:url"
             tal:content="mirror/name"></a>
      </td>
      <td tal:content="mirror/speed/title" />
      <td tal:content="mirror/country/name" />
      <td tal:content="mirror/content/title" />
    </tr>
  </tbody>
  </table>

</div>

</body>
</html>
