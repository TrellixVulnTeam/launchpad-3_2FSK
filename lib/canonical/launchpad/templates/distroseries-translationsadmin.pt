<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="context/@@main_template/master"
  i18n:domain="launchpad"
>

  <body>

    <metal:rightportlets fill-slot="portlets_two">
      <div
        tal:condition="context/distribution/official_rosetta"
        tal:replace="structure context/distribution/@@+portlet-translation-groups-and-permission"
        />
      <div tal:replace="structure context/@@+portlet-preflangs" />
    </metal:rightportlets>

    <div metal:fill-slot="main">

      <div metal:use-macro="context/@@launchpad_form/form">

        <h1 tal:condition="view/label"
            tal:content="view/label"
            metal:fill-slot="heading">
          Administer Translations options for Hoary
        </h1>

      </div>

    </div>
  </body>
</html>
