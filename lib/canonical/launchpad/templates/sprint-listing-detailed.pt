<tr>
  <td class="icon left">
    <img alt="" src="/@@/sprint" />
  </td>
  <td>
    <div>
      <strong><a tal:attributes="href context/fmt:url"
      tal:content="context/title">Meeting Title Here</a></strong>: 
      <span class="discreet">
        <span tal:replace="context/time_starts/fmt:date">2005-10-05</span>
          to
        <span tal:replace="context/time_ends/fmt:date">2005-10-05</span>
      </span>
    </div>
    <p>
      <span tal:replace="context/summary">summary here</span>
      <span tal:condition="not:context/summary"
            tal:replace="context/description/fmt:shorten/320">
        Description if there is no summary
      </span>
      <span class="discreet">
        Registered by
        <img src="/@@/person" />&nbsp;<a
           tal:attributes="href context/owner/fmt:url"
           tal:content="context/owner/browsername">Foo Bar</a>
        on <span tal:replace="context/datecreated/fmt:date">2005-10-05</span>
      </span>
    </p>
  </td>
</tr>
