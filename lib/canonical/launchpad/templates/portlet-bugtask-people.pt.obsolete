<div class="portlet">
    <h4>Related People:</h4>

    <div class="portletBody"
         tal:define="bug_url context/bug/@@absolute_url">
        <div class="portletContent even"
             tal:define="subscriptions context/bug/subscriptions;
                         bugtasks context/bug/bugtasks">

            <b>First reported by:</b><br />
            <ul class="people">
                <li><a href=""
                    tal:content="context/owner/browsername"
                    style="text-decoration: underline"
                    tal:attributes="
                      href string:/people/${context/owner/name}">owner</a></li>
            </ul>
            <br />

            <b>Maintainers:</b><br />

            <ul class="people" tal:repeat="task bugtasks">
                <li tal:condition="task/maintainer">
                <a href=""
                   tal:content="task/maintainer/browsername"
                   style="text-decoration: underline"
                   tal:attributes="href string:/people/${task/maintainer/name}" />
                </li>
            </ul>

            <br />

          <tal:subscriptions
            tal:define="ccs view/getCCs;
                        watches view/getWatches;
                        ignores view/getIgnores">
            <tal:cc condition="ccs">
              <b>Cc:</b><br />
              <ul class="people">
                  <li tal:repeat="sub ccs">
                    <a href="#"
                       tal:content="sub/person/browsername"
                       style="text-decoration: underline"
                       tal:attributes="href python:str(bug_url) + '/people/' +
                                            str(sub.id)+'/+edit'">Dafydd</a>
                  </li>
              </ul>
              <br />
            </tal:cc>

            <tal:watch condition="watches">
              <b>Watch:</b>
              <ul class="people">
                  <li tal:repeat="sub watches">
                    <a href="#"
                       tal:content="sub/person/browsername"
                       style="text-decoration: underline"
                       tal:attributes="href python:str(bug_url) + '/people/' +
                                            str(sub.id)+'/+edit'">Vincenzo</a>
                  </li>
              </ul>
              <br />
            </tal:watch>

            <tal:ignore condition="ignores">
              <b tal:condition="ignores">Ignore:</b>
              <ul class="people">
                  <li tal:repeat="sub ignores">
                    <a href="#"
                       tal:content="sub/person/browsername"
                       style="text-decoration: underline"
                       tal:attributes="href python:str(bug_url) + '/people/' +
                                            str(sub.id)+'/+edit'">Jake</a>
                  </li>
              </ul>
            </tal:ignore>

          </tal:subscriptions>
        </div>

    </div>
</div>
