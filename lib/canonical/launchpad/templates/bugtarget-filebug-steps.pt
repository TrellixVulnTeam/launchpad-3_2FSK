<metal:filebug-steps define-macro="steps">
<div class="informational" style="padding: 0.5em; font-size: 85%;
                                  margin: 0em 0em 2em 2em;">
<ol style="margin: 0; margin-left: 2em">
  <tal:filebug-step repeat="step view/getSteps">
    <li tal:condition="step/selected"
        tal:content="step/title"
        style="font-weight: bold; padding-bottom: 0.3em"
        >A selected step
    </li>
    <li tal:condition="not:step/selected"
        tal:content="step/title"
        style="color: #76797c; padding-bottom: 0.4em"
        >An unselected step
    </li>
  </tal:filebug-step>
</ol>
</div>
</metal:filebug-steps>