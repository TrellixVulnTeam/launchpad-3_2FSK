<html metal:use-macro="context/@@main_template/master" i18n:domain="launchpad">
  <body>
    <div metal:fill-slot="main" tal:define="rp_title view/relying_party_title">
      <div id="rp">

            <p class="warning message" tal:condition="not:view/isSaneTrustRoot">
              <strong>Warning:</strong>
              <em tal:content="view/openid_request/trust_root" /> does not look
              like a trustworthy URL.
            </p>
            <h2 tal:content="rp_title">Ubuntu Shop</h2>

            <p>To continue with <tal:title replace="rp_title" />, you
            need to sign in.</p>

      </div>
      <div id="auth">

        <h2>Sign in as <span tal:replace="view/user/displayname" />?</h2>

      <form action="/+decide" method="post" accept-charset="UTF-8">
        <tal:widget replace="structure view/widgets/nonce/hidden" />

        <div>
          <tal:submit replace="structure view/logout_action/render" />
        </div>

        <div>

            <h2>
              These details will be sent to
              <tal:title replace="rp_title" />:
            </h2>

          <ul>
            <li tal:content="view/user/displayname">
              My name
            </li>
            <li tal:content="view/user/preferredemail/email">
              My email
            </li>
          </ul>
        </div>

        <div>
          <tal:submit replace="structure view/auth_action/render" />
          <tal:submit replace="structure view/deny_action/render" />
        </div>

      </form>

      </div>
    </div>
  </body>
</html>
