<tal:bugs_defined define="bugs context/bugs">
  <div tal:condition="bugs" class="portlet">

    <h4>Related bugs:</h4>

    <div class="portletBody portletContent">

      <ul tal:condition="bugs">
        <li class="bug" tal:repeat="bug bugs">
          <a tal:attributes="href bug/fmt:url">#<span
             tal:replace="bug/id">122</span>:
            <span tal:replace="bug/title">foo bar baz</span></a>
        </li>
      </ul>
      <p tal:condition="not: bugs">
        <i>No related bugs.</i>
      </p>
	
    </div>

  </div>
</tal:bugs_defined>
