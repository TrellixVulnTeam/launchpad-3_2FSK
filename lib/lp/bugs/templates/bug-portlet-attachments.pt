<div
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    tal:omit-tag="">
  <div tal:condition="context/regular_attachments" class="portlet"
       id="portlet-attachments">
    <h2>Bug attachments</h2>
    <ul>
      <li class="download-attachment"
          tal:repeat="attachment context/regular_attachments">
        <a tal:attributes="href attachment/libraryfile/http_url"
           tal:content="attachment/title"
           class="sprite download-icon">
          Attachment Title
        </a>
        <small>
          (<a tal:attributes="href attachment/fmt:url">edit</a>)
        </small>
      </li>
    </ul>
    <ul>
      <li>
        <a tal:attributes="href view/current_bugtask/fmt:url/+addcomment"
           class="sprite add">Add attachment or patch</a>
      </li>
    </ul>
  </div>
  <div tal:condition="context/patches" class="portlet" id="portlet-patches">
    <h2>Patches</h2>
    <ul>
      <li class="download-attachment"
          tal:repeat="attachment context/patches">
        <a tal:attributes="href attachment/libraryfile/http_url"
           tal:content="attachment/title"
           class="sprite download-icon">
          Attachment Title
        </a>
        <small>
          (<a tal:attributes="href attachment/fmt:url">edit</a>)
        </small>
      </li>
    </ul>
    <ul>
      <li>
        <a tal:attributes="href view/current_bugtask/fmt:url/+addcomment"
           class="sprite add">Add attachment or patch</a>
      </li>
    </ul>
  </div>
</div>
