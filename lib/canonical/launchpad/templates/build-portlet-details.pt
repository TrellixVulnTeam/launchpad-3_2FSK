<div class="portlet">

  <h2>Build details</h2>

  <div class="portletBody portletContent">

    <b>Package:</b>
    <a tal:content="context/distributionsourcepackagerelease/displayname"
       tal:attributes="href context/distributionsourcepackagerelease/fmt:url">
       foobar
    </a>
    <br />

    <b>Built on:</b>
    <a tal:content="context/distribution/name"
       tal:attributes="href context/distribution/fmt:url">
      ubuntu</a>
    <a tal:content="context/distrorelease/name"
       tal:attributes="href context/distrorelease/fmt:url">
      hoary
    </a>
    <br />

    <b>Architecture:</b>
    <span tal:replace="context/distroarchrelease/architecturetag">
      i386
    </span>
    <br />

    <b>Status:</b>
    <span tal:replace="context/buildstate/title">Fully built</span>
    <br />

    <b>Date recorded:</b><br />
    <span tal:replace="context/datecreated/fmt:datetime">2005-10-05 5:45</span>
    <br />

    <tal:is_build condition="context/datebuilt">
      <b>Date built:</b><br />
      <span tal:replace="context/datebuilt/fmt:datetime">2005-10-05 5:45</span>
      <br />
    </tal:is_build>

  </div>

</div>
