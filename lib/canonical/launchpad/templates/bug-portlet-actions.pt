<div class="portlet portletBody portletContent"
       tal:define="bug_url context/fmt:url">
    <ul>
      <li class="edit">
        <a href="#" tal:attributes="href string:$bug_url/+edit">Edit
        Description</a>
      </li>
      <li class="edit">
        <a href="#" tal:attributes="href string:$bug_url/+secrecy">Bug Secrecy</a>
      </li>
      <li class="edit">
        <a href="#"
           tal:attributes="href string:$bug_url/+duplicate">Mark as
           Duplicate</a>
      </li>
      <li class="add" tal:condition="not: view/subscription">
        <a href="#" tal:attributes="href string:$bug_url/+subscribe"
           >Subscribe</a>
      </li>
      <li class="add" tal:condition="view/subscription">
        <a href="#" tal:attributes="href string:$bug_url/+subscribe"
           >Unsubscribe</a>
      </li>
      <li class="add">
        <a href="#" tal:attributes="href string:$bug_url/+addsubscriber"
           >Subscribe Someone Else</a>
      </li>
      <li class="add">
        <a href="#"
           tal:attributes="href string:$bug_url/+addattachment"
           >Add Attachment</a>
      </li>
      <li class="add">
        <a href="#" tal:attributes="href
           string:$bug_url/+linkcve">Link to <abbr title="Common Vulnerabilities and Exposures Index">CVE</abbr></a>
      </li>
      <li class="edit" tal:condition="context/cves">
        <a tal:attributes="href string:$bug_url/+unlinkcve">Remove
          CVE link</a>
      </li>
      <li class="add">
        <a href="#"
           tal:attributes="href string:$bug_url/references/+new">Link to
           Web Page</a>
      </li>
      <li class="add">
        <a href="#" tal:attributes="href string:$bug_url/watches/+new">Link
           To Other Bug Tracker</a>
      </li>
      <li class="list">
        <a href="#"
           tal:attributes="href string:$bug_url/activity">Activity Log</a>
      </li>
    </ul>
</div>
