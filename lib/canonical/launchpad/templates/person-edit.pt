<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<head>
    <title metal:fill-slot="title">Edit
      <span tal:replace="context/displayname">Name</span>
      Information</title>
    <!-- Plone style sheet -->
    <style type="text/css" media="screen">@import url(plone.css);</style>
    <!-- Soyuz style sheet -->
    <style type="text/css" media="screen">@import url(soyuz.css);</style>
</head>

<body>

<div metal:fill-slot="main">

<div id="content" class="documentEditable">

    <div class="documentContent" id="region-content">

    <h1>Edit <span tal:content="context/displayname">DISPLAYNAME</span> 
	Information</h1>

    <div tal:condition="view/edit_action">
      <p class="portalMessage">Your changes have been saved.</p>
    </div>
  
    <div class="portalMessage" tal:condition="view/errormessage">
      <p tal:content="view/errormessage"></p>
    </div>

    <div>
    <form name="edit" action="" method="POST">
	<table>
	<tr><td>
	<div class="field">
	    <label>Display Name</label>
	    <span class="fieldRequired" title="Required">(Required)</span>
	    <div class="formHelp">
	    Enter the Display Name.
            </div>
	    <input type="text" name="displayname"
	    tal:attributes="value context/displayname|nothing"/>
	</div>
	</td></tr>

	<tal:block tal:condition="not:context/teamowner">
	<tr><td>
	<div class="field">
	    <label>Given Name</label>
	    <div class="formHelp">
	    Enter the Given Name.
            </div>
	    <input type="text" name="givenname"
	    tal:attributes="value context/givenname|nothing"/>
	</div>
	</td><td>
	<div class="field">
	    <label>Familyname</label>
	    <div class="formHelp">
	    Enter the Family Name.
            </div>
	    <input type="text" name="familyname"
	    tal:attributes="value context/familyname|nothing"/>
	</div>
	</td></tr>
	</tal:block>


	<tal:block tal:condition="context/teamowner">
	<tr><td>
	<div class="field">
	    <label>Team Description</label>
	    <div class="formHelp">
	    Enter the Team Description.
            </div>
            <textarea name="teamdescription" cols="60" rows="6"
	    tal:content="context/teamdescription|nothing">
	    </textarea>
	</div>
	</td></tr>
	</tal:block>

	<tr><td>
	<div class="field">
	    <label>Wiki</label>
	    <div class="formHelp">
	    Enter the Wiki
            </div>
	    <input type="text" name="wiki" size="40"
	    tal:attributes="value context/wiki/wiki|nothing"/>
	</div>
	</td><td>
	<div class="field">
	    <label>Wikiname</label>
	    <div class="formHelp">
	    Enter the Wiki Name.
            </div>
	    <input type="text" name="wikiname"
	    tal:attributes="value context/wiki/wikiname|nothing"/>
	</div>
	</td></tr>

	<tr><td>
	<div class="field">
	    <label>IRC Network</label>
	    <div class="formHelp">
	    Enter the IRC Network.
            </div>
	    <input type="text" name="network" size="40"
	    tal:attributes="value context/irc/network|nothing"/>
	</div>
	</td><td>
	<div class="field">
	    <label>IRC Nickname</label>
	    <div class="formHelp">
	    Enter the IRC NickName.
            </div>
	    <input type="text" name="nickname"
	    tal:attributes="value context/irc/nickname|nothing"/>
	</div>
	</td></tr>

	<tr><td>
	<div class="field">
	    <label>Arch User ID</label>
	    <div class="formHelp">
	    Enter the Arch User ID.
            </div>
	    <input type="text" name="archuserid" 
	    tal:attributes="value context/archuser/archuserid|nothing"/>
	</div>
	</td><td>
	<div class="field">
	    <label>JABBER ID</label>
	    <div class="formHelp">
	    Enter the Jabber ID.
            </div>
      <input type="text" name="jabberid"
      tal:attributes="value context/jabber/jabberid|nothing"/>
	</div>
	</td></tr>

	<tr><td>
	<div class="field">
	    <label>New Password</label>
	    <div class="formHelp">
	    Enter your new Password.
            </div>
	    <input type="password" name="newpassword"/>
	</div>
	</td></tr>
	<tr><td>
	<div class="field">
	    <label>Retype New Password</label>
	    <div class="formHelp">
	    Enter the same Password Again.
            </div>
	    <input type="password" name="newpassword2"/> 
	</div>
	</td></tr>

  <tr><td colspan="2">
      <hr />
	</td></tr>

  <tr><td>
      <br/>
      <div class="field">
          <label>Current Password</label>
          <span class="fieldRequired" title="Required">
            (Required)</span>
          <div class="formHelp">Please enter your password to confirm the
            account changes.
          </div>
      <input type="password" name="password" />
      <br/>
	</td></tr>

	<tr><td>
	<div class="formControls">
	  <input type="submit" value="Save"/>
	</div>
	</td></tr>
	</table>
  </form>
  </div>
    
</div>
</div>
</div>

</body>
</html>
