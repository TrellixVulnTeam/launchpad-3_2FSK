<html metal:use-macro="view/macro:page/applicationhome" i18n:domain="bazaar">

<body>

  <h1 metal:fill-slot="heading">Code Imports</h1>

<div metal:fill-slot="main" class="visualPadding"
     tal:define="batch context/getAll">


  <tal:block tal:condition="not:batch">
    <p>No code imports found!</p>
  </tal:block>

  <table class="listing" id="code-import-listing" tal:condition="batch">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Date Created
        </th>
        <th>
          Status
        </th>
        <th>
          Product
        </th>
        <th>
          Series
        </th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="b batch">
        <td>
          <a href="name" tal:attributes="href b/name" tal:content="b/name">
            name
          </a>
        </td>
        <td tal:content="structure b/date_created/fmt:datetime">
          some date
        </td>
        <td tal:content="b/review_status/name">
          status
        </td>
        <td tal:content="b/product/name">
          product-name
        </td>
        <td tal:content="b/series/name">
          series-name
        </td>
      </tr>
    </tbody>
  </table>

</div>

</body>
</html>
