<tal:tag condition="view/update"/>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@malone_template/master"
      i18n:domain="malone">
  <body>

  <div metal:fill-slot="main">

  <div id="content" class="documentEditable">

    <ul class="contentViews">

            
              <li id="contentview-view" class="plain">
                <a href=".">View</a>
              </li>
            
            
              <li id="contentview-edit" class="selected">
                <a href="+edit">Edit</a>
              </li>
            
              <li id="contentview-edit" class="plain">
                <a href="activity">History</a>
              </li>

    </ul>

    <div class="contentActions">
    &nbsp;
    </div>

    <div class="documentContent" id="region-content">

        <div metal:use-macro="context/@@launchpad_editform/editform">
    
            <div metal:fill-slot="extra_info"
                class="documentDescription">
                Edit the details of this bug using the form fields below. Your
                changes will affect the bug description upstream as well as in
                all of the distro packages where the bug has been recorded.
            </div>

          <legend metal:fill-slot="editform_legend">
             Bug Details
          </legend>


        </div>
    
    </div>

  </div>

  </div>

  </body>
</html>
