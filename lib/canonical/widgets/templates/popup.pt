
<input type="text"
    tal:attributes="value view/formToken;
                    id view/name;
                    name view/name;
                    size view/displayWidth;
                    maxlength view/displayMaxWidth;
                    onKeyPress view/onKeyPress;
                    style view/style;
                    class view/cssClass" />

<tal:search_results tal:condition="not: view/hasValidInput">
  <select
      tal:define="matches view/matches"
      tal:condition="python:len(matches) > 0"
      >
    <option
        tal:repeat="match matches"
        tal:attributes="value match/token;
            selected python:path('match/token') == path('view/formToken');
            onclick string:this.form['${view/name}'].value = this.value"
        tal:content="string:${match/token}: ${match/title}"
        />
  </select>
</tal:search_results>

(<a tal:attributes="href view/popupHref">Choose&hellip;</a>)
