<div class="portlet"
     tal:condition="context/externalrefs"
     tal:define="bug_url string:/malone/bugs/${context/id}">

    <h4>Related Web Links</h4>

    <div class="portletBody">
        <div class="portletContent odd"
             tal:repeat="ref context/externalrefs">
            <a tal:attributes="href ref/url">
                <img src="/++resource++link_icon.gif" alt="" />
                <span tal:replace="ref/title">title goes here</span>
            </a>
            [ <a tal:attributes="href string:$bug_url/references/${ref/id}/+edit">
            Edit</a> ]
        </div>

        <div class="portletContent odd">
            <img src="/++resource++add.gif" alt="Add">
            <a href="#" tal:attributes="href string:$bug_url/references/+new">Add link...
            </a>
        </div>
    </div>

</div>
