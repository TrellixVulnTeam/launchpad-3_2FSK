<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-options">

  <h2>Voting options</h2>

  <div class="portletBody portletContent"
       tal:define="options context/getAllOptions">

    <ul tal:condition="options">
      <li tal:repeat="option options">
        <b tal:content="option/name">name</b>:
        <span tal:replace="option/title">The Title of the option</span>
        (<span tal:condition="option/active"
           >active</span><span
           tal:condition="not: option/active">inactive</span>)
      </li>
    </ul>
    <p tal:condition="not: options">
      <i>No options yet specified.</i>
    </p>
  </div>
</div>
</tal:root>
