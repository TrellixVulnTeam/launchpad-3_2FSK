<div class="portlet">
  <h2>Filters</h2>
  <div class="portletBody portletContent">
 
  <table width="100%">
    <tr>
      <td><a tal:attributes="href view/getOpenBugsURL">Open</a></td>
      <td tal:content="context/open_bugtasks/count">10</td>
    </tr>
    <tr tal:condition="view/user">
      <td>
        <a href="#" tal:attributes="href view/getBugsAssignedToMeURL">
          Assigned to me
        </a>
      </td>
      <td tal:content="view/getBugsAssignedToMeCount">50</td>
    </tr>
    <tr>
      <td><a tal:attributes="href view/getCriticalBugsURL">Critical</a></td>
      <td tal:content="context/critical_bugtasks/count">42</td>
    </tr>
    <tr>
      <td>
        <a tal:attributes="href view/getUnconfirmedBugsURL">Unconfirmed</a>
      </td>
      <td tal:content="context/unconfirmed_bugtasks/count">42</td>
    </tr>
    <tr>
      <td>
        <a tal:attributes="href view/getUnassignedBugsURL">Unassigned</a>
      </td>
      <td tal:content="context/unassigned_bugtasks/count">42</td>
    </tr>
    <tr>
      <td>
        <a tal:attributes="href view/getAllBugsEverReportedURL">
          All bugs ever reported
        </a>
      </td>
      <td tal:content="context/all_bugtasks/count">42</td>
    </tr>
  </table>

  </div>
</div>
