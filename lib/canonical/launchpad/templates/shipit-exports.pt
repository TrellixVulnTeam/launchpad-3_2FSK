<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">
<tal:do-this-first condition="view/process_form" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">
<body>

  <div metal:fill-slot="body">

  <h1>ShipIt exports</h1>

  <table>
  <tbody>
  <tr>
  <td width="80%" id="main-content">

  <p tal:condition="view/no_exports">
    No exports were made yet
  </p>

  <tal:block condition="view/unsent_exports">
    <p>Requests not yet sent to the shipping company.</p>
    <table width="60%" class="listing sortable" id="unsent_exports">
      <thead>
        <tr>
          <th>date</th>
          <th style="text-align: right">orders</th>
          <th>csv file</th>
          <th>sent to the shipping company?</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="export view/unsent_exports">
          <td>
            <span class="sortkey"
              tal:content="export/datecreated/fmt:datetime" />
            <span
              tal:attributes="title export/datecreated/fmt:datetime"
              tal:content="export/datecreated/fmt:approximatedate">
              2007-02-19
            </span>
          </td>
          <td style="text-align: right"
              tal:content="export/requests_count" />
          <td><a tal:content="export/csvfile/filename"
                 tal:attributes="href export/csvfile/http_url" />
          </td>
          <td class="formControls" style="text-align: center">
            <form action="" method="POST" name="sent"
                  style="display: inline">
                  <input type="submit" value="Yes"
                     tal:attributes="name export/id" />
            </form>
          </td>
        </tr>
      </tbody>
    </table>
  </tal:block>

  <tal:block condition="view/sent_exports">
    <p>Requests already sent to the shipping company.</p>
    <table width="60%" class="listing sortable" id="sent_exports">
      <thead>
        <tr>
          <th>date</th>
          <th style="text-align: right">orders</th>
          <th>csv file</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="export view/sent_exports">
          <td>
            <span class="sortkey"
              tal:content="export/datecreated/fmt:datetime" />
            <span
              tal:attributes="title export/datecreated/fmt:datetime"
              tal:content="export/datecreated/fmt:approximatedate">
              2007-02-19
            </span>
          </td>
          <td style="text-align: right"
              tal:content="export/requests_count" />
          <td><a tal:content="export/csvfile/filename"
                 tal:attributes="href export/csvfile/http_url" />
          </td>
        </tr>
      </tbody>
    </table>
  </tal:block>

  </td>
  <td
    width="20%" id="navigation"
    style="vertical-align: top;"
    tal:content="structure context/@@+portlet-navigation"
  />
  </tr>
  </tbody>
  </table>  
  
</div>

</body>
</html>
</tal:root>
