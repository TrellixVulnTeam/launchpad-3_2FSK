<div class="portlet" tal:condition="view/latestBugTasks">
  <h4>Latest bugs in <span tal:replace="context/displayname" />:</h4>
  <div class="portletBody">
    <div class="portletContent">
      <p tal:condition="not: view/latestBugTasks">
        No bugs have been reported for <span tal:replace="context/displayname" />.
      </p>
      <table tal:condition="view/latestBugTasks">
        <tbody>
          <tr tal:repeat="bugtask view/latestBugTasks">
            <td class="icon left" tal:content="structure bugtask/fmt:icon" />
            <td>

          <a tal:attributes="href bugtask/fmt:url"
             tal:content="string: #${bugtask/bug/id}" />:
             <span tal:replace="bugtask/bug/title">bug
             title</span>

              (<span
                tal:attributes="class string:status${bugtask/status/name}"
                tal:content="bugtask/status/title"
              />)
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
